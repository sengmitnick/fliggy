<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 允许所有明文 HTTP 流量（用于内网/测试环境） -->
    <!-- 生产环境建议限制到具体域名 -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
