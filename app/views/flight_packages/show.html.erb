<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="sticky top-0 z-50 bg-white border-b border-gray-200">
    <div class="flex items-center justify-between px-4 py-3">
      <%= link_to flight_packages_path, class: "w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center" do %>
        <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      <% end %>
      
      <h1 class="text-lg font-bold">次卡详情</h1>
      
      <button class="w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center">
        <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
        </svg>
      </button>
    </div>
  </div>

  <!-- Package Image -->
  <div class="relative">
    <img src="<%= @flight_package.image_url %>" alt="<%= @flight_package.title %>" class="w-full h-64 object-cover">
    <% if @flight_package.badge_text.present? %>
      <span class="absolute top-4 left-4 text-white text-sm px-3 py-1 rounded-full font-bold" style="background-color: <%= @flight_package.badge_color %>;">
        <%= @flight_package.badge_text %>
      </span>
    <% end %>
  </div>

  <!-- Package Info -->
  <div class="bg-white px-4 py-6">
    <h2 class="text-2xl font-bold text-gray-900 mb-2"><%= @flight_package.title %></h2>
    <p class="text-gray-600 mb-4"><%= @flight_package.subtitle %></p>
    
    <div class="flex items-baseline mb-4">
      <span class="text-red-500 text-sm mr-1">¥</span>
      <span class="text-red-500 text-4xl font-bold"><%= @flight_package.price.to_i %></span>
      <% if @flight_package.original_price.present? && @flight_package.original_price > @flight_package.price %>
        <span class="text-gray-400 text-lg line-through ml-3">¥<%= @flight_package.original_price.to_i %></span>
        <% if @flight_package.discount_percentage %>
          <span class="ml-2 bg-red-100 text-red-600 text-xs px-2 py-1 rounded"><%= @flight_package.discount_percentage %>%OFF</span>
        <% end %>
      <% end %>
    </div>

    <% if @flight_package.discount_label.present? %>
      <div class="inline-block bg-orange-100 text-orange-600 text-sm px-3 py-1 rounded-full font-medium mb-4">
        <%= @flight_package.discount_label %>
      </div>
    <% end %>
  </div>

  <!-- Package Details -->
  <div class="bg-white mt-2 px-4 py-6">
    <h3 class="text-lg font-bold mb-4">产品详情</h3>
    
    <div class="space-y-3 mb-6">
      <div class="flex items-center">
        <svg class="w-5 h-5 text-blue-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
        </svg>
        <span class="text-gray-700">目的地：<span class="font-medium"><%= @flight_package.destination %></span></span>
      </div>
      
      <div class="flex items-center">
        <svg class="w-5 h-5 text-blue-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
        </svg>
        <span class="text-gray-700">有效期：<span class="font-medium"><%= @flight_package.valid_days %>天</span></span>
      </div>
    </div>

    <% if @flight_package.description.present? %>
      <div class="bg-blue-50 rounded-lg p-4 mb-6">
        <p class="text-gray-700 leading-relaxed"><%= @flight_package.description %></p>
      </div>
    <% end %>

    <% if @flight_package.features.present? %>
      <h4 class="font-bold mb-3">产品特色</h4>
      <div class="space-y-2">
        <% @flight_package.features.each do |feature| %>
          <div class="flex items-start">
            <svg class="w-5 h-5 text-green-500 mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span class="text-gray-700"><%= feature %></span>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Purchase Button -->
  <div class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 px-4 py-4 pb-8">
    <button class="w-full bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 text-white text-lg font-bold py-4 rounded-full shadow-lg transition-all">
      立即购买
    </button>
  </div>
</div>
