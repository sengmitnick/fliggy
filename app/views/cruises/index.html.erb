<div class="min-h-screen bg-surface">
  <!-- Header -->
  <div class="sticky top-0 z-20 bg-surface border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 py-3">
      <div class="flex items-center gap-3">
        <%= link_to root_path, class: "text-gray-700" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        <% end %>
        <h1 class="text-lg font-semibold text-gray-900">游轮游</h1>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 pb-20">
    <!-- Search Bar -->
    <div class="py-4">
      <div class="relative">
        <input 
          type="search" 
          placeholder="搜索目的地、邮轮公司" 
          class="w-full h-12 pl-11 pr-4 rounded-full bg-gray-100 border-none focus:ring-2 focus:ring-primary text-base"
        >
        <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
      </div>
    </div>

    <!-- Route Categories Grid -->
    <section class="mb-6">
      <h2 class="text-base font-semibold text-gray-900 mb-3">热门航线</h2>
      <div class="grid grid-cols-5 gap-4">
        <% @cruise_routes.each do |route| %>
          <%= link_to search_cruises_path(route: route.id), class: "flex flex-col items-center gap-2 p-3 rounded-lg transition hover:bg-gray-50" do %>
            <% if route.icon_url.present? %>
              <%= image_tag route.icon_url, alt: route.name, class: "w-12 h-12 object-contain" %>
            <% else %>
              <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                </svg>
              </div>
            <% end %>
            <span class="text-sm text-gray-700"><%= route.name %></span>
          <% end %>
        <% end %>
      </div>
    </section>

    <!-- Popular Cruises List -->
    <section>
      <div class="mb-3">
        <h2 class="text-base font-semibold text-gray-900">热门游轮</h2>
      </div>

      <div class="space-y-3">
        <% @popular_sailings.each do |sailing| %>
          <%= link_to cruise_path(sailing.cruise_ship.slug), class: "block bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-md transition" do %>
            <!-- Cruise Image -->
            <div class="relative h-48">
              <%= image_tag sailing.cruise_ship.image_url, alt: sailing.cruise_ship.name, class: "w-full h-full object-cover" %>
              <div class="absolute top-3 left-3">
                <span class="inline-block px-2.5 py-1 bg-primary/90 text-white text-xs font-medium rounded">
                  <%= sailing.cruise_route.name %>
                </span>
              </div>
            </div>

            <!-- Cruise Info -->
            <div class="p-4">
              <!-- Ship Name -->
              <h3 class="text-base font-semibold text-gray-900 mb-1">
                <%= sailing.cruise_ship.name %>
              </h3>
              
              <!-- Cruise Line -->
              <p class="text-sm text-gray-500 mb-2">
                <%= sailing.cruise_ship.cruise_line.name %>
              </p>

              <!-- Route Info -->
              <div class="flex items-center gap-2 text-sm text-gray-600 mb-2">
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <span><%= sailing.departure_port %> - <%= sailing.arrival_port %></span>
              </div>

              <!-- Features -->
              <% if sailing.cruise_ship.features.any? %>
                <div class="flex flex-wrap gap-1.5 mb-3">
                  <% sailing.cruise_ship.feature_list.take(3).each do |feature| %>
                    <span class="inline-block px-2 py-0.5 bg-gray-100 text-gray-600 text-xs rounded">
                      <%= feature %>
                    </span>
                  <% end %>
                  <% if sailing.cruise_ship.feature_list.size > 3 %>
                    <span class="inline-block px-2 py-0.5 bg-gray-100 text-gray-600 text-xs rounded">
                      +<%= sailing.cruise_ship.feature_list.size - 3 %>
                    </span>
                  <% end %>
                </div>
              <% end %>

              <!-- Date & Price -->
              <div class="flex items-center justify-between pt-3 border-t border-gray-100">
                <div class="text-sm text-gray-600">
                  <%= sailing.date_range %> · <%= sailing.duration_days %>天<%= sailing.duration_nights %>晚
                </div>
                <div class="flex items-baseline gap-1">
                  <span class="text-xs text-gray-500">¥</span>
                  <span class="text-xl font-bold text-primary"><%= sailing.min_price %></span>
                  <span class="text-xs text-gray-500">起</span>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>

        <% if @popular_sailings.empty? %>
          <div class="text-center py-12">
            <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
            </svg>
            <p class="text-gray-500">暂无可预订的游轮</p>
          </div>
        <% end %>
      </div>
    </section>
  </div>
</div>
