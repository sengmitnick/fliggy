<style>
  .bg-travel-green {
    background: linear-gradient(135deg, #8ba891 0%, #6b8c75 100%);
  }
  .text-xxs {
    font-size: 0.65rem;
  }
  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }
  .no-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>

<div class="min-h-screen bg-[#f6f6f6] pb-24">
  <!-- 用户信息区域 -->
  <div class="px-4 py-4 flex justify-between items-start bg-white">
    <div class="flex items-center space-x-3">
      <div class="relative">
        <div class="w-14 h-14 rounded-full border-2 border-white overflow-hidden bg-gray-300 flex items-center justify-center text-2xl font-bold text-white">
          <%= (current_user.name.presence&.first || current_user.email&.first || 'U').upcase %>
        </div>
        <div class="absolute -bottom-1 left-1/2 -translate-x-1/2 bg-gray-800 text-yellow-500 text-[10px] px-2 rounded-full border border-gray-600 whitespace-nowrap">F1会员</div>
      </div>
      <div>
        <div class="flex items-center space-x-1">
          <h2 class="text-xl font-bold"><%= current_user.name.presence || current_user.email&.split('@')&.first || '用户' %></h2>
          <span class="text-[10px] bg-blue-50 text-blue-500 px-1 rounded border border-blue-200">认证企业会员</span>
        </div>
        <div class="mt-1 flex items-center space-x-2">
          <div class="w-24 h-1.5 bg-gray-200 rounded-full overflow-hidden">
            <div class="w-0 h-full bg-yellow-400"></div>
          </div>
          <span class="text-xs text-gray-500" onclick="window.showToast('精彩即将上线，敬请期待')">0/50 去升级 ></span>
        </div>
      </div>
    </div>
    <div class="flex space-x-4">
      <div class="text-center cursor-pointer" onclick="window.showToast('精彩即将上线，敬请期待')">
        <div class="w-6 h-6 mx-auto flex items-center justify-center">
          <%= image_tag 'profile/我的客服.png', class: 'w-5 h-5', alt: '我的客服' %>
        </div>
        <p class="text-[10px] mt-1">我的客服</p>
      </div>
      <div class="text-center cursor-pointer" onclick="window.showToast('精彩即将上线，敬请期待')">
        <div class="w-6 h-6 mx-auto flex items-center justify-center">
          <%= image_tag 'profile/设置.png', class: 'w-5 h-5', alt: '设置' %>
        </div>
        <p class="text-[10px] mt-1">设置</p>
      </div>
    </div>
  </div>

  <!-- 会员中心卡片 -->
  <div class="mx-3 mt-3 rounded-xl overflow-hidden shadow-sm">
    <div class="bg-travel-green p-4 text-white">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-lg font-bold italic">会员中心</h3>
        <div class="bg-white/20 px-2 py-1 rounded-full text-[10px] flex items-center">
          直通40+品牌会员卡 >
        </div>
      </div>
      <div class="grid grid-cols-4 gap-2 text-center">
        <div>
          <div class="w-10 h-10 mx-auto mb-1">
            <%= image_tag 'profile/酒店特权价.png', class: 'w-full h-full object-contain', alt: '酒店特权价' %>
          </div>
          <p class="text-[11px]">酒店特权价</p>
        </div>
        <div>
          <div class="w-10 h-10 mx-auto mb-1">
            <%= image_tag 'profile/住5送1.png', class: 'w-full h-full object-contain', alt: '住5送1' %>
          </div>
          <p class="text-[11px]">住5送1</p>
        </div>
        <div>
          <div class="w-10 h-10 mx-auto mb-1">
            <%= image_tag 'profile/里程抵房费.png', class: 'w-full h-full object-contain', alt: '里程抵房费' %>
          </div>
          <p class="text-[11px]">里程抵房费</p>
        </div>
        <div class="relative">
          <div class="w-10 h-10 mx-auto mb-1">
            <%= image_tag 'profile/火车票无忧退.png', class: 'w-full h-full object-contain', alt: '火车票无忧退' %>
          </div>
          <p class="text-[11px]">火车票无忧退</p>
          <div class="absolute -top-1 -right-1 bg-white text-green-800 text-[8px] px-1 rounded">F2解锁</div>
        </div>
      </div>
    </div>
    <div class="bg-white px-4 py-3 flex justify-between items-center">
      <div class="flex items-center space-x-2">
        <span class="font-bold text-sm">超省卡</span>
        <span class="text-xs text-gray-500 italic">享125元酒旅立减 会员50%加速升级</span>
      </div>
      <button class="bg-indigo-500 text-white text-xs px-3 py-1 rounded-full"  onclick="window.showToast('精彩即将上线，敬请期待')">去开通</button>
    </div>
  </div>

  <!-- 订单功能区 -->
  <div class="mx-3 mt-3 bg-white rounded-xl py-5 text-center">
    <div class="grid grid-cols-5 gap-2 px-4">
      <%= link_to bookings_path(status: :pending), class: "block space-y-2" do %>
        <div class="relative">
          <div class="w-8 h-8 mx-auto">
            <%= image_tag 'profile/待付款.png', class: 'w-full h-full object-contain', alt: '待付款' %>
          </div>
          <% if @bookings_count[:pending] > 0 %>
            <span class="absolute top-0 right-1/4 w-4 h-4 bg-red-500 text-white text-[9px] rounded-full flex items-center justify-center">
              <%= @bookings_count[:pending] %>
            </span>
          <% end %>
        </div>
        <p class="text-xs text-gray-700">待付款</p>
      <% end %>

      <%= link_to bookings_path(status: :paid), class: "block space-y-2" do %>
        <div class="relative">
          <div class="w-8 h-8 mx-auto">
            <%= image_tag 'profile/待出行.png', class: 'w-full h-full object-contain', alt: '待出行' %>
          </div>
          <% if @bookings_count[:paid] > 0 %>
            <span class="absolute top-0 right-1/4 w-4 h-4 bg-red-500 text-white text-[9px] rounded-full flex items-center justify-center">
              <%= @bookings_count[:paid] %>
            </span>
          <% end %>
        </div>
        <p class="text-xs text-gray-700">待出行</p>
      <% end %>

      <div class="block space-y-2">
        <div class="relative">
          <div class="w-8 h-8 mx-auto">
            <%= image_tag 'profile/待评价.png', class: 'w-full h-full object-contain', alt: '待评价' %>
          </div>
        </div>
        <p class="text-xs text-gray-700">待评价</p>
      </div>

      <div class="block space-y-2">
        <div class="relative">
          <div class="w-8 h-8 mx-auto">
            <%= image_tag 'profile/退款售后.png', class: 'w-full h-full object-contain', alt: '退款售后' %>
          </div>
        </div>
        <p class="text-xs text-gray-700">退款/售后</p>
      </div>

      <%= link_to bookings_path, class: "block space-y-2" do %>
        <div class="w-8 h-8 mx-auto">
          <%= image_tag 'profile/全部订单.png', class: 'w-full h-full object-contain', alt: '全部订单' %>
        </div>
        <p class="text-xs text-gray-700">全部订单</p>
      <% end %>
    </div>
  </div>

  <!-- 收藏与里程 -->
  <div class="mx-3 mt-3 bg-white rounded-xl grid grid-cols-5 py-4 text-center"  onclick="window.showToast('精彩即将上线，敬请期待')">
    <div>
      <p class="text-blue-600 font-bold text-lg">2</p>
      <p class="text-[11px] text-gray-700">我的收藏</p>
    </div>
    <div>
      <p class="text-blue-600 font-bold text-lg">0</p>
      <p class="text-[11px] text-gray-700">购物车</p>
    </div>
    <div>
      <p class="text-blue-600 font-bold text-lg">1</p>
      <p class="text-[11px] text-gray-700">浏览历史</p>
    </div>
    <div>
      <p class="text-blue-600 font-bold text-lg">33</p>
      <p class="text-[11px] text-gray-700">红包卡券</p>
    </div>
    <div class="relative">
      <p class="text-blue-600 font-bold text-lg">0</p>
      <p class="text-[11px] text-gray-700">我的里程</p>
      <div class="absolute -top-2 right-1 bg-red-500 text-white text-[9px] px-1 rounded-sm">签到+2</div>
    </div>
  </div>

  <!-- 工具格 -->
  <div class="mx-3 mt-3 bg-white rounded-xl grid grid-cols-5 py-5 text-center gap-y-4">
    <%= link_to passengers_path, class: "block space-y-2" do %>
      <div class="w-8 h-8 mx-auto">
        <%= image_tag 'profile/常用信息.png', class: 'w-full h-full object-contain', alt: '常用信息' %>
      </div>
      <p class="text-[10px] text-gray-700">常用信息</p>
    <% end %>

    <%= link_to edit_pay_password_profile_path, class: "block space-y-2" do %>
      <div class="w-8 h-8 mx-auto">
        <%= image_tag 'profile/我的钱包.png', class: 'w-full h-full object-contain', alt: '支付密码' %>
      </div>
      <p class="text-[10px] text-gray-700">支付密码</p>
    <% end %>

    <div class="block space-y-2"  onclick="window.showToast('精彩即将上线，敬请期待')">
      <div class="w-8 h-8 mx-auto">
        <%= image_tag 'profile/发票抬头.png', class: 'w-full h-full object-contain', alt: '发票抬头' %>
      </div>
      <p class="text-[10px] text-gray-700">发票抬头</p>
    </div>

    <div class="block space-y-2" onclick="window.showToast('精彩即将上线，敬请期待')">
      <div class="w-8 h-8 mx-auto">
        <%= image_tag 'profile/我的挑战.png', class: 'w-full h-full object-contain', alt: '我的挑战' %>
      </div>
      <p class="text-[10px] text-gray-700">我的挑战</p>
    </div>

    <div class="block space-y-2" onclick="window.showToast('精彩即将上线，敬请期待')">
      <div class="w-8 h-8 mx-auto">
        <%= image_tag 'profile/企业会员.png', class: 'w-full h-full object-contain', alt: '企业会员' %>
      </div>
      <p class="text-[10px] text-gray-700">企业会员</p>
    </div>

    <div class="block space-y-2" onclick="window.showToast('精彩即将上线，敬请期待')">
      <div class="w-8 h-8 mx-auto">
        <%= image_tag 'profile/我的礼物.png', class: 'w-full h-full object-contain', alt: '我的礼物' %>
      </div>
      <p class="text-[10px] text-gray-700">我的礼物</p>
    </div>

    <div class="block space-y-2" onclick="window.showToast('精彩即将上线，敬请期待')">
      <div class="w-8 h-8 mx-auto">
        <%= image_tag 'profile/我的笔记.png', class: 'w-full h-full object-contain', alt: '我的笔记' %>
      </div>
      <p class="text-[10px] text-gray-700">我的笔记</p>
    </div>

    <div class="block space-y-2" onclick="window.showToast('精彩即将上线，敬请期待')">
      <div class="w-8 h-8 mx-auto">
        <%= image_tag 'profile/店铺关注.png', class: 'w-full h-full object-contain', alt: '店铺关注' %>
      </div>
      <p class="text-[10px] text-gray-700">店铺关注</p>
    </div>

    <div class="block space-y-2" onclick="window.showToast('精彩即将上线，敬请期待')">
      <div class="w-8 h-8 mx-auto">
        <%= image_tag 'profile/学生专区.png', class: 'w-full h-full object-contain', alt: '学生专区' %>
      </div>
      <p class="text-[10px] text-gray-700">学生专区</p>
    </div>

    <div class="block space-y-2" onclick="window.showToast('精彩即将上线，敬请期待')">
      <div class="w-8 h-8 mx-auto">
        <%= image_tag 'profile/口令兑换.png', class: 'w-full h-full object-contain', alt: '口令兑换' %>
      </div>
      <p class="text-[10px] text-gray-700">口令兑换</p>
    </div>

    <div class="block space-y-2">
      <div class="w-8 h-8 mx-auto">
        <%= image_tag 'profile/创作者中心.png', class: 'w-full h-full object-contain', alt: '创作者中心' %>
      </div>
      <p class="text-[10px] text-gray-700">创作者中心</p>
    </div>

    <div class="block space-y-2" onclick="window.showToast('精彩即将上线，敬请期待')">
      <div class="w-8 h-8 mx-auto">
        <%= image_tag 'profile/商家入驻.png', class: 'w-full h-full object-contain', alt: '商家入驻' %>
      </div>
      <p class="text-[10px] text-gray-700">商家入驻</p>
    </div>

    <div class="block space-y-2" onclick="window.showToast('精彩即将上线，敬请期待')">
      <div class="w-8 h-8 mx-auto">
        <%= image_tag 'profile/意见反馈.png', class: 'w-full h-full object-contain', alt: '意见反馈' %>
      </div>
      <p class="text-[10px] text-gray-700">意见反馈</p>
    </div>
  </div>

  <!-- 金融服务 -->
  <div class="mx-3 mt-3 bg-white rounded-xl flex items-center py-5 text-center divide-x divide-gray-100">
    <div class="flex-1">
      <div class="flex items-center justify-center space-x-1">
        <span class="text-lg font-bold">30</span><span class="text-[10px] mt-1">万</span>
        <div class="w-2 h-2 bg-red-500 rounded-full"></div>
      </div>
      <p class="text-[10px] text-gray-500">最高可借</p>
    </div>
    <div class="flex-1">
      <p class="text-lg font-bold">3<span class="text-sm font-normal">期免息</span></p>
      <p class="text-[10px] text-gray-500">分期旅行</p>
    </div>
    <div class="flex-1">
      <p class="text-lg font-bold text-gray-700">240</p>
      <p class="text-[10px] text-gray-500">联名卡</p>
    </div>
    <div class="flex-1">
      <p class="text-lg font-bold text-gray-700">20<span class="text-sm font-normal">万</span></p>
      <p class="text-[10px] text-gray-500">借钱精选</p>
    </div>
    <%= link_to wallet_profile_path, class: "px-4" do %>
      <div class="w-8 h-8 mx-auto mb-1">
        <%= image_tag 'profile/我的钱包.png', class: 'w-full h-full object-contain', alt: '我的钱包' %>
      </div>
      <p class="text-[10px] text-gray-500">我的钱包</p>
    <% end %>
  </div>

  <!-- 超值福利 -->
  <div class="mx-3 mt-3 bg-white rounded-xl p-4">
    <div class="flex justify-between items-center mb-4">
      <div class="flex items-center space-x-2">
        <h3 class="font-bold text-orange-600">超值福利</h3>
        <span class="text-xs bg-red-50 text-red-400 px-2 py-0.5 rounded-full">会员惊喜权益</span>
      </div>
      <button class="bg-yellow-400 text-xs px-3 py-1 rounded-full font-bold"  onclick="window.showToast('精彩即将上线，敬请期待')">一键领取</button>
    </div>
    <div class="flex space-x-3 overflow-x-auto pb-2 no-scrollbar">
      <!-- 优惠券卡片 1 -->
      <div class="flex-shrink-0 w-32 bg-orange-50 rounded-lg p-2 border border-orange-100 flex">
        <div class="flex-1">
          <p class="text-[10px] text-gray-600">国内机票</p>
          <p class="text-orange-600 font-bold">封顶¥20</p>
        </div>
        <div class="border-l border-dashed border-orange-200 px-1 flex items-center">
          <span class="text-[10px] text-orange-500 [writing-mode:vertical-rl]" onclick="window.showToast('精彩即将上线，敬请期待')">领取</span>
        </div>
      </div>
      <!-- 优惠券卡片 2 -->
      <div class="flex-shrink-0 w-32 bg-orange-50 rounded-lg p-2 border border-orange-100 flex">
        <div class="flex-1">
          <p class="text-[10px] text-gray-600">国内酒店券</p>
          <p class="text-orange-600 font-bold">封顶¥30</p>
        </div>
        <div class="border-l border-dashed border-orange-200 px-1 flex items-center">
          <span class="text-[10px] text-orange-500 [writing-mode:vertical-rl]" onclick="window.showToast('精彩即将上线，敬请期待')">领取</span>
        </div>
      </div>
      <!-- 优惠券卡片 3 -->
      <div class="flex-shrink-0 w-32 bg-orange-50 rounded-lg p-2 border border-orange-100 flex">
        <div class="flex-1">
          <p class="text-[10px] text-gray-600">接送券</p>
          <p class="text-orange-600 font-bold">封顶¥80</p>
        </div>
        <div class="border-l border-dashed border-orange-200 px-1 flex items-center">
          <span class="text-[10px] text-orange-500 [writing-mode:vertical-rl]" onclick="window.showToast('精彩即将上线，敬请期待')">领取</span>
        </div>
      </div>
    </div>
  </div>

  <!-- 我的旅行回忆 -->
  <div class="mx-3 mt-3 bg-white rounded-xl overflow-hidden mb-8" onclick="window.showToast('精彩即将上线，敬请期待')">
    <div class="p-4 flex justify-between items-center">
      <h3 class="font-bold">我的旅行回忆 ></h3>
    </div>
    <div class="relative h-32 bg-gradient-to-r from-blue-400 to-purple-500">
      <div class="absolute inset-0 flex flex-col justify-end p-4">
        <div class="bg-black/60 text-white text-xs px-3 py-1 rounded-full w-fit">
          你有9个成就待解锁
        </div>
      </div>
    </div>
  </div>
</div>

<%= render 'shared/bottom_navigation', active_tab: :profile %>
