<div class="max-w-md mx-auto shadow-lg min-h-screen pb-10" style="background-color: #f7f8fa;">

  <!-- 顶部导航与图片区域 -->
  <div class="relative bg-white">

    <!-- 顶部操作 -->
    <div class="absolute top-10 left-4 z-10">
      <%= link_to search_cars_path(city: params[:city], pickup_location: params[:pickup_location], return_location: params[:return_location], pickup_date: params[:pickup_date], return_date: params[:return_date], sort: params[:sort], quick_select: params[:quick_select], price_service: params[:price_service]), class: "block" do %>
        <div class="bg-black/30 rounded-full p-2">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
        </div>
      <% end %>
    </div>
    <div class="absolute top-10 right-4 z-10">
      <div class="bg-black/10 rounded-full p-1">
        <svg class="w-6 h-6 text-gray-700" fill="currentColor" viewBox="0 0 24 24"><path d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z"></path></svg>
      </div>
    </div>

    <!-- 主图 -->
    <div class="w-full aspect-[16/10] bg-gray-100 flex items-center justify-center relative">
      <% if @car.image_url.present? %>
        <%= image_tag @car.image_url, alt: "#{@car.brand} #{@car.car_model}", class: "w-full h-full object-cover" %>
      <% else %>
        <div class="text-gray-400 flex flex-col items-center">
          <svg class="w-20 h-20 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
          <span class="text-sm"><%= @car.brand %> <%= @car.car_model %> 车型图</span>
        </div>
      <% end %>
      <!-- 图片指示器 -->
      <div class="absolute bottom-4 left-4 bg-black/50 text-white text-[10px] px-3 py-1 rounded-full border border-white/30">
        1/1 <span class="ml-2 text-gray-300">图片仅供参考，以门店提供实物为准</span>
      </div>
    </div>
  </div>

  <!-- 车型基本信息 -->
  <div class="bg-white px-4 py-4 mb-2">
    <div class="flex items-center space-x-2 mb-2">
      <h1 class="text-2xl font-bold text-gray-800"><%= @car.brand %> <%= @car.car_model %></h1>
      <% if @car.fuel_type == '纯电动' || @car.fuel_type == '混合动力' %>
        <div class="flex items-center bg-blue-50 text-blue-500 text-[10px] px-1 rounded border border-blue-100">
          <svg class="w-3 h-3 mr-0.5" fill="currentColor" viewBox="0 0 20 20"><path d="M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 100-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z"></path></svg>
          低碳车型
        </div>
      <% end %>
      <span class="text-gray-500 text-sm">限行规则</span>
      <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
    </div>
    <div class="flex space-x-3 text-sm text-gray-500">
      <span><%= @car.category %></span>
      <span>|</span>
      <span><%= @car.seats %>座<%= @car.doors %>门</span>
      <span>|</span>
      <span><%= @car.transmission %></span>
      <span>|</span>
      <span><%= @car.fuel_type %></span>
    </div>
  </div>

  <!-- 取还车时间地点 -->
  <% 
    pickup_date = @search_params[:pickup_date].present? ? Date.parse(@search_params[:pickup_date]) : Date.today
    return_date = @search_params[:return_date].present? ? Date.parse(@search_params[:return_date]) : (Date.today + 2.days)
    days_count = (return_date - pickup_date).to_i
    pickup_location = @search_params[:pickup_location].presence || '天河国际机场T3'
    weekday_names = ['日', '一', '二', '三', '四', '五', '六']
  %>
  <div class="bg-white px-4 py-6 mb-4 flex justify-between items-center border-t border-gray-50">
    <div class="text-left">
      <div class="text-lg font-bold"><%= pickup_date.strftime('%m月%d日') %> 周<%= weekday_names[pickup_date.wday] %></div>
      <div class="text-gray-500 text-sm">13:55</div>
    </div>
    <div class="flex flex-col items-center">
      <div class="text-sm font-medium"><%= pickup_location %></div>
      <div class="flex items-center w-24">
        <div class="h-[1px] bg-gray-300 flex-grow"></div>
        <div class="px-2 text-xs text-gray-400 whitespace-nowrap"><%= days_count %>天</div>
        <div class="h-[1px] bg-gray-300 flex-grow"></div>
      </div>
    </div>
    <div class="text-right">
      <div class="text-lg font-bold"><%= return_date.strftime('%m月%d日') %> 周<%= weekday_names[return_date.wday] %></div>
      <div class="text-gray-500 text-sm">13:55</div>
    </div>
  </div>

  <!-- 筛选提示 -->
  <div class="px-4 mb-3 flex items-center text-gray-800 font-bold">
    <svg class="w-5 h-5 mr-1 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.757c1.27 0 2.242 1.04 2.242 2.242V20a2 2 0 01-2 2H5a2 2 0 01-2-2V10c0-1.1.9-2 2-2h4.757l.707-1.707A1 1 0 0111.172 6h1.656a1 1 0 01.707.293L14 10z"></path></svg>
    符合您筛选条件的报价
  </div>

  <!-- 报价卡片 1 -->
  <div class="mx-4 bg-white rounded-xl p-4 mb-3 shadow-sm border border-orange-100">
    <div class="text-orange-600 font-bold text-sm mb-3">总价最低</div>
    <div class="flex justify-between items-start">
      <div class="flex-grow">
        <div class="flex items-center mb-1">
          <span class="font-bold text-lg mr-1">滴滴租车</span>
          <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
          <div class="ml-auto flex items-center text-sm">
            <span class="text-blue-600 font-bold">4.7 很好</span>
            <span class="text-gray-400 ml-2 text-xs">139条点评</span>
          </div>
        </div>
        <div class="text-xs text-gray-500 mb-3">取/还 店员免费上门送取车</div>
        <div class="flex flex-wrap gap-1 mb-4">
          <span class="text-[10px] px-1 border border-blue-200 text-blue-500 rounded">免费取消</span>
          <span class="text-[10px] px-1 border border-blue-200 text-blue-500 rounded">1年内新车</span>
          <% if @car.tags.present? %>
            <% @car.tags.split(',').each do |tag| %>
              <span class="text-[10px] px-1 border border-gray-200 text-gray-500 rounded bg-gray-50"><%= tag.strip %></span>
            <% end %>
          <% end %>
        </div>
        <div class="flex justify-between items-end">
          <div class="flex items-center space-x-2">
            <span class="text-xs bg-orange-50 text-orange-500 px-1 rounded">机车特惠</span>
            <span class="text-xs text-orange-500">2项已优惠¥71</span>
          </div>
          <div class="text-right flex items-center">
            <div class="mr-3">
              <div class="text-orange-600 font-bold text-2xl">¥<%= @car.price_per_day %><span class="text-xs font-normal">/天</span></div>
              <div class="text-[10px] text-gray-400">总价¥<%= @car.price_per_day * days_count %> <span class="border rounded-full px-0.5 ml-0.5">?</span></div>
            </div>
            <%= link_to new_car_order_path(car_id: @car.id, city: @search_params[:city], pickup_location: @search_params[:pickup_location], return_location: @search_params[:return_location], pickup_date: @search_params[:pickup_date], return_date: @search_params[:return_date]), class: "block" do %>
              <button class="bg-orange-600 text-white w-12 h-12 rounded-lg font-bold text-lg shadow-lg">订</button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 报价卡片 2 -->
  <div class="mx-4 bg-white rounded-xl p-4 mb-6 shadow-sm">
    <div class="flex justify-between items-start">
      <div class="flex-grow">
        <div class="flex items-center mb-1">
          <div class="w-5 h-5 bg-yellow-400 rounded-full flex items-center justify-center mr-1">
            <span class="text-[10px]">🐷</span>
          </div>
          <span class="font-bold text-lg mr-1 text-orange-700">优选</span>
          <span class="font-bold text-lg mr-1">麻豆智行</span>
          <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
          <div class="ml-auto flex items-center text-sm">
            <span class="text-blue-600 font-bold">4.8 很好</span>
            <span class="text-gray-400 ml-2 text-xs">109条点评</span>
          </div>
        </div>
        <div class="text-xs text-gray-500 mb-3">取/还 店员收费上门送取车</div>
        <div class="flex flex-wrap gap-1 mb-4">
          <span class="text-[10px] px-1 border border-blue-200 text-blue-500 rounded">免费取消</span>
          <span class="text-[10px] px-1 border border-gray-200 text-gray-500 rounded bg-gray-50">2年内车龄</span>
          <% if @car.tags.present? %>
            <% @car.tags.split(',').each do |tag| %>
              <span class="text-[10px] px-1 border border-gray-200 text-gray-500 rounded bg-gray-50"><%= tag.strip %></span>
            <% end %>
          <% end %>
        </div>
        <div class="flex justify-between items-end">
          <div class="flex items-center space-x-2">
            <span class="text-xs bg-orange-50 text-orange-500 px-1 rounded">机车特惠</span>
            <span class="text-xs text-orange-500">2项已优惠¥70</span>
          </div>
          <div class="text-right flex items-center">
            <div class="mr-3">
              <span class="text-[10px] text-red-500 border border-red-200 px-1 rounded">仅剩2辆</span>
              <div class="text-orange-600 font-bold text-2xl">¥<%= (@car.price_per_day * 0.9).round %><span class="text-xs font-normal">/天</span></div>
              <div class="text-[10px] text-gray-400">总价¥<%= (@car.price_per_day * days_count * 0.9).round %> <span class="border rounded-full px-0.5 ml-0.5">?</span></div>
            </div>
            <%= link_to new_car_order_path(car_id: @car.id, city: @search_params[:city], pickup_location: @search_params[:pickup_location], return_location: @search_params[:return_location], pickup_date: @search_params[:pickup_date], return_date: @search_params[:return_date]), class: "block" do %>
              <button class="bg-orange-600 text-white w-12 h-12 rounded-lg font-bold text-lg">订</button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 热销车型推荐 -->
  <div class="px-4 py-2 border-t border-gray-200 bg-white">
    <div class="flex items-center mb-4">
      <svg class="w-5 h-5 mr-1 text-red-500" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path></svg>
      <span class="font-bold text-lg">热销车型推荐</span>
    </div>
    
    <% recommended_car = Car.where(is_available: true).where.not(id: @car.id).order(:sales_rank).first %>
    <% if recommended_car.present? %>
      <%= link_to car_path(recommended_car), class: "block" do %>
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <div class="w-24 h-16 bg-gray-100 rounded-lg flex items-center justify-center mr-3 overflow-hidden">
              <% if recommended_car.image_url.present? %>
                <%= image_tag recommended_car.image_url, alt: "#{recommended_car.brand} #{recommended_car.car_model}", class: "w-full h-full object-cover" %>
              <% else %>
                <svg class="w-12 h-12 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
              <% end %>
            </div>
            <div>
              <div class="font-bold text-lg"><%= recommended_car.brand %> <%= recommended_car.car_model %></div>
              <div class="text-xs text-gray-500"><%= recommended_car.category %> | <%= recommended_car.seats %>座<%= recommended_car.doors %>门 | <%= recommended_car.transmission %> | <%= recommended_car.fuel_type %></div>
            </div>
          </div>
          <div class="text-right">
            <div class="text-orange-600 font-bold text-xl">¥<%= recommended_car.price_per_day %><span class="text-xs font-normal">/天</span></div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

</div>
