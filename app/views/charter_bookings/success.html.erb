<!-- 支付成功页 -->
<div class="min-h-screen bg-gray-50 flex flex-col">
  <!-- Header -->
  <div class="sticky top-0 z-40 bg-white shadow-sm">
    <div class="max-w-md mx-auto px-4 py-3 flex items-center justify-between">
      <div class="w-6"></div>
      <h1 class="text-lg font-bold text-gray-900">支付成功</h1>
      <button onclick="window.location.href='/'" class="p-2 -mr-2 text-gray-800">
        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>

  <!-- 成功动画区域 -->
  <div class="flex-1 flex flex-col items-center justify-center px-4 py-8">
    <!-- 成功图标 -->
    <div class="w-24 h-24 bg-green-100 rounded-full flex items-center justify-center mb-6">
      <svg class="w-16 h-16 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
      </svg>
    </div>

    <!-- 成功提示 -->
    <h2 class="text-2xl font-bold text-gray-900 mb-2">支付成功！</h2>
    <p class="text-sm text-gray-600 text-center mb-6">
      您的包车订单已确认，司机将在出发前联系您
    </p>

    <!-- 订单信息卡片 -->
    <div class="w-full max-w-sm bg-white rounded-xl shadow-lg p-6 mb-6">
      <div class="text-center mb-4 pb-4 border-b border-gray-100">
        <div class="text-sm text-gray-600 mb-1">订单号</div>
        <div class="text-base font-mono text-gray-900"><%= @charter_booking.order_number %></div>
      </div>

      <div class="space-y-3">
        <div class="flex items-start">
          <div class="w-20 text-sm text-gray-600 flex-shrink-0">路线</div>
          <div class="flex-1 text-sm text-gray-900 font-medium"><%= @route.name %></div>
        </div>
        
        <div class="flex items-start">
          <div class="w-20 text-sm text-gray-600 flex-shrink-0">出发日期</div>
          <div class="flex-1 text-sm text-gray-900 font-medium">
            <%= @charter_booking.departure_date.strftime('%Y年%m月%d日') %>
          </div>
        </div>
        
        <div class="flex items-start">
          <div class="w-20 text-sm text-gray-600 flex-shrink-0">车型</div>
          <div class="flex-1 text-sm text-gray-900 font-medium">
            <%= @charter_booking.vehicle_type.name %>（<%= @charter_booking.vehicle_type.seats %>座）
          </div>
        </div>
        
        <div class="flex items-start">
          <div class="w-20 text-sm text-gray-600 flex-shrink-0">时长</div>
          <div class="flex-1 text-sm text-gray-900 font-medium">
            <%= @charter_booking.duration_hours %>小时
          </div>
        </div>

        <div class="flex items-start pt-3 border-t border-gray-100">
          <div class="w-20 text-sm text-gray-600 flex-shrink-0">支付金额</div>
          <div class="flex-1 text-xl font-bold text-orange-500">
            ¥<%= @charter_booking.total_price.round(2) %>
          </div>
        </div>
      </div>
    </div>

    <!-- 温馨提示 -->
    <div class="w-full max-w-sm bg-yellow-50 border border-yellow-200 rounded-xl p-4 mb-6">
      <div class="flex items-start">
        <svg class="w-5 h-5 text-yellow-600 mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
        </svg>
        <div class="text-sm text-gray-700">
          <div class="font-bold mb-1">温馨提示</div>
          <ul class="text-xs space-y-1">
            <li>• 司机将在出发前1天联系您确认行程</li>
            <li>• 请保持手机畅通，注意接听电话</li>
            <li>• 如需修改或取消，请提前24小时联系客服</li>
            <li>• 客服热线：400-1234-5678</li>
          </ul>
        </div>
      </div>
    </div>

    <!-- 操作按钮 -->
    <div class="w-full max-w-sm space-y-3">
      <%= link_to charter_booking_path(@charter_booking), 
          class: "block w-full bg-yellow-400 hover:bg-yellow-500 text-gray-900 text-center font-bold py-4 rounded-xl shadow-lg transition-colors" do %>
        查看订单详情
      <% end %>
      
      <%= link_to chartered_tours_path, 
          class: "block w-full bg-white hover:bg-gray-50 text-gray-900 text-center font-bold py-4 rounded-xl border-2 border-gray-200 transition-colors" do %>
        返回首页
      <% end %>
    </div>
  </div>
</div>
