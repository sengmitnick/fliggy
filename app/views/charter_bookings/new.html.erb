<!-- 订单填写页 -->
<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="sticky top-0 z-40 bg-white shadow-sm">
    <div class="max-w-md mx-auto px-4 py-3 flex items-center justify-between">
      <button onclick="history.back()" class="p-2 -ml-2 text-gray-800">
        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 19l-7-7 7-7" />
        </svg>
      </button>
      <h1 class="text-lg font-bold text-gray-900">填写订单</h1>
      <div class="w-6"></div>
    </div>
  </div>

  <%= form_with model: @charter_booking, url: charter_bookings_path, class: "max-w-md mx-auto" do |f| %>
    <!-- 隐藏字段 -->
    <%= f.hidden_field :charter_route_id %>
    <%= f.hidden_field :vehicle_type_id %>
    <%= f.hidden_field :departure_date %>
    <%= f.hidden_field :departure_time %>
    <%= f.hidden_field :duration_hours %>
    <%= f.hidden_field :passengers_count %>
    <%= f.hidden_field :booking_mode %>

    <!-- 表单错误提示 -->
    <%= render 'shared/form_error_message', model: @charter_booking %>

    <!-- 行程信息 -->
    <div class="bg-white px-4 py-4 mb-2">
      <h2 class="text-base font-bold text-gray-900 mb-3">行程信息</h2>
      
      <div class="space-y-3">
        <div class="flex items-start">
          <div class="w-16 text-sm text-gray-600">路线</div>
          <div class="flex-1 text-sm text-gray-900 font-medium"><%= @route.name %></div>
        </div>
        
        <div class="flex items-start">
          <div class="w-16 text-sm text-gray-600">车型</div>
          <div class="flex-1 text-sm text-gray-900 font-medium">
            <%= @vehicle_type.name %>（<%= @vehicle_type.seats %>座）
          </div>
        </div>
        
        <div class="flex items-start">
          <div class="w-16 text-sm text-gray-600">日期</div>
          <div class="flex-1 text-sm text-gray-900 font-medium">
            <%= @departure_date.strftime('%Y年%m月%d日') %>
          </div>
        </div>
        
        <div class="flex items-start">
          <div class="w-16 text-sm text-gray-600">时长</div>
          <div class="flex-1 text-sm text-gray-900 font-medium">
            <%= @duration_hours %>小时
          </div>
        </div>
        
        <div class="flex items-start">
          <div class="w-16 text-sm text-gray-600">人数</div>
          <div class="flex-1 text-sm text-gray-900 font-medium">
            <%= @passengers_count %>人
          </div>
        </div>
      </div>
    </div>

    <!-- 联系人信息 -->
    <div class="bg-white px-4 py-4 mb-2">
      <h2 class="text-base font-bold text-gray-900 mb-3">联系人信息</h2>
      
      <!-- 常用联系人快捷选择 -->
      <% if @contacts.any? %>
        <div class="mb-4">
          <div class="text-sm text-gray-600 mb-2">常用联系人</div>
          <div class="flex gap-2 overflow-x-auto pb-2">
            <% @contacts.each do |contact| %>
              <button type="button" 
                      data-contact-name="<%= contact.name %>"
                      data-contact-phone="<%= contact.phone %>"
                      onclick="fillContact(this)"
                      class="flex-shrink-0 px-4 py-2 bg-gray-100 rounded-lg text-sm hover:bg-gray-200">
                <%= contact.name %>
              </button>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="space-y-4">
        <div>
          <%= f.label :contact_name, '联系人姓名', class: 'block text-sm font-medium text-gray-700 mb-2' %>
          <%= f.text_field :contact_name, 
              required: true,
              placeholder: '请输入联系人姓名',
              class: 'w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-yellow-400 focus:border-transparent' %>
        </div>

        <div>
          <%= f.label :contact_phone, '联系电话', class: 'block text-sm font-medium text-gray-700 mb-2' %>
          <%= f.telephone_field :contact_phone, 
              required: true,
              placeholder: '请输入11位手机号',
              maxlength: 11,
              pattern: '1[3-9]\\d{9}',
              class: 'w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-yellow-400 focus:border-transparent' %>
        </div>
      </div>
    </div>

    <!-- 特殊需求 -->
    <div class="bg-white px-4 py-4 mb-2">
      <h2 class="text-base font-bold text-gray-900 mb-3">特殊需求（选填）</h2>
      
      <%= f.text_area :special_requirements, 
          rows: 4,
          placeholder: '如有特殊需求，请在此说明（如儿童座椅、婴儿提篮、行李数量等）',
          class: 'w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-yellow-400 focus:border-transparent' %>
    </div>

    <!-- 价格明细 -->
    <div class="bg-white px-4 py-4 mb-2">
      <h2 class="text-base font-bold text-gray-900 mb-3">价格明细</h2>
      
      <div class="space-y-2">
        <div class="flex items-center justify-between text-sm">
          <span class="text-gray-600">基础价格</span>
          <span class="text-gray-900 font-medium">¥<%= @total_price.round(2) %></span>
        </div>
        
        <div class="flex items-center justify-between text-sm">
          <span class="text-gray-600">服务费</span>
          <span class="text-gray-900 font-medium">¥0</span>
        </div>
        
        <div class="border-t border-gray-200 pt-2 mt-2">
          <div class="flex items-center justify-between">
            <span class="text-base font-bold text-gray-900">总计</span>
            <span class="text-2xl font-bold text-orange-500">¥<%= @total_price.round(2) %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- 服务说明 -->
    <div class="bg-yellow-50 border border-yellow-200 rounded-xl px-4 py-3 mx-4 mb-4">
      <div class="text-sm text-gray-700">
        <div class="font-bold mb-2">服务说明</div>
        <ul class="space-y-1 text-xs">
          <li>✓ 专业司机，全程服务</li>
          <li>✓ 车辆保险齐全，安全无忧</li>
          <li>✓ 超时费用：超过预定时间后按小时计费</li>
          <li>✓ 免费取消：出发前24小时可免费取消</li>
        </ul>
      </div>
    </div>

    <!-- 底部固定按钮 -->
    <div class="max-w-md mx-auto fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 px-4 py-3 shadow-lg">
      <div class="flex items-center gap-3">
        <div class="flex-1">
          <div class="text-xs text-gray-500">应付金额</div>
          <div class="text-2xl font-bold text-orange-500">¥<%= @total_price.round(2) %></div>
        </div>
        <%= f.submit '确认订单', 
            class: 'flex-1 bg-yellow-400 hover:bg-yellow-500 text-gray-900 text-center font-bold py-4 rounded-xl shadow-lg transition-colors cursor-pointer' %>
      </div>
    </div>

    <!-- 底部占位 -->
    <div class="h-24"></div>
  <% end %>
</div>

<script>
function fillContact(button) {
  const name = button.dataset.contactName;
  const phone = button.dataset.contactPhone;
  
  document.querySelector('#charter_booking_contact_name').value = name;
  document.querySelector('#charter_booking_contact_phone').value = phone;
}
</script>
