<div class="min-h-screen bg-surface">
  <!-- Header -->
  <div class="bg-surface border-b border-border sticky top-0 z-10">
    <div class="flex items-center justify-between px-4 py-3">
      <div class="flex items-center space-x-3">
        <%= link_to root_path, class: "text-text-primary" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        <% end %>
        <h1 class="text-lg font-semibold text-text-primary">我的定制单</h1>
      </div>
    </div>
  </div>

  <!-- Orders List -->
  <div class="px-4 py-4">
    <% if @custom_travel_requests.any? %>
      <div class="space-y-3">
        <% @custom_travel_requests.each do |request| %>
          <%= render partial: 'bookings/custom_travel_request_card', locals: { booking: request } %>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="flex flex-col items-center justify-center py-16">
        <svg class="w-24 h-24 text-text-muted mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <p class="text-text-muted text-base mb-2">暂无定制单</p>
        <p class="text-text-muted text-sm">快去定制您的专属旅行吧</p>
        <%= link_to '去定制', root_path, class: 'btn-primary mt-4' %>
      </div>
    <% end %>
  </div>
</div>
