<div class="min-h-screen bg-surface pb-20">
  <!-- Header -->
  <div class="sticky top-0 z-20 bg-surface/95 backdrop-blur-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 py-3">
      <div class="flex items-center gap-3">
        <%= link_to cruise_path(@cruise_ship.slug, sailing_id: @sailing.id), class: "text-gray-700" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        <% end %>
        <div class="flex-1">
          <h1 class="text-base font-semibold text-gray-900"><%= @cruise_ship.name %></h1>
          <p class="text-xs text-gray-500"><%= @sailing.date_range %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 py-4">
    <!-- Sailing & Cabin Info Card -->
    <div class="bg-white rounded-lg p-4 mb-4 shadow-sm">
      <div class="flex items-start gap-3">
        <div class="flex-shrink-0 w-12 h-12 rounded bg-primary/10 flex items-center justify-center">
          <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
        <div class="flex-1">
          <h3 class="font-medium text-gray-900 mb-1"><%= @sailing.cruise_route.name %>航线</h3>
          <p class="text-sm text-gray-600"><%= @sailing.departure_port %> → <%= @sailing.arrival_port %></p>
          <p class="text-sm text-gray-500">
            <%= @sailing.departure_date.strftime('%Y年%m月%d日') %> - 
            <%= @sailing.return_date.strftime('%m月%d日') %>
            （<%= @sailing.duration_days %>天<%= @sailing.duration_nights %>晚）
          </p>
        </div>
      </div>

      <% if @cabin_type %>
        <div class="mt-4 pt-4 border-t border-gray-100">
          <div class="flex items-start gap-3">
            <div class="flex-shrink-0 w-12 h-12 rounded bg-gray-100 overflow-hidden">
              <% if @cabin_type.image_urls.present? && @cabin_type.image_urls.first %>
                <%= image_tag @cabin_type.image_urls.first, alt: @cabin_type.name, class: "w-full h-full object-cover" %>
              <% end %>
            </div>
            <div>
              <h4 class="font-medium text-gray-900 mb-1"><%= @cabin_type.name %></h4>
              <div class="flex flex-wrap gap-1.5">
                <% @cabin_type.feature_badges.each do |badge| %>
                  <span class="inline-block px-2 py-0.5 bg-gray-100 text-gray-600 text-xs rounded">
                    <%= badge %>
                  </span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Merchant Products List -->
    <section>
      <h2 class="text-base font-semibold text-gray-900 mb-3">
        选择商家（共<%= @products.count %>个商家）
      </h2>

      <div class="space-y-3">
        <% @products.each_with_index do |product, index| %>
          <%= link_to new_cruise_order_path(product_id: product.id), 
                      class: "block bg-white rounded-lg p-4 shadow-sm hover:shadow-md transition" do %>
            <!-- Merchant Header -->
            <div class="flex items-start justify-between mb-3">
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-1">
                  <h3 class="font-medium text-gray-900"><%= product.merchant_name %></h3>
                  <% if product.badge.present? %>
                    <span class="inline-block px-2 py-0.5 <%= product.badge_class %> text-xs font-medium rounded">
                      <%= product.badge %>
                    </span>
                  <% end %>
                </div>
                <p class="text-xs text-gray-500">已售 <%= product.sales_count %>件</p>
              </div>
              <% if index == 0 %>
                <span class="px-2 py-1 bg-primary/10 text-primary text-xs font-medium rounded">
                  最低价
                </span>
              <% end %>
            </div>

            <!-- Price Info -->
            <div class="flex items-end justify-between mb-3">
              <div>
                <div class="flex items-baseline gap-1">
                  <span class="text-xs text-gray-500">¥</span>
                  <span class="text-2xl font-bold text-primary"><%= product.price_per_person %></span>
                  <span class="text-sm text-gray-500">/人</span>
                </div>
                <p class="text-xs text-gray-500 mt-1">
                  需<%= product.occupancy_requirement %>人入住
                </p>
              </div>
              
              <div class="px-4 py-2 bg-primary text-white text-sm font-medium rounded-lg">
                预订
              </div>
            </div>

            <!-- Product Features -->
            <div class="flex flex-wrap gap-2 pt-3 border-t border-gray-100">
              <div class="flex items-center gap-1 text-xs text-gray-600">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span><%= product.is_refundable ? '可退款' : '不可退款' %></span>
              </div>
              
              <div class="flex items-center gap-1 text-xs text-gray-600">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span><%= product.requires_confirmation ? '需二次确认' : '即时确认' %></span>
              </div>

              <% if product.stock.present? && product.stock > 0 && product.stock < 10 %>
                <div class="flex items-center gap-1 text-xs text-orange-600">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                  </svg>
                  <span>仅剩 <%= product.stock %>个名额</span>
                </div>
              <% end %>
            </div>
          <% end %>
        <% end %>

        <% if @products.empty? %>
          <div class="text-center py-12 bg-white rounded-lg">
            <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <p class="text-gray-500">暂无可预订的商家产品</p>
            <%= link_to "返回选择其他舱房", cruise_path(@cruise_ship.slug, sailing_id: @sailing.id), 
                        class: "inline-block mt-4 px-6 py-2 bg-primary text-white text-sm rounded-lg hover:bg-primary/90" %>
          </div>
        <% end %>
      </div>
    </section>
  </div>
</div>
