<div class="min-h-screen bg-background pb-20">
  <!-- Top Navigation -->
  <div class="sticky top-0 z-50 bg-background/95 backdrop-blur-sm border-b border-border">
    <div class="flex items-center justify-between px-4 h-14">
      <div class="flex items-center gap-4">
        <button onclick="history.back()" class="text-foreground">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
        </button>
        <h1 class="text-lg font-semibold text-foreground">出行人管理</h1>
      </div>
      <%= link_to new_traveler_path, class: "text-primary font-medium" do %>
        + 添加
      <% end %>
    </div>
  </div>

  <div class="p-4">
    <% if @travelers.any? %>
      <div class="space-y-3">
        <% @travelers.each do |traveler| %>
          <div class="bg-surface p-4 rounded-lg border border-border">
            <div class="flex items-start justify-between mb-3">
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-1">
                  <h3 class="font-semibold text-foreground"><%= traveler.name %></h3>
                  <% if traveler.is_default %>
                    <span class="px-2 py-0.5 bg-primary/10 text-primary text-xs rounded">默认</span>
                  <% end %>
                </div>
                <p class="text-sm text-foreground-muted mb-1">
                  <%= traveler.id_type == 'id_card' ? '身份证' : '护照' %>：
                  <%= traveler.id_number.gsub(/(.{6})(.*)(.{4})/, '\1****\3') %>
                </p>
                <p class="text-sm text-foreground-muted">
                  手机号：<%= traveler.phone %>
                </p>
              </div>
            </div>

            <div class="flex items-center gap-2 pt-3 border-t border-border">
              <%= link_to edit_traveler_path(traveler), class: "flex-1 py-2 text-center text-sm text-primary border border-primary rounded-lg hover:bg-primary/5" do %>
                编辑
              <% end %>
              <%= button_to traveler_path(traveler), method: :delete, 
                  data: { turbo_confirm: '确定要删除此出行人吗？' },
                  class: "flex-1 py-2 text-center text-sm text-red-600 border border-red-600 rounded-lg hover:bg-red-50" do %>
                删除
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="bg-surface p-8 rounded-lg text-center">
        <div class="text-6xl mb-3">👤</div>
        <h3 class="text-lg font-semibold text-foreground mb-2">还没有出行人</h3>
        <p class="text-sm text-foreground-muted mb-6">添加常用出行人，下次订票更便捷</p>
        <%= link_to new_traveler_path, class: "btn-primary inline-block px-8 py-3" do %>
          添加出行人
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Tips -->
  <div class="px-4">
    <div class="bg-blue-50 rounded-lg p-4">
      <div class="flex items-start gap-2">
        <svg class="w-5 h-5 text-blue-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
        </svg>
        <div class="text-xs text-blue-800">
          <p class="font-semibold mb-1">温馨提示</p>
          <p>• 请确保填写的证件信息真实有效</p>
          <p>• 设置默认出行人后，订票时将自动填充</p>
        </div>
      </div>
    </div>
  </div>
</div>
