<% content_for :title, "New Passenger" %>

<div class="container-md">
  <div class="flex items-center space-x-4">
    <%= link_to admin_passengers_path, class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Passengers
    <% end %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50 mt-4 mb-8">Create New Passenger</h1>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @passenger], local: true, class: "space-y-6" do |form| %>
        <%= render 'shared/form_error_message', model: @passenger %>

        <!-- Name -->
        <div class="mb-4">
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Name<% if field_required?(@passenger, :name) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :name, {
            placeholder: "Enter name...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@passenger, :name) ? { required: true } : {}) %>
          <% if @passenger.errors[:name].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @passenger.errors[:name].first %></p>
          <% end %>
        </div>

        <!-- Id type -->
        <div class="mb-4">
          <%= form.label :id_type, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Id type<% if field_required?(@passenger, :id_type) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :id_type, {
            placeholder: "Enter id type...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@passenger, :id_type) ? { required: true } : {}) %>
          <% if @passenger.errors[:id_type].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @passenger.errors[:id_type].first %></p>
          <% end %>
        </div>

        <!-- Id number -->
        <div class="mb-4">
          <%= form.label :id_number, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Id number<% if field_required?(@passenger, :id_number) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :id_number, {
            placeholder: "Enter id number...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@passenger, :id_number) ? { required: true } : {}) %>
          <% if @passenger.errors[:id_number].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @passenger.errors[:id_number].first %></p>
          <% end %>
        </div>

        <!-- Phone -->
        <div class="mb-4">
          <%= form.label :phone, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Phone<% if field_required?(@passenger, :phone) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :phone, {
            placeholder: "Enter phone...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@passenger, :phone) ? { required: true } : {}) %>
          <% if @passenger.errors[:phone].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @passenger.errors[:phone].first %></p>
          <% end %>
        </div>

        <!-- User -->
        <div class="mb-4">
          <%= form.label :user_id, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            User<% if field_required?(@passenger, :user) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.select :user_id, 
              options_for_select([['Select User', '']] + User.all.map { |item| [item.name, item.id] }, @passenger.user_id),
              {},
              { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50" } %>
          <% if @passenger.errors[:user_id].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @passenger.errors[:user_id].first %></p>
          <% end %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_passengers_path, class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Create Passenger", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>