<% content_for :title, @tour_group_product.respond_to?(:name) ? @tour_group_product.name : "Tour group product" %>

<div class="container-lg">
  <div class="mb-6">
    <div class="flex items-center space-x-4">
      <%= link_to admin_tour_group_products_path, class: "btn-ghost text-sm py-1 px-3" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Tour group products
      <% end %>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50"><%= @tour_group_product.respond_to?(:name) ? @tour_group_product.name : "Tour group product ##{@tour_group_product.id}" %></h1>

      <div class="flex items-center space-x-3">
        <%= link_to edit_admin_tour_group_product_path(@tour_group_product.id), class: "btn-primary" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit
        <% end %>

        <%= link_to admin_tour_group_product_path(@tour_group_product.id),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this tour_group_product?" },
            class: "btn-danger" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <!-- Tour group product Content -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <div class="space-y-6">
        <!-- Title -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Title</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @tour_group_product.title %></div>
        </div>

        <!-- Subtitle -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Subtitle</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @tour_group_product.subtitle %></div>
        </div>

        <!-- Tour category -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Tour category</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @tour_group_product.tour_category %></div>
        </div>

        <!-- Destination -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Destination</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @tour_group_product.destination %></div>
        </div>

        <!-- Duration -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Duration</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @tour_group_product.duration %></div>
        </div>

        <!-- Departure city -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Departure city</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @tour_group_product.departure_city %></div>
        </div>

        <!-- Price -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Price</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @tour_group_product.price %></div>
        </div>

        <!-- Original price -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Original price</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @tour_group_product.original_price %></div>
        </div>

        <!-- Rating -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Rating</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @tour_group_product.rating %></div>
        </div>

        <!-- Rating desc -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Rating desc</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @tour_group_product.rating_desc %></div>
        </div>

        <!-- Highlights -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Highlights</label>
          <div class="prose prose-gray dark:prose-invert max-w-none">
            <%= simple_format(@tour_group_product.highlights) %>
          </div>
        </div>

        <!-- Tags -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Tags</label>
          <div class="prose prose-gray dark:prose-invert max-w-none">
            <%= simple_format(@tour_group_product.tags) %>
          </div>
        </div>

        <!-- Provider -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Provider</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @tour_group_product.provider %></div>
        </div>

        <!-- Sales count -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Sales count</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @tour_group_product.sales_count %></div>
        </div>

        <!-- Badge -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Badge</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @tour_group_product.badge %></div>
        </div>

        <!-- Departure label -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Departure label</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @tour_group_product.departure_label %></div>
        </div>

        <!-- Image url -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Image url</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @tour_group_product.image_url %></div>
        </div>

        <!-- Is featured -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Is featured</label>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @tour_group_product.is_featured ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300' : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300' %>">
            <%= @tour_group_product.is_featured ? 'Yes' : 'No' %>
          </span>
        </div>

        <!-- Display order -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Display order</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @tour_group_product.display_order %></div>
        </div>

        <!-- Travel agency -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Travel agency</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @tour_group_product.travel_agency&.name %></div>
        </div>

        <!-- Metadata -->
        <div class="pt-6 border-t border-gray-200 dark:border-gray-600">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">ID</label>
              <div class="text-sm text-gray-900 dark:text-gray-100 font-mono"><%= @tour_group_product.id %></div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Created</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @tour_group_product.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@tour_group_product.created_at) %> ago)</span>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last Updated</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @tour_group_product.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@tour_group_product.updated_at) %> ago)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
