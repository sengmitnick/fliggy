<% content_for :title, @transfer.respond_to?(:name) ? @transfer.name : "Transfer" %>

<div class="container-lg">
  <div class="mb-6">
    <div class="flex items-center space-x-4">
      <%= link_to admin_transfers_path, class: "btn-ghost text-sm py-1 px-3" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Transfers
      <% end %>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50"><%= @transfer.respond_to?(:name) ? @transfer.name : "Transfer ##{@transfer.id}" %></h1>

      <div class="flex items-center space-x-3">
        <%= link_to edit_admin_transfer_path(@transfer.id), class: "btn-primary" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit
        <% end %>

        <%= link_to admin_transfer_path(@transfer.id),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this transfer?" },
            class: "btn-danger" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <!-- Transfer Content -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <div class="space-y-6">
        <!-- Transfer type -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Transfer type</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @transfer.transfer_type %></div>
        </div>

        <!-- Service type -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Service type</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @transfer.service_type %></div>
        </div>

        <!-- Location from -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Location from</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @transfer.location_from %></div>
        </div>

        <!-- Location to -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Location to</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @transfer.location_to %></div>
        </div>

        <!-- Pickup datetime -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Pickup datetime</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @transfer.pickup_datetime&.strftime('%Y-%m-%d %H:%M') %></div>
        </div>

        <!-- Flight number -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Flight number</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @transfer.flight_number %></div>
        </div>

        <!-- Train number -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Train number</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @transfer.train_number %></div>
        </div>

        <!-- Passenger name -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Passenger name</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @transfer.passenger_name %></div>
        </div>

        <!-- Passenger phone -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Passenger phone</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @transfer.passenger_phone %></div>
        </div>

        <!-- Vehicle type -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Vehicle type</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @transfer.vehicle_type %></div>
        </div>

        <!-- Provider name -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Provider name</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @transfer.provider_name %></div>
        </div>

        <!-- License plate -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">License plate</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @transfer.license_plate %></div>
        </div>

        <!-- Driver name -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Driver name</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @transfer.driver_name %></div>
        </div>

        <!-- Total price -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Total price</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @transfer.total_price %></div>
        </div>

        <!-- Discount amount -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Discount amount</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @transfer.discount_amount %></div>
        </div>

        <!-- Status -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Status</label>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300">
            <%= @transfer.status&.humanize %>
          </span>
        </div>

        <!-- Driver status -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Driver status</label>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300">
            <%= @transfer.driver_status&.humanize %>
          </span>
        </div>

        <!-- User -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">User</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @transfer.user&.name %></div>
        </div>

        <!-- Transfer package -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Transfer package</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @transfer.transfer_package&.name %></div>
        </div>

        <!-- Flight -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Flight</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @transfer.flight&.id %></div>
        </div>

        <!-- Train -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Train</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @transfer.train&.id %></div>
        </div>

        <!-- Metadata -->
        <div class="pt-6 border-t border-gray-200 dark:border-gray-600">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">ID</label>
              <div class="text-sm text-gray-900 dark:text-gray-100 font-mono"><%= @transfer.id %></div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Created</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @transfer.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@transfer.created_at) %> ago)</span>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last Updated</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @transfer.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@transfer.updated_at) %> ago)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
