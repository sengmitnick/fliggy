<% content_for :title, @flight.respond_to?(:name) ? @flight.name : "Flight" %>

<div class="container-lg">
  <div class="mb-6">
    <div class="flex items-center space-x-4">
      <%= link_to admin_flights_path, class: "btn-ghost text-sm py-1 px-3" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Flights
      <% end %>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50"><%= @flight.respond_to?(:name) ? @flight.name : "Flight ##{@flight.id}" %></h1>

      <div class="flex items-center space-x-3">
        <%= link_to edit_admin_flight_path(@flight.id), class: "btn-primary" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit
        <% end %>

        <%= link_to admin_flight_path(@flight.id),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this flight?" },
            class: "btn-danger" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <!-- Flight Content -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <div class="space-y-6">
        <!-- Departure city -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Departure city</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @flight.departure_city %></div>
        </div>

        <!-- Destination city -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Destination city</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @flight.destination_city %></div>
        </div>

        <!-- Departure time -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Departure time</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @flight.departure_time&.strftime('%Y-%m-%d %H:%M') %></div>
        </div>

        <!-- Arrival time -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Arrival time</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @flight.arrival_time&.strftime('%Y-%m-%d %H:%M') %></div>
        </div>

        <!-- Departure airport -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Departure airport</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @flight.departure_airport %></div>
        </div>

        <!-- Arrival airport -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Arrival airport</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @flight.arrival_airport %></div>
        </div>

        <!-- Airline -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Airline</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @flight.airline %></div>
        </div>

        <!-- Flight number -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Flight number</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @flight.flight_number %></div>
        </div>

        <!-- Aircraft type -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Aircraft type</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @flight.aircraft_type %></div>
        </div>

        <!-- Price -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Price</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @flight.price %></div>
        </div>

        <!-- Discount price -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Discount price</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @flight.discount_price %></div>
        </div>

        <!-- Seat class -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Seat class</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @flight.seat_class %></div>
        </div>

        <!-- Available seats -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Available seats</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @flight.available_seats %></div>
        </div>

        <!-- Flight date -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Flight date</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @flight.flight_date&.strftime('%Y-%m-%d %H:%M') %></div>
        </div>

        <!-- Metadata -->
        <div class="pt-6 border-t border-gray-200 dark:border-gray-600">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">ID</label>
              <div class="text-sm text-gray-900 dark:text-gray-100 font-mono"><%= @flight.id %></div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Created</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @flight.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@flight.created_at) %> ago)</span>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last Updated</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @flight.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@flight.updated_at) %> ago)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
