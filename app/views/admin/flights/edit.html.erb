<% content_for :title, "Edit Flight" %>

<div class="container-md">
  <!-- Page Title -->
  <div class="flex items-center space-x-4 mb-6">
    <%= link_to admin_flight_path(@flight.id), class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Flight
    <% end %>
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50">Edit Flight</h1>
  </div>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @flight], local: true, class: "space-y-6" do |form| %>
        <%= render 'shared/form_error_message', model: @flight %>

        <!-- Departure city -->
        <div class="mb-4">
          <%= form.label :departure_city, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Departure city<% if field_required?(@flight, :departure_city) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :departure_city, {
            placeholder: "Enter departure city...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@flight, :departure_city) ? { required: true } : {}) %>
          <% if @flight.errors[:departure_city].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @flight.errors[:departure_city].first %></p>
          <% end %>
        </div>

        <!-- Destination city -->
        <div class="mb-4">
          <%= form.label :destination_city, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
