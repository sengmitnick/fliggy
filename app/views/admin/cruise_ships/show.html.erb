<% content_for :title, @cruise_ship.respond_to?(:name) ? @cruise_ship.name : "Cruise ship" %>

<div class="container-lg">
  <div class="mb-6">
    <div class="flex items-center space-x-4">
      <%= link_to admin_cruise_ships_path, class: "btn-ghost text-sm py-1 px-3" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Cruise ships
      <% end %>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50"><%= @cruise_ship.respond_to?(:name) ? @cruise_ship.name : "Cruise ship ##{@cruise_ship.id}" %></h1>

      <div class="flex items-center space-x-3">
        <%= link_to edit_admin_cruise_ship_path(@cruise_ship.id), class: "btn-primary" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit
        <% end %>

        <%= link_to admin_cruise_ship_path(@cruise_ship.id),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this cruise_ship?" },
            class: "btn-danger" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <!-- Cruise ship Content -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <div class="space-y-6">
        <!-- Name -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Name</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @cruise_ship.name %></div>
        </div>

        <!-- Name en -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Name en</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @cruise_ship.name_en %></div>
        </div>

        <!-- Image url -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Image url</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @cruise_ship.image_url %></div>
        </div>

        <!-- Features -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Features</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @cruise_ship.features %></div>
        </div>

        <!-- Slug -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Slug</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @cruise_ship.slug %></div>
        </div>

        <!-- Data version -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Data version</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @cruise_ship.data_version %></div>
        </div>

        <!-- Cruise line -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Cruise line</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @cruise_ship.cruise_line&.name %></div>
        </div>

        <!-- Metadata -->
        <div class="pt-6 border-t border-gray-200 dark:border-gray-600">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">ID</label>
              <div class="text-sm text-gray-900 dark:text-gray-100 font-mono"><%= @cruise_ship.id %></div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Created</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @cruise_ship.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@cruise_ship.created_at) %> ago)</span>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last Updated</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @cruise_ship.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@cruise_ship.updated_at) %> ago)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
