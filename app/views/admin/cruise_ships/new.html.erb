<% content_for :title, "New Cruise ship" %>

<div class="container-md">
  <div class="flex items-center space-x-4">
    <%= link_to admin_cruise_ships_path, class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Cruise ships
    <% end %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50 mt-4 mb-8">Create New Cruise ship</h1>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @cruise_ship], local: true, class: "space-y-6" do |form| %>
        <%= render 'shared/form_error_message', model: @cruise_ship %>

        <!-- Name -->
        <div class="mb-4">
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Name<% if field_required?(@cruise_ship, :name) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :name, {
            placeholder: "Enter name...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@cruise_ship, :name) ? { required: true } : {}) %>
          <% if @cruise_ship.errors[:name].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @cruise_ship.errors[:name].first %></p>
          <% end %>
        </div>

        <!-- Name en -->
        <div class="mb-4">
          <%= form.label :name_en, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Name en<% if field_required?(@cruise_ship, :name_en) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :name_en, {
            placeholder: "Enter name en...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@cruise_ship, :name_en) ? { required: true } : {}) %>
          <% if @cruise_ship.errors[:name_en].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @cruise_ship.errors[:name_en].first %></p>
          <% end %>
        </div>

        <!-- Image url -->
        <div class="mb-4">
          <%= form.label :image_url, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Image url<% if field_required?(@cruise_ship, :image_url) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :image_url, {
            placeholder: "Enter image url...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@cruise_ship, :image_url) ? { required: true } : {}) %>
          <% if @cruise_ship.errors[:image_url].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @cruise_ship.errors[:image_url].first %></p>
          <% end %>
        </div>

        <!-- Features -->
        <div class="mb-4">
          <%= form.label :features, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Features<% if field_required?(@cruise_ship, :features) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :features, {
            placeholder: "Enter features...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@cruise_ship, :features) ? { required: true } : {}) %>
          <% if @cruise_ship.errors[:features].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @cruise_ship.errors[:features].first %></p>
          <% end %>
        </div>

        <!-- Slug -->
        <div class="mb-4">
          <%= form.label :slug, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Slug<% if field_required?(@cruise_ship, :slug) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :slug, {
            placeholder: "Enter slug...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@cruise_ship, :slug) ? { required: true } : {}) %>
          <% if @cruise_ship.errors[:slug].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @cruise_ship.errors[:slug].first %></p>
          <% end %>
        </div>

        <!-- Data version -->
        <div class="mb-4">
          <%= form.label :data_version, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Data version<% if field_required?(@cruise_ship, :data_version) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :data_version, {
            placeholder: "Enter data version...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@cruise_ship, :data_version) ? { required: true } : {}) %>
          <% if @cruise_ship.errors[:data_version].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @cruise_ship.errors[:data_version].first %></p>
          <% end %>
        </div>

        <!-- Cruise line -->
        <div class="mb-4">
          <%= form.label :cruise_line_id, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Cruise line<% if field_required?(@cruise_ship, :cruise_line) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.select :cruise_line_id, 
              options_for_select([['Select Cruise line', '']] + CruiseLine.all.map { |item| [item.name, item.id] }, @cruise_ship.cruise_line_id),
              {},
              { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50" } %>
          <% if @cruise_ship.errors[:cruise_line_id].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @cruise_ship.errors[:cruise_line_id].first %></p>
          <% end %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_cruise_ships_path, class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Create Cruise ship", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>