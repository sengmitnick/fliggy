<% content_for :title, "New Charter route" %>

<div class="container-md">
  <div class="flex items-center space-x-4">
    <%= link_to admin_charter_routes_path, class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Charter routes
    <% end %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50 mt-4 mb-8">Create New Charter route</h1>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @charter_route], local: true, class: "space-y-6" do |form| %>
        <%= render 'shared/form_error_message', model: @charter_route %>

        <!-- Name -->
        <div class="mb-4">
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Name<% if field_required?(@charter_route, :name) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :name, {
            placeholder: "Enter name...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@charter_route, :name) ? { required: true } : {}) %>
          <% if @charter_route.errors[:name].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @charter_route.errors[:name].first %></p>
          <% end %>
        </div>

        <!-- Slug -->
        <div class="mb-4">
          <%= form.label :slug, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Slug<% if field_required?(@charter_route, :slug) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :slug, {
            placeholder: "Enter slug...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@charter_route, :slug) ? { required: true } : {}) %>
          <% if @charter_route.errors[:slug].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @charter_route.errors[:slug].first %></p>
          <% end %>
        </div>

        <!-- Duration days -->
        <div class="mb-4">
          <%= form.label :duration_days, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Duration days<% if field_required?(@charter_route, :duration_days) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :duration_days, {
            placeholder: "Enter duration days...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@charter_route, :duration_days) ? { required: true } : {}) %>
          <% if @charter_route.errors[:duration_days].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @charter_route.errors[:duration_days].first %></p>
          <% end %>
        </div>

        <!-- Distance km -->
        <div class="mb-4">
          <%= form.label :distance_km, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Distance km<% if field_required?(@charter_route, :distance_km) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :distance_km, {
            placeholder: "Enter distance km...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@charter_route, :distance_km) ? { required: true } : {}) %>
          <% if @charter_route.errors[:distance_km].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @charter_route.errors[:distance_km].first %></p>
          <% end %>
        </div>

        <!-- Category -->
        <div class="mb-4">
          <%= form.label :category, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Category<% if field_required?(@charter_route, :category) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :category, {
            placeholder: "Enter category...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@charter_route, :category) ? { required: true } : {}) %>
          <% if @charter_route.errors[:category].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @charter_route.errors[:category].first %></p>
          <% end %>
        </div>

        <!-- Description -->
        <div class="mb-4">
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Description<% if field_required?(@charter_route, :description) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_area :description, {
            rows: 5,
            placeholder: "Enter description...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@charter_route, :description) ? { required: true } : {}) %>
          <% if @charter_route.errors[:description].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @charter_route.errors[:description].first %></p>
          <% end %>
        </div>

        <!-- Price from -->
        <div class="mb-4">
          <%= form.label :price_from, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Price from<% if field_required?(@charter_route, :price_from) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :price_from, {
            placeholder: "Enter price from...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@charter_route, :price_from) ? { required: true } : {}) %>
          <% if @charter_route.errors[:price_from].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @charter_route.errors[:price_from].first %></p>
          <% end %>
        </div>

        <!-- Highlights -->
        <div class="mb-4">
          <%= form.label :highlights, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Highlights<% if field_required?(@charter_route, :highlights) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_area :highlights, {
            rows: 5,
            placeholder: "Enter highlights...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@charter_route, :highlights) ? { required: true } : {}) %>
          <% if @charter_route.errors[:highlights].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @charter_route.errors[:highlights].first %></p>
          <% end %>
        </div>

        <!-- Cover image url -->
        <div class="mb-4">
          <%= form.label :cover_image_url, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Cover image url<% if field_required?(@charter_route, :cover_image_url) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :cover_image_url, {
            placeholder: "Enter cover image url...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@charter_route, :cover_image_url) ? { required: true } : {}) %>
          <% if @charter_route.errors[:cover_image_url].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @charter_route.errors[:cover_image_url].first %></p>
          <% end %>
        </div>

        <!-- City -->
        <div class="mb-4">
          <%= form.label :city_id, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            City<% if field_required?(@charter_route, :city) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.select :city_id, 
              options_for_select([['Select City', '']] + City.all.map { |item| [item.name, item.id] }, @charter_route.city_id),
              {},
              { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50" } %>
          <% if @charter_route.errors[:city_id].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @charter_route.errors[:city_id].first %></p>
          <% end %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_charter_routes_path, class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Create Charter route", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>