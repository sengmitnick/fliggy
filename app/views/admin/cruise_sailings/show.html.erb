<% content_for :title, @cruise_sailing.respond_to?(:name) ? @cruise_sailing.name : "Cruise sailing" %>

<div class="container-lg">
  <div class="mb-6">
    <div class="flex items-center space-x-4">
      <%= link_to admin_cruise_sailings_path, class: "btn-ghost text-sm py-1 px-3" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Cruise sailings
      <% end %>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50"><%= @cruise_sailing.respond_to?(:name) ? @cruise_sailing.name : "Cruise sailing ##{@cruise_sailing.id}" %></h1>

      <div class="flex items-center space-x-3">
        <%= link_to edit_admin_cruise_sailing_path(@cruise_sailing.id), class: "btn-primary" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit
        <% end %>

        <%= link_to admin_cruise_sailing_path(@cruise_sailing.id),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this cruise_sailing?" },
            class: "btn-danger" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <!-- Cruise sailing Content -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <div class="space-y-6">
        <!-- Departure date -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Departure date</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @cruise_sailing.departure_date&.strftime('%Y-%m-%d %H:%M') %></div>
        </div>

        <!-- Return date -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Return date</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @cruise_sailing.return_date&.strftime('%Y-%m-%d %H:%M') %></div>
        </div>

        <!-- Duration days -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Duration days</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @cruise_sailing.duration_days %></div>
        </div>

        <!-- Duration nights -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Duration nights</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @cruise_sailing.duration_nights %></div>
        </div>

        <!-- Departure port -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Departure port</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @cruise_sailing.departure_port %></div>
        </div>

        <!-- Arrival port -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Arrival port</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @cruise_sailing.arrival_port %></div>
        </div>

        <!-- Itinerary -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Itinerary</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @cruise_sailing.itinerary %></div>
        </div>

        <!-- Data version -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Data version</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @cruise_sailing.data_version %></div>
        </div>

        <!-- Status -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Status</label>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300">
            <%= @cruise_sailing.status&.humanize %>
          </span>
        </div>

        <!-- Cruise ship -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Cruise ship</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @cruise_sailing.cruise_ship&.name %></div>
        </div>

        <!-- Cruise route -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Cruise route</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @cruise_sailing.cruise_route&.name %></div>
        </div>

        <!-- Metadata -->
        <div class="pt-6 border-t border-gray-200 dark:border-gray-600">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">ID</label>
              <div class="text-sm text-gray-900 dark:text-gray-100 font-mono"><%= @cruise_sailing.id %></div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Created</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @cruise_sailing.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@cruise_sailing.created_at) %> ago)</span>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last Updated</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @cruise_sailing.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@cruise_sailing.updated_at) %> ago)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
