<% content_for :title, @membership_product.respond_to?(:name) ? @membership_product.name : "Membership product" %>

<div class="container-lg">
  <div class="mb-6">
    <div class="flex items-center space-x-4">
      <%= link_to admin_membership_products_path, class: "btn-ghost text-sm py-1 px-3" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Membership products
      <% end %>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50"><%= @membership_product.respond_to?(:name) ? @membership_product.name : "Membership product ##{@membership_product.id}" %></h1>

      <div class="flex items-center space-x-3">
        <%= link_to edit_admin_membership_product_path(@membership_product.id), class: "btn-primary" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit
        <% end %>

        <%= link_to admin_membership_product_path(@membership_product.id),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this membership_product?" },
            class: "btn-danger" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <!-- Membership product Content -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <div class="space-y-6">
        <!-- Name -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Name</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @membership_product.name %></div>
        </div>

        <!-- Slug -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Slug</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @membership_product.slug %></div>
        </div>

        <!-- Category -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Category</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @membership_product.category %></div>
        </div>

        <!-- Price cash -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Price cash</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @membership_product.price_cash %></div>
        </div>

        <!-- Price mileage -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Price mileage</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @membership_product.price_mileage %></div>
        </div>

        <!-- Original price -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Original price</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @membership_product.original_price %></div>
        </div>

        <!-- Sales count -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Sales count</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @membership_product.sales_count %></div>
        </div>

        <!-- Stock -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Stock</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @membership_product.stock %></div>
        </div>

        <!-- Rating -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Rating</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @membership_product.rating %></div>
        </div>

        <!-- Description -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Description</label>
          <div class="prose prose-gray dark:prose-invert max-w-none">
            <%= simple_format(@membership_product.description) %>
          </div>
        </div>

        <!-- Image url -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Image url</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @membership_product.image_url %></div>
        </div>

        <!-- Region -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Region</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @membership_product.region %></div>
        </div>

        <!-- Featured -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Featured</label>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @membership_product.featured ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300' : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300' %>">
            <%= @membership_product.featured ? 'Yes' : 'No' %>
          </span>
        </div>

        <!-- Image -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Image</label>
          <% if @membership_product.image.attached? %>
            <div class="flex items-center p-3 border border-gray-200 dark:border-gray-700 rounded-lg bg-gray-50 dark:bg-gray-800">
              <svg class="w-5 h-5 mr-3 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <div class="text-sm font-medium text-gray-900 dark:text-gray-100"><%= @membership_product.image.filename %></div>
                <div class="text-xs text-gray-500"><%= number_to_human_size(@membership_product.image.byte_size) %></div>
              </div>
              <% if @membership_product.image.content_type&.start_with?('image/') %>
                <div class="ml-auto">
                  <%= image_tag @membership_product.image, class: "w-16 h-16 object-cover rounded" %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-gray-500 dark:text-gray-400">No file attached</div>
          <% end %>
        </div>

        <!-- Metadata -->
        <div class="pt-6 border-t border-gray-200 dark:border-gray-600">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">ID</label>
              <div class="text-sm text-gray-900 dark:text-gray-100 font-mono"><%= @membership_product.id %></div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Created</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @membership_product.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@membership_product.created_at) %> ago)</span>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last Updated</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @membership_product.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@membership_product.updated_at) %> ago)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
