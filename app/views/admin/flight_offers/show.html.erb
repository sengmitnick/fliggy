<% content_for :title, @flight_offer.respond_to?(:name) ? @flight_offer.name : "Flight offer" %>

<div class="container-lg">
  <div class="mb-6">
    <div class="flex items-center space-x-4">
      <%= link_to admin_flight_offers_path, class: "btn-ghost text-sm py-1 px-3" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Flight offers
      <% end %>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50"><%= @flight_offer.respond_to?(:name) ? @flight_offer.name : "Flight offer ##{@flight_offer.id}" %></h1>

      <div class="flex items-center space-x-3">
        <%= link_to edit_admin_flight_offer_path(@flight_offer.id), class: "btn-primary" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit
        <% end %>

        <%= link_to admin_flight_offer_path(@flight_offer.id),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this flight_offer?" },
            class: "btn-danger" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <!-- Flight offer Content -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <div class="space-y-6">
        <!-- Provider name -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Provider name</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @flight_offer.provider_name %></div>
        </div>

        <!-- Offer type -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Offer type</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @flight_offer.offer_type %></div>
        </div>

        <!-- Price -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Price</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @flight_offer.price %></div>
        </div>

        <!-- Original price -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Original price</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @flight_offer.original_price %></div>
        </div>

        <!-- Cashback amount -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Cashback amount</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @flight_offer.cashback_amount %></div>
        </div>

        <!-- Discount items -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Discount items</label>
          <div class="prose prose-gray dark:prose-invert max-w-none">
            <%= simple_format(@flight_offer.discount_items) %>
          </div>
        </div>

        <!-- Seat class -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Seat class</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @flight_offer.seat_class %></div>
        </div>

        <!-- Services -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Services</label>
          <div class="prose prose-gray dark:prose-invert max-w-none">
            <%= simple_format(@flight_offer.services) %>
          </div>
        </div>

        <!-- Tags -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Tags</label>
          <div class="prose prose-gray dark:prose-invert max-w-none">
            <%= simple_format(@flight_offer.tags) %>
          </div>
        </div>

        <!-- Baggage info -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Baggage info</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @flight_offer.baggage_info %></div>
        </div>

        <!-- Meal included -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Meal included</label>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @flight_offer.meal_included ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300' : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300' %>">
            <%= @flight_offer.meal_included ? 'Yes' : 'No' %>
          </span>
        </div>

        <!-- Refund policy -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Refund policy</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @flight_offer.refund_policy %></div>
        </div>

        <!-- Is featured -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Is featured</label>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @flight_offer.is_featured ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300' : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300' %>">
            <%= @flight_offer.is_featured ? 'Yes' : 'No' %>
          </span>
        </div>

        <!-- Display order -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Display order</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @flight_offer.display_order %></div>
        </div>

        <!-- Flight -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Flight</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @flight_offer.flight&.id %></div>
        </div>

        <!-- Metadata -->
        <div class="pt-6 border-t border-gray-200 dark:border-gray-600">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">ID</label>
              <div class="text-sm text-gray-900 dark:text-gray-100 font-mono"><%= @flight_offer.id %></div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Created</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @flight_offer.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@flight_offer.created_at) %> ago)</span>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last Updated</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @flight_offer.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@flight_offer.updated_at) %> ago)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
