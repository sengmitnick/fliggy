<% content_for :title, "New Flight offer" %>

<div class="container-md">
  <div class="flex items-center space-x-4">
    <%= link_to admin_flight_offers_path, class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Flight offers
    <% end %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50 mt-4 mb-8">Create New Flight offer</h1>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @flight_offer], local: true, class: "space-y-6" do |form| %>
        <%= render 'shared/form_error_message', model: @flight_offer %>

        <!-- Provider name -->
        <div class="mb-4">
          <%= form.label :provider_name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Provider name<% if field_required?(@flight_offer, :provider_name) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :provider_name, {
            placeholder: "Enter provider name...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@flight_offer, :provider_name) ? { required: true } : {}) %>
          <% if @flight_offer.errors[:provider_name].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @flight_offer.errors[:provider_name].first %></p>
          <% end %>
        </div>

        <!-- Offer type -->
        <div class="mb-4">
          <%= form.label :offer_type, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Offer type<% if field_required?(@flight_offer, :offer_type) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :offer_type, {
            placeholder: "Enter offer type...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@flight_offer, :offer_type) ? { required: true } : {}) %>
          <% if @flight_offer.errors[:offer_type].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @flight_offer.errors[:offer_type].first %></p>
          <% end %>
        </div>

        <!-- Price -->
        <div class="mb-4">
          <%= form.label :price, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Price<% if field_required?(@flight_offer, :price) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :price, {
            placeholder: "Enter price...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@flight_offer, :price) ? { required: true } : {}) %>
          <% if @flight_offer.errors[:price].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @flight_offer.errors[:price].first %></p>
          <% end %>
        </div>

        <!-- Original price -->
        <div class="mb-4">
          <%= form.label :original_price, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Original price<% if field_required?(@flight_offer, :original_price) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :original_price, {
            placeholder: "Enter original price...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@flight_offer, :original_price) ? { required: true } : {}) %>
          <% if @flight_offer.errors[:original_price].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @flight_offer.errors[:original_price].first %></p>
          <% end %>
        </div>

        <!-- Cashback amount -->
        <div class="mb-4">
          <%= form.label :cashback_amount, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Cashback amount<% if field_required?(@flight_offer, :cashback_amount) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :cashback_amount, {
            placeholder: "Enter cashback amount...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@flight_offer, :cashback_amount) ? { required: true } : {}) %>
          <% if @flight_offer.errors[:cashback_amount].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @flight_offer.errors[:cashback_amount].first %></p>
          <% end %>
        </div>

        <!-- Discount items -->
        <div class="mb-4">
          <%= form.label :discount_items, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Discount items<% if field_required?(@flight_offer, :discount_items) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_area :discount_items, {
            rows: 5,
            placeholder: "Enter discount items...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@flight_offer, :discount_items) ? { required: true } : {}) %>
          <% if @flight_offer.errors[:discount_items].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @flight_offer.errors[:discount_items].first %></p>
          <% end %>
        </div>

        <!-- Seat class -->
        <div class="mb-4">
          <%= form.label :seat_class, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Seat class<% if field_required?(@flight_offer, :seat_class) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :seat_class, {
            placeholder: "Enter seat class...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@flight_offer, :seat_class) ? { required: true } : {}) %>
          <% if @flight_offer.errors[:seat_class].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @flight_offer.errors[:seat_class].first %></p>
          <% end %>
        </div>

        <!-- Services -->
        <div class="mb-4">
          <%= form.label :services, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Services<% if field_required?(@flight_offer, :services) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_area :services, {
            rows: 5,
            placeholder: "Enter services...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@flight_offer, :services) ? { required: true } : {}) %>
          <% if @flight_offer.errors[:services].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @flight_offer.errors[:services].first %></p>
          <% end %>
        </div>

        <!-- Tags -->
        <div class="mb-4">
          <%= form.label :tags, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Tags<% if field_required?(@flight_offer, :tags) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_area :tags, {
            rows: 5,
            placeholder: "Enter tags...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@flight_offer, :tags) ? { required: true } : {}) %>
          <% if @flight_offer.errors[:tags].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @flight_offer.errors[:tags].first %></p>
          <% end %>
        </div>

        <!-- Baggage info -->
        <div class="mb-4">
          <%= form.label :baggage_info, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Baggage info<% if field_required?(@flight_offer, :baggage_info) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :baggage_info, {
            placeholder: "Enter baggage info...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@flight_offer, :baggage_info) ? { required: true } : {}) %>
          <% if @flight_offer.errors[:baggage_info].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @flight_offer.errors[:baggage_info].first %></p>
          <% end %>
        </div>

        <!-- Meal included -->
        <div class="mb-4">
          <label class="flex items-center cursor-pointer">
            <%= form.check_box :meal_included, 
                  class: "mr-3 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600 rounded dark:bg-gray-700" %>
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Meal included</span>
          </label>
        </div>

        <!-- Refund policy -->
        <div class="mb-4">
          <%= form.label :refund_policy, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Refund policy<% if field_required?(@flight_offer, :refund_policy) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :refund_policy, {
            placeholder: "Enter refund policy...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@flight_offer, :refund_policy) ? { required: true } : {}) %>
          <% if @flight_offer.errors[:refund_policy].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @flight_offer.errors[:refund_policy].first %></p>
          <% end %>
        </div>

        <!-- Is featured -->
        <div class="mb-4">
          <label class="flex items-center cursor-pointer">
            <%= form.check_box :is_featured, 
                  class: "mr-3 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600 rounded dark:bg-gray-700" %>
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Is featured</span>
          </label>
        </div>

        <!-- Display order -->
        <div class="mb-4">
          <%= form.label :display_order, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Display order<% if field_required?(@flight_offer, :display_order) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :display_order, {
            placeholder: "Enter display order...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@flight_offer, :display_order) ? { required: true } : {}) %>
          <% if @flight_offer.errors[:display_order].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @flight_offer.errors[:display_order].first %></p>
          <% end %>
        </div>

        <!-- Flight -->
        <div class="mb-4">
          <%= form.label :flight_id, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Flight<% if field_required?(@flight_offer, :flight) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.select :flight_id, 
              options_for_select([['Select Flight', '']] + Flight.all.map { |item| [item.id, item.id] }, @flight_offer.flight_id),
              {},
              { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50" } %>
          <% if @flight_offer.errors[:flight_id].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @flight_offer.errors[:flight_id].first %></p>
          <% end %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_flight_offers_path, class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Create Flight offer", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>