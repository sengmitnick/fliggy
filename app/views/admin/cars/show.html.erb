<% content_for :title, @car.respond_to?(:name) ? @car.name : "Car" %>

<div class="container-lg">
  <div class="mb-6">
    <div class="flex items-center space-x-4">
      <%= link_to admin_cars_path, class: "btn-ghost text-sm py-1 px-3" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Cars
      <% end %>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50"><%= @car.respond_to?(:name) ? @car.name : "Car ##{@car.id}" %></h1>

      <div class="flex items-center space-x-3">
        <%= link_to edit_admin_car_path(@car.id), class: "btn-primary" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit
        <% end %>

        <%= link_to admin_car_path(@car.id),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this car?" },
            class: "btn-danger" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <!-- Car Content -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <div class="space-y-6">
        <!-- Brand -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Brand</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @car.brand %></div>
        </div>

        <!-- Car model -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Car model</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @car.car_model %></div>
        </div>

        <!-- Category -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Category</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @car.category %></div>
        </div>

        <!-- Seats -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Seats</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @car.seats %></div>
        </div>

        <!-- Doors -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Doors</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @car.doors %></div>
        </div>

        <!-- Transmission -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Transmission</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @car.transmission %></div>
        </div>

        <!-- Fuel type -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Fuel type</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @car.fuel_type %></div>
        </div>

        <!-- Engine -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Engine</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @car.engine %></div>
        </div>

        <!-- Price per day -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Price per day</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @car.price_per_day %></div>
        </div>

        <!-- Total price -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Total price</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @car.total_price %></div>
        </div>

        <!-- Discount amount -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Discount amount</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @car.discount_amount %></div>
        </div>

        <!-- Location -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Location</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @car.location %></div>
        </div>

        <!-- Pickup location -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Pickup location</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @car.pickup_location %></div>
        </div>

        <!-- Features -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Features</label>
          <div class="prose prose-gray dark:prose-invert max-w-none">
            <%= simple_format(@car.features) %>
          </div>
        </div>

        <!-- Tags -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Tags</label>
          <div class="prose prose-gray dark:prose-invert max-w-none">
            <%= simple_format(@car.tags) %>
          </div>
        </div>

        <!-- Is featured -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Is featured</label>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @car.is_featured ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300' : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300' %>">
            <%= @car.is_featured ? 'Yes' : 'No' %>
          </span>
        </div>

        <!-- Is available -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Is available</label>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @car.is_available ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300' : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300' %>">
            <%= @car.is_available ? 'Yes' : 'No' %>
          </span>
        </div>

        <!-- Sales rank -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Sales rank</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @car.sales_rank %></div>
        </div>

        <!-- Image url -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Image url</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @car.image_url %></div>
        </div>

        <!-- Metadata -->
        <div class="pt-6 border-t border-gray-200 dark:border-gray-600">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">ID</label>
              <div class="text-sm text-gray-900 dark:text-gray-100 font-mono"><%= @car.id %></div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Created</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @car.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@car.created_at) %> ago)</span>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last Updated</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @car.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@car.updated_at) %> ago)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
