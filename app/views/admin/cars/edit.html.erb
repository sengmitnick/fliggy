        <!-- Location -->
        <div class="mb-4">
          <%= form.label :location, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Location<% if field_required?(@car, :location) %> <span class="text-red-500">*</span><% end %>
