          }.merge(field_required?(@car, :discount_amount) ? { required: true } : {}) %>
          <% if @car.errors[:discount_amount].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @car.errors[:discount_amount].first %></p>
          <% end %>
