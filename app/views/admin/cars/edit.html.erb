          <% if @car.errors[:total_price].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @car.errors[:total_price].first %></p>
          <% end %>
        </div>

        <!-- Discount amount -->
        <div class="mb-4">
          <%= form.label :discount_amount, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
