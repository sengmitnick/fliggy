<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-100">车次详情</h1>
    <div class="flex gap-2">
      <%= link_to "编辑", edit_admin_train_path(@train), class: "btn-primary" %>
      <%= link_to "返回列表", admin_trains_path, class: "btn-secondary" %>
    </div>
  </div>

  <div class="card p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">车次号</h3>
        <p class="mt-1 text-lg font-semibold text-gray-900 dark:text-gray-100">
          <span class="px-3 py-1 <%= @train.high_speed? ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-800' %> rounded">
            <%= @train.train_number %>
          </span>
        </p>
      </div>

      <div>
        <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">路线</h3>
        <p class="mt-1 text-lg text-gray-900 dark:text-gray-100">
          <%= @train.departure_city %> → <%= @train.arrival_city %>
        </p>
      </div>

      <div>
        <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">出发时间</h3>
        <p class="mt-1 text-lg text-gray-900 dark:text-gray-100"><%= @train.departure_time.strftime('%Y-%m-%d %H:%M') %></p>
      </div>

      <div>
        <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">到达时间</h3>
        <p class="mt-1 text-lg text-gray-900 dark:text-gray-100"><%= @train.arrival_time.strftime('%Y-%m-%d %H:%M') %></p>
      </div>

      <div>
        <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">行程时长</h3>
        <p class="mt-1 text-lg text-gray-900 dark:text-gray-100"><%= @train.duration_formatted %></p>
      </div>

      <div>
        <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">余票数量</h3>
        <p class="mt-1 text-lg font-semibold <%= @train.available_seats > 50 ? 'text-green-600' : @train.available_seats > 0 ? 'text-yellow-600' : 'text-red-600' %>">
          <%= @train.available_seats %> 张
        </p>
      </div>
    </div>

    <div class="mt-6 pt-6 border-t border-gray-200 dark:border-gray-700">
      <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-4">座位价格</h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="card p-4 bg-gray-50 dark:bg-gray-800">
          <h4 class="text-sm text-gray-500 dark:text-gray-400">二等座</h4>
          <p class="mt-1 text-2xl font-bold text-gray-900 dark:text-gray-100">¥<%= @train.price_second_class.to_i %></p>
        </div>

        <div class="card p-4 bg-gray-50 dark:bg-gray-800">
          <h4 class="text-sm text-gray-500 dark:text-gray-400">一等座</h4>
          <p class="mt-1 text-2xl font-bold text-gray-900 dark:text-gray-100">¥<%= @train.price_first_class.to_i %></p>
        </div>

        <div class="card p-4 bg-gray-50 dark:bg-gray-800">
          <h4 class="text-sm text-gray-500 dark:text-gray-400">商务座</h4>
          <p class="mt-1 text-2xl font-bold text-gray-900 dark:text-gray-100">¥<%= @train.price_business_class.to_i %></p>
        </div>
      </div>
    </div>

    <div class="mt-6 pt-6 border-t border-gray-200 dark:border-gray-700">
      <div class="flex justify-between items-center">
        <div class="text-sm text-gray-500 dark:text-gray-400">
          创建时间: <%= @train.created_at.strftime('%Y-%m-%d %H:%M') %>
        </div>
        <%= link_to "删除车次", admin_train_path(@train), method: :delete, data: { confirm: "确定删除这个车次吗？" }, class: "text-red-600 hover:text-red-900" %>
      </div>
    </div>
  </div>
</div>
