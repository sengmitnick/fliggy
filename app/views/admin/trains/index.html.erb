<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-100">火车票管理</h1>
    <div class="flex gap-2">
      <%= link_to "批量生成", generator_admin_trains_path, class: "btn-primary" %>
      <%= link_to "新增车次", new_admin_train_path, class: "btn-secondary" %>
    </div>
  </div>

  <div class="card">
    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
      <thead class="bg-gray-50 dark:bg-gray-800">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">车次</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">路线</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">出发时间</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">到达时间</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">时长</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">二等座价格</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">余票</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">操作</th>
        </tr>
      </thead>
      <tbody class="bg-white dark:bg-gray-900 divide-y divide-gray-200 dark:divide-gray-700">
        <% @trains.each do |train| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 py-1 text-xs font-semibold rounded <%= train.high_speed? ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-800' %>">
                <%= train.train_number %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">
              <%= train.departure_city %> → <%= train.arrival_city %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
              <%= train.departure_time.strftime('%Y-%m-%d %H:%M') %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
              <%= train.arrival_time.strftime('%Y-%m-%d %H:%M') %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
              <%= train.duration_formatted %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-gray-100">
              ¥<%= train.price_second_class.to_i %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm">
              <span class="<%= train.available_seats > 50 ? 'text-green-600' : train.available_seats > 0 ? 'text-yellow-600' : 'text-red-600' %>">
                <%= train.available_seats %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
              <%= link_to "查看", admin_train_path(train), class: "text-primary hover:text-primary-hover" %>
              <%= link_to "编辑", edit_admin_train_path(train), class: "text-green-600 hover:text-green-900" %>
              <%= link_to "删除", admin_train_path(train), method: :delete, data: { confirm: "确定删除这个车次吗？" }, class: "text-red-600 hover:text-red-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @trains.empty? %>
      <div class="text-center py-12 text-gray-500 dark:text-gray-400">
        <p>暂无车次数据</p>
        <p class="mt-2 text-sm">
          <%= link_to "点击批量生成", generator_admin_trains_path, class: "text-primary hover:text-primary-hover" %>
        </p>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <div class="mt-6">
    <%= paginate @trains %>
  </div>
</div>
