<% content_for :title, "New Cruise line" %>

<div class="container-md">
  <div class="flex items-center space-x-4">
    <%= link_to admin_cruise_lines_path, class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Cruise lines
    <% end %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50 mt-4 mb-8">Create New Cruise line</h1>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @cruise_line], local: true, class: "space-y-6" do |form| %>
        <%= render 'shared/form_error_message', model: @cruise_line %>

        <!-- Name -->
        <div class="mb-4">
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Name<% if field_required?(@cruise_line, :name) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :name, {
            placeholder: "Enter name...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@cruise_line, :name) ? { required: true } : {}) %>
          <% if @cruise_line.errors[:name].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @cruise_line.errors[:name].first %></p>
          <% end %>
        </div>

        <!-- Name en -->
        <div class="mb-4">
          <%= form.label :name_en, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Name en<% if field_required?(@cruise_line, :name_en) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :name_en, {
            placeholder: "Enter name en...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@cruise_line, :name_en) ? { required: true } : {}) %>
          <% if @cruise_line.errors[:name_en].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @cruise_line.errors[:name_en].first %></p>
          <% end %>
        </div>

        <!-- Logo url -->
        <div class="mb-4">
          <%= form.label :logo_url, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Logo url<% if field_required?(@cruise_line, :logo_url) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :logo_url, {
            placeholder: "Enter logo url...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@cruise_line, :logo_url) ? { required: true } : {}) %>
          <% if @cruise_line.errors[:logo_url].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @cruise_line.errors[:logo_url].first %></p>
          <% end %>
        </div>

        <!-- Description -->
        <div class="mb-4">
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Description<% if field_required?(@cruise_line, :description) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_area :description, {
            rows: 5,
            placeholder: "Enter description...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@cruise_line, :description) ? { required: true } : {}) %>
          <% if @cruise_line.errors[:description].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @cruise_line.errors[:description].first %></p>
          <% end %>
        </div>

        <!-- Slug -->
        <div class="mb-4">
          <%= form.label :slug, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Slug<% if field_required?(@cruise_line, :slug) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :slug, {
            placeholder: "Enter slug...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@cruise_line, :slug) ? { required: true } : {}) %>
          <% if @cruise_line.errors[:slug].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @cruise_line.errors[:slug].first %></p>
          <% end %>
        </div>

        <!-- Data version -->
        <div class="mb-4">
          <%= form.label :data_version, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Data version<% if field_required?(@cruise_line, :data_version) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :data_version, {
            placeholder: "Enter data version...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@cruise_line, :data_version) ? { required: true } : {}) %>
          <% if @cruise_line.errors[:data_version].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @cruise_line.errors[:data_version].first %></p>
          <% end %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_cruise_lines_path, class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Create Cruise line", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>