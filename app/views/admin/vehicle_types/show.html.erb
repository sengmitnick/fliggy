<% content_for :title, @vehicle_type.respond_to?(:name) ? @vehicle_type.name : "Vehicle type" %>

<div class="container-lg">
  <div class="mb-6">
    <div class="flex items-center space-x-4">
      <%= link_to admin_vehicle_types_path, class: "btn-ghost text-sm py-1 px-3" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Vehicle types
      <% end %>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50"><%= @vehicle_type.respond_to?(:name) ? @vehicle_type.name : "Vehicle type ##{@vehicle_type.id}" %></h1>

      <div class="flex items-center space-x-3">
        <%= link_to edit_admin_vehicle_type_path(@vehicle_type.id), class: "btn-primary" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit
        <% end %>

        <%= link_to admin_vehicle_type_path(@vehicle_type.id),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this vehicle_type?" },
            class: "btn-danger" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <!-- Vehicle type Content -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <div class="space-y-6">
        <!-- Name -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Name</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @vehicle_type.name %></div>
        </div>

        <!-- Category -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Category</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @vehicle_type.category %></div>
        </div>

        <!-- Level -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Level</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @vehicle_type.level %></div>
        </div>

        <!-- Seats -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Seats</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @vehicle_type.seats %></div>
        </div>

        <!-- Luggage capacity -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Luggage capacity</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @vehicle_type.luggage_capacity %></div>
        </div>

        <!-- Hourly price 6h -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Hourly price 6h</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @vehicle_type.hourly_price_6h %></div>
        </div>

        <!-- Hourly price 8h -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Hourly price 8h</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @vehicle_type.hourly_price_8h %></div>
        </div>

        <!-- Included mileage -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Included mileage</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @vehicle_type.included_mileage %></div>
        </div>

        <!-- Image url -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Image url</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @vehicle_type.image_url %></div>
        </div>

        <!-- Metadata -->
        <div class="pt-6 border-t border-gray-200 dark:border-gray-600">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">ID</label>
              <div class="text-sm text-gray-900 dark:text-gray-100 font-mono"><%= @vehicle_type.id %></div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Created</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @vehicle_type.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@vehicle_type.created_at) %> ago)</span>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last Updated</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @vehicle_type.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@vehicle_type.updated_at) %> ago)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
