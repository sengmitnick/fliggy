<% content_for :title, "New Vehicle type" %>

<div class="container-md">
  <div class="flex items-center space-x-4">
    <%= link_to admin_vehicle_types_path, class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Vehicle types
    <% end %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50 mt-4 mb-8">Create New Vehicle type</h1>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @vehicle_type], local: true, class: "space-y-6" do |form| %>
        <%= render 'shared/form_error_message', model: @vehicle_type %>

        <!-- Name -->
        <div class="mb-4">
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Name<% if field_required?(@vehicle_type, :name) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :name, {
            placeholder: "Enter name...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@vehicle_type, :name) ? { required: true } : {}) %>
          <% if @vehicle_type.errors[:name].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @vehicle_type.errors[:name].first %></p>
          <% end %>
        </div>

        <!-- Category -->
        <div class="mb-4">
          <%= form.label :category, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Category<% if field_required?(@vehicle_type, :category) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :category, {
            placeholder: "Enter category...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@vehicle_type, :category) ? { required: true } : {}) %>
          <% if @vehicle_type.errors[:category].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @vehicle_type.errors[:category].first %></p>
          <% end %>
        </div>

        <!-- Level -->
        <div class="mb-4">
          <%= form.label :level, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Level<% if field_required?(@vehicle_type, :level) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :level, {
            placeholder: "Enter level...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@vehicle_type, :level) ? { required: true } : {}) %>
          <% if @vehicle_type.errors[:level].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @vehicle_type.errors[:level].first %></p>
          <% end %>
        </div>

        <!-- Seats -->
        <div class="mb-4">
          <%= form.label :seats, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Seats<% if field_required?(@vehicle_type, :seats) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :seats, {
            placeholder: "Enter seats...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@vehicle_type, :seats) ? { required: true } : {}) %>
          <% if @vehicle_type.errors[:seats].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @vehicle_type.errors[:seats].first %></p>
          <% end %>
        </div>

        <!-- Luggage capacity -->
        <div class="mb-4">
          <%= form.label :luggage_capacity, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Luggage capacity<% if field_required?(@vehicle_type, :luggage_capacity) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :luggage_capacity, {
            placeholder: "Enter luggage capacity...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@vehicle_type, :luggage_capacity) ? { required: true } : {}) %>
          <% if @vehicle_type.errors[:luggage_capacity].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @vehicle_type.errors[:luggage_capacity].first %></p>
          <% end %>
        </div>

        <!-- Hourly price 6h -->
        <div class="mb-4">
          <%= form.label :hourly_price_6h, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Hourly price 6h<% if field_required?(@vehicle_type, :hourly_price_6h) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :hourly_price_6h, {
            placeholder: "Enter hourly price 6h...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@vehicle_type, :hourly_price_6h) ? { required: true } : {}) %>
          <% if @vehicle_type.errors[:hourly_price_6h].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @vehicle_type.errors[:hourly_price_6h].first %></p>
          <% end %>
        </div>

        <!-- Hourly price 8h -->
        <div class="mb-4">
          <%= form.label :hourly_price_8h, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Hourly price 8h<% if field_required?(@vehicle_type, :hourly_price_8h) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :hourly_price_8h, {
            placeholder: "Enter hourly price 8h...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@vehicle_type, :hourly_price_8h) ? { required: true } : {}) %>
          <% if @vehicle_type.errors[:hourly_price_8h].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @vehicle_type.errors[:hourly_price_8h].first %></p>
          <% end %>
        </div>

        <!-- Included mileage -->
        <div class="mb-4">
          <%= form.label :included_mileage, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Included mileage<% if field_required?(@vehicle_type, :included_mileage) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :included_mileage, {
            placeholder: "Enter included mileage...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@vehicle_type, :included_mileage) ? { required: true } : {}) %>
          <% if @vehicle_type.errors[:included_mileage].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @vehicle_type.errors[:included_mileage].first %></p>
          <% end %>
        </div>

        <!-- Image url -->
        <div class="mb-4">
          <%= form.label :image_url, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Image url<% if field_required?(@vehicle_type, :image_url) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :image_url, {
            placeholder: "Enter image url...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@vehicle_type, :image_url) ? { required: true } : {}) %>
          <% if @vehicle_type.errors[:image_url].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @vehicle_type.errors[:image_url].first %></p>
          <% end %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_vehicle_types_path, class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Create Vehicle type", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>