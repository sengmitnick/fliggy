<% content_for :title, "编辑汽车票" %>

<div class="container-md">
  <!-- Page Title -->
  <div class="flex items-center space-x-4 mb-6">
    <%= link_to admin_bus_ticket_path(@bus_ticket.id), class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      返回详情
    <% end %>
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50">编辑汽车票</h1>
  </div>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @bus_ticket], local: true, class: "space-y-6" do |form| %>
        <%= render 'shared/form_error_message', model: @bus_ticket %>

        <!-- Origin -->
        <div class="mb-4">
          <%= form.label :origin, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            出发城市<% if field_required?(@bus_ticket, :origin) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :origin, {
            placeholder: "例如：深圳",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@bus_ticket, :origin) ? { required: true } : {}) %>
          <% if @bus_ticket.errors[:origin].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @bus_ticket.errors[:origin].first %></p>
          <% end %>
        </div>

        <!-- Destination -->
        <div class="mb-4">
          <%= form.label :destination, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            到达城市<% if field_required?(@bus_ticket, :destination) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :destination, {
            placeholder: "例如：广州",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@bus_ticket, :destination) ? { required: true } : {}) %>
          <% if @bus_ticket.errors[:destination].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @bus_ticket.errors[:destination].first %></p>
          <% end %>
        </div>

        <!-- Departure date -->
        <div class="mb-4">
          <%= form.label :departure_date, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            出发日期<% if field_required?(@bus_ticket, :departure_date) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.date_field :departure_date, {
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@bus_ticket, :departure_date) ? { required: true } : {}) %>
          <% if @bus_ticket.errors[:departure_date].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @bus_ticket.errors[:departure_date].first %></p>
          <% end %>
        </div>

        <!-- Departure time -->
        <div class="mb-4">
          <%= form.label :departure_time, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            出发时间<% if field_required?(@bus_ticket, :departure_time) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :departure_time, {
            placeholder: "例如：09:30",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@bus_ticket, :departure_time) ? { required: true } : {}) %>
          <% if @bus_ticket.errors[:departure_time].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @bus_ticket.errors[:departure_time].first %></p>
          <% end %>
        </div>

        <!-- Arrival time -->
        <div class="mb-4">
          <%= form.label :arrival_time, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            到达时间<% if field_required?(@bus_ticket, :arrival_time) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :arrival_time, {
            placeholder: "例如：13:00",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@bus_ticket, :arrival_time) ? { required: true } : {}) %>
          <% if @bus_ticket.errors[:arrival_time].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @bus_ticket.errors[:arrival_time].first %></p>
          <% end %>
        </div>

        <!-- Price -->
        <div class="mb-4">
          <%= form.label :price, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            价格（元）<% if field_required?(@bus_ticket, :price) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :price, {
            placeholder: "例如：120",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@bus_ticket, :price) ? { required: true } : {}) %>
          <% if @bus_ticket.errors[:price].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @bus_ticket.errors[:price].first %></p>
          <% end %>
        </div>

        <!-- Status -->
        <div class="mb-4">
          <%= form.label :status, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            状态<% if field_required?(@bus_ticket, :status) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.select :status, 
              [['可售', 'available'], ['售罄', 'sold_out'], ['停售', 'unavailable']], 
              {},
              { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50" } %>
          <% if @bus_ticket.errors[:status].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @bus_ticket.errors[:status].first %></p>
          <% end %>
        </div>

        <!-- Seat type -->
        <div class="mb-4">
          <%= form.label :seat_type, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            座位类型<% if field_required?(@bus_ticket, :seat_type) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :seat_type, {
            placeholder: "例如：高级大巴",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@bus_ticket, :seat_type) ? { required: true } : {}) %>
          <% if @bus_ticket.errors[:seat_type].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @bus_ticket.errors[:seat_type].first %></p>
          <% end %>
        </div>

        <!-- Departure station -->
        <div class="mb-4">
          <%= form.label :departure_station, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            出发车站<% if field_required?(@bus_ticket, :departure_station) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :departure_station, {
            placeholder: "例如：深圳福田汽车站",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@bus_ticket, :departure_station) ? { required: true } : {}) %>
          <% if @bus_ticket.errors[:departure_station].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @bus_ticket.errors[:departure_station].first %></p>
          <% end %>
        </div>

        <!-- Arrival station -->
        <div class="mb-4">
          <%= form.label :arrival_station, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            到达车站<% if field_required?(@bus_ticket, :arrival_station) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :arrival_station, {
            placeholder: "例如：广州天河汽车站",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@bus_ticket, :arrival_station) ? { required: true } : {}) %>
          <% if @bus_ticket.errors[:arrival_station].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @bus_ticket.errors[:arrival_station].first %></p>
          <% end %>
        </div>

        <!-- Route description -->
        <div class="mb-4">
          <%= form.label :route_description, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            路线描述<% if field_required?(@bus_ticket, :route_description) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :route_description, {
            placeholder: "例如：途经惠州，全程高速",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@bus_ticket, :route_description) ? { required: true } : {}) %>
          <% if @bus_ticket.errors[:route_description].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @bus_ticket.errors[:route_description].first %></p>
          <% end %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_bus_ticket_path(@bus_ticket.id), class: "btn-ghost" do %>
            取消
          <% end %>
          <%= form.submit "更新汽车票", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
