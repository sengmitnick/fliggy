<% content_for :title, "汽车票 ##{@bus_ticket.id}" %>

<div class="container-lg">
  <div class="mb-6">
    <div class="flex items-center space-x-4">
      <%= link_to admin_bus_tickets_path, class: "btn-ghost text-sm py-1 px-3" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        返回汽车票列表
      <% end %>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50">汽车票详情 #<%= @bus_ticket.id %></h1>

      <div class="flex items-center space-x-3">
        <%= link_to edit_admin_bus_ticket_path(@bus_ticket.id), class: "btn-primary" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          编辑
        <% end %>

        <%= link_to admin_bus_ticket_path(@bus_ticket.id),
            method: :delete,
            data: { confirm: "确定要删除这个汽车票吗？" },
            class: "btn-danger" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          删除
        <% end %>
      </div>
    </div>
  </div>

  <!-- Bus ticket Content -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <div class="space-y-6">
        <!-- Origin -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">出发城市</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @bus_ticket.origin %></div>
        </div>

        <!-- Destination -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">到达城市</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @bus_ticket.destination %></div>
        </div>

        <!-- Departure date -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">出发日期</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @bus_ticket.departure_date&.strftime('%Y年%m月%d日') %></div>
        </div>

        <!-- Departure time -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">出发时间</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @bus_ticket.departure_time %></div>
        </div>

        <!-- Arrival time -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">到达时间</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @bus_ticket.arrival_time %></div>
        </div>

        <!-- Price -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">价格</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100">¥<%= @bus_ticket.price %></div>
        </div>

        <!-- Status -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">状态</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100">
            <% if @bus_ticket.status == 'available' %>
              <span class="badge badge-success">可售</span>
            <% elsif @bus_ticket.status == 'sold_out' %>
              <span class="badge badge-warning">售罄</span>
            <% else %>
              <span class="badge badge-secondary">停售</span>
            <% end %>
          </div>
        </div>

        <!-- Seat type -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">座位类型</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @bus_ticket.seat_type %></div>
        </div>

        <!-- Departure station -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">出发车站</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @bus_ticket.departure_station %></div>
        </div>

        <!-- Arrival station -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">到达车站</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @bus_ticket.arrival_station %></div>
        </div>

        <!-- Route description -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">路线描述</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @bus_ticket.route_description %></div>
        </div>

        <!-- Metadata -->
        <div class="pt-6 border-t border-gray-200 dark:border-gray-600">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">ID</label>
              <div class="text-sm text-gray-900 dark:text-gray-100 font-mono"><%= @bus_ticket.id %></div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">创建时间</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @bus_ticket.created_at.strftime("%Y年%m月%d日 %H:%M") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@bus_ticket.created_at) %>前)</span>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">最后更新</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @bus_ticket.updated_at.strftime("%Y年%m月%d日 %H:%M") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@bus_ticket.updated_at) %>前)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
