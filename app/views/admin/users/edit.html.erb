<% content_for :title, "Edit User" %>

<div class="container-md">
  <!-- Page Title -->
  <div class="flex items-center space-x-4 mb-6">
    <%= link_to admin_user_path(@user.id), class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to User
    <% end %>
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50">Edit User</h1>
  </div>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @user], local: true, class: "space-y-6" do |form| %>
        <%= render 'shared/form_error_message', model: @user %>

        <!-- Name -->
        <div class="mb-4">
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Name<% if field_required?(@user, :name) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :name, {
            placeholder: "Enter name...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@user, :name) ? { required: true } : {}) %>
          <% if @user.errors[:name].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @user.errors[:name].first %></p>
          <% end %>
        </div>

        <!-- Email -->
        <div class="mb-4">
          <%= form.label :email, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Email<% if field_required?(@user, :email) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :email, {
            placeholder: "Enter email...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@user, :email) ? { required: true } : {}) %>
          <% if @user.errors[:email].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @user.errors[:email].first %></p>
          <% end %>
        </div>

        <!-- Verified -->
        <div class="mb-4">
          <label class="flex items-center cursor-pointer">
            <%= form.check_box :verified,
                  class: "mr-3 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600 rounded dark:bg-gray-700" %>
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Verified</span>
          </label>
        </div>

        <!-- Provider -->
        <div class="mb-4">
          <%= form.label :provider, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Provider<% if field_required?(@user, :provider) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :provider, {
            placeholder: "Enter provider...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@user, :provider) ? { required: true } : {}) %>
          <% if @user.errors[:provider].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @user.errors[:provider].first %></p>
          <% end %>
        </div>

        <!-- Uid -->
        <div class="mb-4">
          <%= form.label :uid, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Uid<% if field_required?(@user, :uid) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :uid, {
            placeholder: "Enter uid...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@user, :uid) ? { required: true } : {}) %>
          <% if @user.errors[:uid].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @user.errors[:uid].first %></p>
          <% end %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_user_path(@user.id), class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Update User", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>