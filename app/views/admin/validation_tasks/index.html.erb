<% content_for :title, "验证任务管理" %>

<div class="container-xl">
  <!-- Page Title -->
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50">验证任务管理</h1>
    <div class="text-sm text-gray-500 dark:text-gray-400">
      共 <%= @tasks.size %> 个任务
    </div>
  </div>

  <!-- Tasks Table -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body p-0">
      <% if @tasks.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 dark:bg-gray-800">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">任务ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 tracking-wider">任务名称</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 tracking-wider">描述</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 tracking-wider">超时时间</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-400 tracking-wider">操作</th>
              </tr>
            </thead>
            <tbody class="bg-gray-50 dark:bg-gray-900 divide-y divide-gray-200 dark:divide-gray-700">
              <% @tasks.each do |task| %>
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors" data-task-id="<%= task[:id] %>">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-mono text-gray-900 dark:text-gray-100">
                    <%= task[:id] %>
                  </td>
                  <td class="px-6 py-4 text-sm font-semibold text-gray-900 dark:text-gray-100">
                    <%= task[:title] %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-300 max-w-md">
                    <%= task[:description] %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">
                    <%= task[:timeout] %>秒
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center">
                    <div class="flex justify-center items-center space-x-3">
                      <!-- 启动按钮 -->
                      <button 
                        onclick="startTask('<%= task[:id] %>')"
                        class="btn-sm bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition-colors flex items-center space-x-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span>启动</span>
                      </button>
                      
                      <!-- 验证按钮 -->
                      <button 
                        onclick="verifyTask('<%= task[:id] %>')"
                        class="btn-sm bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors flex items-center space-x-2"
                        id="verify-btn-<%= task[:id] %>"
                        disabled>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span>验证</span>
                      </button>
                    </div>
                    
                    <!-- 会话ID显示区域 -->
                    <div id="session-<%= task[:id] %>" class="mt-2 text-xs text-gray-500 dark:text-gray-400 hidden">
                      Session: <span class="font-mono"></span>
                    </div>
                    
                    <!-- 验证结果显示区域 -->
                    <div id="result-<%= task[:id] %>" class="mt-2 text-xs hidden"></div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-12">
          <div class="w-24 h-24 mx-auto mb-4 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center">
            <svg class="w-12 h-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
          </div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-2">暂无验证任务</h3>
          <p class="text-gray-500 dark:text-gray-400">请在 app/validators/ 目录下创建验证器。</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  // 存储每个任务的会话ID
  const taskSessions = {};

  // 启动任务
  async function startTask(taskId) {
    const startBtn = event.target.closest('button');
    const verifyBtn = document.getElementById(`verify-btn-${taskId}`);
    const sessionDiv = document.getElementById(`session-${taskId}`);
    const resultDiv = document.getElementById(`result-${taskId}`);
    
    // 禁用启动按钮
    startBtn.disabled = true;
    startBtn.classList.add('opacity-50', 'cursor-not-allowed');
    startBtn.innerHTML = '<span class="inline-block animate-spin mr-2">⏳</span>启动中...';
    
    // 清除之前的结果
    resultDiv.classList.add('hidden');
    
    try {
      const response = await fetch(`/api/tasks/${taskId}/start`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        }
      });
      
      const data = await response.json();
      
      if (response.ok && data.session_id) {
        // 存储会话ID
        taskSessions[taskId] = data.session_id;
        
        // 显示会话ID
        sessionDiv.querySelector('span').textContent = data.session_id;
        sessionDiv.classList.remove('hidden');
        
        // 启用验证按钮
        verifyBtn.disabled = false;
        verifyBtn.classList.remove('opacity-50', 'cursor-not-allowed');
        
        // 恢复启动按钮
        startBtn.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg><span>启动</span>';
        startBtn.disabled = false;
        startBtn.classList.remove('opacity-50', 'cursor-not-allowed');
        
        // 显示成功提示
        showToast('任务已启动，请进行测试后点击验证按钮', 'success');
      } else {
        throw new Error(data.error || '启动失败');
      }
    } catch (error) {
      console.error('启动任务失败:', error);
      showToast(`启动失败: ${error.message}`, 'error');
      
      // 恢复启动按钮
      startBtn.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg><span>启动</span>';
      startBtn.disabled = false;
      startBtn.classList.remove('opacity-50', 'cursor-not-allowed');
    }
  }

  // 验证任务
  async function verifyTask(taskId) {
    const verifyBtn = document.getElementById(`verify-btn-${taskId}`);
    const resultDiv = document.getElementById(`result-${taskId}`);
    const sessionId = taskSessions[taskId];
    
    if (!sessionId) {
      showToast('请先启动任务', 'error');
      return;
    }
    
    // 禁用验证按钮
    verifyBtn.disabled = true;
    verifyBtn.classList.add('opacity-50', 'cursor-not-allowed');
    verifyBtn.innerHTML = '<span class="inline-block animate-spin mr-2">⏳</span>验证中...';
    
    try {
      const response = await fetch('/api/verify/run', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          task_id: taskId,
          session_id: sessionId
        })
      });
      
      const data = await response.json();
      
      // 显示验证结果
      resultDiv.classList.remove('hidden');
      
      if (data.score !== undefined) {
        const scorePercent = (data.score * 100).toFixed(0);
        const isPass = data.score >= 0.6;
        
        resultDiv.innerHTML = `
          <div class="p-3 rounded-lg ${isPass ? 'bg-green-50 dark:bg-green-900/20' : 'bg-red-50 dark:bg-red-900/20'}">
            <div class="flex items-center justify-between mb-2">
              <span class="font-semibold ${isPass ? 'text-green-700 dark:text-green-300' : 'text-red-700 dark:text-red-300'}">
                ${isPass ? '✓ 验证通过' : '✗ 验证失败'}
              </span>
              <span class="font-mono ${isPass ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400'}">
                得分: ${scorePercent}%
              </span>
            </div>
            <div class="text-gray-600 dark:text-gray-300 text-xs">
              ${data.reason || '无详细信息'}
            </div>
          </div>
        `;
        
        showToast(`验证完成，得分: ${scorePercent}%`, isPass ? 'success' : 'error');
      } else {
        throw new Error(data.reason || '验证失败');
      }
      
      // 恢复验证按钮
      verifyBtn.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg><span>验证</span>';
      verifyBtn.disabled = false;
      verifyBtn.classList.remove('opacity-50', 'cursor-not-allowed');
      
    } catch (error) {
      console.error('验证任务失败:', error);
      resultDiv.classList.remove('hidden');
      resultDiv.innerHTML = `
        <div class="p-3 rounded-lg bg-red-50 dark:bg-red-900/20">
          <div class="text-red-700 dark:text-red-300 text-xs font-semibold">验证出错</div>
          <div class="text-red-600 dark:text-red-400 text-xs mt-1">${error.message}</div>
        </div>
      `;
      showToast(`验证失败: ${error.message}`, 'error');
      
      // 恢复验证按钮
      verifyBtn.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg><span>验证</span>';
      verifyBtn.disabled = false;
      verifyBtn.classList.remove('opacity-50', 'cursor-not-allowed');
    }
  }

  // 简单的提示函数
  function showToast(message, type = 'info') {
    const toast = document.createElement('div');
    const bgColor = type === 'success' ? 'bg-green-500' : type === 'error' ? 'bg-red-500' : 'bg-blue-500';
    
    toast.className = `fixed top-4 right-4 ${bgColor} text-white px-6 py-3 rounded-lg shadow-lg z-50 animate-fade-in`;
    toast.textContent = message;
    
    document.body.appendChild(toast);
    
    setTimeout(() => {
      toast.classList.add('animate-fade-out');
      setTimeout(() => toast.remove(), 300);
    }, 3000);
  }

  // 添加动画样式
  const style = document.createElement('style');
  style.textContent = `
    @keyframes fade-in {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }
    @keyframes fade-out {
      from { opacity: 1; transform: translateY(0); }
      to { opacity: 0; transform: translateY(-10px); }
    }
    .animate-fade-in { animation: fade-in 0.3s ease-out; }
    .animate-fade-out { animation: fade-out 0.3s ease-out; }
  `;
  document.head.appendChild(style);
</script>
