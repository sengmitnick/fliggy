<% content_for :title, "验证任务详情 - #{@task[:title]}" %>

<div class="container-xl">
  <!-- Breadcrumb -->
  <nav class="flex items-center justify-between mb-6" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-3">
      <li class="inline-flex items-center">
        <%= link_to admin_validation_tasks_path, class: "inline-flex items-center text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400" do %>
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
          </svg>
          验证任务列表
        <% end %>
      </li>
      <li aria-current="page">
        <div class="flex items-center">
          <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
          </svg>
          <span class="ml-1 text-sm font-medium text-gray-500 dark:text-gray-400">任务详情</span>
        </div>
      </li>
    </ol>
    
    <div class="flex items-center space-x-3">
      <!-- 上一个任务按钮 -->
      <% if @prev_task %>
        <%= link_to admin_validation_task_path(@prev_task[:id]), class: "inline-flex items-center px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white text-sm font-medium rounded-lg transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          <span>上一个任务</span>
        <% end %>
      <% else %>
        <span class="inline-flex items-center px-4 py-2 bg-gray-300 dark:bg-gray-700 text-gray-500 dark:text-gray-400 text-sm font-medium rounded-lg cursor-not-allowed">
          <span>已是第一个</span>
        </span>
      <% end %>
      
      <!-- 下一个任务按钮 -->
      <% if @next_task %>
        <%= link_to admin_validation_task_path(@next_task[:id]), class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors" do %>
          <span>下一个任务</span>
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>
      <% else %>
        <span class="inline-flex items-center px-4 py-2 bg-gray-300 dark:bg-gray-700 text-gray-500 dark:text-gray-400 text-sm font-medium rounded-lg cursor-not-allowed">
          <span>已是最后一个</span>
        </span>
      <% end %>
    </div>
  </nav>

  <!-- Task Info Card -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700 mb-6">
    <div class="card-body p-6">
      <div class="flex items-start justify-between mb-6">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50 mb-2"><%= @task[:title] %></h1>
          <p class="text-gray-600 dark:text-gray-300"><%= @task[:description] %></p>
        </div>
        <div class="text-right">
          <div class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200">
            超时: <%= @task[:timeout] %>秒
          </div>
        </div>
      </div>

      <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
        <dl class="grid grid-cols-1 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">任务ID</dt>
            <dd class="mt-1 text-sm font-mono text-gray-900 dark:text-gray-100"><%= @task[:id] %></dd>
          </div>
        </dl>
      </div>
    </div>
  </div>

  <!-- Action Panel -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700 mb-6">
    <div class="card-body p-6">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-50 mb-4">任务操作</h2>
      
      <div class="flex items-center space-x-4 mb-6">
        <!-- 启动按钮 -->
        <button 
          type="button"
          id="start-btn"
          class="btn bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg transition-colors flex items-center space-x-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>启动新会话</span>
        </button>
        
        <!-- 清空所有会话按钮 -->
        <button 
          type="button"
          id="clear-all-btn"
          class="btn bg-gray-500 hover:bg-gray-600 text-white px-6 py-3 rounded-lg transition-colors flex items-center space-x-2 hidden">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          <span>清空所有会话</span>
        </button>
      </div>

      <!-- 活跃会话列表 -->
      <div id="sessions-container" class="hidden mb-4">
        <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-3">活跃会话列表</h3>
        <div id="sessions-list" class="space-y-3">
          <!-- 会话卡片将动态插入这里 -->
        </div>
      </div>

      <!-- 操作提示 -->
      <div class="bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-lg p-4">
        <div class="flex">
          <svg class="w-5 h-5 text-yellow-600 dark:text-yellow-400 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
          <div class="text-sm text-yellow-800 dark:text-yellow-200">
            <p class="font-medium mb-1">操作步骤：</p>
            <ol class="list-decimal list-inside space-y-1">
              <li>点击"启动新会话"按钮创建验证会话（可创建多个）</li>
              <li>点击"复制访问链接"按钮，在<strong>无痕模式</strong>下打开链接进行测试</li>
              <li>在应用中完成相应的测试操作</li>
              <li>点击对应会话的"验证"按钮查看验证得分</li>
              <li>验证完成后，会话将从列表中移除</li>
            </ol>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Result Panel -->
  <div id="result-panel" class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700 hidden">
    <div class="card-body p-6">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-50 mb-4">验证结果</h2>
      <div id="result-content"></div>
    </div>
  </div>
</div>

<script>
(function() {
  'use strict';
  
  const taskId = '<%= @task[:id] %>';
  const sessions = [];  // 存储多个会话 {id, createdAt}

  const startBtn = document.getElementById('start-btn');
  const clearAllBtn = document.getElementById('clear-all-btn');
  const sessionsContainer = document.getElementById('sessions-container');
  const sessionsList = document.getElementById('sessions-list');
  const resultPanel = document.getElementById('result-panel');
  const resultContent = document.getElementById('result-content');

  // 启动新会话
  startBtn.addEventListener('click', async () => {
    // 禁用按钮
    startBtn.disabled = true;
    startBtn.classList.add('opacity-50', 'cursor-not-allowed');
    const originalBtnHtml = startBtn.innerHTML;
    startBtn.innerHTML = '<span class="inline-block animate-spin mr-2">⏳</span>启动中...';
    
    try {
      const response = await fetch(`/api/tasks/${taskId}/start`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        }
      });
      
      const data = await response.json();
      
      if (response.ok && data.session_id) {
        // 添加新会话到列表
        const session = {
          id: data.session_id,
          createdAt: new Date().toLocaleString('zh-CN')
        };
        sessions.push(session);
        
        // 更新UI
        renderSessions();
        showToast('会话已创建，请进行测试操作', 'success');
      } else {
        throw new Error(data.error || '启动失败');
      }
    } catch (error) {
      console.error('启动任务失败:', error);
      showToast(`启动失败: ${error.message}`, 'error');
    } finally {
      // 恢复启动按钮
      startBtn.innerHTML = originalBtnHtml;
      startBtn.disabled = false;
      startBtn.classList.remove('opacity-50', 'cursor-not-allowed');
    }
  });

  // 清空所有会话
  clearAllBtn.addEventListener('click', () => {
    if (confirm('确定要清空所有会话吗？')) {
      sessions.length = 0;
      renderSessions();
      resultPanel.classList.add('hidden');
      showToast('已清空所有会话', 'success');
    }
  });

  // 渲染会话列表
  function renderSessions() {
    if (sessions.length === 0) {
      sessionsContainer.classList.add('hidden');
      clearAllBtn.classList.add('hidden');
      return;
    }
    
    sessionsContainer.classList.remove('hidden');
    clearAllBtn.classList.remove('hidden');
    
    sessionsList.innerHTML = sessions.map((session, index) => `
      <div class="p-4 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg shadow-sm" data-session-id="${session.id}">
        <div class="flex items-center justify-between">
          <div class="flex-1">
            <div class="flex items-center space-x-2 mb-2">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200">
                会话 #${index + 1}
              </span>
              <span class="text-xs text-gray-500 dark:text-gray-400">${session.createdAt}</span>
            </div>
            <div class="flex items-center" data-controller="clipboard">
              <input type="hidden" data-clipboard-target="source" value="${window.location.origin}/?session_id=${session.id}" />
              <button 
                type="button"
                data-action="click->clipboard#copy"
                class="btn bg-gray-100 hover:bg-gray-200 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-200 px-3 py-1.5 rounded transition-colors flex items-center space-x-1.5 text-xs">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
                <span>复制访问链接</span>
              </button>
            </div>
          </div>
          <div class="flex items-center space-x-2 ml-4">
            <button 
              type="button"
              class="verify-session-btn btn bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded transition-colors flex items-center space-x-1"
              data-session-id="${session.id}">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>验证</span>
            </button>
            <button 
              type="button"
              class="remove-session-btn btn bg-red-500 hover:bg-red-600 text-white px-3 py-2 rounded transition-colors"
              data-session-id="${session.id}">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
    `).join('');
    
    // 绑定验证按钮事件
    document.querySelectorAll('.verify-session-btn').forEach(btn => {
      btn.addEventListener('click', () => verifySession(btn.dataset.sessionId));
    });
    
    // 绑定移除按钮事件
    document.querySelectorAll('.remove-session-btn').forEach(btn => {
      btn.addEventListener('click', () => removeSession(btn.dataset.sessionId));
    });
  }

  // 验证指定会话
  async function verifySession(sessionId) {
    const btn = document.querySelector(`.verify-session-btn[data-session-id="${sessionId}"]`);
    if (!btn) return;
    
    // 禁用按钮
    btn.disabled = true;
    btn.classList.add('opacity-50', 'cursor-not-allowed');
    const originalBtnHtml = btn.innerHTML;
    btn.innerHTML = '<span class="inline-block animate-spin mr-2">⏳</span>验证中...';
    
    try {
      const response = await fetch('/api/verify/run', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          task_id: taskId,
          session_id: sessionId
        })
      });
      
      const data = await response.json();
      
      // 显示结果面板
      resultPanel.classList.remove('hidden');
      resultPanel.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
      
      if (data.score !== undefined) {
        const scorePercent = (data.score * 100).toFixed(0);
        const isPass = data.score >= 0.6;
        
        resultContent.innerHTML = `
          <div class="p-6 rounded-lg ${isPass ? 'bg-green-50 dark:bg-green-900/20 border-2 border-green-200 dark:border-green-800' : 'bg-red-50 dark:bg-red-900/20 border-2 border-red-200 dark:border-red-800'}">
            <div class="mb-3">
              <span class="text-xs font-mono text-gray-500 dark:text-gray-400">会话 ID: ${sessionId}</span>
            </div>
            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center">
                <div class="${isPass ? 'bg-green-100 dark:bg-green-800' : 'bg-red-100 dark:bg-red-800'} rounded-full p-3 mr-4">
                  <svg class="w-8 h-8 ${isPass ? 'text-green-600 dark:text-green-300' : 'text-red-600 dark:text-red-300'}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    ${isPass 
                      ? '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>'
                      : '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>'
                    }
                  </svg>
                </div>
                <div>
                  <h3 class="text-2xl font-bold ${isPass ? 'text-green-700 dark:text-green-300' : 'text-red-700 dark:text-red-300'}">
                    ${isPass ? '✓ 验证通过' : '✗ 验证失败'}
                  </h3>
                  <p class="text-sm ${isPass ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400'}">
                    ${isPass ? '所有检查项均已通过' : '存在未通过的检查项'}
                  </p>
                </div>
              </div>
              <div class="text-right">
                <div class="text-4xl font-bold ${isPass ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400'}">
                  ${scorePercent}%
                </div>
                <div class="text-sm ${isPass ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400'}">
                  得分
                </div>
              </div>
            </div>
            <div class="border-t ${isPass ? 'border-green-200 dark:border-green-800' : 'border-red-200 dark:border-red-800'} pt-4 mt-4">
              <h4 class="font-semibold ${isPass ? 'text-green-900 dark:text-green-100' : 'text-red-900 dark:text-red-100'} mb-2">详细信息：</h4>
              <p class="text-gray-700 dark:text-gray-300 whitespace-pre-wrap">${data.reason || '无详细信息'}</p>
            </div>
          </div>
        `;
        
        showToast(`验证完成，得分: ${scorePercent}%`, isPass ? 'success' : 'error');
        
        // 验证完成后从列表中移除该会话
        removeSession(sessionId);
      } else {
        throw new Error(data.reason || '验证失败');
      }
    } catch (error) {
      console.error('验证任务失败:', error);
      resultPanel.classList.remove('hidden');
      resultContent.innerHTML = `
        <div class="p-6 rounded-lg bg-red-50 dark:bg-red-900/20 border-2 border-red-200 dark:border-red-800">
          <div class="mb-3">
            <span class="text-xs font-mono text-gray-500 dark:text-gray-400">会话 ID: ${sessionId}</span>
          </div>
          <div class="flex items-center mb-4">
            <div class="bg-red-100 dark:bg-red-800 rounded-full p-3 mr-4">
              <svg class="w-8 h-8 text-red-600 dark:text-red-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold text-red-700 dark:text-red-300">验证出错</h3>
              <p class="text-sm text-red-600 dark:text-red-400">验证过程中发生错误</p>
            </div>
          </div>
          <div class="border-t border-red-200 dark:border-red-800 pt-4 mt-4">
            <p class="text-red-700 dark:text-red-300">${error.message}</p>
          </div>
        </div>
      `;
      showToast(`验证失败: ${error.message}`, 'error');
      
      // 恢复按钮状态
      btn.innerHTML = originalBtnHtml;
      btn.disabled = false;
      btn.classList.remove('opacity-50', 'cursor-not-allowed');
    }
  }

  // 移除指定会话
  function removeSession(sessionId) {
    const index = sessions.findIndex(s => s.id === sessionId);
    if (index > -1) {
      sessions.splice(index, 1);
      renderSessions();
    }
  }

  // Toast 提示函数
  function showToast(message, type = 'info') {
    const toast = document.createElement('div');
    const bgColor = type === 'success' ? 'bg-green-500' : type === 'error' ? 'bg-red-500' : 'bg-blue-500';
    
    toast.className = `fixed top-4 right-4 ${bgColor} text-white px-6 py-3 rounded-lg shadow-lg z-50 animate-fade-in`;
    toast.textContent = message;
    
    document.body.appendChild(toast);
    
    setTimeout(() => {
      toast.classList.add('animate-fade-out');
      setTimeout(() => toast.remove(), 300);
    }, 3000);
  }

  // 添加动画样式
  // 添加动画样式（如果不存在）
  if (!document.getElementById('validation-task-animations')) {
    const style = document.createElement('style');
    style.id = 'validation-task-animations';
    style.textContent = `
      @keyframes fade-in {
        from { opacity: 0; transform: translateY(-10px); }
        to { opacity: 1; transform: translateY(0); }
      }
      @keyframes fade-out {
        from { opacity: 1; transform: translateY(0); }
        to { opacity: 0; transform: translateY(-10px); }
      }
      .animate-fade-in { animation: fade-in 0.3s ease-out; }
      .animate-fade-out { animation: fade-out 0.3s ease-out; }
    `;
    document.head.appendChild(style);
  }
})();
</script>
