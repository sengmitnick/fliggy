<% content_for :title, "Edit Travel agency" %>

<div class="container-md">
  <!-- Page Title -->
  <div class="flex items-center space-x-4 mb-6">
    <%= link_to admin_travel_agency_path(@travel_agency.id), class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Travel agency
    <% end %>
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50">Edit Travel agency</h1>
  </div>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @travel_agency], local: true, class: "space-y-6" do |form| %>
        <%= render 'shared/form_error_message', model: @travel_agency %>

        <!-- Name -->
        <div class="mb-4">
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Name<% if field_required?(@travel_agency, :name) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :name, {
            placeholder: "Enter name...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@travel_agency, :name) ? { required: true } : {}) %>
          <% if @travel_agency.errors[:name].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @travel_agency.errors[:name].first %></p>
          <% end %>
        </div>

        <!-- Description -->
        <div class="mb-4">
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Description<% if field_required?(@travel_agency, :description) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_area :description, {
            rows: 5,
            placeholder: "Enter description...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@travel_agency, :description) ? { required: true } : {}) %>
          <% if @travel_agency.errors[:description].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @travel_agency.errors[:description].first %></p>
          <% end %>
        </div>

        <!-- Logo url -->
        <div class="mb-4">
          <%= form.label :logo_url, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Logo url<% if field_required?(@travel_agency, :logo_url) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :logo_url, {
            placeholder: "Enter logo url...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@travel_agency, :logo_url) ? { required: true } : {}) %>
          <% if @travel_agency.errors[:logo_url].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @travel_agency.errors[:logo_url].first %></p>
          <% end %>
        </div>

        <!-- Rating -->
        <div class="mb-4">
          <%= form.label :rating, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Rating<% if field_required?(@travel_agency, :rating) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :rating, {
            placeholder: "Enter rating...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@travel_agency, :rating) ? { required: true } : {}) %>
          <% if @travel_agency.errors[:rating].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @travel_agency.errors[:rating].first %></p>
          <% end %>
        </div>

        <!-- Sales count -->
        <div class="mb-4">
          <%= form.label :sales_count, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Sales count<% if field_required?(@travel_agency, :sales_count) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :sales_count, {
            placeholder: "Enter sales count...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@travel_agency, :sales_count) ? { required: true } : {}) %>
          <% if @travel_agency.errors[:sales_count].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @travel_agency.errors[:sales_count].first %></p>
          <% end %>
        </div>

        <!-- Is verified -->
        <div class="mb-4">
          <label class="flex items-center cursor-pointer">
            <%= form.check_box :is_verified,
                  class: "mr-3 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600 rounded dark:bg-gray-700" %>
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Is verified</span>
          </label>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_travel_agency_path(@travel_agency.id), class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Update Travel agency", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>