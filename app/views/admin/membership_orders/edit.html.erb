<% content_for :title, "Edit Membership order" %>

<div class="container-md">
  <!-- Page Title -->
  <div class="flex items-center space-x-4 mb-6">
    <%= link_to admin_membership_order_path(@membership_order.id), class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Membership order
    <% end %>
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50">Edit Membership order</h1>
  </div>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @membership_order], local: true, class: "space-y-6" do |form| %>
        <%= render 'shared/form_error_message', model: @membership_order %>

        <!-- Quantity -->
        <div class="mb-4">
          <%= form.label :quantity, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Quantity<% if field_required?(@membership_order, :quantity) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :quantity, {
            placeholder: "Enter quantity...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@membership_order, :quantity) ? { required: true } : {}) %>
          <% if @membership_order.errors[:quantity].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @membership_order.errors[:quantity].first %></p>
          <% end %>
        </div>

        <!-- Price cash -->
        <div class="mb-4">
          <%= form.label :price_cash, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Price cash<% if field_required?(@membership_order, :price_cash) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :price_cash, {
            placeholder: "Enter price cash...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@membership_order, :price_cash) ? { required: true } : {}) %>
          <% if @membership_order.errors[:price_cash].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @membership_order.errors[:price_cash].first %></p>
          <% end %>
        </div>

        <!-- Price mileage -->
        <div class="mb-4">
          <%= form.label :price_mileage, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Price mileage<% if field_required?(@membership_order, :price_mileage) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :price_mileage, {
            placeholder: "Enter price mileage...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@membership_order, :price_mileage) ? { required: true } : {}) %>
          <% if @membership_order.errors[:price_mileage].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @membership_order.errors[:price_mileage].first %></p>
          <% end %>
        </div>

        <!-- Total cash -->
        <div class="mb-4">
          <%= form.label :total_cash, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Total cash<% if field_required?(@membership_order, :total_cash) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :total_cash, {
            placeholder: "Enter total cash...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@membership_order, :total_cash) ? { required: true } : {}) %>
          <% if @membership_order.errors[:total_cash].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @membership_order.errors[:total_cash].first %></p>
          <% end %>
        </div>

        <!-- Total mileage -->
        <div class="mb-4">
          <%= form.label :total_mileage, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Total mileage<% if field_required?(@membership_order, :total_mileage) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :total_mileage, {
            placeholder: "Enter total mileage...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@membership_order, :total_mileage) ? { required: true } : {}) %>
          <% if @membership_order.errors[:total_mileage].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @membership_order.errors[:total_mileage].first %></p>
          <% end %>
        </div>

        <!-- Status -->
        <div class="mb-4">
          <%= form.label :status, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Status<% if field_required?(@membership_order, :status) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :status, {
            placeholder: "Enter status...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@membership_order, :status) ? { required: true } : {}) %>
          <% if @membership_order.errors[:status].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @membership_order.errors[:status].first %></p>
          <% end %>
        </div>

        <!-- Order number -->
        <div class="mb-4">
          <%= form.label :order_number, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Order number<% if field_required?(@membership_order, :order_number) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :order_number, {
            placeholder: "Enter order number...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@membership_order, :order_number) ? { required: true } : {}) %>
          <% if @membership_order.errors[:order_number].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @membership_order.errors[:order_number].first %></p>
          <% end %>
        </div>

        <!-- Shipping address -->
        <div class="mb-4">
          <%= form.label :shipping_address, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Shipping address<% if field_required?(@membership_order, :shipping_address) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_area :shipping_address, {
            rows: 5,
            placeholder: "Enter shipping address...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@membership_order, :shipping_address) ? { required: true } : {}) %>
          <% if @membership_order.errors[:shipping_address].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @membership_order.errors[:shipping_address].first %></p>
          <% end %>
        </div>

        <!-- Contact phone -->
        <div class="mb-4">
          <%= form.label :contact_phone, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Contact phone<% if field_required?(@membership_order, :contact_phone) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :contact_phone, {
            placeholder: "Enter contact phone...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@membership_order, :contact_phone) ? { required: true } : {}) %>
          <% if @membership_order.errors[:contact_phone].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @membership_order.errors[:contact_phone].first %></p>
          <% end %>
        </div>

        <!-- Contact name -->
        <div class="mb-4">
          <%= form.label :contact_name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Contact name<% if field_required?(@membership_order, :contact_name) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :contact_name, {
            placeholder: "Enter contact name...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@membership_order, :contact_name) ? { required: true } : {}) %>
          <% if @membership_order.errors[:contact_name].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @membership_order.errors[:contact_name].first %></p>
          <% end %>
        </div>

        <!-- Notes -->
        <div class="mb-4">
          <%= form.label :notes, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Notes<% if field_required?(@membership_order, :notes) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_area :notes, {
            rows: 5,
            placeholder: "Enter notes...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@membership_order, :notes) ? { required: true } : {}) %>
          <% if @membership_order.errors[:notes].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @membership_order.errors[:notes].first %></p>
          <% end %>
        </div>

        <!-- User -->
        <div class="mb-4">
          <%= form.label :user_id, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            User<% if field_required?(@membership_order, :user) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.select :user_id, 
              options_for_select([['Select User', '']] + User.all.map { |item| [item.name, item.id] }, @membership_order.user_id),
              {},
              { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50" } %>
          <% if @membership_order.errors[:user_id].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @membership_order.errors[:user_id].first %></p>
          <% end %>
        </div>

        <!-- Membership product -->
        <div class="mb-4">
          <%= form.label :membership_product_id, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Membership product<% if field_required?(@membership_order, :membership_product) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.select :membership_product_id, 
              options_for_select([['Select Membership product', '']] + MembershipProduct.all.map { |item| [item.name, item.id] }, @membership_order.membership_product_id),
              {},
              { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50" } %>
          <% if @membership_order.errors[:membership_product_id].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @membership_order.errors[:membership_product_id].first %></p>
          <% end %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_membership_order_path(@membership_order.id), class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Update Membership order", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>