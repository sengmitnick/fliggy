<% content_for :title, @membership_order.respond_to?(:name) ? @membership_order.name : "Membership order" %>

<div class="container-lg">
  <div class="mb-6">
    <div class="flex items-center space-x-4">
      <%= link_to admin_membership_orders_path, class: "btn-ghost text-sm py-1 px-3" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Membership orders
      <% end %>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50"><%= @membership_order.respond_to?(:name) ? @membership_order.name : "Membership order ##{@membership_order.id}" %></h1>

      <div class="flex items-center space-x-3">
        <%= link_to edit_admin_membership_order_path(@membership_order.id), class: "btn-primary" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit
        <% end %>

        <%= link_to admin_membership_order_path(@membership_order.id),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this membership_order?" },
            class: "btn-danger" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <!-- Membership order Content -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <div class="space-y-6">
        <!-- Quantity -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Quantity</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @membership_order.quantity %></div>
        </div>

        <!-- Price cash -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Price cash</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @membership_order.price_cash %></div>
        </div>

        <!-- Price mileage -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Price mileage</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @membership_order.price_mileage %></div>
        </div>

        <!-- Total cash -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Total cash</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @membership_order.total_cash %></div>
        </div>

        <!-- Total mileage -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Total mileage</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @membership_order.total_mileage %></div>
        </div>

        <!-- Status -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Status</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @membership_order.status %></div>
        </div>

        <!-- Order number -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Order number</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @membership_order.order_number %></div>
        </div>

        <!-- Shipping address -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Shipping address</label>
          <div class="prose prose-gray dark:prose-invert max-w-none">
            <%= simple_format(@membership_order.shipping_address) %>
          </div>
        </div>

        <!-- Contact phone -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Contact phone</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @membership_order.contact_phone %></div>
        </div>

        <!-- Contact name -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Contact name</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @membership_order.contact_name %></div>
        </div>

        <!-- Notes -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Notes</label>
          <div class="prose prose-gray dark:prose-invert max-w-none">
            <%= simple_format(@membership_order.notes) %>
          </div>
        </div>

        <!-- User -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">User</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @membership_order.user&.name %></div>
        </div>

        <!-- Membership product -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Membership product</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @membership_order.membership_product&.name %></div>
        </div>

        <!-- Metadata -->
        <div class="pt-6 border-t border-gray-200 dark:border-gray-600">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">ID</label>
              <div class="text-sm text-gray-900 dark:text-gray-100 font-mono"><%= @membership_order.id %></div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Created</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @membership_order.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@membership_order.created_at) %> ago)</span>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last Updated</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @membership_order.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@membership_order.updated_at) %> ago)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
