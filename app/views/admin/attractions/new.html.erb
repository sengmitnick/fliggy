<% content_for :title, "New Attraction" %>

<div class="container-md">
  <div class="flex items-center space-x-4">
    <%= link_to admin_attractions_path, class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Attractions
    <% end %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50 mt-4 mb-8">Create New Attraction</h1>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @attraction], local: true, class: "space-y-6" do |form| %>
        <%= render 'shared/form_error_message', model: @attraction %>

        <!-- Name -->
        <div class="mb-4">
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Name<% if field_required?(@attraction, :name) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :name, {
            placeholder: "Enter name...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@attraction, :name) ? { required: true } : {}) %>
          <% if @attraction.errors[:name].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @attraction.errors[:name].first %></p>
          <% end %>
        </div>

        <!-- Latitude -->
        <div class="mb-4">
          <%= form.label :latitude, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Latitude<% if field_required?(@attraction, :latitude) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :latitude, {
            placeholder: "Enter latitude...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@attraction, :latitude) ? { required: true } : {}) %>
          <% if @attraction.errors[:latitude].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @attraction.errors[:latitude].first %></p>
          <% end %>
        </div>

        <!-- Longitude -->
        <div class="mb-4">
          <%= form.label :longitude, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Longitude<% if field_required?(@attraction, :longitude) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :longitude, {
            placeholder: "Enter longitude...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@attraction, :longitude) ? { required: true } : {}) %>
          <% if @attraction.errors[:longitude].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @attraction.errors[:longitude].first %></p>
          <% end %>
        </div>

        <!-- Description -->
        <div class="mb-4">
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Description<% if field_required?(@attraction, :description) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_area :description, {
            rows: 5,
            placeholder: "Enter description...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@attraction, :description) ? { required: true } : {}) %>
          <% if @attraction.errors[:description].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @attraction.errors[:description].first %></p>
          <% end %>
        </div>

        <!-- Province -->
        <div class="mb-4">
          <%= form.label :province, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Province<% if field_required?(@attraction, :province) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :province, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50" %>
          <% if @attraction.errors[:province].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @attraction.errors[:province].first %></p>
          <% end %>
        </div>

        <!-- City -->
        <div class="mb-4">
          <%= form.label :city, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            City<% if field_required?(@attraction, :city) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :city, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50" %>
          <% if @attraction.errors[:city].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @attraction.errors[:city].first %></p>
          <% end %>
        </div>

        <!-- District -->
        <div class="mb-4">
          <%= form.label :district, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            District
          <% end %>
          <%= form.text_field :district, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50" %>
          <% if @attraction.errors[:district].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @attraction.errors[:district].first %></p>
          <% end %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_attractions_path, class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Create Attraction", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>