<% content_for :title, "Edit Deep travel product" %>

<div class="container-md">
  <!-- Page Title -->
  <div class="flex items-center space-x-4 mb-6">
    <%= link_to admin_deep_travel_product_path(@deep_travel_product.id), class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Deep travel product
    <% end %>
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50">Edit Deep travel product</h1>
  </div>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @deep_travel_product], local: true, class: "space-y-6" do |form| %>
        <%= render 'shared/form_error_message', model: @deep_travel_product %>

        <!-- Title -->
        <div class="mb-4">
          <%= form.label :title, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Title<% if field_required?(@deep_travel_product, :title) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :title, {
            placeholder: "Enter title...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@deep_travel_product, :title) ? { required: true } : {}) %>
          <% if @deep_travel_product.errors[:title].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @deep_travel_product.errors[:title].first %></p>
          <% end %>
        </div>

        <!-- Subtitle -->
        <div class="mb-4">
          <%= form.label :subtitle, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Subtitle<% if field_required?(@deep_travel_product, :subtitle) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :subtitle, {
            placeholder: "Enter subtitle...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@deep_travel_product, :subtitle) ? { required: true } : {}) %>
          <% if @deep_travel_product.errors[:subtitle].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @deep_travel_product.errors[:subtitle].first %></p>
          <% end %>
        </div>

        <!-- Location -->
        <div class="mb-4">
          <%= form.label :location, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Location<% if field_required?(@deep_travel_product, :location) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :location, {
            placeholder: "Enter location...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@deep_travel_product, :location) ? { required: true } : {}) %>
          <% if @deep_travel_product.errors[:location].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @deep_travel_product.errors[:location].first %></p>
          <% end %>
        </div>

        <!-- Price -->
        <div class="mb-4">
          <%= form.label :price, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Price<% if field_required?(@deep_travel_product, :price) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :price, {
            placeholder: "Enter price...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@deep_travel_product, :price) ? { required: true } : {}) %>
          <% if @deep_travel_product.errors[:price].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @deep_travel_product.errors[:price].first %></p>
          <% end %>
        </div>

        <!-- Sales count -->
        <div class="mb-4">
          <%= form.label :sales_count, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Sales count<% if field_required?(@deep_travel_product, :sales_count) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :sales_count, {
            placeholder: "Enter sales count...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@deep_travel_product, :sales_count) ? { required: true } : {}) %>
          <% if @deep_travel_product.errors[:sales_count].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @deep_travel_product.errors[:sales_count].first %></p>
          <% end %>
        </div>

        <!-- Description -->
        <div class="mb-4">
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Description<% if field_required?(@deep_travel_product, :description) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_area :description, {
            rows: 5,
            placeholder: "Enter description...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@deep_travel_product, :description) ? { required: true } : {}) %>
          <% if @deep_travel_product.errors[:description].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @deep_travel_product.errors[:description].first %></p>
          <% end %>
        </div>

        <!-- Itinerary -->
        <div class="mb-4">
          <%= form.label :itinerary, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Itinerary<% if field_required?(@deep_travel_product, :itinerary) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_area :itinerary, {
            rows: 5,
            placeholder: "Enter itinerary...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@deep_travel_product, :itinerary) ? { required: true } : {}) %>
          <% if @deep_travel_product.errors[:itinerary].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @deep_travel_product.errors[:itinerary].first %></p>
          <% end %>
        </div>

        <!-- Featured -->
        <div class="mb-4">
          <label class="flex items-center cursor-pointer">
            <%= form.check_box :featured,
                  class: "mr-3 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600 rounded dark:bg-gray-700" %>
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Featured</span>
          </label>
        </div>

        <!-- Deep travel guide -->
        <div class="mb-4">
          <%= form.label :deep_travel_guide_id, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Deep travel guide<% if field_required?(@deep_travel_product, :deep_travel_guide) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.select :deep_travel_guide_id, 
              options_for_select([['Select Deep travel guide', '']] + DeepTravelGuide.all.map { |item| [item.name, item.id] }, @deep_travel_product.deep_travel_guide_id),
              {},
              { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50" } %>
          <% if @deep_travel_product.errors[:deep_travel_guide_id].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @deep_travel_product.errors[:deep_travel_guide_id].first %></p>
          <% end %>
        </div>

        <!-- Images -->
        <div class="mb-4">
          <%= form.label :images, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Images
          <% end %>
          
          <!-- Current attachments -->
          <% if @deep_travel_product.images.any? %>
            <div class="mb-3 p-3 border border-gray-200 dark:border-gray-600 rounded-lg bg-gray-50 dark:bg-gray-800">
              <p class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Current files:</p>
              <ul class="space-y-1">
                <% @deep_travel_product.images.each do |file| %>
                  <li class="text-sm text-gray-600 dark:text-gray-400 flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"/>
                    </svg>
                    <%= file.filename %>
                  </li>
                <% end %>
              </ul>
            </div>
          <% end %>
          
          <%= form.file_field :images, {
            multiple: true,
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100"
          } %>
          <p class="text-sm text-gray-500 mt-1">Select new files to replace current ones, or leave empty to keep current files</p>
          <% if @deep_travel_product.errors[:images].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @deep_travel_product.errors[:images].first %></p>
          <% end %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_deep_travel_product_path(@deep_travel_product.id), class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Update Deep travel product", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>