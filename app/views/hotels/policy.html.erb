                <img src="data:image/svg+xml;base64," alt="银联" class="w-6 h-6"/>
              <% elsif method == "支付宝" %>
                <img src="data:image/svg+xml;base64," alt="支付宝" class="w-6 h-6"/>
              <% end %>
              <span><%= method %></span>
