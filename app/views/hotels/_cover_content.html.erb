<!-- 酒店基本信息 -->
<div class="bg-white p-4">
  <div class="flex items-start justify-between">
    <div class="flex-1">
      <h1 class="text-xl font-bold text-gray-900"><%= @hotel.name %></h1>
      <div class="flex items-center mt-1 space-x-2">
        <span class="px-2 py-1 text-xs bg-purple-100 text-purple-800 rounded">豪华</span>
        <span class="px-2 py-1 text-xs bg-orange-100 text-orange-800 rounded">希尔顿旗舰下</span>
      </div>
    </div>
    <button class="p-2 text-gray-400">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
    </button>
  </div>

  <div class="text-sm text-gray-600 mt-1">《榜单》入选南山区酒店品质榜</div>
</div>

