      <button class="p-2 bg-gray-200 rounded-lg">
        <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z"/>
        </svg>
      </button>
    </div>
  </div>
</div>

<!-- F2直通希尔顿银会员 -->
<div class="bg-gradient-to-r from-amber-50 to-orange-50 p-4 border-t border-gray-100">
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-3">
      <div class="text-lg font-bold text-amber-800">F2直通希尔顿银会员</div>
    </div>
    <button class="bg-amber-600 text-white px-4 py-2 rounded-full text-sm font-medium">免费开通 享会员权益 ></button>
  </div>

  <div class="grid grid-cols-4 gap-4 mt-3">
    <div class="text-center">
      <div class="text-sm font-medium text-amber-800">🎁 1.2倍</div>
      <div class="text-xs text-gray-600">奖励积分</div>
    </div>
    <div class="text-center">
      <div class="text-sm font-medium text-amber-800">🔓 开卡享</div>
      <div class="text-xs text-gray-600">延迟退房</div>
    </div>
    <div class="text-center">
      <div class="text-sm font-medium text-amber-800">🍽 部分9折</div>
      <div class="text-xs text-gray-600">尊享餐饮</div>
    </div>
    <div class="text-center">
      <div class="text-sm font-medium text-amber-800">🏠 第5晚免费</div>
      <div class="text-xs text-gray-600">奖励住宿</div>
    </div>
  </div>
  
  <div class="mt-3 text-center">
    <span class="text-red-600 font-bold">品牌红包</span>
    <span class="text-sm text-gray-600">注册会员可领取80元红包</span>
  </div>
  
  <div class="mt-3 text-center">
    <%= link_to policy_hotel_path(@hotel), class: "text-blue-600 text-sm underline" do %>
      订房必读 · 酒店政策
    <% end %>
  </div>
</div>

<!-- 日期选择和客房预览 -->
<div class="bg-white border-t border-gray-100">
  <div class="p-4 border-b border-gray-100">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-6">
        <div class="text-center">
          <div class="text-sm text-gray-600">今天</div>
          <div class="text-lg font-bold">12月26日</div>
          <div class="w-8 h-8 mx-auto mt-1 bg-orange-500 text-white rounded-full flex items-center justify-center text-xs">1晚</div>
        </div>
        <div class="text-center">
          <div class="text-sm text-gray-600">明天</div>
          <div class="text-lg font-bold">12月27日</div>
          <div class="text-xs text-gray-600 mt-1">看低价</div>
        </div>
      </div>
      <div class="flex items-center space-x-4">
        <div class="text-center">
          <div class="w-8 h-8 mx-auto bg-orange-100 rounded-full flex items-center justify-center">
            <span class="text-orange-500 font-bold">1</span>
          </div>
          <div class="text-xs text-gray-600 mt-1">间</div>
        </div>
        <div class="text-center">
          <div class="w-8 h-8 mx-auto bg-orange-100 rounded-full flex items-center justify-center">
            <span class="text-orange-500 font-bold">1</span>
          </div>
          <div class="text-xs text-gray-600 mt-1">人</div>
        </div>
        <div class="text-center">
          <div class="w-8 h-8 mx-auto bg-gray-100 rounded-full flex items-center justify-center">
            <span class="text-gray-500 font-bold">0</span>
          </div>
          <div class="text-xs text-gray-600 mt-1">儿童</div>
        </div>
      </div>
    </div>
  </div>

  <!-- 筛选标签 -->
  <div class="px-4 pb-4">
    <div class="flex space-x-2 overflow-x-auto no-scrollbar pb-1">
      <button class="whitespace-nowrap bg-gray-100 px-3 py-1.5 rounded-md text-xs text-gray-700 font-medium">里程抵现金</button>
      <button class="whitespace-nowrap bg-gray-100 px-3 py-1.5 rounded-md text-xs text-gray-700 font-medium">电竞主题房</button>
      <button class="whitespace-nowrap bg-gray-100 px-3 py-1.5 rounded-md text-xs text-gray-700 font-medium">大床房</button>
      <button class="whitespace-nowrap bg-gray-100 px-3 py-1.5 rounded-md text-xs text-gray-700 font-medium">双床房</button>
      <button class="whitespace-nowrap bg-gray-100 px-3 py-1.5 rounded-md text-xs text-gray-700 font-medium flex items-center">
        筛选
        <svg class="w-3 h-3 ml-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
      </button>
    </div>
  </div>
</div>