<div class="min-h-screen bg-white" data-controller="city-selector hotel-search hotel-date-picker hotel-guest-selector" data-city-selector-departure-city-value="<%= @city %>" data-city-selector-destination-city-value="" data-city-selector-enable-multi-select-value="false" data-city-selector-modal-title-value="选择城市">
  <!-- Header Banner -->
  <%= render 'shared/transport_header', background_image: '活动.png', return_path: root_path %>

  <!-- Tab Navigation -->
  <div class="sticky top-0 z-40 mx-4 -mt-3">
    <%= render 'shared/hotel_tabs', active_tab: 'domestic' %>
  </div>

  <!-- Search Section -->
  <div class="bg-white px-4 py-3 space-y-3">
    <!-- City Selector -->
    <div class="flex items-center gap-3">
      <button class="flex items-center gap-2 text-base font-medium" data-action="click->city-selector#openDeparture">
        <span data-city-selector-target="departure"><%= @city %></span>
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
        </svg>
      </button>
      
      <!-- Hidden inputs for city selector -->
      <input type="hidden" data-city-selector-target="departureCityInput" value="<%= @city %>">
      <input type="hidden" data-city-selector-target="destinationCityInput" value="">
      
      <!-- Search Input -->
      <div class="flex-1 flex items-center gap-2 bg-gray-100 rounded-lg px-3 py-2" data-action="click->hotel-search#openSearchModal">
        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
        <input type="text" placeholder="位置/品牌/酒店" class="w-full bg-transparent border-none outline-none text-sm" readonly value="<%= params[:q] %>" data-hotel-search-target="searchDisplay">
      </div>

      <!-- Location Button -->
      <button class="text-blue-500" data-action="click->hotel-search#getCurrentLocation">
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
        </svg>
      </button>
    </div>

    <!-- Date Picker -->
    <button class="w-full flex items-center gap-2 bg-gray-50 rounded-lg px-3 py-3" data-action="click->hotel-date-picker#openModal">
      <div class="flex-1 flex items-center justify-between">
        <div>
          <div class="text-xl font-bold" data-hotel-date-picker-target="checkInDisplay"><%= @check_in.is_a?(String) ? Date.parse(@check_in).month : @check_in.month %>月<%= @check_in.is_a?(String) ? Date.parse(@check_in).day : @check_in.day %>日</div>
          <div class="text-xs text-gray-500"><%= date_label(@check_in) %></div>
        </div>
      </div>

      <div class="flex items-center justify-center px-2">
        <div class="bg-gray-800 text-white text-xs px-2 py-1 rounded" data-hotel-date-picker-target="nightsDisplay"><%= (@check_out.to_date - @check_in.to_date).to_i %>晚</div>
      </div>

      <div class="flex-1 flex items-center justify-between">
        <div>
          <div class="text-xl font-bold" data-hotel-date-picker-target="checkOutDisplay"><%= @check_out.is_a?(String) ? Date.parse(@check_out).month : @check_out.month %>月<%= @check_out.is_a?(String) ? Date.parse(@check_out).day : @check_out.day %>日</div>
          <div class="text-xs text-gray-500"><%= date_label(@check_out) %></div>
        </div>
      </div>
    </button>

    <!-- Hidden inputs for date submission -->
    <input type="hidden" data-hotel-date-picker-target="checkInInput" value="<%= @check_in %>">
    <input type="hidden" data-hotel-date-picker-target="checkOutInput" value="<%= @check_out %>">

    <!-- Room and Guest Selector -->
    <button class="w-full flex items-center justify-between bg-gray-50 rounded-lg px-3 py-3" data-action="click->hotel-guest-selector#openModal">
      <span class="text-base" data-hotel-guest-selector-target="displayText"><%= @rooms %>间房 <%= @adults %>成人 <%= @children %>儿童</span>
      <div class="flex items-center gap-2">
        <span class="text-sm text-gray-500">价格/星级</span>
        <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
        </svg>
      </div>
    </button>

    <!-- Hidden inputs for guest selector -->
    <input type="hidden" data-hotel-guest-selector-target="roomsInput" value="<%= @rooms %>">
    <input type="hidden" data-hotel-guest-selector-target="adultsInput" value="<%= @adults %>">
    <input type="hidden" data-hotel-guest-selector-target="childrenInput" value="<%= @children %>">

    <!-- Quick Filters -->
    <div class="flex gap-2 overflow-x-auto pb-1 no-scrollbar">
      <button class="px-4 py-1.5 text-sm whitespace-nowrap rounded-full border border-red-500 text-red-500 font-medium">亲子出游</button>
      <button class="px-4 py-1.5 text-sm whitespace-nowrap rounded-full border border-gray-300 text-gray-700">福田站</button>
      <button class="px-4 py-1.5 text-sm whitespace-nowrap rounded-full border border-gray-300 text-gray-700">宝安机场</button>
      <button class="px-4 py-1.5 text-sm whitespace-nowrap rounded-full border border-gray-300 text-gray-700">欢乐港湾</button>
      <button class="px-4 py-1.5 text-sm whitespace-nowrap rounded-full border border-gray-300 text-gray-700">罗湖口岸</button>
    </div>

    <!-- Search Button -->
    <%= form_with url: search_hotels_path, method: :get, data: { turbo: false } do |f| %>
      <%= f.hidden_field :city, value: @city, data: { hotel_search_target: "cityInput" } %>
      <%= f.hidden_field :check_in, value: @check_in, data: { hotel_search_target: "checkInInput" } %>
      <%= f.hidden_field :check_out, value: @check_out, data: { hotel_search_target: "checkOutInput" } %>
      <%= f.hidden_field :rooms, value: @rooms, data: { hotel_search_target: "roomsInput" } %>
      <%= f.hidden_field :adults, value: @adults, data: { hotel_search_target: "adultsInput" } %>
      <%= f.hidden_field :children, value: @children, data: { hotel_search_target: "childrenInput" } %>
      <%= f.submit "搜索酒店", class: "block w-full text-center text-white font-bold py-3 rounded-full border-0 cursor-pointer", style: "background: linear-gradient(135deg, #FFD700 0%, #FFC700 100%);" %>
    <% end %>

    <!-- Service Features -->
    <div class="flex items-center justify-between text-xs text-gray-600 pt-2">
      <span>7×24小时服务</span>
      <span>•</span>
      <span>品牌直营 双重积分</span>
      <span>•</span>
      <span>信用住 先住后付</span>
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
      </svg>
    </div>
  </div>

  <!-- Marketing Cards -->
  <div class="px-4 py-3 flex gap-2 overflow-x-auto no-scrollbar">
    <div class="flex-shrink-0 w-32 h-24 rounded-lg overflow-hidden" style="background: linear-gradient(135deg, #1E3A8A 0%, #3B82F6 100%);">
      <div class="p-3 text-white">
        <div class="text-xs mb-1">品牌闪促</div>
        <div class="text-lg font-bold mb-1">大额积分</div>
        <div class="text-xs opacity-90">MARRIOTT BONVOY</div>
      </div>
    </div>

    <div class="flex-shrink-0 w-32 h-24 rounded-lg overflow-hidden bg-gradient-to-br from-orange-400 to-red-500">
      <div class="p-3 text-white">
        <div class="text-xs mb-1">特价酒店</div>
        <div class="text-lg font-bold mb-1">5折起</div>
        <div class="text-xs opacity-90">限时抢购</div>
      </div>
    </div>

    <div class="flex-shrink-0 w-32 h-24 rounded-lg overflow-hidden bg-gradient-to-br from-purple-500 to-pink-500">
      <div class="p-3 text-white">
        <div class="text-xs mb-1">爆款直播</div>
        <div class="text-lg font-bold mb-1">周周低价</div>
        <div class="text-xs opacity-90">立即观看</div>
      </div>
    </div>
  </div>

  <!-- Hotel Listings -->
  <div class="px-4 pb-20">
    <% if @hotels.any? %>
      <% if params[:q].present? %>
        <!-- Full-width cards for filtered results -->
        <div class="space-y-3">
          <% @hotels.each do |hotel| %>
            <%= link_to hotel_path(hotel, check_in: @check_in, check_out: @check_out, rooms: @rooms, adults: @adults, children: @children, room_category: @room_category), class: "block" do %>
              <div class="bg-white rounded-lg overflow-hidden shadow-sm border border-gray-100 flex">
                <!-- Hotel Image -->
                <div class="relative w-32 h-32 flex-shrink-0">
                  <% if hotel.image.attached? %>
                    <%= image_tag hotel.image, class: "w-full h-full object-cover", alt: hotel.name %>
                  <% elsif hotel.image_url.present? %>
                    <%= image_tag hotel.image_url, class: "w-full h-full object-cover", alt: hotel.name, onerror: "this.src='https://images.unsplash.com/photo-1566073771259-6a8506099945?w=800&q=80'" %>
                  <% else %>
                    <%= image_tag "https://images.unsplash.com/photo-1566073771259-6a8506099945?w=800&q=80", class: "w-full h-full object-cover", alt: hotel.name %>
                  <% end %>
                  
                  <!-- Badge -->
                  <% if hotel.is_featured %>
                    <div class="absolute top-2 left-2 text-white text-xs px-2 py-1 rounded" style="background-color: #FF6B35;">
                      希尔顿
                    </div>
                  <% end %>
                  <div class="absolute bottom-2 left-2 text-white text-xs px-2 py-1 rounded" style="background-color: rgba(0,0,0,0.5);">
                    浏览过
                  </div>
                </div>

                <!-- Hotel Info -->
                <div class="flex-1 p-3 flex flex-col justify-between">
                  <!-- Top Section -->
                  <div>
                    <!-- Hotel Name with Rating -->
                    <div class="flex items-start justify-between mb-1">
                      <h3 class="text-base font-bold line-clamp-1 flex-1"><%= hotel.name %></h3>
                      <span class="ml-2 px-1.5 py-0.5 text-xs rounded" style="background-color: #E8F4FD; color: #1E88E5;">豪华</span>
                    </div>
                    
                    <!-- Rating Score -->
                    <div class="flex items-center gap-1 mb-1">
                      <span class="text-sm font-bold" style="color: #4A90E2;"><%= hotel.rating || "4.6" %></span>
                      <span class="text-xs text-gray-500">方便探索南山大道的美食和艺术园区</span>
                    </div>

                    <!-- Location -->
                    <div class="text-xs text-gray-500 mb-2">
                      距您直线3.4公里 · 近南山(地铁站)
                    </div>

                    <!-- Tags -->
                    <div class="flex gap-1 flex-wrap mb-2">
                      <span class="px-2 py-0.5 text-xs rounded" style="background-color: #F5F5F5; color: #666;">每次住宿▁2500积分</span>
                      <span class="px-2 py-0.5 text-xs rounded" style="background-color: #F5F5F5; color: #666;">健身房</span>
                      <span class="px-2 py-0.5 text-xs rounded" style="background-color: #F5F5F5; color: #666;">英语服务</span>
                    </div>

                    <!-- Features -->
                    <div class="flex gap-2 text-xs mb-1">
                      <span class="px-2 py-0.5 rounded" style="background-color: #8B4513; color: white;">F2直通希尔顿银会员</span>
                      <span class="px-2 py-0.5 rounded" style="background-color: #FF4444; color: white;">奖励积分</span>
                      <span class="px-2 py-0.5 rounded" style="background-color: #FF4444; color: white;">延迟退房</span>
                    </div>

                    <!-- Quality Badge -->
                    <div class="flex items-center gap-1 text-xs text-gray-600">
                      <svg class="w-3 h-3 text-orange-500" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                      <span>入选南山区酒店品质榜</span>
                    </div>
                  </div>

                  <!-- Bottom Section - Price -->
                  <div class="flex items-end justify-between mt-2">
                    <div class="flex items-baseline gap-1">
                      <span class="text-xs" style="color: #F44336;">¥</span>
                      <span class="text-2xl font-bold" style="color: #F44336;"><%= (hotel.price * @rooms).to_i %></span>
                      <span class="text-xs text-gray-400">起</span>
                    </div>
                    <div class="text-right">
                      <div class="text-xs text-gray-400 line-through">¥<%= ((hotel.price * @rooms) * 1.3).to_i %></div>
                      <div class="flex items-center gap-1 text-xs" style="color: #FF4444;">
                        <span>百亿神券</span>
                        <span>优惠¥39</span>
                        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                        </svg>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <!-- Grid Container - 2 columns for non-filtered -->
      <div class="grid grid-cols-2 gap-3">
        <% @hotels.each do |hotel| %>
          <%= link_to hotel_path(hotel, check_in: @check_in, check_out: @check_out, rooms: @rooms, adults: @adults, children: @children, room_category: @room_category), class: "block" do %>
            <div class="bg-white rounded-lg overflow-hidden shadow-sm border border-gray-100">
              <!-- Hotel Image -->
              <div class="relative aspect-[4/3]">
                <% if hotel.image.attached? %>
                  <%= image_tag hotel.image, class: "w-full h-full object-cover", alt: hotel.name %>
                <% elsif hotel.image_url.present? %>
                  <%= image_tag hotel.image_url, class: "w-full h-full object-cover", alt: hotel.name, onerror: "this.src='https://images.unsplash.com/photo-1566073771259-6a8506099945?w=800&q=80'" %>
                <% else %>
                  <%= image_tag "https://images.unsplash.com/photo-1566073771259-6a8506099945?w=800&q=80", class: "w-full h-full object-cover", alt: hotel.name %>
                <% end %>
                
                <!-- Featured Badge -->
                <% if hotel.is_featured %>
                  <div class="absolute top-2 left-2 text-white text-xs px-2 py-1 rounded" style="background-color: #FF6B35;">
                    希尔顿旗下
                  </div>
                <% end %>
              </div>

              <!-- Hotel Info -->
              <div class="p-2.5">
                <!-- Location Info -->
                <div class="flex items-center gap-1 mb-1 text-xs text-gray-500">
                  <svg class="w-3 h-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                  </svg>
                  <span class="truncate"><%= hotel.city %> · 距您<%= hotel.distance || "直线3千米" %></span>
                </div>

                <!-- Hotel Name -->
                <h3 class="text-sm font-bold mb-1.5 line-clamp-2 leading-tight"><%= hotel.name %></h3>
                
                <!-- Category Badge -->
                <div class="mb-2">
                  <span class="inline-block px-2 py-0.5 text-xs rounded" style="background-color: #E8F4FD; color: #1E88E5;">豪华</span>
                </div>

                <!-- Rating -->
                <div class="flex items-center gap-1 mb-2">
                  <span class="text-base font-bold" style="color: #FF6B00;"><%= hotel.rating || "4.6" %></span>
                  <span class="text-xs text-gray-500">很好</span>
                  <span class="text-xs text-gray-400 truncate">"方便探索南山大..."</span>
                </div>

                <!-- Price -->
                <div class="flex items-baseline gap-1">
                  <span class="text-xs" style="color: #F44336;">¥</span>
                  <span class="text-xl font-bold" style="color: #F44336;"><%= (hotel.price * @rooms).to_i %></span>
                  <span class="text-xs text-gray-400">起</span>
                  <span class="text-xs text-gray-400 line-through ml-1">¥<%= hotel.original_price&.to_i ? (hotel.original_price * @rooms).to_i : ((hotel.price * @rooms) * 1.3).to_i %></span>
                </div>
                
                <!-- Optional: Featured Tag -->
                <% if hotel.is_featured %>
                  <div class="flex items-center gap-1 mt-1.5">
                    <svg class="w-3 h-3 text-orange-500" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                    <span class="text-xs text-gray-600">入选南山区酒店品质榜</span>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <% end %>

      <!-- Pagination -->
      <div class="py-4 text-center">
        <%= paginate @hotels %>
      </div>
    <% else %>
      <div class="text-center py-12 text-gray-500">
        <svg class="w-16 h-16 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
        </svg>
        <p class="text-base">暂无酒店数据</p>
        <p class="text-sm mt-2">请尝试其他筛选条件</p>
      </div>
    <% end %>
  </div>

  <!-- Search Suggestions Modal -->
  <div class="fixed inset-0 bg-white z-[100] hidden" data-hotel-search-target="searchModal">
    <div class="h-full flex flex-col">
      <!-- Search Header -->
      <div class="flex items-center gap-3 px-4 py-3 border-b border-gray-200">
        <button data-action="click->hotel-search#closeSearchModal">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        </button>
        <div class="flex-1 flex items-center gap-2 rounded-lg px-3 py-2" style="background-color: #FFF9E6; border: 1px solid #FFD700;">
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
          <%= form_with url: search_hotels_path, method: :get, class: "flex-1", data: { turbo: false } do |f| %>
            <%= f.text_field :q, placeholder: "位置/品牌/酒店", class: "w-full bg-transparent border-none outline-none text-sm", value: params[:q], data: { hotel_search_target: "searchInput", action: "keypress->hotel-search#handleSearchInputKeypress" } %>
            <%= f.hidden_field :city, value: @city %>
            <%= f.hidden_field :check_in, value: @check_in %>
            <%= f.hidden_field :check_out, value: @check_out %>
            <%= f.hidden_field :rooms, value: @rooms %>
            <%= f.hidden_field :adults, value: @adults %>
            <%= f.hidden_field :children, value: @children %>
          <% end %>
        </div>
        <button class="text-base font-medium" style="color: #FFD700;" data-action="click->hotel-search#submitSearch">搜索</button>
      </div>

      <!-- Search Suggestions Content -->
      <div class="flex-1 overflow-y-auto pb-4">
        <!-- Search History -->
        <div class="px-4 py-3">
          <div class="flex items-center justify-between mb-3">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" style="color: #FFA500;" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
              </svg>
              <span class="font-medium">搜索历史</span>
            </div>
            <button class="text-gray-400">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
              </svg>
            </button>
