<% content_for :title, @brand.name %>

<div class="min-h-screen bg-[#f7f8fa] pb-4">
  
  <!-- 顶部导航栏 -->
  <div class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm px-4 py-3 flex justify-between items-center border-b border-gray-100">
    <%= link_to abroad_shops_path, class: "text-gray-800" do %>
      <svg fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
      </svg>
    <% end %>
    <h1 class="text-[17px] font-bold text-gray-900 tracking-wide"><%= @brand.name %></h1>
    <button class="text-gray-800">
      <svg fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 12a.75.75 0 11-1.5 0 .75.75 0 011.5 0zM12.75 12a.75.75 0 11-1.5 0 .75.75 0 011.5 0zM18.75 12a.75.75 0 11-1.5 0 .75.75 0 011.5 0z" />
      </svg>
    </button>
  </div>

  <!-- Hero 图片区域 -->
  <div class="relative w-full h-56 bg-gray-200 overflow-hidden">
    <% if @brand.logo_url.present? %>
      <%= image_tag @brand.logo_url, class: "w-full h-full object-cover", alt: @brand.name %>
    <% else %>
      <div class="w-full h-full bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center">
        <span class="text-white text-4xl font-bold"><%= @brand.name[0..2] %></span>
      </div>
    <% end %>
  </div>

  <!-- 品牌信息区域 -->
  <div class="relative px-4 bg-white pb-6 mb-3">
    <!-- 圆形 Logo -->
    <div class="relative -mt-10 mb-3 mx-auto w-20 h-20 bg-white rounded-full p-1 shadow-sm flex items-center justify-center border border-gray-100">
      <% if @brand.logo_url.present? %>
        <%= image_tag @brand.logo_url, class: "w-full h-full rounded-full object-cover", alt: @brand.name %>
      <% else %>
        <div class="w-full h-full rounded-full border border-blue-100 flex items-center justify-center text-[10px] font-bold text-blue-500 text-center leading-tight">
          <%= @brand.name[0..10] %>
        </div>
      <% end %>
    </div>

    <!-- 品牌标题 -->
    <div class="text-center">
      <h2 class="text-2xl font-bold text-gray-900 mb-2"><%= @brand.name %></h2>
      <p class="text-sm font-medium text-gray-900 mb-3">品牌故事</p>
    </div>

    <!-- 描述文本 -->
    <div class="text-sm text-gray-500 leading-relaxed text-justify">
      <%= @brand.description || '精选全球品牌，为您带来独家优惠和折扣。' %>
    </div>
    
    <!-- 展开箭头 -->
    <div class="flex justify-center mt-2">
      <svg fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 text-gray-400">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
      </svg>
    </div>
  </div>

  <% if @coupons.any? %>
    <!-- 优惠卡券部分 -->
    <div class="px-4 mb-2">
      <h3 class="text-lg font-bold text-gray-900 mb-3">优惠卡券</h3>
      
      <% @coupons.each do |coupon| %>
        <% user_coupon = current_user&.user_coupons&.find_by(abroad_coupon_id: coupon.id) %>
        <div class="bg-white rounded-xl p-4 mb-3 flex justify-between items-center shadow-sm">
          <div class="flex items-start gap-3">
            <!-- 红色票据图标 -->
            <div class="bg-red-50 p-1 rounded mt-0.5">
              <svg viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-red-500">
                <path fill-rule="evenodd" d="M1.5 7.125c0-1.036.84-1.875 1.875-1.875h6c1.036 0 1.875.84 1.875 1.875v3.75c0 1.036-.84 1.875-1.875 1.875h-6A1.875 1.875 0 011.5 10.875v-3.75zm12 1.5c0-1.036.84-1.875 1.875-1.875h5.25c1.036 0 1.875.84 1.875 1.875v4.5c0 1.036-.84 1.875-1.875 1.875h-5.25A1.875 1.875 0 0113.5 13.125v-4.5z" clip-rule="evenodd" />
              </svg>
            </div>
            <div>
              <div class="font-medium text-gray-900 text-[15px]"><%= coupon.title %></div>
              <div class="text-xs text-gray-400 mt-1"><%= coupon.description %></div>
            </div>
          </div>
          
          <% if user_coupon %>
            <%= link_to "去使用", abroad_coupon_path(user_coupon), class: "bg-[#ffde33] hover:bg-[#fcd535] text-gray-900 text-sm font-medium py-1.5 px-5 rounded-full shadow-sm whitespace-nowrap" %>
          <% else %>
            <%= button_to "免费领", claim_abroad_coupon_path(coupon), method: :post, class: "bg-[#ffde33] hover:bg-[#fcd535] text-gray-900 text-sm font-medium py-1.5 px-5 rounded-full shadow-sm whitespace-nowrap" %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if @shops.any? %>
    <!-- 门店列表部分 -->
    <div class="px-4">
      <h3 class="text-lg font-bold text-gray-900 mb-3">门店列表</h3>
      
      <!-- 筛选栏 -->
      <div class="flex gap-2 mb-4">
        <%= link_to search_abroad_shops_path, class: "bg-gray-100 hover:bg-gray-200 px-3 py-1.5 rounded-md flex items-center gap-1 text-xs font-medium text-gray-700" do %>
          <svg fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-3.5 h-3.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
          </svg>
          选择城市
          <svg fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-3 h-3 ml-0.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
          </svg>
        <% end %>
      </div>

      <!-- 门店卡片 -->
      <% @shops.each do |shop| %>
        <%= link_to shop_abroad_shop_path(shop), class: "bg-white rounded-xl p-0 mb-3 flex overflow-hidden" do %>
          <!-- 门店缩略图 -->
          <div class="w-[110px] h-[110px] flex-shrink-0 bg-gray-200 relative">
            <% if shop.image_url.present? %>
              <%= image_tag shop.image_url, class: "w-full h-full object-cover", alt: shop.name %>
            <% else %>
              <div class="w-full h-full bg-gradient-to-br from-gray-300 to-gray-400 flex items-center justify-center">
                <span class="text-white text-xs font-bold"><%= @brand.name[0..3] %></span>
              </div>
            <% end %>
            <div class="absolute top-2 left-2 bg-white/90 rounded text-[8px] px-1 py-0.5 border border-blue-200 text-blue-600 font-bold">
              <%= @brand.name[0..10] %>
            </div>
          </div>
          
          <!-- 门店信息 -->
          <div class="p-3 flex-1 flex flex-col justify-start">
            <h4 class="font-bold text-gray-900 text-[15px] leading-tight mb-1"><%= shop.name %></h4>
            <p class="text-xs text-gray-400 mb-3"><%= "#{@brand.country}·#{shop.city}" %></p>
            <% if shop.abroad_coupons.active.any? %>
              <div class="flex items-center gap-1.5">
                <span class="bg-red-500 text-white text-[10px] px-1 rounded-sm flex items-center justify-center h-4 w-4 font-bold">券</span>
                <span class="text-xs text-gray-700"><%= shop.abroad_coupons.active.first.title %></span>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <!-- 无门店提示 -->
    <div class="px-4 py-8 text-center">
      <svg class="w-16 h-16 mx-auto text-gray-300 mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
      </svg>
      <p class="text-gray-500 text-sm">暂无门店信息</p>
    </div>
  <% end %>

  <!-- 底部 -->
  <div class="text-center pb-8 pt-4">
    <span class="text-gray-300 text-xs tracking-wider">— 没有更多了 —</span>
  </div>

</div>
