<% content_for :title, "商家列表" %>

<div class="min-h-screen bg-white flex flex-col">
  
  <!-- 导航栏 + 搜索 -->
  <div class="flex items-center px-3 py-2 bg-white sticky top-0 z-10">
    <%= link_to abroad_shops_path, class: "p-1 mr-2" do %>
      <svg class="w-7 h-7 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    <% end %>
    
    <!-- 搜索框 -->
    <%= form_with url: search_abroad_shops_path, method: :get, class: "flex-1" do |f| %>
      <div class="bg-white border-2 border-[#FFD700] rounded-full h-10 flex items-center px-3">
        <svg class="w-5 h-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        <%= f.text_field :q, placeholder: "搜索商家", class: "flex-1 bg-transparent outline-none text-sm text-gray-700" %>
      </div>
    <% end %>

    <button class="p-1 ml-2">
      <svg class="w-7 h-7 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z"></path>
      </svg>
    </button>
  </div>

  <!-- 城市筛选栏 -->
  <div class="flex items-center px-3 py-2 bg-white border-b border-gray-100">
    <div class="flex items-center font-bold text-sm mr-4 whitespace-nowrap">
      <svg class="w-4 h-4 mr-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
      </svg>
      选择城市
      <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </div>
    
    <div class="flex-1 overflow-x-auto no-scrollbar flex space-x-2">
      <% ['东京', '大阪', '名古屋', '广岛', '横滨', '福岡', '成田市'].each do |city| %>
        <%= link_to city, search_abroad_shops_path(city: city), class: "px-4 py-1.5 #{@city == city ? 'bg-[#FFD700]' : 'bg-gray-100'} text-gray-700 text-sm rounded whitespace-nowrap" %>
      <% end %>
    </div>
  </div>

  <!-- 商家列表 -->
  <div class="flex-1 overflow-y-auto bg-white">
    <% if @shops.any? %>
      <% @shops.each do |shop| %>
        <%= link_to shop_abroad_shop_path(shop), class: "flex p-4 border-b border-gray-100" do %>
          <!-- Image -->
          <div class="relative w-[110px] h-[85px] shrink-0 rounded-md overflow-hidden bg-gray-200">
            <div class="absolute top-2 left-2 bg-white px-1 py-0.5 rounded shadow-sm text-[8px] font-bold z-10 border border-blue-200 text-blue-500">
              <%= shop.abroad_brand.name[0..8] %>
            </div>
            <% if shop.image_url.present? %>
              <%= image_tag shop.image_url, class: "w-full h-full object-cover", alt: shop.name %>
            <% else %>
              <div class="w-full h-full bg-gradient-to-br from-gray-200 to-gray-300 flex items-center justify-center">
                <span class="text-gray-500 text-xs">店铺图片</span>
              </div>
            <% end %>
          </div>
          
          <!-- Content -->
          <div class="ml-3 flex flex-col justify-between py-0.5 w-full">
            <div>
              <h3 class="text-[17px] font-bold text-gray-900 leading-tight"><%= shop.name %></h3>
              <p class="text-xs text-gray-400 mt-1"><%= "#{shop.abroad_brand.country} · #{shop.city}" %></p>
            </div>
            <% if shop.abroad_coupons.active.any? %>
              <div class="flex items-center text-[#ff3b30] text-[15px]">
                <span class="bg-[#ff3b30] text-white text-[10px] px-1 py-[1px] rounded-[2px] mr-1.5 font-bold">券</span>
                <span><%= shop.abroad_coupons.active.first.title %></span>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <div class="flex flex-col items-center justify-center py-16">
        <svg class="w-16 h-16 text-gray-300 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
        </svg>
        <p class="text-gray-500">暂无商家信息</p>
      </div>
    <% end %>
  </div>

</div>
