<div class="bg-gray-100 pb-4" data-controller="train-city-selector date-picker" data-train-city-selector-departure-city-value="北京" data-train-city-selector-destination-city-value="杭州" data-date-picker-current-date-value="<%= Date.today.to_s %>">
  <!-- Header with Banner -->
  <div class="relative">
    <%= render 'shared/transport_header', background_image: '活动.png', return_path: root_path %>

    <!-- Tabs Section -->
    <div class="relative mx-4 -mt-3 overflow-hidden z-50">
      <%= render 'shared/transport_tabs', active_tab: :train %>
  
      <!-- White Card Container with Form -->
      <div class="px-4 py-4 bg-white">
        <div class="flex gap-8">
          <button class="relative pb-2">
            <span class="text-base font-medium">单程</span>
            <div class="absolute bottom-0 left-0 right-0 h-0.5 bg-gray-900"></div>
          </button>
          <button class="text-base text-gray-400">往返</button>
        </div>
      </div>
    </div>

    <!-- Search Form -->
    <%= form_with url: search_trains_path, method: :get, class: "mx-4 bg-white rounded-b-[24px] shadow-sm px-4 py-4" do |f| %>

      <!-- Cities Section -->
      <div class="flex items-center gap-3">
        <!-- Departure City -->
        <div class="flex-1">
          <button 
            data-action="click->train-city-selector#openDeparture"
            class="text-left w-full">
            <div class="text-2xl font-bold" data-train-city-selector-target="departure">北京</div>
          </button>
          <%= f.hidden_field :departure_city, value: "北京", data: { train_city_selector_target: "departureCityInput" } %>
        </div>

        <!-- Switch Button -->
        <button 
          type="button"
          data-action="click->train-city-selector#switchCities"
          class="flex-shrink-0 w-10 h-10 rounded-full bg-yellow-400 flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
          </svg>
        </button>

        <!-- Arrival City -->
        <div class="flex-1 text-right">
          <button 
            data-action="click->train-city-selector#openDestination"
            class="text-right w-full">
            <div class="text-2xl font-bold" data-train-city-selector-target="destination">杭州</div>
          </button>
          <%= f.hidden_field :arrival_city, value: "杭州", data: { train_city_selector_target: "destinationCityInput" } %>
        </div>
      </div>

      <!-- Date Section -->
      <div class="mb-4 py-3 border-t border-gray-100">
        <button 
          data-action="click->date-picker#openModal"
          type="button"
          class="text-left">
          <div class="text-3xl font-bold flex items-baseline leading-none" data-date-picker-target="selectedDate">
            <%= Date.today.month %><span class="text-sm">月</span><%= Date.today.day %><span class="text-sm">日</span> <span class="text-sm">今天</span>
          </div>
        </button>
        <%= f.hidden_field :date, value: Date.today.strftime("%Y-%m-%d"), data: { date_picker_target: "dateInput" } %>
      </div>

      <!-- Filters -->
      <div class="mb-6 flex items-center gap-6">
        <label class="flex items-center gap-2">
          <%= f.check_box :student_ticket, class: "w-5 h-5 rounded border-gray-300 text-blue-600" %>
          <span class="text-sm text-gray-700">学生票</span>
        </label>
        
        <label class="flex items-center gap-2">
          <%= f.check_box :only_high_speed, class: "w-5 h-5 rounded border-gray-300 text-blue-600" %>
          <span class="text-sm text-gray-700">只看高铁动车</span>
        </label>
      </div>

      <!-- Search Button -->
      <button type="submit" class="w-full py-4 text-white text-lg font-bold rounded-xl shadow-lg relative overflow-visible" style="background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);">
        <span>搜索火车票</span>
        <div class="absolute -top-2 -right-2 px-3 py-1 text-xs rounded-full shadow-md" style="background: rgba(255, 69, 0, 0.9);">购票赚双积分</div>
      </button>
    <% end %>

    </div>
  </div>

  
    <!-- Quick Links -->
    <div class="px-4 py-3 border-t border-gray-100">
      <div class="flex items-center gap-3 overflow-x-auto no-scrollbar">
        <button class="text-sm text-gray-600 whitespace-nowrap">北京市-杭州市</button>
        <button class="text-sm text-gray-600 whitespace-nowrap">深圳站-广州市</button>
        <button class="text-sm text-gray-600 whitespace-nowrap">武汉市->深圳市</button>
        <button class="text-sm text-blue-600 whitespace-nowrap ml-auto">清除</button>
      </div>
      </div>

