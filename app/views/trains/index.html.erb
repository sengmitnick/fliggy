<script>
  // Replace city-selector with train-city-selector in the rendered modal
  document.addEventListener('DOMContentLoaded', function() {
    const modal = document.querySelector('[data-city-selector-target="modal"]');
    if (modal && document.querySelector('[data-controller~="train-city-selector"]')) {
      // Replace all city-selector references with train-city-selector
      modal.innerHTML = modal.innerHTML
        .replace(/data-city-selector-target=/g, 'data-train-city-selector-target=')
        .replace(/data-action="([^"]*)->city-selector#/g, 'data-action="$1->train-city-selector#');
    }
  });
</script>
