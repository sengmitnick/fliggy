<% active_tab ||= :home %>

<!-- 保险页面专属底部导航栏 -->
<div class="fixed bottom-0 left-0 right-0 max-w-md mx-auto bg-white border-t border-gray-200 z-50">
  <div class="grid grid-cols-4 gap-0">
    <!-- 首页 Tab -->
    <%= link_to insurances_path, class: "flex flex-col items-center justify-center py-3 gap-1" do %>
      <% if active_tab == :home %>
        <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 24 24">
          <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
        </svg>
        <span class="text-xs font-medium text-primary">首页</span>
      <% else %>
        <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
          <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
        </svg>
        <span class="text-xs text-gray-600">首页</span>
      <% end %>
    <% end %>

    <!-- 商品 Tab -->
    <%= link_to search_insurances_path, class: "flex flex-col items-center justify-center py-3 gap-1" do %>
      <% if active_tab == :search %>
        <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4z"/>
        </svg>
        <span class="text-xs font-medium text-primary">商品</span>
      <% else %>
        <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4z"/>
        </svg>
        <span class="text-xs text-gray-600">商品</span>
      <% end %>
    <% end %>

    <!-- 活动 Tab -->
    <%= link_to "#", class: "flex flex-col items-center justify-center py-3 gap-1" do %>
      <% if active_tab == :activity %>
        <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17 12h-5v5h5v-5zM16 1v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2h-1V1h-2zm3 18H5V8h14v11z"/>
        </svg>
        <span class="text-xs font-medium text-primary">活动</span>
      <% else %>
        <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17 12h-5v5h5v-5zM16 1v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2h-1V1h-2zm3 18H5V8h14v11z"/>
        </svg>
        <span class="text-xs text-gray-600">活动</span>
      <% end %>
    <% end %>

    <!-- 我的 Tab -->
    <%= link_to my_orders_insurance_orders_path, class: "flex flex-col items-center justify-center py-3 gap-1" do %>
      <% if active_tab == :my_orders %>
        <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
        </svg>
        <span class="text-xs font-medium text-primary">我的</span>
      <% else %>
        <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
        </svg>
        <span class="text-xs text-gray-600">我的</span>
      <% end %>
    <% end %>
  </div>
</div>
