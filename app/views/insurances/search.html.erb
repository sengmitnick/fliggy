<div class="bg-surface min-h-screen pb-24">
  <!-- 顶部导航 -->
  <header class="sticky top-0 z-50 bg-white shadow-sm">
    <div class="flex items-center justify-between px-4 py-3">
      <%= link_to insurances_path, class: "p-1" do %>
        <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
      <% end %>
      <h1 class="text-lg font-bold">
        <% case params[:destination_type] %>
        <% when 'domestic' %>
          国内旅游保险
        <% when 'international' %>
          境外旅游保险
        <% when 'transport' %>
          交通意外保险
        <% else %>
          保险产品搜索
        <% end %>
      </h1>
      <div class="w-6 h-6"></div>
    </div>

    <!-- 筛选标签栏 -->
    <div class="px-4 py-2 border-t border-gray-100">
      <div class="flex gap-2 overflow-x-auto no-scrollbar">
        <!-- 目的地类型Tab -->
        <div class="flex gap-2 flex-shrink-0">
          <% 
            # Toggle logic: if already selected, remove it; otherwise set it
            domestic_type = params[:destination_type] == 'domestic' ? nil : 'domestic'
            international_type = params[:destination_type] == 'international' ? nil : 'international'
            transport_type = params[:destination_type] == 'transport' ? nil : 'transport'
          %>
          <%= link_to search_insurances_path(destination_type: domestic_type, scenes: @scenes, company: @company, destination: @destination, start_date: @start_date, end_date: @end_date), 
            class: "px-4 py-1.5 rounded-full text-sm font-medium transition-colors #{params[:destination_type] == 'domestic' ? 'bg-primary text-gray-900' : 'bg-white text-gray-700 border border-gray-200'}" do %>
            国内游
          <% end %>
          <%= link_to search_insurances_path(destination_type: international_type, scenes: @scenes, company: @company, destination: @destination, start_date: @start_date, end_date: @end_date), 
            class: "px-4 py-1.5 rounded-full text-sm font-medium transition-colors #{params[:destination_type] == 'international' ? 'bg-primary text-gray-900' : 'bg-white text-gray-700 border border-gray-200'}" do %>
            出境游
          <% end %>
          <%= link_to search_insurances_path(destination_type: transport_type, scenes: @scenes, company: @company, destination: @destination, start_date: @start_date, end_date: @end_date), 
            class: "px-4 py-1.5 rounded-full text-sm font-medium transition-colors #{params[:destination_type] == 'transport' ? 'bg-primary text-gray-900' : 'bg-white text-gray-700 border border-gray-200'}" do %>
            交通
          <% end %>
        </div>

        <!-- 综合筛选按钮 -->
        <div data-controller="insurance-filter" data-insurance-filter-mode-value="search">
          <button type="button"
                  data-action="click->insurance-filter#open"
                  class="px-4 py-1.5 rounded-full text-sm font-medium bg-white text-gray-700 border border-gray-200 flex items-center gap-1 flex-shrink-0 whitespace-nowrap">
            <span data-insurance-filter-target="displayText">筛选</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
          </button>
          
          <!-- 隐藏字段存储当前筛选条件 -->
          <input type="hidden" data-insurance-filter-target="scenesInput" value="<%= @scenes %>">
          <input type="hidden" data-insurance-filter-target="companyInput" value="<%= @company %>">
          
          <!-- 筛选弹窗 -->
          <%= render 'shared/insurance_filter_modal' %>
        </div>
      </div>

      <!-- 已选筛选条件标签 -->
      <% selected_tags = [] %>
      <% if @scenes.present? %>
        <% @scenes.split(',').each do |scene| %>
          <% selected_tags << { type: 'scenes', label: scene, value: scene } %>
        <% end %>
      <% end %>
      <% if @company.present? %>
        <% @company.split(',').each do |company| %>
          <% selected_tags << { type: 'company', label: company, value: company } %>
        <% end %>
      <% end %>

      <% if selected_tags.any? %>
        <div class="flex flex-wrap gap-2 mt-2">
          <% selected_tags.each do |tag| %>
            <% 
              # Build URL params for removal
              new_params = params.permit(:destination_type, :destination, :start_date, :end_date, :scenes, :company).to_h
              if tag[:type] == 'scenes'
                new_scenes = (@scenes.split(',') - [tag[:value]]).join(',')
                new_params[:scenes] = new_scenes.present? ? new_scenes : nil
              elsif tag[:type] == 'company'
                new_companies = (@company.split(',') - [tag[:value]]).join(',')
                new_params[:company] = new_companies.present? ? new_companies : nil
              end
              new_params.compact!
            %>
            <%= link_to search_insurances_path(new_params), 
              class: "inline-flex items-center gap-1 px-3 py-1 rounded-full text-xs font-medium bg-primary/10 text-primary border border-primary/20" do %>
              <%= tag[:label] %>
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
            <% end %>
          <% end %>
          <%= link_to search_insurances_path(params.permit(:destination_type, :destination, :start_date, :end_date).to_h), 
            class: "inline-flex items-center px-3 py-1 rounded-full text-xs font-medium text-gray-600 border border-gray-300" do %>
            清空筛选
          <% end %>
        </div>
      <% end %>
    </div>
  </header>

  <!-- 日期选择区域（如果有日期参数） -->
  <% if @start_date.present? && @end_date.present? %>
    <section class="mt-4 mx-4 bg-white rounded-2xl p-4 shadow-sm border border-gray-100">
      <div class="flex items-center gap-3">
        <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
        <div>
          <div class="text-sm font-bold text-gray-900"><%= @start_date %> 至 <%= @end_date %></div>
          <div class="text-xs text-gray-500">共<%= @days %>天</div>
        </div>
      </div>
    </section>
  <% end %>

  <!-- 保险产品列表 -->
  <section class="mt-4 px-4">
    <div class="flex items-center justify-between mb-3">
      <div class="text-sm text-gray-600">共找到 <span class="font-bold text-gray-900"><%= @products.count %></span> 款产品</div>
      <div class="flex items-center gap-2">
        <span class="text-xs text-gray-500">排序</span>
        <button class="flex items-center gap-1 text-sm text-gray-700">
          <span>综合排序</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
        </button>
      </div>
    </div>

    <div class="space-y-3 mb-6">
      <% if @products.any? %>
        <% @products.each do |product| %>
          <%= link_to insurance_path(product, start_date: @start_date, end_date: @end_date, destination: @destination), 
            class: "block bg-white rounded-2xl p-4 shadow-sm border border-gray-100 hover:shadow-md transition-shadow" do %>
            <div class="flex gap-4">
              <!-- 产品图片 -->
              <% if product.image_url.present? %>
                <div class="w-24 h-24 rounded-xl overflow-hidden bg-gray-100 flex-shrink-0">
                  <img src="<%= product.image_url %>" alt="<%= product.name %>" class="w-full h-full object-cover">
                </div>
              <% else %>
                <div class="w-24 h-24 rounded-xl bg-gradient-to-br from-blue-100 to-purple-100 flex items-center justify-center flex-shrink-0">
                  <svg class="w-12 h-12 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
                </div>
              <% end %>

              <!-- 产品信息 -->
              <div class="flex-1 min-w-0">
                <!-- 标题和标签 -->
                <div class="flex items-start justify-between mb-2">
                  <h3 class="font-bold text-sm text-gray-900 line-clamp-1 flex-1"><%= product.name %></h3>
                  <div class="flex gap-1 ml-2 flex-shrink-0">
                    <% if product.official_select %>
                      <span class="bg-orange-50 text-orange-600 text-[10px] px-2 py-0.5 rounded-full border border-orange-100">官方</span>
                    <% end %>
                    <% if product.featured %>
                      <span class="bg-red-50 text-red-600 text-[10px] px-2 py-0.5 rounded-full border border-red-100">热销</span>
                    <% end %>
                  </div>
                </div>

                <!-- 保险公司 -->
                <div class="text-[10px] text-gray-500 mb-2 flex items-center gap-1">
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/></svg>
                  <%= product.company %>
                </div>

                <!-- 保障亮点 -->
                <div class="flex flex-wrap gap-1 mb-3">
                  <% product.highlights.first(3).each do |highlight| %>
                    <span class="inline-block bg-blue-50 text-blue-700 text-[10px] px-2 py-0.5 rounded border border-blue-100">
                      <%= highlight.truncate(15) %>
                    </span>
                  <% end %>
                </div>

                <!-- 价格和操作 -->
                <div class="flex items-end justify-between">
                  <div>
                    <% if @days.present? && (calculated_price = product.calculate_price(@days)) %>
                      <div class="flex items-baseline">
                        <span class="text-xs text-gray-500">¥</span>
                        <span class="text-xl font-bold text-orange-600"><%= calculated_price.to_i %></span>
                        <span class="text-xs text-gray-500 ml-1">共<%= @days %>天</span>
                      </div>
                      <div class="text-[10px] text-gray-400">¥<%= product.price_per_day.to_i %>/天</div>
                    <% else %>
                      <div class="flex items-baseline">
                        <span class="text-xs text-gray-500">¥</span>
                        <span class="text-xl font-bold text-orange-600"><%= product.price_per_day.to_i %></span>
                        <span class="text-xs text-gray-500 ml-1">/天起</span>
                      </div>
                    <% end %>
                  </div>
                  <span class="text-sm text-primary font-medium">立即投保 ></span>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <!-- 空状态 -->
        <div class="text-center py-16">
          <svg class="w-20 h-20 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          <div class="text-gray-500 text-sm mb-2">暂无符合条件的保险产品</div>
          <div class="text-gray-400 text-xs">试试调整筛选条件</div>
        </div>
      <% end %>
    </div>
  </section>

  <!-- 常见问题（FAQ区域） -->
  <section class="mt-6 px-4 pb-6">
    <h2 class="text-lg font-bold text-gray-900 mb-3">常见问题</h2>
    
    <div class="bg-white rounded-2xl overflow-hidden shadow-sm border border-gray-100">
      <div class="p-4 border-b border-gray-100">
        <div class="flex items-center justify-between">
          <span class="text-sm font-medium text-gray-900">如何选择合适的保险产品？</span>
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
        </div>
      </div>
      <div class="p-4 border-b border-gray-100">
        <div class="flex items-center justify-between">
          <span class="text-sm font-medium text-gray-900">保险理赔需要哪些材料？</span>
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
        </div>
      </div>
      <div class="p-4">
        <div class="flex items-center justify-between">
          <span class="text-sm font-medium text-gray-900">可以为多人购买保险吗？</span>
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
        </div>
      </div>
    </div>
  </section>
</div>

<%= render 'shared/bottom_navigation' %>
