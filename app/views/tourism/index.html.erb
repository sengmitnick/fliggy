<div class="min-h-screen" style="background: linear-gradient(180deg, #FFF1AC 0%, #FFFFFF 100%);">
  <!-- Header -->
  <div class="sticky top-0 z-50 bg-[#FFF1AC]">
    <div class="flex items-center px-4 py-3">
      <%= link_to root_path, class: "p-2" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      <% end %>
      <h1 class="flex-1 text-center text-lg font-bold italic">旅游度假</h1>
      <button class="p-2">
        <div class="flex space-x-1.5">
          <div class="w-1 h-1 bg-black rounded-full"></div>
          <div class="w-1 h-1 bg-black rounded-full"></div>
          <div class="w-1 h-1 bg-black rounded-full"></div>
        </div>
      </button>
    </div>
  </div>

  <!-- Search Section -->
  <div class="px-3 mt-2">
    <div class="bg-white rounded-xl p-1 flex items-center shadow-sm border border-yellow-200">
      <div class="p-2">
        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
      </div>
      <div class="flex-1 overflow-x-auto whitespace-nowrap hide-scrollbar flex space-x-2 py-1">
        <span class="bg-gray-100 px-3 py-1 rounded-lg text-xs">长白山风景区 <span class="text-[10px] text-gray-400">9.3万人感兴趣</span></span>
        <span class="bg-gray-100 px-3 py-1 rounded-lg text-xs">深圳 <span class="text-[10px] text-gray-400">296万+人想去</span></span>
      </div>
      <button class="bg-[#FFE12E] px-6 py-2 rounded-xl font-bold text-sm ml-1">搜索</button>
    </div>
  </div>

  <!-- Tour Categories Grid (金刚区) -->
  <div class="px-3 mt-4">
    <div class="w-full max-w-md bg-white rounded-2xl overflow-hidden shadow-sm border border-[#fdf2cc]">
      <div class="flex">
        <!-- 左侧一列 (约占 1/6 宽度) -->
        <div class="w-1/6 flex flex-col">
          <!-- 跟团游 - 高度占 1/3 -->
          <%= link_to tour_groups_path, class: "h-24 bg-gradient-to-br from-[#ff7e60] to-[#ff5241] flex flex-col items-center justify-center text-white border-b border-r border-[#fdf2cc] relative" do %>
            <%= image_tag 'tourism/跟团游.png', class: 'w-8 h-8 opacity-90' %>
            <span class="text-[11px] font-bold mt-1 tracking-tighter flex items-center">
              跟团游<span class="scale-75 ml-0.5">〉</span>
            </span>
          <% end %>
          <!-- 自由行 - 跨两行高度，高度占 2/3 -->
          <div class="flex-1 bg-gradient-to-br from-[#7c88ff] to-[#5a6bff] flex flex-col items-center justify-center text-white border-r border-[#fdf2cc] relative min-h-[144px]">
            <%= image_tag 'tourism/自由行.png', class: 'w-9 h-9 opacity-90 mb-1' %>
            <span class="text-[11px] font-bold tracking-tighter flex items-center">
              自由行<span class="scale-75 ml-0.5">〉</span>
            </span>
          </div>
        </div>
  
        <!-- 右侧网格区域 (占 5/6 宽度) -->
        <div class="w-5/6 flex flex-col">
          
          <!-- 第一行: 5列 -->
          <div class="flex h-24 border-b border-[#fdf2cc]">
            <%= link_to tour_groups_path(group_size: 'small'), class: "flex-1 flex flex-col items-center justify-center border-r border-[#fdf2cc] px-1" do %>
              <%= image_tag 'tourism/精品小团.png', class: 'w-6 h-6 mb-1' %>
              <span class="text-[10px] text-gray-700 whitespace-nowrap">精品小团</span>
            <% end %>
            <div class="flex-1 flex flex-col items-center justify-center border-r border-[#fdf2cc] px-1">
              <%= image_tag 'tourism/私家团.png', class: 'w-6 h-6 mb-1' %>
              <span class="text-[10px] text-gray-700 whitespace-nowrap">私家团</span>
            </div>
            <div class="flex-1 flex flex-col items-center justify-center border-r border-[#fdf2cc] px-1">
              <%= image_tag 'tourism/一日游.png', class: 'w-6 h-6 mb-1' %>
              <span class="text-[10px] text-gray-700 whitespace-nowrap">一日游</span>
            </div>
            <div class="flex-1 flex flex-col items-center justify-center border-r border-[#fdf2cc] px-1" onclick="window.showToast('精彩即将上线，敬请期待')">
              <%= image_tag 'tourism/定制游.png', class: 'w-6 h-6 mb-1' %>
              <span class="text-[10px] text-gray-700 whitespace-nowrap">定制游</span>
            </div>
            <%= link_to cruises_path, class: "flex-1 flex flex-col items-center justify-center px-1" do %>
              <%= image_tag 'tourism/邮轮游.png', class: 'w-6 h-6 mb-1' %>
              <span class="text-[10px] text-gray-700 whitespace-nowrap">邮轮游</span>
            <% end %>
          </div>
  
          <!-- 第二行: 5列 -->
          <div class="flex h-24 border-b border-[#fdf2cc]">
            <div class="flex-1 flex flex-col items-center justify-center border-r border-[#fdf2cc] px-1" onclick="window.showToast('精彩即将上线，敬请期待')">
              <%= image_tag 'tourism/机酒套餐.png', class: 'w-6 h-6 mb-1' %>
              <span class="text-[10px] text-gray-700 whitespace-nowrap">机酒套餐</span>
            </div>
            <%= link_to chartered_tours_path, class: "flex-1 flex flex-col items-center justify-center border-r border-[#fdf2cc] px-1" do %>
              <%= image_tag 'tourism/包车游.png', class: 'w-6 h-6 mb-1' %>
              <span class="text-[10px] text-gray-700 whitespace-nowrap">包车游</span>
            <% end %>
            <div class="flex-1 flex flex-col items-center justify-center border-r border-[#fdf2cc] px-1" onclick="window.showToast('精彩即将上线，敬请期待')">
              <%= image_tag 'tourism/景酒套餐.png', class: 'w-6 h-6 mb-1' %>
              <span class="text-[10px] text-gray-700 whitespace-nowrap">景酒套餐</span>
            </div>
            <%= link_to tickets_path, class: "flex-1 flex flex-col items-center justify-center border-r border-[#fdf2cc] px-1 relative" do %>
              <span class="absolute -top-1 -right-0.5 bg-orange-500 text-white text-[8px] px-1 rounded-full scale-90 z-10">特惠</span>
              <%= image_tag 'tourism/门票.png', class: 'w-6 h-6 mb-1' %>
              <span class="text-[10px] text-gray-700 whitespace-nowrap">门票</span>
            <% end %>
            <%= link_to deep_travels_path, class: "flex-1 flex flex-col items-center justify-center px-1" do %>
              <%= image_tag 'tourism/深度旅行.png', class: 'w-6 h-6 mb-1' %>
              <span class="text-[10px] text-gray-700 whitespace-nowrap">深度旅行+</span>
            <% end %>
          </div>
  
          <!-- 第三行: 3列对齐 (比例 1:1:1) -->
          <div class="flex h-12">
            <!-- 签证 -->
            <%= link_to visas_path(ref: 'home'), class: "w-1/3 flex items-center justify-center border-r border-[#fdf2cc] px-2 relative" do %>
              <span class="absolute -top-1.5 left-1/2 -translate-x-1/2 bg-orange-500 text-white text-[8px] px-1.5 py-0.5 rounded-full whitespace-nowrap z-10">出签率高</span>
              <%= image_tag 'tourism/签证.png', class: 'w-5 h-5 mr-1.5' %>
              <span class="text-[11px] font-medium text-gray-700">签证</span>
            <% end %>
            <!-- 境外上网 -->
            <%= link_to internet_services_path(tab: 'data_plan'), class: "w-1/3 flex items-center justify-center border-r border-[#fdf2cc] px-2" do %>
              <%= image_tag 'tourism/境外上网.png', class: 'w-5 h-5 mr-1.5' %>
              <span class="text-[11px] font-medium text-gray-700">境外上网</span>
            <% end %>
            <!-- 境外交通 -->
            <%= link_to abroad_tickets_path(ref: 'home'), class: "w-1/3 flex items-center justify-center px-2" do %>
              <%= image_tag 'tourism/境外交通.png', class: 'w-5 h-5 mr-1.5' %>
              <span class="text-[11px] font-medium text-gray-700">境外交通</span>
            <% end %>
          </div>
  
        </div>
      </div>
    </div>
  </div>

  <!-- 特色功能栏 -->
  <div class="px-2 mt-4">
    <div class="flex items-center justify-between" onclick="window.showToast('精彩即将上线，敬请期待')">
      <!-- 左侧菜单组 -->
      <div class="flex-1 flex items-center space-x-0 overflow-x-auto no-scrollbar whitespace-nowrap">
        <!-- Item 1: 特色火车 -->
        <div class="flex-1 px-2 flex items-center group cursor-pointer shrink-0">
          <span class="text-base leading-none mr-1 filter drop-shadow-sm">🚂</span>
          <span class="text-[#333333] text-[10px] font-medium tracking-wide">特色火车</span>
        </div>
        
        <!-- 分割线 -->
        <div class="w-[1px] h-3 bg-[#DCCDA5] shrink-0"></div>
        
        <!-- Item 2: 逛乐园 -->
        <div class="flex-1 px-2 flex items-center group cursor-pointer shrink-0">
          <span class="text-base leading-none mr-1 filter drop-shadow-sm">🎠</span>
          <span class="text-[#333333] text-[10px] font-medium tracking-wide">逛乐园</span>
        </div>
        
        <!-- 分割线 -->
        <div class="w-[1px] h-3 bg-[#DCCDA5] mx-2.5 shrink-0"></div>
        
        <!-- Item 3: 博物馆 -->
        <div class="flex-1 px-2 flex items-center group cursor-pointer shrink-0">
          <span class="text-base leading-none mr-1 filter drop-shadow-sm">🏺</span>
          <span class="text-[#333333] text-[10px] font-medium tracking-wide">博物馆</span>
        </div>
        
        <!-- 分割线 -->
        <div class="w-[1px] h-3 bg-[#DCCDA5] mx-2.5 shrink-0"></div>
        
        <!-- Item 4: 美术馆 -->
        <div class="flex-1 px-2 flex items-center group cursor-pointer shrink-0">
          <span class="text-base leading-none mr-1 filter drop-shadow-sm">🖼️</span>
          <span class="text-[#333333] text-[10px] font-medium tracking-wide">美术馆</span>
        </div>
      </div>
      
      <!-- 右侧按钮：更多玩法 -->
      <div class="flex-shrink-0 ml-2">
        <button class="flex items-center bg-[#FEF6C8] rounded-full px-2.5 py-[3px] cursor-pointer active:bg-yellow-100 transition-colors">
          <span class="text-[#333333] text-[10px] font-medium">更多玩法</span>
          <svg class="w-2.5 h-2.5 text-[#555555] ml-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 5l7 7-7 7"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- 广州 目的地 部分 -->
  <div class="mt-6 px-4 bg-white rounded-t-3xl pt-6 pb-20" onclick="window.showToast('精彩即将上线，敬请期待')">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-3xl font-bold">广州</h2>
      <div class="bg-yellow-300 px-3 py-1 rounded-full text-xs font-bold flex items-center">
        更多目的地
        <svg class="w-3 h-3 ml-1" fill="currentColor" viewBox="0 0 20 20">
          <path d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"/>
        </svg>
      </div>
    </div>
    
    <!-- 城市选项卡 -->
    <div class="flex space-x-3 overflow-x-auto hide-scrollbar pb-4">
      <span class="bg-gray-100 px-4 py-1.5 rounded-full text-sm whitespace-nowrap">北京</span>
      <span class="bg-gray-100 px-4 py-1.5 rounded-full text-sm whitespace-nowrap">上海</span>
      <span class="bg-gray-100 px-4 py-1.5 rounded-full text-sm whitespace-nowrap">杭州</span>
      <span class="bg-gray-100 px-4 py-1.5 rounded-full text-sm whitespace-nowrap">惠州</span>
      <span class="bg-gray-100 px-4 py-1.5 rounded-full text-sm whitespace-nowrap text-gray-400">中国香港</span>
      <span class="bg-gray-100 px-4 py-1.5 rounded-full text-sm whitespace-nowrap text-gray-400">珠海</span>
    </div>

    <!-- 广州必玩 -->
    <div class="mt-4">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-bold">广州必玩 <span class="text-xs font-normal text-gray-400 ml-1">错过就像没来过</span></h3>
      </div>
      
      <div class="grid grid-cols-2 gap-3">
        <!-- 左侧：热榜 -->
        <div class="bg-red-50/50 rounded-xl p-3 border border-red-100">
          <div class="flex items-center text-red-600 font-bold text-sm mb-2">
            广州景点热榜 
            <svg class="w-3 h-3 ml-1" fill="currentColor" viewBox="0 0 20 20">
              <path d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"/>
            </svg>
          </div>
          <div class="space-y-2">
            <div class="flex items-center">
              <div class="w-10 h-10 bg-gray-200 rounded-lg mr-2 relative overflow-hidden">
                <%= image_tag 'tourism/景点热榜左.png', class: 'w-full h-full object-cover' %>
                <span class="absolute -top-1 -left-1 bg-yellow-400 text-[8px] text-white px-1 rounded italic font-bold">TOP1</span>
              </div>
              <div class="flex-1 overflow-hidden">
                <div class="text-[10px] font-bold truncate">广州长隆旅游度假区</div>
                <div class="text-[10px] text-red-500">¥98起 <span class="text-gray-400 font-normal">已售1000+</span></div>
              </div>
            </div>
            <div class="flex items-center">
              <div class="w-10 h-10 bg-gray-200 rounded-lg mr-2 relative overflow-hidden">
                <%= image_tag 'tourism/景点热榜右.png', class: 'w-full h-full object-cover' %>
                <span class="absolute -top-1 -left-1 bg-gray-400 text-[8px] text-white px-1 rounded italic font-bold">TOP2</span>
              </div>
              <div class="flex-1 overflow-hidden">
                <div class="text-[10px] font-bold truncate">广州长隆野生动物...</div>
                <div class="text-[10px] text-red-500">¥292.8起</div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- 右侧：特色体验 -->
        <div class="space-y-2">
          <div class="flex justify-between items-center text-sm font-bold mb-1">
            广州特色体验 
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path d="M9 5l7 7-7 7"/>
            </svg>
          </div>
          <div class="grid grid-cols-2 gap-2">
            <div class="bg-blue-100 rounded-lg p-2 h-20 flex flex-col justify-between items-start relative overflow-hidden">
              <span class="text-[10px] font-bold relative z-10">博物馆讲解</span>
              <span class="bg-yellow-400 text-[8px] px-1.5 rounded-full relative z-10">约讲解</span>
              <div class="absolute inset-0 bg-blue-200 opacity-30"></div>
            </div>
            <div class="bg-green-100 rounded-lg h-20 relative overflow-hidden flex items-center justify-center">
              <%= image_tag 'tourism/逛乐园.png', class: 'absolute inset-0 w-full h-full object-cover opacity-80' %>
              <span class="text-[10px] font-bold text-white z-10">逛乐园</span>
            </div>
            <div class="bg-orange-100 rounded-lg h-20 relative overflow-hidden flex items-center justify-center">
              <%= image_tag 'tourism/动物园.png', class: 'absolute inset-0 w-full h-full object-cover opacity-80' %>
              <span class="text-[10px] font-bold text-white z-10">动物园</span>
            </div>
            <div class="bg-purple-100 rounded-lg h-20 relative overflow-hidden flex items-center justify-center">
              <%= image_tag 'tourism/美术馆.png', class: 'absolute inset-0 w-full h-full object-cover opacity-80' %>
              <span class="text-[10px] font-bold text-white z-10">城市地标</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- 广州旅行雷达 -->
    <div class="mt-8 bg-[#FFF9F2] p-4 rounded-2xl border border-orange-100">
      <div class="flex items-center mb-4">
        <h3 class="text-xl font-bold">广州旅行雷达</h3>
        <span class="text-xs text-gray-400 ml-2">精准定位你想要</span>
        <div class="ml-auto w-10 h-10 bg-orange-100 rounded-full flex items-center justify-center">
          <svg class="w-6 h-6 text-orange-200" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 2a8 8 0 100 16 8 8 0 000-16zm0 14a6 6 0 110-12 6 6 0 010 12z"/>
          </svg>
        </div>
      </div>
      
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-2">
          <div class="bg-white p-3 rounded-xl border border-gray-50 text-center">
            <div class="text-[10px] text-gray-400 mb-1">游玩天数</div>
            <div class="text-sm font-bold flex justify-center items-center">
              不限天数 
              <svg class="w-3 h-3 ml-1" fill="currentColor" viewBox="0 0 20 20">
                <path d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"/>
              </svg>
            </div>
          </div>
          <div class="bg-white p-3 rounded-xl border border-gray-50 text-center">
            <div class="text-[10px] text-gray-400 mb-1">出发日期</div>
            <div class="text-sm font-bold flex justify-center items-center">
              不限日期 
              <svg class="w-3 h-3 ml-1" fill="currentColor" viewBox="0 0 20 20">
                <path d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"/>
              </svg>
            </div>
          </div>
        </div>
        
        <div class="flex bg-gray-100 p-1 rounded-xl">
          <button class="flex-1 py-2 text-xs font-bold text-gray-400">跟团游</button>
          <button class="flex-1 py-2 text-xs font-bold bg-white rounded-lg shadow-sm">自由行套餐</button>
        </div>

        <div class="bg-white/60 rounded-xl p-3">
          <div class="text-center text-[10px] text-orange-400 mb-3">套餐比单订更划算 · 多项一站式购齐</div>
          <div class="grid grid-cols-2 gap-3">
            <div class="bg-white rounded-xl p-3 border border-blue-50">
              <div class="bg-blue-500 text-white inline-block px-1 rounded text-[10px] mb-2">机+酒</div>
              <div class="text-[11px] font-bold">机酒套餐</div>
              <div class="text-[9px] text-gray-400 mb-3">比单订更划算 · 可灵活改期</div>
              <div class="space-y-1">
                <div class="bg-gray-50 px-2 py-1 text-[9px] flex justify-between">机票 <span>各地出发 ⇌ 广州</span></div>
                <div class="bg-gray-50 px-2 py-1 text-[9px] flex justify-between">住宿 <span>广州酒店</span></div>
              </div>
              <div class="mt-2 text-red-500 font-bold text-[10px]">¥1947起 <span class="text-gray-400 float-right">›</span></div>
            </div>
            <div class="bg-white rounded-xl p-3 border border-pink-50">
              <div class="bg-pink-500 text-white inline-block px-1 rounded text-[10px] mb-2">玩+乐</div>
              <div class="text-[11px] font-bold">玩乐套餐</div>
              <div class="text-[9px] text-gray-400 mb-3">当地体验 · 好玩又实惠</div>
              <div class="grid grid-cols-2 gap-1 mb-2">
                <span class="bg-gray-50 text-[8px] text-center py-1">逛乐园</span>
                <span class="bg-gray-50 text-[8px] text-center py-1">动物园</span>
                <span class="bg-gray-50 text-[8px] text-center py-1">城市地标</span>
                <span class="bg-gray-50 text-[8px] text-center py-1">游船</span>
              </div>
              <div class="mt-2 text-red-500 font-bold text-[10px]">¥15起 <span class="text-gray-400 float-right">›</span></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- 广东优选商家 -->
    <div class="mt-8">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-lg font-bold">广东优选商家 <span class="text-xs font-normal text-gray-400 ml-1">平台优选的目的地好商家</span></h3>
        <span class="text-xs text-gray-400">更多 ›</span>
      </div>
      <div class="flex space-x-3 overflow-x-auto hide-scrollbar">
        <div class="min-w-[200px] bg-[#FFF9F2] p-3 rounded-2xl border border-orange-50">
          <div class="text-sm font-bold mb-3">潮州大航国旅专营店</div>
          <div class="flex space-x-4 mb-4">
            <div class="text-center">
              <div class="text-[9px] text-gray-400">擅长服务</div>
              <div class="text-[10px] font-bold">广东一日游</div>
            </div>
            <div class="text-center">
              <div class="text-[9px] text-gray-400">服务人数</div>
              <div class="text-[10px] font-bold">2000+</div>
            </div>
          </div>
          <div class="flex items-center">
