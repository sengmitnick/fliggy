<div class="min-h-screen bg-[#F7F8FA]" data-controller="homestay-search city-selector hotel-date-picker hotel-guest-selector" data-city-selector-departure-city-value="<%= @city %>" data-city-selector-destination-city-value="" data-city-selector-enable-multi-select-value="false" data-city-selector-modal-title-value="选择城市">
  <!-- Header Banner -->
  <div class="relative h-[280px] w-full text-white overflow-hidden">
    <%= image_tag "https://images.unsplash.com/photo-1523592121529-f6dde35f079e?q=80&w=800&auto=format&fit=crop", class: "absolute w-full h-full object-cover top-0 left-0 z-0", alt: "民宿背景" %>
    <div class="absolute inset-0 bg-gradient-to-b from-black/30 via-transparent to-black/10 z-0"></div>

    <!-- Navigation Bar -->
    <div class="relative z-10 flex justify-between items-center px-4 mt-2">
      <%= link_to root_path, class: "p-1" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"></path>
        </svg>
      <% end %>
      <div class="flex space-x-3">
        <button class="p-1" onclick="window.showToast('精彩即将上线，敬请期待')">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </button>
        <button class="p-1" onclick="window.showToast('精彩即将上线，敬请期待')">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Logo & Title -->
    <div class="relative z-10 px-4 mt-4">
      <div class="flex items-center text-xs opacity-90 mb-1">
        <span class="font-bold text-yellow-400 mr-1">旅游环境01·民宿</span>
      </div>
      <h1 class="text-3xl font-bold italic tracking-wide text-white drop-shadow-md">民宿特惠<span class="text-yellow-300">4折起</span>!</h1>
      <p class="text-xs text-white/90 mt-1 flex items-center">
        <span class="bg-red-500/80 px-1 rounded text-[10px] mr-1">领神券</span>
        满¥4减¥3 至高省¥20
      </p>
    </div>
  </div>

  <!-- Main Search Card -->
  <div class="relative mx-3 -mt-24 bg-white rounded-2xl shadow-lg z-20 px-4 pt-2 pb-5">
    <!-- Domestic/International Toggle -->
    <div class="flex mb-4 relative border-b border-gray-100">
      <div 
        class="flex-1 text-center py-3 relative cursor-pointer" 
        data-action="click->homestay-search#switchToDomestic"
        data-homestay-search-target="domesticTab">
        <span class="text-lg font-bold text-gray-800">国内</span>
        <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-6 h-1 bg-yellow-400 rounded-full" data-homestay-search-target="domesticIndicator"></div>
      </div>
      <div 
        class="flex-1 text-center py-3 relative text-gray-500 cursor-pointer" 
        data-action="click->homestay-search#switchToInternational"
        data-homestay-search-target="internationalTab">
        <span class="text-lg font-medium">国际</span>
        <div class="hidden absolute bottom-0 left-1/2 transform -translate-x-1/2 w-6 h-1 bg-yellow-400 rounded-full" data-homestay-search-target="internationalIndicator"></div>
      </div>
    </div>

    <!-- City/Search Row -->
    <div class="flex items-center justify-between mb-5">
      <button class="flex items-center mr-3" data-action="click->city-selector#openDeparture">
        <span class="text-xl font-bold text-gray-900" data-city-selector-target="departure" data-homestay-search-target="cityDisplay"><%= @city %></span>
        <svg class="w-3 h-3 ml-1 text-gray-800" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
        </svg>
      </button>
      
      <input type="hidden" data-city-selector-target="departureCityInput" value="<%= @city %>">
      <input type="hidden" data-city-selector-target="destinationCityInput" value="">
      
      <div class="flex-1 text-gray-400 text-lg font-light flex items-center" data-action="click->homestay-search#openSearchModal">
        <svg class="w-5 h-5 mr-2 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        <span>民宿/地名/关键词</span>
      </div>
      
      <button class="ml-2" onclick="window.showToast('定位功能即将上线')">
        <svg class="w-6 h-6 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
      </button>
    </div>

    <!-- Date Row -->
    <button class="flex items-end mb-5 border-b border-gray-100 pb-4 w-full" data-action="click->hotel-date-picker#openModal">
      <div class="flex flex-col">
        <div class="flex items-baseline">
          <span class="text-2xl font-semibold text-gray-900 mr-1" data-hotel-date-picker-target="checkInDisplay"><%= @check_in.is_a?(String) ? Date.parse(@check_in).month : @check_in.month %>月<%= @check_in.is_a?(String) ? Date.parse(@check_in).day : @check_in.day %>日</span>
          <span class="text-sm text-gray-500"><%= date_label(@check_in) %></span>
        </div>
      </div>
      
      <div class="px-2 mx-3 mb-1">
        <span class="border border-gray-300 rounded-full px-2 py-0.5 text-xs text-gray-600 bg-white" data-hotel-date-picker-target="nightsDisplay"><%= (@check_out.to_date - @check_in.to_date).to_i %>晚</span>
      </div>

      <div class="flex flex-col">
        <div class="flex items-baseline">
          <span class="text-2xl font-semibold text-gray-900 mr-1" data-hotel-date-picker-target="checkOutDisplay"><%= @check_out.is_a?(String) ? Date.parse(@check_out).month : @check_out.month %>月<%= @check_out.is_a?(String) ? Date.parse(@check_out).day : @check_out.day %>日</span>
          <span class="text-sm text-gray-500"><%= date_label(@check_out) %></span>
        </div>
      </div>
    </button>

    <input type="hidden" data-hotel-date-picker-target="checkInInput" value="<%= @check_in %>">
    <input type="hidden" data-hotel-date-picker-target="checkOutInput" value="<%= @check_out %>">

    <!-- Guests/Beds & Promotion -->
    <button class="flex items-center justify-between mb-5 w-full" data-action="click->hotel-guest-selector#openModal">
      <span class="text-gray-400 text-lg">人数/床数</span>
      <div class="bg-orange-500 text-white text-xs px-2 py-1 rounded-full flex items-center">
        出行特惠
        <svg class="w-3 h-3 ml-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </div>
    </button>

    <input type="hidden" data-hotel-guest-selector-target="roomsInput" value="<%= @rooms %>">
    <input type="hidden" data-hotel-guest-selector-target="adultsInput" value="<%= @adults %>">
    <input type="hidden" data-hotel-guest-selector-target="childrenInput" value="<%= @children %>">

    <!-- Quick Filter Tags -->
    <div class="flex space-x-2 overflow-x-auto no-scrollbar mb-5 pb-1">
      <span class="flex-shrink-0 bg-blue-50 text-blue-600 font-bold px-3 py-1.5 rounded-lg text-xs">优选</span>
      <button class="flex-shrink-0 bg-gray-100 text-gray-600 px-3 py-1.5 rounded-lg text-xs flex items-center" onclick="window.showToast('精彩即将上线，敬请期待')">
        <svg class="w-3 h-3 mr-1 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
        </svg>
        大运中心体育场
      </button>
      <button class="flex-shrink-0 bg-gray-100 text-gray-600 px-3 py-1.5 rounded-lg text-xs flex items-center" onclick="window.showToast('精彩即将上线，敬请期待')">
        <svg class="w-3 h-3 mr-1 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
        </svg>
        体育中心体育场
      </button>
      <button class="flex-shrink-0 bg-gray-100 text-gray-600 px-3 py-1.5 rounded-lg text-xs" onclick="window.showToast('精彩即将上线，敬请期待')">
        桔钓沙
      </button>
    </div>

    <!-- Search Button -->
    <%= form_with url: search_homestays_path, method: :get, data: { turbo: false, homestay_search_target: "searchForm" } do |f| %>
      <%= f.hidden_field :city, value: @city, data: { homestay_search_target: "cityInput" } %>
      <%= f.hidden_field :check_in, value: @check_in, data: { homestay_search_target: "checkInInput" } %>
      <%= f.hidden_field :check_out, value: @check_out, data: { homestay_search_target: "checkOutInput" } %>
      <%= f.hidden_field :rooms, value: @rooms, data: { homestay_search_target: "roomsInput" } %>
      <%= f.hidden_field :adults, value: @adults, data: { homestay_search_target: "adultsInput" } %>
      <%= f.hidden_field :children, value: @children, data: { homestay_search_target: "childrenInput" } %>
      <%= f.hidden_field :q, value: "", data: { homestay_search_target: "queryInput" } %>
      <%= f.submit "搜索民宿", class: "w-full bg-[#FFD84D] text-gray-900 text-lg font-bold py-3.5 rounded-full shadow-md shadow-yellow-200 active:scale-[0.98] transition-transform cursor-pointer border-0" %>
    <% end %>
  </div>

  <!-- Promotion Cards -->
  <div class="mx-3 mt-4 bg-white rounded-xl p-3 shadow-sm">
    <div class="flex justify-between items-center mb-3">
      <div class="flex items-center">
        <span class="font-bold text-gray-900 text-base">民宿出行特惠</span>
        <svg class="w-4 h-4 text-gray-300 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <button class="bg-red-500 text-white text-xs px-2.5 py-1 rounded-full font-medium" onclick="window.showToast('精彩即将上线，敬请期待')">立即领取 ></button>
    </div>
    
    <div class="grid grid-cols-2 gap-2">
      <!-- Left Coupon -->
      <div class="bg-red-50 rounded-lg p-2.5 flex flex-col justify-center items-center relative overflow-hidden">
        <div class="absolute -top-1 -right-4 bg-yellow-400 text-[10px] px-4 py-0.5 rotate-45 transform">60天内享</div>
        <div class="text-red-500 font-bold text-sm mt-1">订房<span class="text-lg">6折起</span></div>
        <div class="text-[10px] text-red-400 mt-0.5">机票/火车票购后 联订优惠</div>
      </div>
      <!-- Right Coupon -->
      <div class="bg-red-50 rounded-lg p-2.5 flex flex-col justify-center items-center relative overflow-hidden">
        <div class="absolute -top-1 -right-4 bg-yellow-400 text-[10px] px-4 py-0.5 rotate-45 transform">14天有效</div>
        <div class="text-red-500 font-bold text-lg mt-1">12<span class="text-xs">元</span></div>
        <div class="text-[10px] text-red-400 mt-0.5">惊喜红包 折上立减</div>
      </div>
    </div>
  </div>

  <!-- Feature Grid -->
  <div class="mx-3 mt-3 grid grid-cols-3 gap-2">
    <!-- Performance Room -->
    <div class="bg-white p-3 rounded-xl shadow-sm flex flex-col justify-between h-20 relative">
      <div>
        <div class="font-bold text-gray-900 text-sm">演出好房</div>
        <div class="text-xs text-gray-400 mt-0.5">领大额券</div>
      </div>
      <div class="absolute bottom-2 right-2 opacity-80">
        <svg class="w-8 h-8 text-yellow-300" fill="currentColor" viewBox="0 0 20 20">
          <path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z"></path>
        </svg>
      </div>
    </div>

    <!-- Special Price -->
    <div class="bg-white p-3 rounded-xl shadow-sm flex flex-col justify-between h-20 relative">
      <div>
        <div class="flex items-center">
          <span class="font-bold text-gray-900 text-sm mr-1">特价民宿</span>
          <span class="bg-red-500 text-white text-[10px] px-1 rounded-sm">找低价</span>
        </div>
        <div class="text-xs text-gray-400 mt-0.5">低价订房</div>
      </div>
      <div class="absolute bottom-2 right-2">
        <svg class="w-7 h-7 text-red-300" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
        </svg>
      </div>
    </div>

    <!-- Bundle Zone -->
    <div class="bg-white p-3 rounded-xl shadow-sm flex flex-col justify-between h-20 relative">
      <div>
        <div class="font-bold text-gray-900 text-sm">联订专区</div>
        <div class="text-xs text-gray-400 mt-0.5">折上立减</div>
      </div>
      <div class="absolute bottom-2 right-2">
        <svg class="w-7 h-7 text-pink-300" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M17.707 9.293a1 1 0 010 1.414l-7 7a1 1 0 01-1.414 0l-7-7A.997.997 0 012 10V5a3 3 0 013-3h5c.256 0 .512.098.707.293l7 7zM5 6a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path>
        </svg>
      </div>
    </div>
  </div>

  <!-- Recommendation Header -->
  <div class="mx-3 mt-6 flex items-center space-x-6 pb-2">
    <div class="flex flex-col items-center">
      <div class="flex items-center">
        <span class="bg-red-500 text-white text-[10px] px-1 rounded mr-1">超值</span>
        <span class="font-bold text-lg text-gray-900">热销推荐</span>
      </div>
    </div>
    <div class="flex flex-col items-center opacity-50">
      <div class="flex items-center">
        <svg class="w-4 h-4 text-yellow-600 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
        </svg>
        <span class="font-bold text-lg text-gray-900">精品民宿</span>
      </div>
    </div>
  </div>

  <!-- Recommendation Content -->
  <div class="mx-3 mt-2 grid grid-cols-2 gap-3 pb-20">
    <% if @hotels.any? %>
      <% @hotels.each do |hotel| %>
        <%= link_to hotel_path(hotel, check_in: @check_in, check_out: @check_out, rooms: @rooms, adults: @adults, children: @children), class: "block" do %>
          <div class="bg-white rounded-xl overflow-hidden shadow-sm h-48">
            <div class="h-3/4 bg-gray-200 relative">
              <% if hotel.image.attached? %>
                <%= image_tag hotel.image, class: "w-full h-full object-cover", alt: hotel.name %>
              <% elsif hotel.image_url.present? %>
                <%= image_tag hotel.image_url, class: "w-full h-full object-cover", alt: hotel.name, onerror: "this.src='https://images.unsplash.com/photo-1522708323590-d24dbb6b0267?q=80&w=400&auto=format&fit=crop'" %>
              <% else %>
                <%= image_tag "https://images.unsplash.com/photo-1522708323590-d24dbb6b0267?q=80&w=400&auto=format&fit=crop", class: "w-full h-full object-cover", alt: hotel.name %>
              <% end %>
            </div>
            <div class="p-2">
              <div class="text-sm font-medium text-gray-900 truncate"><%= hotel.name %></div>
              <div class="flex items-baseline gap-1 mt-1">
                <span class="text-xs text-red-500">¥</span>
                <span class="text-lg font-bold text-red-500"><%= (hotel.price * @rooms).to_i %></span>
                <span class="text-xs text-gray-400">起</span>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <!-- Placeholder Cards -->
      <div class="bg-white rounded-xl overflow-hidden shadow-sm h-48">
        <div class="h-3/4 bg-gray-200 relative">
          <%= image_tag "https://images.unsplash.com/photo-1522708323590-d24dbb6b0267?q=80&w=400&auto=format&fit=crop", class: "w-full h-full object-cover", alt: "民宿示例" %>
        </div>
        <div class="p-2">
          <div class="h-4 bg-gray-100 rounded w-3/4"></div>
        </div>
      </div>
      <div class="bg-white rounded-xl overflow-hidden shadow-sm h-48">
        <div class="h-3/4 bg-gray-200 relative">
          <%= image_tag "https://images.unsplash.com/photo-1502672260266-1c1ef2d93688?q=80&w=400&auto=format&fit=crop", class: "w-full h-full object-cover", alt: "民宿示例" %>
        </div>
        <div class="p-2">
          <div class="h-4 bg-gray-100 rounded w-3/4"></div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- City Selector Modal -->
  <%= render 'shared/city_selector_modal' %>

  <!-- Hotel Date Picker Modal -->
  <%= render 'shared/hotel_date_picker_modal' %>

  <!-- Hotel Guest Selector Modal -->
  <%= render 'shared/hotel_guest_selector_modal' %>

  <!-- Bottom Navigation -->
  <%= render 'shared/bottom_navigation' %>
</div>
