<!-- 车型选择页 -->
<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="sticky top-0 z-40 bg-white shadow-sm">
    <div class="max-w-md mx-auto px-4 py-3 flex items-center justify-between">
      <button onclick="history.back()" class="p-2 -ml-2 text-gray-800">
        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 19l-7-7 7-7" />
        </svg>
      </button>
      <h1 class="text-lg font-bold text-gray-900">选择车型</h1>
      <div class="w-6"></div>
    </div>
  </div>

  <!-- 行程信息卡片 -->
  <div class="max-w-md mx-auto px-4 py-4">
    <div class="bg-white rounded-xl shadow-sm p-4 mb-4">
      <div class="text-base font-bold text-gray-900 mb-2"><%= @route.name %></div>
      <div class="flex items-center text-sm text-gray-600">
        <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <%= @departure_date.strftime('%Y年%m月%d日') %> 出发
        <span class="mx-2">·</span>
        <span><%= @passenger_count %>人</span>
      </div>
    </div>
  </div>

  <!-- 时长选择 -->
  <div class="max-w-md mx-auto px-4 mb-4">
    <div class="bg-white rounded-xl shadow-sm p-4">
      <div class="text-sm font-bold text-gray-900 mb-3">包车时长</div>
      <div class="grid grid-cols-2 gap-3">
        <%= link_to vehicles_chartered_tours_path(route_id: @route.id, departure_date: @departure_date, duration_hours: 6, passenger_count: @passenger_count), 
            class: "flex items-center justify-between p-4 rounded-xl border-2 #{@duration_hours == 6 ? 'border-yellow-400 bg-yellow-50' : 'border-gray-200 bg-white'}" do %>
          <div>
            <div class="text-base font-bold text-gray-900">6小时</div>
            <div class="text-xs text-gray-500 mt-1">日常游玩推荐</div>
          </div>
          <% if @duration_hours == 6 %>
            <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          <% end %>
        <% end %>
        
        <%= link_to vehicles_chartered_tours_path(route_id: @route.id, departure_date: @departure_date, duration_hours: 8, passenger_count: @passenger_count), 
            class: "flex items-center justify-between p-4 rounded-xl border-2 #{@duration_hours == 8 ? 'border-yellow-400 bg-yellow-50' : 'border-gray-200 bg-white'}" do %>
          <div>
            <div class="text-base font-bold text-gray-900">8小时</div>
            <div class="text-xs text-gray-500 mt-1">深度游玩推荐</div>
          </div>
          <% if @duration_hours == 8 %>
            <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- 车型列表 -->
  <div class="max-w-md mx-auto px-4">
    <div class="text-sm font-bold text-gray-900 mb-3">选择车型</div>
    
    <!-- 5座车型 -->
    <div class="mb-6">
      <div class="text-sm font-medium text-gray-700 mb-3">5座轿车/SUV</div>
      <div class="space-y-3">
        <% @vehicle_types.select { |v| v.category == '5座' }.each do |vehicle| %>
          <%= link_to new_charter_booking_path(
                route_id: @route.id,
                vehicle_type_id: vehicle.id,
                departure_date: @departure_date,
                duration_hours: @duration_hours,
                passenger_count: @passenger_count
              ), class: "block" do %>
            <div class="bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-md transition-shadow">
              <div class="flex">
                <!-- 车辆图片 -->
                <div class="w-32 h-32 flex-shrink-0 bg-gray-100">
                  <img src="https://images.unsplash.com/photo-1549317661-bd32c8ce0db2?w=300&h=300&fit=crop" 
                       alt="<%= vehicle.name %>" 
                       class="w-full h-full object-cover">
                </div>
                
                <!-- 车辆信息 -->
                <div class="flex-1 p-4 flex flex-col justify-between">
                  <div>
                    <div class="flex items-center justify-between mb-2">
                      <h3 class="text-base font-bold text-gray-900"><%= vehicle.name %></h3>
                      <span class="text-xs px-2 py-1 bg-yellow-100 text-yellow-800 rounded">
                        <%= vehicle.level %>
                      </span>
                    </div>
                    
                    <div class="flex items-center text-xs text-gray-600 mb-2">
                      <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                      </svg>
                      <%= vehicle.seats %>座
                      <span class="mx-2">·</span>
                      <%= vehicle.luggage_capacity %>件行李
                    </div>
                  </div>
                  
                  <!-- 价格 -->
                  <div class="flex items-center justify-between mt-2">
                    <div>
                      <span class="text-xl font-bold text-orange-500">¥<%= @vehicle_prices[vehicle.id] %></span>
                      <span class="text-xs text-gray-500">/<%= @duration_hours %>小时</span>
                    </div>
                    <div class="text-yellow-500 text-sm font-medium">选择 →</div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    
    <!-- 7座车型 -->
    <% if @vehicle_types.any? { |v| v.category == '7座' } %>
      <div class="mb-6">
        <div class="text-sm font-medium text-gray-700 mb-3">7座商务车/MPV</div>
        <div class="space-y-3">
          <% @vehicle_types.select { |v| v.category == '7座' }.each do |vehicle| %>
            <%= link_to new_charter_booking_path(
                  route_id: @route.id,
                  vehicle_type_id: vehicle.id,
                  departure_date: @departure_date,
                  duration_hours: @duration_hours,
                  passenger_count: @passenger_count
                ), class: "block" do %>
              <div class="bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-md transition-shadow">
                <div class="flex">
                  <div class="w-32 h-32 flex-shrink-0 bg-gray-100">
                    <img src="https://images.unsplash.com/photo-1519641471654-76ce0107ad1b?w=300&h=300&fit=crop" 
                         alt="<%= vehicle.name %>" 
                         class="w-full h-full object-cover">
                  </div>
                  
                  <div class="flex-1 p-4 flex flex-col justify-between">
                    <div>
                      <div class="flex items-center justify-between mb-2">
                        <h3 class="text-base font-bold text-gray-900"><%= vehicle.name %></h3>
                        <span class="text-xs px-2 py-1 bg-yellow-100 text-yellow-800 rounded">
                          <%= vehicle.level %>
                        </span>
                      </div>
                      
                      <div class="flex items-center text-xs text-gray-600 mb-2">
                        <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                        <%= vehicle.seats %>座
                        <span class="mx-2">·</span>
                        <%= vehicle.luggage_capacity %>件行李
                      </div>
                    </div>
                    
                    <div class="flex items-center justify-between mt-2">
                      <div>
                        <span class="text-xl font-bold text-orange-500">¥<%= @vehicle_prices[vehicle.id] %></span>
                        <span class="text-xs text-gray-500">/<%= @duration_hours %>小时</span>
                      </div>
                      <div class="text-yellow-500 text-sm font-medium">选择 →</div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
    
    <!-- 巴士车型 -->
    <% if @vehicle_types.any? { |v| v.category == '巴士' } %>
      <div class="mb-6">
        <div class="text-sm font-medium text-gray-700 mb-3">巴士/大型车辆</div>
        <div class="space-y-3">
          <% @vehicle_types.select { |v| v.category == '巴士' }.each do |vehicle| %>
            <%= link_to new_charter_booking_path(
                  route_id: @route.id,
                  vehicle_type_id: vehicle.id,
                  departure_date: @departure_date,
                  duration_hours: @duration_hours,
                  passenger_count: @passenger_count
                ), class: "block" do %>
              <div class="bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-md transition-shadow">
                <div class="flex">
                  <div class="w-32 h-32 flex-shrink-0 bg-gray-100">
                    <img src="https://images.unsplash.com/photo-1544620347-c4fd4a3d5957?w=300&h=300&fit=crop" 
                         alt="<%= vehicle.name %>" 
                         class="w-full h-full object-cover">
                  </div>
                  
                  <div class="flex-1 p-4 flex flex-col justify-between">
                    <div>
                      <div class="flex items-center justify-between mb-2">
                        <h3 class="text-base font-bold text-gray-900"><%= vehicle.name %></h3>
                        <span class="text-xs px-2 py-1 bg-yellow-100 text-yellow-800 rounded">
                          <%= vehicle.level %>
                        </span>
                      </div>
                      
                      <div class="flex items-center text-xs text-gray-600 mb-2">
                        <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                        <%= vehicle.seats %>座
                        <span class="mx-2">·</span>
                        <%= vehicle.luggage_capacity %>件行李
                      </div>
                    </div>
                    
                    <div class="flex items-center justify-between mt-2">
                      <div>
                        <span class="text-xl font-bold text-orange-500">¥<%= @vehicle_prices[vehicle.id] %></span>
                        <span class="text-xs text-gray-500">/<%= @duration_hours %>小时</span>
                      </div>
                      <div class="text-yellow-500 text-sm font-medium">选择 →</div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- 底部占位 -->
  <div class="h-6"></div>
</div>
