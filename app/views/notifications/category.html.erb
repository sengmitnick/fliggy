<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white border-b border-gray-200 sticky top-0 z-10">
    <div class="flex items-center px-4 py-3">
      <%= link_to messages_path, class: "mr-3" do %>
        <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      <% end %>
      <h1 class="text-lg font-semibold flex-1"><%= @category_name %></h1>
    </div>
  </div>

  <!-- Notification List -->
  <div class="divide-y divide-gray-100">
    <% if @notifications.any? %>
      <% @notifications.each do |notification| %>
        <%= link_to notification_path(notification), class: "block bg-white hover:bg-gray-50 active:bg-gray-100 transition-colors" do %>
          <div class="px-4 py-4">
            <div class="flex items-start justify-between mb-2">
              <h3 class="text-base font-medium text-gray-900 flex-1 pr-4"><%= notification.title %></h3>
              <% unless notification.read? %>
                <span class="w-2 h-2 bg-red-500 rounded-full mt-2 flex-shrink-0"></span>
              <% end %>
            </div>
            
            <% if notification.content.present? %>
              <p class="text-sm text-gray-600 mb-2 line-clamp-2"><%= notification.content %></p>
            <% end %>
            
            <div class="text-xs text-gray-400">
              <%= notification.created_at.strftime('%Y年%m月%d日 %H:%M') %>
            </div>
          </div>
        <% end %>
      <% end %>

      <!-- Pagination -->
      <% if @notifications.total_pages > 1 %>
        <div class="bg-white px-4 py-6">
          <%= paginate @notifications, theme: 'twitter-bootstrap-4', 
              pagination_class: 'pagination justify-content-center',
              nav_class: 'pagination-nav' %>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="bg-white px-4 py-16 text-center">
        <div class="text-gray-400 mb-4">
          <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
          </svg>
        </div>
        <p class="text-gray-500 text-base">暂无消息</p>
      </div>
    <% end %>
  </div>
</div>
