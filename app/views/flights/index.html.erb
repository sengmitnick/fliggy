<div class="min-h-screen bg-gray-100" data-controller="city-selector date-picker" data-city-selector-departure-city-value="北京" data-city-selector-destination-city-value="杭州" data-date-picker-current-date-value="<%= Date.today.to_s %>">
  <!-- Header with Banner -->
  <div class="relative pb-8">
    <!-- Background Image Container -->
    <div class="relative w-full z-1">
      <%= image_tag "活动.png", class: "w-full h-auto object-cover object-center", alt: "背景" %>

      <!-- Top Bar -->
      <div class="absolute top-4 left-0 w-full flex items-center justify-between px-4 py-3">
        <button onclick="history.back()" class="w-10 h-10 flex items-center justify-center">
          <%= image_tag "返回.png", class: "w-10 h-10", alt: "返回" %>
        </button>
        
        <div class="flex items-center gap-3">
          <button class="w-10 h-10 flex items-center justify-center">
            <%= image_tag "红包.png", class: "w-10 h-10", alt: "红包" %>
          </button>
          <button class="w-10 h-10 flex items-center justify-center">
            <%= image_tag "更多.png", class: "w-10 h-10", alt: "更多" %>
          </button>
        </div>
      </div>
    </div>

    <!-- White Card Container with Tabs and Form -->
    <div class="relative mx-4 -mt-1 bg-white rounded-2xl overflow-hidden z-50">
      <!-- Tab Navigation -->
      <div class="flex gap-1 pt-3 px-4 border-b border-gray-200 overflow-x-auto no-scrollbar">
        <button class="pb-3 px-3 text-sm font-bold border-b-2 border-black whitespace-nowrap">机票</button>
        <button class="pb-3 px-3 text-sm text-gray-600 whitespace-nowrap">特价机票</button>
        <button class="pb-3 px-3 text-sm text-gray-600 whitespace-nowrap">火车票</button>
        <button class="pb-3 px-3 text-sm text-gray-600 whitespace-nowrap">租车/接送</button>
        <button class="pb-3 px-3 text-sm text-gray-600 whitespace-nowrap">汽车票</button>
      </div>

      <!-- Flight Search Form -->
      <div>
    <!-- Trip Type Tabs -->
    <div class="flex items-center justify-center gap-8 py-4 border-b border-gray-100">
      <div class="flex-1 flex items-center justify-center">
        <button class="text-base font-bold border-b-2 border-black pb-1">单程</button>
      </div>
      <div class="flex-1 flex items-center justify-center">
        <button class="text-base text-gray-500 relative">
          往返
          <span class="absolute -top-3 -right-6 bg-red-500 text-white text-xs px-1 rounded">更优惠</span>
        </button>
      </div>
      <div class="flex-1 flex items-center justify-center">
        <button class="text-base text-gray-500">多程</button>
      </div>
    </div>

    <!-- Promotion Banner -->
    <div class="mx-4 my-3 px-3 py-2 rounded-lg flex items-center justify-between" style="background: linear-gradient(90deg, #FFF4E6 0%, #FFE8CC 100%);">
      <div class="flex items-center gap-2">
        <span class="text-sm font-bold" style="color: #FF6B35;">机酒联订更优惠</span>
        <span class="text-xs text-gray-600">购买国内机票立减<span class="font-bold text-red-500">20~30元</span></span>
      </div>
      <button class="text-gray-400">×</button>
    </div>

    <!-- From/To Selection -->
    <div class="mx-4 mb-4">
      <div class="flex items-center justify-between mb-4">
        <button 
          data-action="click->city-selector#openDeparture"
          class="flex-1 text-left">
          <div class="text-2xl font-bold" data-city-selector-target="departure">北京</div>
        </button>
        
        <button 
          data-action="click->city-selector#switchCities"
          class="mx-4 flex items-center justify-center">
          <%= image_tag "airfare/切换.png", class: "w-12 h-12", alt: "切换" %>
        </button>
        
        <button 
          data-action="click->city-selector#openDestination"
          class="flex-1 text-right">
          <div class="text-2xl font-bold" data-city-selector-target="destination">杭州</div>
        </button>
      </div>

      <!-- Date Selection -->
      <div class="mb-4">
        <button 
          data-action="click->date-picker#openModal"
          class="text-left">
          <div class="text-3xl font-bold" data-date-picker-target="selectedDate">
            <%= Date.today.month %><span class="text-base text-gray-600">月</span><%= Date.today.day %><span class="text-base text-gray-600">日 今天</span>
          </div>
        </button>
      </div>

      <!-- Passenger Selection -->
      <div class="flex items-center justify-between py-3 border-b border-gray-100">
        <div>
          <div class="text-base text-gray-800">选择乘机人</div>
          <div class="text-sm" style="color: #00A0E9;">快速找到低价票</div>
        </div>
        <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
        </svg>
      </div>

      <!-- Cabin Class Selection -->
      <div class="flex gap-2 py-3">
        <button class="px-4 py-2 rounded-full border border-gray-300 text-sm">全部舱位</button>
        <button class="px-4 py-2 rounded-full border border-gray-300 text-sm">公务/头等舱</button>
      </div>

      <!-- Search Button -->
      <%= form_with url: search_flights_path, method: :get, local: true, data: { turbo: false } do |f| %>
        <%= f.hidden_field :departure_city, value: '', data: { 'city-selector-target': 'departureCityInput' } %>
        <%= f.hidden_field :destination_city, value: '', data: { 'city-selector-target': 'destinationCityInput' } %>
        <%= f.hidden_field :date, value: Date.today, data: { 'date-picker-target': 'dateInput' } %>
        <button type="submit" class="w-full py-4 rounded-full text-lg font-bold text-back mt-2" style="background: #FFD700;">
          搜索机票
        </button>
      <% end %>
    </div>

    </div>
  </div>

  
  <!-- Quick Links -->
  <div class="mx-4 mt-3 bg-white rounded-2xl overflow-hidden">
    <div class="flex justify-around items-center px-4">
      <div class="flex flex-col items-center">
        <%= image_tag "airfare/特价机票.png", class: "w-14 h-14 mb-1", alt: "特价机票" %>
      </div>

      <div class="flex flex-col items-center relative">
        <span class="absolute -top-1 right-2 bg-red-500 text-white text-xs px-1 rounded">低价值</span>
        <%= image_tag "airfare/机票次卡.png", class: "w-14 h-14 mb-1", alt: "机票次卡" %>
      </div>

      <div class="flex flex-col items-center">
        <%= image_tag "airfare/低价提醒.png", class: "w-14 h-14 mb-1", alt: "低价提醒" %>
      </div>

      <div class="flex flex-col items-center">
        <%= image_tag "airfare/家庭认证.png", class: "w-14 h-14 mb-1", alt: "家庭认证" %>
      </div>

      <div class="flex flex-col items-center">
        <%= image_tag "airfare/展开全部.png", class: "w-14 h-14 mb-1", alt: "展开全部" %>
      </div>
    </div>
  </div>

  <!-- Promotion Section -->
  <div class="bg-gray-50 py-4">
    <div class="mx-4">
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center gap-2">
          <span class="bg-red-500 text-white text-xs px-2 py-0.5 rounded">新人专享</span>
          <span class="text-base font-bold">找优惠 省钱专区</span>
        </div>
        <button class="text-sm text-gray-500">更多优惠 ›</button>
      </div>

      <!-- Offer Cards -->
      <div class="grid grid-cols-3 gap-3">
        <div class="bg-white rounded-lg p-3">
          <div class="text-sm font-bold mb-1">机票卡低价团</div>
          <div class="text-xs text-gray-600 mb-2">66元飞全球</div>
          <button class="w-full py-1.5 text-xs font-bold rounded" style="background: #FFF4E6; color: #FF8C00;">立即抢购</button>
        </div>

        <div class="bg-white rounded-lg p-3">
          <div class="text-sm font-bold mb-1">请3休8过元旦</div>
          <div class="text-xs text-gray-600 mb-2">领至高255元券包</div>
          <button class="w-full py-1.5 text-xs font-bold rounded" style="background: #FFF4E6; color: #FF8C00;">立即领取</button>
        </div>

        <div class="bg-white rounded-lg p-3">
          <div class="text-sm font-bold mb-1">飞送礼</div>
          <div class="text-xs text-gray-600 mb-2">满5单兑换</div>
          <button class="w-full py-1.5 text-xs font-bold rounded" style="background: #FFF4E6; color: #FF8C00;">立即参与</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Special Offers Section -->
  <div class="bg-white py-4">
    <div class="mx-4">
      <div class="flex items-center justify-between mb-3">
        <span class="text-base font-bold">特价机票</span>
        <button class="text-sm text-gray-500">更多 ›</button>
      </div>

      <!-- Offer Tabs -->
      <div class="flex gap-3 mb-4 overflow-x-auto no-scrollbar">
        <button class="px-4 py-2 rounded-full text-sm font-bold whitespace-nowrap" style="background: #FFF4E6; color: #FF8C00;">
          👍 精选特价推荐
        </button>
        <button class="px-4 py-2 rounded-full text-sm text-gray-600 whitespace-nowrap bg-gray-100">
          💯 百元任意飞
        </button>
        <button class="px-4 py-2 rounded-full text-sm text-gray-600 whitespace-nowrap bg-gray-100">
          ✈️ 航司特价
        </button>
      </div>

      <!-- Flight Deals List -->
      <div class="space-y-3">
        <!-- Deal 1 -->
        <div class="flex items-center justify-between p-3 border border-gray-200 rounded-lg">
          <div class="flex items-center gap-3">
            <img src="https://images.unsplash.com/photo-1564221710304-0b37c8b9d729?w=100&h=100&fit=crop" class="w-16 h-16 rounded-lg object-cover" alt="北京">
            <div>
              <div class="font-bold text-base mb-1">北京→杭州</div>
              <div class="text-xs text-gray-500">12.23 周二</div>
            </div>
          </div>
          <div class="text-right">
            <div class="text-red-500 font-bold text-xl">¥256</div>
            <div class="text-xs text-red-400">超低1.1折</div>
          </div>
        </div>

        <!-- Deal 2 -->
        <div class="flex items-center justify-between p-3 border border-gray-200 rounded-lg">
          <div class="flex items-center gap-3">
            <img src="https://images.unsplash.com/photo-1559564484-e48bb92e6e83?w=100&h=100&fit=crop" class="w-16 h-16 rounded-lg object-cover" alt="北京">
            <div>
              <div class="font-bold text-base mb-1">北京→上海</div>
              <div class="text-xs text-gray-500">12.17 周二</div>
            </div>
          </div>
          <div class="text-right">
            <div class="text-red-500 font-bold text-xl">¥300</div>
            <div class="text-xs text-red-400">超低1.7折</div>
          </div>
        </div>

        <!-- Deal 3 -->
        <div class="flex items-center justify-between p-3 border border-gray-200 rounded-lg">
          <div class="flex items-center gap-3">
            <img src="https://images.unsplash.com/photo-1512453979798-5ea266f8880c?w=100&h=100&fit=crop" class="w-16 h-16 rounded-lg object-cover" alt="深圳">
            <div>
              <div class="font-bold text-base mb-1">深圳→杭州</div>
              <div class="text-xs text-gray-500">12.15 周一</div>
            </div>
          </div>
          <div class="text-right">
            <div class="text-red-500 font-bold text-xl">¥230</div>
            <div class="text-xs text-red-400">超低1.4折</div>
          </div>
        </div>

        <!-- Deal 4 - Multi-city Pass -->
        <div class="flex items-center justify-between p-3 border border-gray-200 rounded-lg relative overflow-hidden">
          <div class="absolute top-2 left-2 bg-orange-500 text-white text-xs px-2 py-0.5 rounded">机票卡</div>
          <div class="flex items-center gap-3 pt-4">
            <img src="https://images.unsplash.com/photo-1503423571797-2d2bb372094a?w=100&h=100&fit=crop" class="w-16 h-16 rounded-lg object-cover" alt="深圳出发">
            <div>
              <div class="font-bold text-base mb-1">深圳出发 可飞2城</div>
              <div class="text-xs text-gray-500">10.10~03.28可选</div>
            </div>
          </div>
          <div class="text-right">
            <div class="text-xs text-gray-500 line-through mb-1">入场券仅¥398</div>
            <div class="text-red-500 font-bold text-xl">总价¥2388</div>
          </div>
        </div>

        <!-- Deal 5 - Domestic Pass -->
        <div class="flex items-center justify-between p-3 border border-gray-200 rounded-lg relative overflow-hidden">
          <div class="absolute top-2 left-2 bg-orange-500 text-white text-xs px-2 py-0.5 rounded">机票卡</div>
          <div class="flex items-center gap-3 pt-4">
            <img src="https://images.unsplash.com/photo-1436491865332-7a61a109cc05?w=100&h=100&fit=crop" class="w-16 h-16 rounded-lg object-cover" alt="国内首套卡">
            <div>
              <div class="font-bold text-base mb-1">特价机票国内首套卡</div>
              <div class="text-xs text-gray-500">日期灵活 不约可退</div>
            </div>
          </div>
          <div class="text-right">
            <div class="text-red-500 font-bold text-xl">¥199</div>
            <div class="text-xs text-red-400">单次低至9</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Spacing -->
  <div class="h-20"></div>

  <!-- Bottom Navigation -->
  <div class="fixed bottom-0 left-0 right-0 max-w-md mx-auto bg-white border-t border-gray-200">
    <div class="grid grid-cols-5 px-2 py-2">
      <button class="flex flex-col items-center justify-center gap-1.5">
        <%= image_tag "airfare/我的收藏.png", class: "w-10 h-10", alt: "我的收藏" %>
        <span class="text-[11px] text-gray-700">我的收藏</span>
      </button>

      <button class="flex flex-col items-center justify-center gap-1.5">
        <%= image_tag "airfare/航班动态.png", class: "w-10 h-10", alt: "航班动态" %>
        <span class="text-[11px] text-gray-700">航班动态</span>
      </button>

      <button class="flex flex-col items-center justify-center gap-1.5">
        <%= image_tag "airfare/值机选座.png", class: "w-10 h-10", alt: "值机选座" %>
        <span class="text-[11px] text-gray-700">值机选座</span>
      </button>

      <button class="flex flex-col items-center justify-center gap-1.5">
        <%= image_tag "airfare/发票报销.png", class: "w-10 h-10", alt: "发票报销" %>
        <span class="text-[11px] text-gray-700">发票报销</span>
      </button>

      <button class="flex flex-col items-center justify-center gap-1.5">
        <%= image_tag "airfare/我的订单.png", class: "w-10 h-10", alt: "我的订单" %>
        <span class="text-[11px] text-gray-700">我的订单</span>
      </button>
    </div>
  </div>

  <!-- City Selector Modal -->
  <%= render 'shared/city_selector_modal' %>
  
  <!-- Date Picker Modal -->
  <%= render 'shared/date_picker_modal' %>
</div>

<style>
  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }
  .no-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>
