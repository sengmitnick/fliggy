<div class="min-h-screen bg-gradient-to-b from-orange-50 to-purple-50 pb-24">
  <!-- Header -->
  <div class="bg-white sticky top-0 z-10 shadow-sm">
    <div class="flex items-center px-4 py-4">
      <%= link_to flights_path, class: "text-gray-700" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      <% end %>
      <h1 class="flex-1 text-center text-xl font-bold text-gray-900 pr-6">家庭权益</h1>
    </div>
  </div>

  <div class="px-4 pt-4">
    <!-- Family Section -->
    <div class="bg-gradient-to-br from-orange-100 to-purple-100 rounded-2xl p-6 mb-4 relative overflow-hidden">
      <div class="flex justify-between items-start mb-4">
        <div>
          <div class="flex items-center gap-2 mb-2">
            <h2 class="text-2xl font-bold text-gray-900">我的家庭</h2>
            <% if @family_benefit.verification_status == 'unverified' %>
              <span class="px-2 py-0.5 bg-red-100 text-red-600 text-xs rounded">未认证</span>
            <% else %>
              <span class="px-2 py-0.5 bg-green-100 text-green-600 text-xs rounded">已认证</span>
            <% end %>
          </div>
          <%= link_to verify_family_benefits_path, class: "flex items-center text-sm text-gray-700 hover:text-gray-900" do %>
            <span>完成家庭认证，享超多特权</span>
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          <% end %>
        </div>
        
        <!-- 3D Family Illustration -->
        <div class="w-40 h-40 absolute -right-4 -top-2">
          <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
            <!-- Grandma (rightmost, wearing hat) -->
            <ellipse cx="165" cy="175" rx="12" ry="4" fill="#D4A373" opacity="0.3"/>
            <ellipse cx="165" cy="155" rx="10" ry="12" fill="#FFE4C4"/>
            <circle cx="165" cy="145" r="8" fill="#FFE4C4"/>
            <path d="M 157 140 Q 165 135 173 140" stroke="#8B4513" stroke-width="1" fill="none"/>
            <circle cx="162" cy="143" r="1.5" fill="#4A4A4A"/>
            <circle cx="168" cy="143" r="1.5" fill="#4A4A4A"/>
            <path d="M 165 146 Q 166 147 165 147" stroke="#D4756B" stroke-width="0.5" fill="none"/>
            <!-- Hat -->
            <ellipse cx="165" cy="137" rx="12" ry="3" fill="#F4A460"/>
            <path d="M 153 137 L 165 127 L 177 137 Z" fill="#F4A460"/>
            <rect x="153" y="135" width="24" height="3" fill="#D2691E" rx="1"/>
            
            <!-- Mom (second from right, yellow dress) -->
            <ellipse cx="130" cy="175" rx="14" ry="5" fill="#FFD700" opacity="0.3"/>
            <ellipse cx="130" cy="150" rx="12" ry="15" fill="#FFD700"/>
            <circle cx="130" cy="130" r="10" fill="#FFE4C4"/>
            <path d="M 122 130 Q 130 120 138 130" fill="#2C1810"/>
            <circle cx="127" cy="128" r="1.5" fill="#4A4A4A"/>
            <circle cx="133" cy="128" r="1.5" fill="#4A4A4A"/>
            <path d="M 128 132 Q 130 134 132 132" stroke="#D4756B" stroke-width="1" fill="none"/>
            
            <!-- Dad (second from left, blue shirt, glasses) -->
            <ellipse cx="95" cy="175" rx="14" ry="5" fill="#4A90E2" opacity="0.3"/>
            <ellipse cx="95" cy="150" rx="12" ry="15" fill="#4A90E2"/>
            <circle cx="95" cy="128" r="10" fill="#FFE4C4"/>
            <path d="M 87 125 Q 95 118 103 125" fill="#2C1810"/>
            <!-- Glasses -->
            <circle cx="92" cy="127" r="4" fill="none" stroke="#8B4513" stroke-width="1"/>
            <circle cx="98" cy="127" r="4" fill="none" stroke="#8B4513" stroke-width="1"/>
            <line x1="96" y1="127" x2="92" y2="127" stroke="#8B4513" stroke-width="1"/>
            <path d="M 93 131 Q 95 133 97 131" stroke="#D4756B" stroke-width="1" fill="none"/>
            
            <!-- Child (leftmost, blue shirt) -->
            <ellipse cx="65" cy="175" rx="10" ry="4" fill="#87CEEB" opacity="0.3"/>
            <ellipse cx="65" cy="160" rx="9" ry="11" fill="#87CEEB"/>
            <circle cx="65" cy="148" r="8" fill="#FFE4C4"/>
            <path d="M 58 145 Q 65 140 72 145" fill="#2C1810"/>
            <circle cx="62" cy="147" r="1.5" fill="#4A4A4A"/>
            <circle cx="68" cy="147" r="1.5" fill="#4A4A4A"/>
            <path d="M 63 150 Q 65 152 67 150" stroke="#D4756B" stroke-width="0.8" fill="none"/>
            
            <!-- Luggage beside child -->
            <rect x="48" y="165" width="8" height="10" fill="#FF6B6B" rx="1"/>
            <rect x="50" y="167" width="4" height="1" fill="#FFD700"/>
            <line x1="52" y1="165" x2="52" y2="163" stroke="#8B4513" stroke-width="1"/>
          </svg>
        </div>
      </div>
    </div>

    <!-- Holiday Exclusive Vouchers -->
    <div class="mb-6">
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center gap-2">
          <h3 class="text-lg font-bold text-gray-900">假日专属 大额神券</h3>
          <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
        </div>
        <div class="flex items-center gap-1 text-sm text-gray-500">
          <span>节假日更新</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </div>
      </div>

      <% if @available_coupons.any? %>
        <div class="flex gap-3 overflow-x-auto pb-2 -mx-4 px-4 scrollbar-hide">
          <% @available_coupons.each do |coupon| %>
            <div class="flex-shrink-0 w-40 bg-white rounded-xl shadow-sm overflow-hidden">
              <!-- Badge -->
              <div class="flex justify-center pt-3">
                <% if coupon.coupon_type == '国内多人机票' %>
                  <span class="px-3 py-1 bg-gradient-to-r from-red-500 to-orange-500 text-white text-xs rounded-full">错峰飞行</span>
                <% elsif coupon.coupon_type == '自驾游' %>
                  <span class="px-3 py-1 bg-gradient-to-r from-orange-500 to-red-500 text-white text-xs rounded-full">自驾游</span>
                <% else %>
                  <span class="px-3 py-1 bg-gradient-to-r from-purple-500 to-pink-500 text-white text-xs rounded-full"><%= coupon.coupon_type %></span>
                <% end %>
              </div>

              <!-- Title -->
              <div class="px-3 pt-2 text-center">
                <h4 class="font-medium text-gray-900 text-sm"><%= coupon.title %></h4>
                <% if coupon.description.present? %>
                  <p class="text-xs text-gray-500 mt-1"><%= coupon.description %></p>
                <% end %>
              </div>

              <!-- Amount -->
              <div class="flex items-center justify-center py-3">
                <span class="text-red-500 text-sm">¥</span>
                <span class="text-red-500 text-4xl font-bold"><%= coupon.amount.to_i %></span>
              </div>

              <!-- Button -->
              <div class="px-3 pb-3">
                <% if @family_benefit.verification_status == 'verified' %>
                  <button class="w-full py-2.5 bg-gradient-to-r from-orange-500 to-red-500 text-white rounded-full text-sm font-medium">
                    立即领取
                  </button>
                <% else %>
                  <button class="w-full py-2.5 bg-gradient-to-r from-orange-500 to-red-500 text-white rounded-full text-sm font-medium">
                    认证后可领
                  </button>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="bg-white rounded-xl p-6 text-center">
          <p class="text-gray-500 text-sm">暂无可用优惠券</p>
        </div>
      <% end %>
    </div>

    <!-- Family Travel Tips -->
    <div class="mb-6">
      <div class="flex items-center gap-2 mb-3">
        <h3 class="text-lg font-bold text-gray-900">家庭出行小贴士</h3>
        <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
      </div>

      <div class="space-y-3">
        <!-- Tip 1 -->
        <div class="bg-white rounded-xl p-4 flex items-center gap-3 shadow-sm">
          <div class="flex-shrink-0 w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div class="flex-1">
            <h4 class="font-medium text-gray-900 mb-1">带宝宝坐飞机必看</h4>
            <p class="text-xs text-gray-500">3124用户认为有帮助</p>
          </div>
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </div>

        <!-- Tip 2 -->
        <div class="bg-white rounded-xl p-4 flex items-center gap-3 shadow-sm">
          <div class="flex-shrink-0 w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div class="flex-1">
            <h4 class="font-medium text-gray-900 mb-1">带老人坐飞机必看</h4>
            <p class="text-xs text-gray-500">1.3w用户认为有帮助</p>
          </div>
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </div>

        <!-- Tip 3 -->
        <div class="bg-white rounded-xl p-4 flex items-center gap-3 shadow-sm">
          <div class="flex-shrink-0 w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div class="flex-1">
            <h4 class="font-medium text-gray-900 mb-1">国际带宝宝坐飞机必看</h4>
            <p class="text-xs text-gray-500">1654用户认为有帮助</p>
          </div>
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Fixed Bottom Button -->
  <div class="fixed bottom-0 left-0 right-0 bg-white px-4 py-3 shadow-lg">
    <%= link_to verify_family_benefits_path, class: "block w-full py-4 bg-gradient-to-r from-yellow-400 to-yellow-500 text-gray-900 rounded-full text-center font-bold text-lg relative overflow-hidden" do %>
      <div class="absolute top-2 right-4 flex items-center gap-1 bg-gradient-to-r from-red-500 to-orange-500 text-white text-xs px-2 py-1 rounded-full">
        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z"/>
        </svg>
        <span>领最高50元机票券</span>
      </div>
      创建家庭享权益
    <% end %>
  </div>
</div>

<style>
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>
