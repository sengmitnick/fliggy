<div class="min-h-screen bg-gradient-to-b from-orange-50 to-purple-50 pb-24">
  <!-- Header -->
  <div class="bg-white sticky top-0 z-10 shadow-sm">
    <div class="flex items-center px-4 py-4">
      <%= link_to family_benefits_path, class: "text-gray-700" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      <% end %>
      <h1 class="flex-1 text-center text-xl font-bold text-gray-900 pr-6">家庭认证</h1>
    </div>
  </div>

  <div class="px-4 pt-6">
    <!-- Info Card -->
    <div class="bg-gradient-to-br from-blue-50 to-purple-50 rounded-2xl p-6 mb-6">
      <div class="flex items-start gap-3">
        <div class="flex-shrink-0 w-12 h-12 bg-blue-500 rounded-full flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="flex-1">
          <h3 class="font-bold text-gray-900 mb-2">为什么需要认证？</h3>
          <ul class="space-y-1 text-sm text-gray-600">
            <li>• 获取专属家庭优惠券</li>
            <li>• 享受家庭出行特权</li>
            <li>• 获取儿童/老人出行指南</li>
            <li>• 优先客服支持</li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Verification Form -->
    <%= form_with model: @family_benefit, url: family_benefits_path, method: :post, class: "space-y-4" do |f| %>
      <%= render 'shared/form_error_message', model: @family_benefit %>

      <!-- Adult Count -->
      <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <div class="p-4">
          <div class="flex items-center gap-3 mb-3">
            <div class="flex-shrink-0 w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <div>
              <label class="block font-medium text-gray-900">成人数量</label>
              <span class="text-xs text-gray-500">12岁以上</span>
            </div>
          </div>
          <div class="flex items-center justify-between bg-gray-50 rounded-lg p-3">
            <button type="button" class="w-10 h-10 bg-white rounded-full shadow-sm flex items-center justify-center text-gray-600 hover:bg-gray-100" onclick="decrementAdult()">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
              </svg>
            </button>
            <%= f.number_field :adult_count, value: @family_benefit.adult_count || 0, min: 0, max: 10, class: "w-20 text-center text-2xl font-bold text-gray-900 bg-transparent border-none focus:outline-none", id: "adult_count" %>
            <button type="button" class="w-10 h-10 bg-white rounded-full shadow-sm flex items-center justify-center text-gray-600 hover:bg-gray-100" onclick="incrementAdult()">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
            </button>
          </div>
        </div>
      </div>

      <!-- Child Count -->
      <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <div class="p-4">
          <div class="flex items-center gap-3 mb-3">
            <div class="flex-shrink-0 w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <label class="block font-medium text-gray-900">儿童数量</label>
              <span class="text-xs text-gray-500">12岁以下</span>
            </div>
          </div>
          <div class="flex items-center justify-between bg-gray-50 rounded-lg p-3">
            <button type="button" class="w-10 h-10 bg-white rounded-full shadow-sm flex items-center justify-center text-gray-600 hover:bg-gray-100" onclick="decrementChild()">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
              </svg>
            </button>
            <%= f.number_field :child_count, value: @family_benefit.child_count || 0, min: 0, max: 10, class: "w-20 text-center text-2xl font-bold text-gray-900 bg-transparent border-none focus:outline-none", id: "child_count" %>
            <button type="button" class="w-10 h-10 bg-white rounded-full shadow-sm flex items-center justify-center text-gray-600 hover:bg-gray-100" onclick="incrementChild()">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
            </button>
          </div>
        </div>
      </div>

      <!-- Tips Card -->
      <div class="bg-gradient-to-br from-yellow-50 to-orange-50 rounded-xl p-4">
        <div class="flex items-start gap-2">
          <svg class="w-5 h-5 text-yellow-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
          <div class="text-sm text-gray-700">
            <p class="font-medium mb-1">温馨提示</p>
            <ul class="space-y-1 text-xs">
              <li>• 认证后即可领取大额优惠券</li>
              <li>• 家庭成员信息仅用于提供更好的服务</li>
              <li>• 您可以随时修改家庭成员信息</li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="pt-4">
        <%= f.hidden_field :verification_status, value: 'verified' %>
        <%= f.submit "完成认证", class: "w-full py-4 bg-gradient-to-r from-blue-500 to-purple-500 text-white rounded-full text-center font-bold text-lg shadow-lg hover:shadow-xl transition-shadow" %>
      </div>
    <% end %>
  </div>
</div>

<script>
  function incrementAdult() {
    const input = document.getElementById('adult_count');
    const currentValue = parseInt(input.value) || 0;
    if (currentValue < 10) {
      input.value = currentValue + 1;
    }
  }

  function decrementAdult() {
    const input = document.getElementById('adult_count');
    const currentValue = parseInt(input.value) || 0;
    if (currentValue > 0) {
      input.value = currentValue - 1;
    }
  }

  function incrementChild() {
    const input = document.getElementById('child_count');
    const currentValue = parseInt(input.value) || 0;
    if (currentValue < 10) {
      input.value = currentValue + 1;
    }
  }

  function decrementChild() {
    const input = document.getElementById('child_count');
    const currentValue = parseInt(input.value) || 0;
    if (currentValue > 0) {
      input.value = currentValue - 1;
    }
  }
</script>
