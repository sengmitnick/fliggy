<%= link_to abroad_ticket_order_path(booking), class: "block bg-surface border border-border rounded-xl overflow-hidden transition-all hover:shadow-md" do %>
  <div class="p-4">
    <!-- Header Section -->
    <div class="flex justify-between items-start mb-3">
      <div class="flex items-center space-x-2">
        <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
        </svg>
        <span class="text-sm font-semibold text-text-primary">境外当地交通</span>
      </div>
      <span class="text-xs px-2 py-1 rounded-full 
        <%= case booking.status
            when 'paid' then 'bg-blue-100 text-blue-700'
            when 'pending' then 'bg-yellow-100 text-yellow-700'
            when 'completed' then 'bg-green-100 text-green-700'
            when 'cancelled' then 'bg-gray-100 text-gray-600'
            else 'bg-gray-100 text-gray-600'
            end %>">
        <%= case booking.status
            when 'paid' then '已支付'
            when 'pending' then '待支付'
            when 'completed' then '已完成'
            when 'cancelled' then '已取消'
            else booking.status
            end %>
      </span>
    </div>

    <!-- Route Section -->
    <div class="mb-3">
      <div class="flex items-center justify-between mb-2">
        <div class="flex-1">
          <div class="text-base font-bold text-text-primary"><%= booking.abroad_ticket.origin %></div>
          <div class="text-xs text-text-muted"><%= booking.abroad_ticket.origin_en %></div>
        </div>
        <div class="flex-shrink-0 mx-3">
          <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </div>
        <div class="flex-1 text-right">
          <div class="text-base font-bold text-text-primary"><%= booking.abroad_ticket.destination %></div>
          <div class="text-xs text-text-muted"><%= booking.abroad_ticket.destination_en %></div>
        </div>
      </div>
    </div>

    <!-- Details Section -->
    <div class="space-y-1.5 text-sm">
      <div class="flex justify-between text-text-secondary">
        <span class="text-text-muted">出发日期</span>
        <span class="font-medium">
          <%= booking.abroad_ticket.departure_date.strftime('%Y年%m月%d日') %>
          <%= ['周日', '周一', '周二', '周三', '周四', '周五', '周六'][booking.abroad_ticket.departure_date.wday] %>
        </span>
      </div>
      <div class="flex justify-between text-text-secondary">
        <span class="text-text-muted">出发时段</span>
        <span class="font-medium"><%= booking.abroad_ticket.time_slot_start %> - <%= booking.abroad_ticket.time_slot_end %></span>
      </div>
      <div class="flex justify-between text-text-secondary">
        <span class="text-text-muted">座席类型</span>
        <span class="font-medium"><%= booking.seat_category %>|普通车厢(二等座)</span>
      </div>
      <div class="flex justify-between text-text-secondary">
        <span class="text-text-muted">乘客</span>
        <span class="font-medium"><%= booking.passenger_type.gsub('adult', '成人').gsub('child', '儿童') %></span>
      </div>
    </div>

    <!-- Footer Section -->
    <div class="mt-3 pt-3 border-t border-border flex justify-between items-center">
      <div class="flex flex-col">
        <span class="text-xs text-text-muted mb-0.5">订单金额</span>
        <div class="text-accent font-bold">
          <span class="text-sm">¥</span>
          <span class="text-lg"><%= sprintf('%.2f', booking.total_price) %></span>
        </div>
      </div>
      <div class="flex space-x-2">
        <% if booking.status == 'pending' %>
          <%= link_to "立即支付", pay_abroad_ticket_order_path(booking), 
              class: "px-4 py-1.5 bg-primary text-surface text-sm rounded-full font-medium",
              data: { turbo: false } %>
        <% elsif booking.status == 'paid' %>
          <span class="px-4 py-1.5 bg-blue-50 text-blue-600 text-sm rounded-full font-medium">等待出票</span>
        <% elsif booking.status == 'completed' %>
          <span class="px-4 py-1.5 bg-green-50 text-green-600 text-sm rounded-full font-medium">查看详情</span>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
