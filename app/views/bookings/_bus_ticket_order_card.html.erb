<div class="bg-surface border border-border rounded-xl overflow-hidden mb-3">
  <!-- Bus Ticket Header -->
  <div class="flex items-center justify-between px-4 py-3 border-b border-border">
    <div class="flex items-center space-x-2">
      <div class="w-6 h-6 bg-secondary/10 rounded flex items-center justify-center">
        <svg class="w-4 h-4 text-secondary" fill="currentColor" viewBox="0 0 20 20">
          <path d="M8 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM15 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z"/>
          <path d="M3 4a1 1 0 00-1 1v10a1 1 0 001 1h1.05a2.5 2.5 0 014.9 0H10a1 1 0 001-1V5a1 1 0 00-1-1H3zM14 7a1 1 0 00-1 1v6.05A2.5 2.5 0 0115.95 16H17a1 1 0 001-1v-5a1 1 0 00-.293-.707l-2-2A1 1 0 0015 7h-1z"/>
        </svg>
      </div>
      <span class="text-sm font-semibold text-text-primary">汽车票</span>
    </div>
    <div class="flex items-center space-x-2">
      <% if booking.status == 'cancelled' %>
        <span class="px-2 py-1 bg-danger/10 text-danger text-xs rounded">已关闭</span>
      <% elsif booking.status == 'pending' %>
        <span class="px-2 py-1 bg-warning/10 text-warning text-xs rounded">待付款</span>
      <% elsif booking.status == 'paid' %>
        <span class="px-2 py-1 bg-success/10 text-success text-xs rounded">预订成功</span>
      <% elsif booking.status == 'completed' %>
        <span class="px-2 py-1 bg-info/10 text-info text-xs rounded">已完成</span>
      <% end %>
      <button type="button" class="text-text-muted" aria-label="展开详情">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Bus Ticket Details -->
  <%= link_to success_bus_ticket_order_path(booking), class: "block" do %>
    <div class="px-4 py-4">
      <!-- Route Info -->
      <div class="flex items-center justify-between mb-3">
        <div class="flex-1">
          <div class="flex items-center space-x-3 mb-2">
            <div class="text-text-primary text-lg font-bold">
              <%= booking.departure_station %>
            </div>
            <div class="flex-1 flex items-center justify-center">
              <div class="flex items-center space-x-1">
                <div class="w-12 h-px bg-border"></div>
                <svg class="w-4 h-4 text-text-muted" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M8 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM15 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z"/>
                  <path d="M3 4a1 1 0 00-1 1v10a1 1 0 001 1h1.05a2.5 2.5 0 014.9 0H10a1 1 0 001-1V5a1 1 0 00-1-1H3zM14 7a1 1 0 00-1 1v6.05A2.5 2.5 0 0115.95 16H17a1 1 0 001-1v-5a1 1 0 00-.293-.707l-2-2A1 1 0 0015 7h-1z"/>
                </svg>
                <div class="w-12 h-px bg-border"></div>
              </div>
            </div>
            <div class="text-text-primary text-lg font-bold">
              <%= booking.arrival_station %>
            </div>
          </div>
          
          <div class="text-xs text-text-muted mb-2">
            发车时间: <%= booking.bus_ticket.departure_date.strftime('%Y-%m-%d') %> <%= booking.bus_ticket.departure_time %>
          </div>
          
          <div class="text-xs text-text-muted">
            车次: <%= booking.bus_ticket.route_description %>
          </div>
        </div>
      </div>

      <!-- Passenger Info -->
      <div class="flex items-center space-x-3 text-xs text-text-muted mb-3">
        <span>乘车人: <%= booking.passenger_name %></span>
        <span>|</span>
        <span><%= booking.contact_phone %></span>
      </div>

      <!-- Services/Tags -->
      <div class="flex flex-wrap gap-2 mb-3">
        <span class="px-2 py-1 bg-surface-elevated text-text-secondary text-xs rounded">汽车票订单</span>
        <% if booking.insurance_type == 'premium' %>
          <span class="px-2 py-1 bg-info/10 text-info text-xs rounded">高额保障险</span>
        <% elsif booking.insurance_type == 'refund' %>
          <span class="px-2 py-1 bg-info/10 text-info text-xs rounded">退改无忧险</span>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Price Section -->
  <div class="px-4 py-3 bg-surface-elevated flex items-center justify-between">
    <div>
      <div class="text-text-muted text-xs mb-1">
        <% if booking.status == 'cancelled' %>
          未付款
        <% else %>
          实付款
        <% end %>
      </div>
      <div class="flex items-baseline space-x-1">
        <span class="text-xs text-text-primary">¥</span>
        <span class="text-2xl font-bold text-primary"><%= sprintf('%.2f', booking.total_price) %></span>
      </div>
    </div>
    <div class="flex items-center space-x-2">
      <% if booking.status == 'paid' || booking.status == 'completed' %>
        <%= link_to '查看详情', success_bus_ticket_order_path(booking), class: 'px-4 py-2 bg-surface border border-border text-text-primary text-sm rounded-full font-medium' %>
        <%= link_to '再来一单', bus_tickets_path, class: 'px-4 py-2 bg-primary text-surface text-sm rounded-full font-semibold' %>
      <% elsif booking.status == 'cancelled' %>
        <%= link_to '重新预订', bus_tickets_path, class: 'px-4 py-2 bg-surface border border-border text-text-primary text-sm rounded-full font-medium' %>
      <% elsif booking.status == 'pending' %>
        <%= link_to '取消订单', '#', class: 'px-4 py-2 bg-surface border border-border text-text-primary text-sm rounded-full font-medium' %>
        <%= link_to '立即支付', new_bus_ticket_order_path(bus_ticket_id: booking.bus_ticket_id), class: 'px-4 py-2 bg-primary text-surface text-sm rounded-full font-semibold' %>
      <% end %>
    </div>
  </div>
</div>
