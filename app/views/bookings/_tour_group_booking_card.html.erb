<div class="bg-surface border border-border rounded-xl overflow-hidden mb-3">
  <!-- Tour Group Header -->
  <div class="flex items-center justify-between px-4 py-3 border-b border-border">
    <div class="flex items-center space-x-2">
      <div class="w-6 h-6 bg-secondary/10 rounded flex items-center justify-center">
        <svg class="w-4 h-4 text-secondary" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
        </svg>
      </div>
      <span class="text-sm font-semibold text-text-primary">跟团游</span>
    </div>
    <div class="flex items-center space-x-2">
      <% if booking.status == 'cancelled' %>
        <span class="px-2 py-1 bg-danger/10 text-danger text-xs rounded">已关闭</span>
      <% elsif booking.status == 'pending' %>
        <span class="px-2 py-1 bg-warning/10 text-warning text-xs rounded">待付款</span>
      <% elsif booking.status == 'confirmed' %>
        <span class="px-2 py-1 bg-success/10 text-success text-xs rounded">预订成功</span>
      <% elsif booking.status == 'completed' %>
        <span class="px-2 py-1 bg-info/10 text-info text-xs rounded">已完成</span>
      <% end %>
      <button type="button" class="text-text-muted">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Tour Details -->
  <%= link_to success_tour_group_booking_path(booking), class: "block" do %>
    <div class="px-4 py-4">
      <!-- Tour Title -->
      <div class="flex items-center justify-between mb-2">
        <div class="flex-1">
          <div class="text-text-primary text-lg font-bold mb-1">
            <%= booking.tour_group_product.title %>
          </div>
          <div class="text-xs text-text-muted mb-2">
            <%= booking.tour_group_product.destination %>
          </div>
        </div>
      </div>

      <!-- Package Info -->
      <div class="flex items-center space-x-3 text-xs text-text-muted mb-3">
        <span>套餐: <%= booking.tour_package.name %></span>
        <span>|</span>
        <span><%= booking.tour_group_product.duration %></span>
      </div>

      <!-- Departure Info -->
      <div class="text-xs text-text-muted mb-2">
        <div class="mb-1">
          出发日期: <%= booking.travel_date.strftime('%Y-%m-%d') %>(<%= ['周日', '周一', '周二', '周三', '周四', '周五', '周六'][booking.travel_date.wday] %>)
        </div>
        <div>
          人数: 成人 <%= booking.adult_count %>人
          <% if booking.child_count > 0 %>
            · 儿童 <%= booking.child_count %>人
          <% end %>
        </div>
      </div>

      <!-- Contact Info -->
      <div class="flex items-center space-x-3 text-xs text-text-muted mb-3">
        <span>联系人: <%= booking.contact_name %></span>
        <span>|</span>
        <span><%= booking.contact_phone %></span>
      </div>

      <!-- Services/Tags -->
      <div class="flex flex-wrap gap-2 mb-3">
        <span class="px-2 py-1 bg-surface-elevated text-text-secondary text-xs rounded">跟团游</span>
        <span class="px-2 py-1 bg-surface-elevated text-text-secondary text-xs rounded"><%= booking.tour_package.name %></span>
      </div>
    </div>
  <% end %>

  <!-- Price Section -->
  <div class="px-4 py-3 bg-surface-elevated flex items-center justify-between">
    <div>
      <div class="text-text-muted text-xs mb-1">
        <% if booking.status == 'cancelled' %>
          未付款
        <% else %>
          实付款
        <% end %>
      </div>
      <div class="flex items-baseline space-x-1">
        <span class="text-xs text-text-primary">¥</span>
        <span class="text-2xl font-bold text-primary"><%= sprintf('%.2f', booking.total_price) %></span>
      </div>
    </div>
    <div class="flex items-center space-x-2">
      <% if booking.status == 'confirmed' || booking.status == 'completed' %>
        <%= link_to '查看详情', success_tour_group_booking_path(booking), class: 'px-4 py-2 bg-surface border border-border text-text-primary text-sm rounded-full font-medium' %>
        <%= link_to '再来一单', tour_group_path(booking.tour_group_product), class: 'px-4 py-2 bg-primary text-surface text-sm rounded-full font-semibold' %>
      <% elsif booking.status == 'cancelled' %>
        <%= link_to '重新预订', tour_group_path(booking.tour_group_product), class: 'px-4 py-2 bg-surface border border-border text-text-primary text-sm rounded-full font-medium' %>
      <% elsif booking.status == 'pending' %>
        <%= link_to '取消订单', '#', class: 'px-4 py-2 bg-surface border border-border text-text-primary text-sm rounded-full font-medium' %>
        <%= link_to '立即支付', tour_group_booking_path(booking), class: 'px-4 py-2 bg-primary text-surface text-sm rounded-full font-semibold' %>
      <% end %>
    </div>
  </div>
</div>
