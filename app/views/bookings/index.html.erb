<div class="min-h-screen bg-surface">
  <!-- Header -->
  <div class="bg-surface border-b border-border sticky top-0 z-10">
    <div class="flex items-center justify-between px-4 py-3">
      <div class="flex items-center space-x-3">
        <%= link_to profile_path, class: "text-text-primary" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        <% end %>
        <h1 class="text-lg font-semibold text-text-primary">我的订单</h1>
      </div>
      <div class="flex items-center space-x-4">
        <button type="button" class="text-text-primary">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>
        <button type="button" class="text-text-primary">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Status Filter Tabs -->
  <div class="bg-surface border-b border-border sticky top-[56px] z-10">
    <div class="flex justify-around px-4 py-3">
      <%= link_to bookings_path, class: "flex flex-col items-center space-y-1 text-sm transition-colors #{'text-primary font-semibold' if @status_filter == 'all'} #{'text-text-secondary' unless @status_filter == 'all'}" do %>
        <span>全部</span>
      <% end %>
      <%= link_to bookings_path(status: 'pending'), class: "flex flex-col items-center space-y-1 text-sm transition-colors #{'text-primary font-semibold' if @status_filter == 'pending'} #{'text-text-secondary' unless @status_filter == 'pending'}" do %>
        <span>待付款</span>
      <% end %>
      <%= link_to bookings_path(status: 'upcoming'), class: "flex flex-col items-center space-y-1 text-sm transition-colors #{'text-primary font-semibold' if @status_filter == 'upcoming'} #{'text-text-secondary' unless @status_filter == 'upcoming'}" do %>
        <span>未出行</span>
      <% end %>
      <%= link_to bookings_path(status: 'review'), class: "flex flex-col items-center space-y-1 text-sm transition-colors #{'text-primary font-semibold' if @status_filter == 'review'} #{'text-text-secondary' unless @status_filter == 'review'}" do %>
        <span>待评价</span>
      <% end %>
      <%= link_to bookings_path(status: 'refund'), class: "flex flex-col items-center space-y-1 text-sm transition-colors #{'text-primary font-semibold' if @status_filter == 'refund'} #{'text-text-secondary' unless @status_filter == 'refund'}" do %>
        <span>退款/售后</span>
      <% end %>
    </div>
  </div>

  <!-- Notice Bar -->
  <div class="bg-warning-bg border-b border-warning/20 px-4 py-3 flex items-center justify-between">
    <div class="flex items-center space-x-2">
      <svg class="w-5 h-5 text-warning" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
      </svg>
      <span class="text-sm text-warning">开启做信通知，订单信息变时推送</span>
    </div>
    <button type="button" class="px-3 py-1 bg-warning text-surface text-sm rounded-full font-medium">开启</button>
    <button type="button" class="text-text-muted">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>

  <!-- Bookings Section -->
  <div class="px-4 py-3">
    <div class="flex items-center justify-between mb-3">
      <h2 class="text-sm font-semibold text-text-secondary">预约订单</h2>
      <button type="button" class="text-xs text-text-muted flex items-center space-x-1">
        <span>预约管理设置</span>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>
    </div>

    <!-- Booking Cards -->
    <div class="space-y-3">
      <% if @bookings.any? %>
        <% @bookings.each do |booking| %>
          <% if booking.is_a?(Booking) %>
            <%= render partial: 'bookings/booking_card', locals: { booking: booking } %>
          <% elsif booking.is_a?(HotelBooking) %>
            <%= render partial: 'bookings/hotel_booking_card', locals: { booking: booking } %>
          <% elsif booking.is_a?(TourGroupBooking) %>
            <%= render partial: 'bookings/tour_group_booking_card', locals: { booking: booking } %>
          <% elsif booking.is_a?(CarOrder) %>
            <%= render partial: 'bookings/car_order_card', locals: { booking: booking } %>
          <% elsif booking.is_a?(BusTicketOrder) %>
            <%= render partial: 'bookings/bus_ticket_order_card', locals: { booking: booking } %>
          <% elsif booking.is_a?(HotelPackageOrder) %>
            <%= render partial: 'bookings/hotel_package_order_card', locals: { booking: booking } %>
          <% elsif booking.is_a?(VisaOrder) %>
            <%= render partial: 'bookings/visa_order_card', locals: { booking: booking } %>
          <% elsif booking.is_a?(AbroadTicketOrder) %>
            <%= render partial: 'bookings/abroad_ticket_order_card', locals: { booking: booking } %>
          <% elsif booking.is_a?(InternetOrder) %>
            <%= render partial: 'bookings/internet_order_card', locals: { booking: booking } %>
          <% elsif booking.is_a?(Transfer) %>
            <%= render partial: 'bookings/transfer_card', locals: { booking: booking } %>
          <% end %>
        <% end %>
        
        <!-- Manual Pagination -->
        <% if @total_pages > 1 %>
          <div class="py-4 flex justify-center items-center space-x-2">
            <% if @page > 1 %>
              <%= link_to bookings_path(status: @status_filter, page: @page - 1), class: 'px-3 py-1 bg-surface border border-border rounded text-sm' do %>
                上一页
              <% end %>
            <% end %>
            
            <span class="text-sm text-text-muted">
              第 <%= @page %> / <%= @total_pages %> 页 (共 <%= @total_count %> 条)
            </span>
            
            <% if @page < @total_pages %>
              <%= link_to bookings_path(status: @status_filter, page: @page + 1), class: 'px-3 py-1 bg-surface border border-border rounded text-sm' do %>
                下一页
              <% end %>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <!-- Empty State -->
        <div class="flex flex-col items-center justify-center py-12">
          <svg class="w-24 h-24 text-text-muted mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <p class="text-text-muted text-base mb-2">暂无订单</p>
          <p class="text-text-muted text-sm">去预订您的第一张机票或酒店吧</p>
          <div class="flex gap-2 mt-4">
            <%= link_to '搜索航班', search_flights_path, class: 'btn-primary' %>
            <%= link_to '搜索酒店', hotels_path, class: 'btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Recommendations Section -->
  <div class="mt-6 px-4 pb-20">
    <div class="border-t border-border pt-6">
      <h3 class="text-sm font-semibold text-text-primary mb-4">01月10日前往武汉，为你推荐</h3>
      <div class="grid grid-cols-2 gap-3">
        <!-- Hotel Recommendation -->
        <div class="bg-surface border border-border rounded-xl overflow-hidden">
          <div class="aspect-[4/3] bg-gradient-to-br from-blue-400 to-blue-600 relative">
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center">
                <div class="w-12 h-12 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-2">
                  <svg class="w-6 h-6 text-surface" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
                  </svg>
                </div>
                <div class="text-surface text-sm font-medium">武汉精选酒店</div>
                <div class="text-surface/80 text-xs">订酒店折扣多</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Attraction Recommendation -->
        <div class="bg-surface border border-border rounded-xl overflow-hidden">
          <div class="aspect-[4/3] bg-gradient-to-br from-green-400 to-green-600 relative">
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center">
                <div class="w-12 h-12 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-2">
                  <svg class="w-6 h-6 text-surface" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5 2a1 1 0 011 1v1h1a1 1 0 010 2H6v1a1 1 0 01-2 0V6H3a1 1 0 010-2h1V3a1 1 0 011-1zm0 10a1 1 0 011 1v1h1a1 1 0 110 2H6v1a1 1 0 11-2 0v-1H3a1 1 0 110-2h1v-1a1 1 0 011-1zM12 2a1 1 0 01.967.744L14.146 7.2 17.5 9.134a1 1 0 010 1.732l-3.354 1.935-1.18 4.455a1 1 0 01-1.933 0L9.854 12.8 6.5 10.866a1 1 0 010-1.732l3.354-1.935 1.18-4.455A1 1 0 0112 2z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="text-surface text-sm font-medium">武汉门1景点</div>
                <div class="text-surface/80 text-xs">在三生原版购买</div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="mt-3 text-center">
        <button type="button" class="text-xs text-text-muted">
          已经提退居尽
        </button>
      </div>
    </div>
  </div>
</div>
