<div class="min-h-screen bg-gray-50 pb-24">
  <!-- 顶部导航栏 -->
  <div class="bg-white border-b border-gray-200 sticky top-0 z-40">
    <div class="flex items-center justify-between p-4">
      <div class="flex items-center space-x-3">
        <%= link_to hotel_path(@hotel, check_in: @booking.check_in_date, check_out: @booking.check_out_date, rooms: @booking.rooms_count, adults: @booking.adults_count, children: @booking.children_count, q: params[:q]), class: "text-gray-600" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        <% end %>
        <h1 class="text-lg font-bold text-gray-900"><%= @hotel.name %></h1>
      </div>
    </div>
  </div>

  <!-- Controller wrapper -->
  <div data-controller="hotel-booking payment-confirmation"
       data-payment-confirmation-amount-value="<%= (@hotel_room.price * @booking.rooms_count + (@booking.insurance_price || 0)).to_i %>"
       data-payment-confirmation-user-email-value="<%= current_user.email %>"
       data-payment-confirmation-payment-url-value="/hotel_bookings/<%='BOOKING_ID_PLACEHOLDER'%>/pay"
       data-payment-confirmation-success-url-value="/hotel_bookings/<%='BOOKING_ID_PLACEHOLDER'%>/success">
    <%= form_with model: @booking, url: hotel_bookings_path, method: :post, class: "space-y-2", data: { controller: "payment-modal hotel-traveler-selector", hotel_booking_target: "form" } do |f| %>
    <%= render 'shared/form_error_message', model: @booking %>
    
    <%= f.hidden_field :hotel_room_id, value: @hotel_room.id %>
    <%= f.hidden_field :check_in_date, value: @booking.check_in_date %>
    <%= f.hidden_field :check_out_date, value: @booking.check_out_date %>
    <%= f.hidden_field :rooms_count, value: @booking.rooms_count, data: { hotel_booking_target: "roomsInput" } %>
    <%= f.hidden_field :adults_count, value: @booking.adults_count %>
    <%= f.hidden_field :children_count, value: @booking.children_count %>
    <%= f.hidden_field :payment_method, value: "花呗", data: { payment_modal_target: "paymentMethodInput" } %>
    <%= f.hidden_field :insurance_type, id: "hotel_booking_insurance_type", value: "none" %>
    <%= f.hidden_field :insurance_price, id: "hotel_booking_insurance_price", value: 0 %>
    <%= hidden_field_tag :hotel_id, @hotel.id %>

    <!-- 日期和房型信息 -->
    <div class="bg-yellow-50 border border-yellow-200 p-4">
      <div class="flex items-start justify-between mb-3">
        <div class="flex-1">
          <div class="flex items-center space-x-2 mb-2">
            <span class="text-sm font-medium text-gray-900">
              <%= @booking.check_in_date.strftime('%m月%d日') %> <%= ['周日', '周一', '周二', '周三', '周四', '周五', '周六'][@booking.check_in_date.wday] %> - <%= @booking.check_out_date.strftime('%m月%d日') %> <%= ['周日', '周一', '周二', '周三', '周四', '周五', '周六'][@booking.check_out_date.wday] %>
            </span>
            <span class="bg-white border border-gray-300 text-gray-700 text-xs px-2 py-0.5 rounded"><%= (@booking.check_out_date - @booking.check_in_date).to_i %>晚</span>
          </div>
          <div class="text-sm text-gray-600">
            雅致大床房 · 大床 · 无早餐 · 23m² · 有窗
          </div>
        </div>
        <button type="button" class="text-orange-500 text-sm">
          房型详情 >
        </button>
      </div>
      
      <div class="flex items-center justify-between text-sm">
        <span class="text-gray-600">
          <%= @booking.rooms_count %>间 <%= @booking.adults_count %>大<%= @booking.children_count %>小
        </span>
      </div>
    </div>

    <!-- 提示信息 -->
    <div class="bg-orange-50 border-l-4 border-orange-400 p-3">
      <div class="flex items-start">
        <svg class="w-5 h-5 text-orange-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z"/>
        </svg>
        <div class="text-sm text-orange-800">
          <p class="font-medium">疑似挑了酒店最后的房间</p>
        </div>
      </div>
    </div>

    <!-- 入住信息 -->
    <div class="bg-white p-4">
      <h2 class="text-lg font-bold text-gray-900 mb-4">入住信息</h2>
      
      <!-- 每间最多住几人 -->
      <div class="flex items-center justify-between py-3 border-b border-gray-100">
        <span class="text-gray-700">预订房间数</span>
        <div class="flex items-center space-x-3">
          <button type="button" 
                  data-action="click->hotel-booking#decreaseRooms"
                  class="w-8 h-8 rounded-full border border-gray-300 flex items-center justify-center text-gray-600 hover:bg-gray-50 transition-colors">
            -
          </button>
          <span class="text-lg font-medium" data-hotel-booking-target="roomsCount"><%= @booking.rooms_count %>间</span>
          <button type="button" 
                  data-action="click->hotel-booking#increaseRooms"
                  class="w-8 h-8 rounded-full border border-gray-300 flex items-center justify-center text-gray-600 hover:bg-gray-50 transition-colors">
            +
          </button>
        </div>
      </div>

      <!-- 入住人 -->
      <div class="py-3 border-b border-gray-100">
        <div class="flex items-center mb-2">
          <span class="text-gray-700">入住人</span>
          <svg class="w-4 h-4 ml-1 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"/>
          </svg>
        </div>
        <div class="flex items-center space-x-2">
          <%= f.text_field :guest_name, 
            placeholder: "输入姓名", 
            data: { hotel_traveler_selector_target: "guestNameInput" },
            class: "flex-1 px-3 py-2 border border-gray-300 rounded-lg text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent" %>
          <button type="button" 
            data-action="click->hotel-traveler-selector#openModal"
            class="w-10 h-10 rounded-lg border border-gray-300 flex items-center justify-center text-gray-600 hover:bg-gray-50 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </button>
        </div>
      </div>

      <!-- 联系手机 -->
      <div class="py-3">
        <div class="flex items-center mb-2">
          <span class="text-gray-700">联系手机</span>
        </div>
        <div class="flex items-center space-x-2">
          <%= f.telephone_field :guest_phone, 
            placeholder: "输入手机号",
            data: { hotel_traveler_selector_target: "guestPhoneInput" },
            class: "flex-1 px-3 py-2 border border-gray-300 rounded-lg text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent" %>
          <button type="button" class="w-10 h-10 rounded-lg border border-gray-300 flex items-center justify-center text-gray-400">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- 优惠信息 -->
    <div class="bg-white p-4">
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center">
          <span class="text-base font-medium text-gray-900">f2本单可享</span>
        </div>
        <div class="text-red-500 text-base font-bold">
          已享最大优惠¥<%= number_with_precision(13.84, precision: 2) %>
        </div>
      </div>

      <!-- 优惠项 -->
      <div class="space-y-3">
        <div class="flex items-center justify-between">
          <span class="text-gray-600 text-sm">优惠</span>
          <div class="flex items-center space-x-2">
            <span class="text-gray-900">已减¥<%= number_with_precision(13.84, precision: 2) %></span>
            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        </div>

        <div class="flex items-center justify-between">
          <span class="text-gray-600 text-sm">离店返现</span>
          <div class="flex items-center space-x-2">
            <span class="text-gray-900">276飞猪里程等</span>
            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- 挑战任务 -->
    <div class="bg-white p-4">
      <h3 class="text-base font-bold text-gray-900 mb-3">挑战任务</h3>
      <div class="flex items-center space-x-3">
        <div class="flex-shrink-0">
          <span class="text-sm text-gray-600">住5送1</span>
          <svg class="w-4 h-4 inline ml-1 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"/>
          </svg>
        </div>
        <div class="flex items-center space-x-2">
          <label class="inline-flex items-center">
            <input type="radio" name="challenge" value="option1" class="form-radio text-orange-500">
            <span class="ml-2 text-sm">住5晚可兑100元酒店券</span>
          </label>
        </div>
      </div>
    </div>

    <!-- 保险提示 -->
    <div class="bg-orange-50 px-4 py-3 flex items-center">
      <svg class="w-5 h-5 text-red-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
      </svg>
      <span class="text-red-500 font-medium text-sm">出门在外，有保障让家人更安心</span>
      <div class="ml-auto">
        <img src="https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?w=100&h=60&fit=crop" alt="" class="h-12 w-auto rounded">
      </div>
    </div>

    <!-- 酒店保险选项 -->
    <div class="bg-white p-4">
      <div class="flex items-center justify-between mb-4">
        <h4 class="font-bold text-gray-900">酒店保险
          <button type="button" onclick="window.showToast('精彩即将上线，敬请期待')" class="inline-block align-middle">
            <svg class="inline w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <circle cx="10" cy="10" r="7" stroke="currentColor" stroke-width="2" fill="none"/>
              <text x="10" y="14" text-anchor="middle" font-size="12" fill="currentColor">i</text>
            </svg>
          </button>
        </h4>
      </div>

      <!-- 保险选项卡 -->
      <div class="space-y-3">
        <!-- 无保障 -->
        <label class="relative border-2 border-gray-300 rounded-lg p-4 cursor-pointer transition-all hover:border-gray-400 block" data-insurance-card>
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
              <input type="radio" name="insurance_selection" value="none" class="w-5 h-5"
                     data-action="change->hotel-booking#selectInsuranceOption"
                     data-insurance-type="none"
                     data-insurance-price="0"
                     checked>
              <div>
                <div class="font-bold text-base text-gray-900">无保障</div>
                <div class="text-xs text-gray-500 mt-1">(放弃保障)</div>
              </div>
            </div>
            <div class="text-red-500 text-xl font-bold">×</div>
          </div>
        </label>

        <% if @insurance_options.present? %>
          <% @insurance_options.each do |key, option| %>
            <% next if key == :none %>
            <label class="relative border-2 border-gray-300 rounded-lg p-4 cursor-pointer transition-all hover:border-orange-400 block" data-insurance-card>
              <div class="flex items-start justify-between">
                <div class="flex items-start space-x-3 flex-1">
                  <input type="radio" name="insurance_selection" value="<%= key %>" class="w-5 h-5 mt-1"
                         data-action="change->hotel-booking#selectInsuranceOption"
                         data-insurance-type="<%= key %>"
                         data-insurance-price="<%= option[:price] %>">
                  <div class="flex-1">
                    <div class="font-bold text-base text-gray-900"><%= option[:name] %></div>
                    <% if option[:cancellation_refund] %>
                      <div class="text-xs text-gray-600 mt-1">取消退款：<%= (option[:cancellation_refund] * 100).to_i %>%</div>
                    <% elsif option[:hospitalization] %>
                      <div class="text-xs text-gray-600 mt-1">住院补贴：¥<%= option[:hospitalization] %>/天</div>
                      <div class="text-xs text-gray-600">交通津贴：¥<%= option[:transportation] %></div>
                    <% elsif option[:max_coverage] %>
                      <div class="text-xs text-gray-600 mt-1">最高保障：¥<%= number_with_precision(option[:max_coverage], precision: 0, delimiter: ',') %></div>
                    <% end %>
                  </div>
                </div>
                <div class="text-red-500 font-bold text-lg">¥<%= option[:price] %></div>
              </div>
            </label>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- 营销卡片 -->
    <div class="bg-gradient-to-r from-red-50 to-orange-50 mx-4 rounded-lg overflow-hidden">
      <div class="flex items-center p-4">
        <div class="flex-1">
          <div class="flex items-center mb-1">
            <img src="https://via.placeholder.com/40x40" alt="活动" class="w-10 h-10 rounded mr-3">
            <div>
              <div class="font-bold text-gray-900 text-sm">您有62元酒店优惠券包，购卡本单可用</div>
            </div>
          </div>
        </div>
        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </div>
    </div>

    <!-- Hotel Traveler Selector Modal -->
    <%= render 'shared/hotel_traveler_selector_modal' %>

    <!-- 底部支付栏 -->
    <div class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 p-4 z-40">
      <div class="max-w-md mx-auto">
        <div class="flex items-center justify-between">
          <div class="flex-1">
            <div class="flex items-baseline space-x-1">
              <span class="text-red-600 text-2xl font-bold">¥<span data-hotel-booking-target="totalPriceAmount" 
                data-base-price="<%= number_with_precision(@booking.total_price, precision: 2) %>" 
                data-room-price="<%= number_with_precision(@hotel_room.price, precision: 2) %>" 
                data-nights="<%= @booking.nights %>"><%= number_with_precision(@booking.total_price, precision: 2) %></span></span>
            </div>
            <div class="text-xs text-gray-500">
              已优惠¥<%= number_with_precision(13.84, precision: 2) %>
              <svg class="w-3 h-3 inline ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </div>
          </div>
          <button type="button" 
            data-action="click->hotel-booking#handleSubmit"
            class="bg-gradient-to-r from-orange-400 to-orange-500 text-white px-8 py-3 rounded-full font-bold text-base shadow-lg">
            立即支付
          </button>
        </div>
      </div>
    </div>

    <!-- 支付弹窗背景 -->
    <div data-payment-modal-target="backdrop" 
         data-action="click->payment-modal#closeOnBackdrop"
         class="hidden fixed inset-0 bg-black bg-opacity-50 z-50">
    </div>

    <!-- 支付弹窗 -->
    <div data-payment-modal-target="modal" 
         class="hidden fixed inset-x-0 bottom-0 z-50 transform transition-transform duration-300">
      <div class="bg-white rounded-t-3xl shadow-2xl max-h-[80vh] overflow-y-auto">
        <!-- 弹窗头部 -->
        <div class="sticky top-0 bg-white border-b border-gray-100 px-4 py-3 flex items-center justify-between">
          <h3 class="text-base font-medium text-gray-700">使用密码</h3>
          <button type="button" 
                  data-action="click->payment-modal#close"
                  class="text-gray-400 hover:text-gray-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>

        <!-- 总价显示 -->
        <div class="text-center py-6">
          <div class="text-4xl font-bold text-gray-900 mb-1">
            ¥<%= number_with_precision(@booking.total_price, precision: 2) %>
          </div>
        </div>

        <!-- 账号信息 -->
        <div class="px-4 mb-4">
          <div class="flex items-center justify-between text-sm text-gray-600">
            <span>账号</span>
            <span>sen***@163.com</span>
          </div>
        </div>

        <!-- 支付方式列表 -->
        <div class="px-4 pb-6 space-y-3">
          <!-- 花呗 -->
          <div data-payment-modal-target="paymentOption"
               data-payment-method="花呗"
               data-action="click->payment-modal#selectPayment"
               class="border-2 border-blue-500 bg-blue-50 rounded-xl p-4 cursor-pointer transition-all">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-blue-500 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z"/>
                    <path fill-rule="evenodd" d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z"/>
                  </svg>
                </div>
                <span class="font-medium text-gray-900">花呗</span>
              </div>
              <svg class="checkmark w-6 h-6 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
              </svg>
            </div>
          </div>

          <!-- 花呗分期 -->
          <div data-payment-modal-target="paymentOption"
               data-payment-method="花呗分期"
               data-action="click->payment-modal#selectPayment"
               class="border-2 border-gray-200 rounded-xl p-4 cursor-pointer transition-all">
            <div class="flex items-center justify-between mb-2">
              <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-blue-500 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z"/>
                    <path fill-rule="evenodd" d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z"/>
                  </svg>
                </div>
                <div>
                  <div class="font-medium text-gray-900">花呗分期</div>
                  <div class="text-xs text-red-500">需激活</div>
                </div>
              </div>
              <svg class="checkmark hidden w-6 h-6 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
              </svg>
            </div>
            
            <!-- 分期选项 -->
            <div class="grid grid-cols-3 gap-2 mt-3">
              <div class="text-center p-2 bg-gray-50 rounded-lg">
                <div class="text-xs text-gray-600">¥58.67×3期</div>
                <div class="text-xs text-gray-500">每月利息¥0.36</div>
              </div>
              <div class="text-center p-2 bg-gray-50 rounded-lg">
                <div class="text-xs text-gray-600">¥29.96×6期</div>
                <div class="text-xs text-gray-500">合计息¥1.29/期</div>
              </div>
              <div class="text-center p-2 bg-gray-50 rounded-lg">
                <div class="text-xs text-gray-600">¥15.40×12</div>
                <div class="text-xs text-gray-500">总利息¥1.07</div>
              </div>
            </div>
          </div>
        </div>

        <!-- 确认按钮 -->
        <div class="sticky bottom-0 bg-white border-t border-gray-100 p-4">
          <button type="button"
                  data-action="click->payment-modal#confirmPayment"
                  class="w-full bg-blue-500 hover:bg-blue-600 text-white py-4 rounded-full font-bold text-lg transition-colors">
            确认付款
          </button>
