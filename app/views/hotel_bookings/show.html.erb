<div class="min-h-screen bg-gray-50">
  <!-- 顶部导航栏 -->
  <div class="bg-white border-b border-gray-200 sticky top-0 z-50">
    <div class="flex items-center justify-between p-4">
      <div class="flex items-center space-x-3">
        <%= link_to hotels_path, class: "text-gray-600" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        <% end %>
        <h1 class="text-lg font-bold text-gray-900">订单详情</h1>
      </div>
      <button class="text-gray-600">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"/>
        </svg>
      </button>
    </div>
  </div>

  <!-- 订单状态 -->
  <div class="bg-gradient-to-r from-orange-400 to-orange-500 text-white p-6">
    <div class="flex items-center justify-between mb-2">
      <div>
        <div class="text-sm mb-1 opacity-90">订单状态</div>
        <div class="text-2xl font-bold">
          <%= case @booking.status
              when 'pending' then '待确认'
              when 'confirmed' then '已确认'
              when 'completed' then '已完成'
              when 'cancelled' then '已取消'
              else '未知'
              end %>
        </div>
      </div>
      <div class="w-16 h-16 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
        <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 24 24">
          <path d="M19,7H11V14H3V5H1V20H3V17H21V20H23V11A4,4 0 0,0 19,7M7,13A3,3 0 0,0 10,10A3,3 0 0,0 7,7A3,3 0 0,0 4,10A3,3 0 0,0 7,13Z"/>
        </svg>
      </div>
    </div>
    <div class="text-sm opacity-90">
      订单号: #<%= @booking.id %>
    </div>
  </div>

  <!-- 酒店信息 -->
  <div class="bg-white p-4 mb-2">
    <h2 class="text-lg font-bold text-gray-900 mb-3"><%= @hotel.name %></h2>
    <div class="flex items-start space-x-3">
      <div class="flex-shrink-0">
        <div class="w-24 h-24 rounded-lg bg-gradient-to-br from-blue-100 to-purple-100 flex items-center justify-center">
          <svg class="w-12 h-12 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19,7H11V14H3V5H1V20H3V17H21V20H23V11A4,4 0 0,0 19,7M7,13A3,3 0 0,0 10,10A3,3 0 0,0 7,7A3,3 0 0,0 4,10A3,3 0 0,0 7,13Z"/>
          </svg>
        </div>
      </div>
      <div class="flex-1">
        <p class="text-sm text-gray-600 mb-2"><%= @hotel.address %></p>
        <div class="flex items-center space-x-4 text-sm text-gray-500">
          <span>⭐ <%= @hotel.rating %></span>
          <span>📍 <%= @hotel.distance %></span>
        </div>
      </div>
    </div>
  </div>

  <!-- 预订信息 -->
  <div class="bg-white p-4 mb-2">
    <h3 class="text-base font-bold text-gray-900 mb-3">预订信息</h3>
    <div class="space-y-3 text-sm">
      <div class="flex justify-between">
        <span class="text-gray-600">房型</span>
        <span class="font-medium text-gray-900"><%= @hotel_room.room_type %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-gray-600">入住日期</span>
        <span class="font-medium text-gray-900"><%= @booking.check_in_date.strftime('%Y年%m月%d日') %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-gray-600">退房日期</span>
        <span class="font-medium text-gray-900"><%= @booking.check_out_date.strftime('%Y年%m月%d日') %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-gray-600">入住天数</span>
        <span class="font-medium text-gray-900"><%= @booking.nights %>晚</span>
      </div>
      <div class="flex justify-between">
        <span class="text-gray-600">房间数量</span>
        <span class="font-medium text-gray-900"><%= @booking.rooms_count %>间</span>
      </div>
      <div class="flex justify-between">
        <span class="text-gray-600">入住人数</span>
        <span class="font-medium text-gray-900"><%= @booking.adults_count %>大<%= @booking.children_count %>小</span>
      </div>
    </div>
  </div>

  <!-- 联系信息 -->
  <div class="bg-white p-4 mb-2">
    <h3 class="text-base font-bold text-gray-900 mb-3">联系信息</h3>
    <div class="space-y-3 text-sm">
      <div class="flex justify-between">
        <span class="text-gray-600">入住人</span>
        <span class="font-medium text-gray-900"><%= @booking.guest_name %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-gray-600">联系电话</span>
        <span class="font-medium text-gray-900"><%= @booking.guest_phone %></span>
      </div>
    </div>
  </div>

  <!-- 费用明细 -->
  <div class="bg-white p-4 mb-2">
    <h3 class="text-base font-bold text-gray-900 mb-3">费用明细</h3>
    <div class="space-y-3 text-sm">
      <% if @booking.original_price && @booking.original_price > @booking.total_price %>
        <div class="flex justify-between">
          <span class="text-gray-600">原价</span>
          <span class="text-gray-400 line-through">¥<%= number_with_precision(@booking.original_price, precision: 2) %></span>
        </div>
      <% end %>
      <% if @booking.discount_amount && @booking.discount_amount > 0 %>
        <div class="flex justify-between">
          <span class="text-gray-600">优惠</span>
          <span class="text-green-600">-¥<%= number_with_precision(@booking.discount_amount, precision: 2) %></span>
        </div>
      <% end %>
      <div class="flex justify-between items-center border-t border-gray-100 pt-3">
        <span class="text-gray-900 font-medium">实付金额</span>
        <span class="text-red-600 text-xl font-bold">¥<%= number_with_precision(@booking.total_price, precision: 2) %></span>
      </div>
      <div class="text-xs text-gray-500">
        支付方式: <%= @booking.payment_method %>
      </div>
    </div>
  </div>

  <!-- 订单操作 -->
  <% if @booking.status == 'pending' || @booking.status == 'confirmed' %>
    <div class="p-4 space-y-3">
      <%= link_to "联系客服", "#", 
        class: "block w-full bg-white border border-gray-300 text-gray-700 text-center py-3 rounded-full font-medium" %>
      <button type="button" class="w-full bg-white border border-red-300 text-red-600 text-center py-3 rounded-full font-medium">
        取消订单
      </button>
    </div>
  <% end %>
</div>
