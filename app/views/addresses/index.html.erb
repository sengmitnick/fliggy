<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white sticky top-0 z-40 border-b border-gray-200">
    <div class="flex items-center justify-between px-4 py-3">
      <%= link_to profile_path, class: "flex items-center gap-2" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      <% end %>
      <h1 class="text-lg font-medium flex-1 text-center">常用信息</h1>
      <div class="w-6"></div>
    </div>

    <!-- Tab Navigation -->
    <div class="flex border-b border-gray-200">
      <%= link_to passengers_path, class: "flex-1 py-3 text-center text-base text-gray-500" do %>
        出行人
      <% end %>
      <%= link_to contacts_path, class: "flex-1 py-3 text-center text-base text-gray-500" do %>
        联系人
      <% end %>
      <button class="flex-1 py-3 text-center text-base text-gray-500" onclick="window.showToast('精彩即将上线，敬请期待')">
        发票抬头
      </button>
      <%= link_to addresses_path, class: "flex-1 py-3 text-center text-base font-medium border-b-2 border-blue-500 text-blue-500" do %>
        收货地址
      <% end %>
      <button class="flex-1 py-3 text-center text-base text-gray-500" onclick="window.showToast('精彩即将上线，敬请期待')">
        信用卡
      </button>
    </div>
  </div>

  <!-- Content -->
  <div class="pb-24">
    <% if @addresses.any? %>
      <!-- Address List -->
      <div class="bg-white">
        <% @addresses.each_with_index do |address, index| %>
          <div class="px-4 py-4 <%= 'border-b border-gray-100' unless index == @addresses.length - 1 %>">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="flex items-center mb-2">
                  <span class="text-lg font-bold"><%= address.name %></span>
                  <% if address.is_default %>
                    <span class="ml-2 px-2 py-0.5 text-xs rounded" style="background: #FFE8CC; color: #FF6B35;">默认</span>
                  <% end %>
                </div>
                <div class="text-sm text-gray-600 mb-1">
                  <%= address.phone %>
                </div>
                <div class="bg-blue-50 rounded-lg p-3">
                  <div class="text-sm text-gray-700">
                    <%= address.full_address %>
                  </div>
                </div>
              </div>
              <div class="ml-3 flex flex-col items-center gap-3">
                <%= link_to edit_address_path(address), class: "text-gray-400" do %>
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                <% end %>
                <%= link_to address_path(address), method: :delete, data: { turbo_method: :delete, turbo_confirm: "确定删除这个地址吗？" }, class: "text-red-400" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="bg-white mt-4 mx-4 rounded-2xl py-16 text-center">
        <svg class="w-20 h-20 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        <div class="text-gray-500 text-base mb-2">
          暂无收货地址
        </div>
        <div class="text-sm text-gray-400">
          请添加收货地址以便快速下单
        </div>
      </div>
    <% end %>
  </div>

  <!-- Bottom Action Bar -->
  <div class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 px-4 py-3 z-30">
    <%= link_to new_address_path, class: "w-full py-3 rounded-full border border-gray-300 flex items-center justify-center text-gray-700 font-medium" do %>
      <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
      </svg>
      新增收货地址
    <% end %>
  </div>
</div>
