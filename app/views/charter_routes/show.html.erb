<!-- 路线详情页 -->
<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="sticky top-0 z-40 bg-white shadow-sm">
    <div class="max-w-md mx-auto px-4 py-3 flex items-center justify-between">
      <button onclick="history.back()" class="p-2 -ml-2 text-gray-800">
        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 19l-7-7 7-7" />
        </svg>
      </button>
      <h1 class="text-lg font-bold text-gray-900 truncate flex-1 px-2">路线详情</h1>
      <div class="w-6"></div>
    </div>
  </div>

  <!-- 路线主图 -->
  <div class="max-w-md mx-auto bg-white">
    <div class="relative h-56">
      <img src="https://images.unsplash.com/photo-1548013146-72479768bada?w=800&h=600&fit=crop" 
           alt="<%= @route.name %>" 
           class="w-full h-full object-cover">
      <div class="absolute top-3 left-3 bg-yellow-400 text-gray-900 px-3 py-1 rounded-full text-sm font-bold">
        <%= @route.duration_days %>日游
      </div>
    </div>
  </div>

  <!-- 路线基本信息 -->
  <div class="max-w-md mx-auto bg-white px-4 py-4 border-b border-gray-100">
    <h2 class="text-xl font-bold text-gray-900 mb-3"><%= @route.name %></h2>
    
    <!-- 亮点 -->
    <% if @route.highlights.present? %>
      <div class="flex flex-wrap gap-2 mb-3">
        <% highlights_array = @route.highlights.is_a?(Array) ? @route.highlights : (JSON.parse(@route.highlights) rescue []) %>
        <% highlights_array.each do |highlight| %>
          <span class="inline-flex items-center px-3 py-1 bg-yellow-50 text-yellow-800 text-sm rounded-full border border-yellow-200">
            ✓ <%= highlight %>
          </span>
        <% end %>
      </div>
    <% end %>

    <!-- 价格区间 -->
    <div class="bg-gray-50 rounded-xl p-4">
      <div class="flex items-center justify-between">
        <div>
          <div class="text-sm text-gray-600 mb-1">包车价格</div>
          <div>
            <span class="text-sm text-gray-500">起</span>
            <span class="text-3xl font-bold text-orange-500">¥308</span>
            <span class="text-sm text-gray-500">/6小时</span>
          </div>
        </div>
        <div class="text-right">
          <div class="text-sm text-gray-600 mb-1">8小时价格</div>
          <div>
            <span class="text-2xl font-bold text-orange-500">¥378</span>
            <span class="text-sm text-gray-500">/8小时</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 行程路线地图 -->
  <div class="max-w-md mx-auto bg-white mt-2">
    <div class="px-4 py-3 border-b border-gray-100">
      <h3 class="text-base font-bold text-gray-900">行程路线</h3>
    </div>
    
    <div class="relative h-64">
      <img src="<%= @map_image_url %>" 
           alt="路线地图" 
           class="w-full h-full object-cover">
      
      <!-- 路线标记点 -->
      <% @attractions.each_with_index do |attraction, index| %>
        <%
          # 简单的位置计算（实际应根据真实经纬度计算）
          positions = [
            { top: '20%', left: '30%' },
            { top: '40%', left: '60%' },
            { top: '60%', left: '40%' },
            { top: '70%', left: '70%' }
          ]
          position = positions[index % 4]
        %>
        <div class="absolute" style="top: <%= position[:top] %>; left: <%= position[:left] %>; transform: translate(-50%, -50%);">
          <div class="relative">
            <div class="w-10 h-10 bg-red-500 rounded-full border-4 border-white shadow-lg flex items-center justify-center">
              <span class="text-white text-sm font-bold"><%= index + 1 %></span>
            </div>
            <div class="absolute top-12 left-1/2 transform -translate-x-1/2 whitespace-nowrap bg-white px-2 py-1 rounded shadow text-xs font-medium">
              <%= attraction.name %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- 景点列表 -->
  <div class="max-w-md mx-auto bg-white mt-2 px-4 py-4">
    <h3 class="text-base font-bold text-gray-900 mb-4">包含景点</h3>
    
    <div class="space-y-4">
      <% @attractions.each_with_index do |attraction, index| %>
        <div class="flex items-start">
          <div class="flex-shrink-0 w-8 h-8 bg-yellow-400 rounded-full flex items-center justify-center mr-3 mt-1">
            <span class="text-gray-900 font-bold text-sm"><%= index + 1 %></span>
          </div>
          <div class="flex-1">
            <h4 class="text-base font-bold text-gray-900 mb-1"><%= attraction.name %></h4>
            <p class="text-sm text-gray-600 mb-2"><%= attraction.description %></p>
            <div class="flex items-center text-xs text-gray-500">
              <svg class="w-3 h-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              建议游玩 1-2 小时
            </div>
          </div>
        </div>
        
        <% unless index == @attractions.size - 1 %>
          <div class="ml-4 pl-3 border-l-2 border-dashed border-gray-300 h-6"></div>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- 底部固定按钮 -->
  <div class="max-w-md mx-auto fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 px-4 py-3 shadow-lg">
    <div class="flex items-center gap-3">
      <div class="flex-1">
        <div class="text-xs text-gray-500">起</div>
        <div>
          <span class="text-2xl font-bold text-orange-500">¥308</span>
          <span class="text-sm text-gray-500">/6小时</span>
        </div>
      </div>
      <%= link_to vehicles_chartered_tours_path(route_id: @route.id, departure_date: @departure_date), 
          class: "flex-1 bg-yellow-400 hover:bg-yellow-500 text-gray-900 text-center font-bold py-4 rounded-xl shadow-lg transition-colors" do %>
        选择车型
      <% end %>
    </div>
  </div>

  <!-- 底部占位 -->
  <div class="h-24"></div>
</div>
