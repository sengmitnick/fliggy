<div class="min-h-screen bg-gray-100">
  <!-- Header -->
  <div class="bg-white border-b">
    <div class="container mx-auto px-4 py-4 flex items-center justify-between">
      <%= link_to hotel_packages_path, class: "text-2xl" do %>
        ←
      <% end %>
      <h1 class="text-lg font-bold">支付成功</h1>
      <div class="w-8"></div>
    </div>
  </div>

  <!-- Success Message -->
  <div class="container mx-auto px-4 py-6">
    <div class="bg-white rounded-lg shadow p-6 text-center">
      <div class="text-green-500 text-6xl mb-4">✓</div>
      <h2 class="text-2xl font-bold mb-2">支付成功</h2>
      <p class="text-gray-600 mb-2">订单已确认，可随时预约使用</p>
      <p class="text-sm text-gray-500">订单详情已发送至您的手机 📱</p>
    </div>
  </div>

  <!-- Package Info Card -->
  <div class="container mx-auto px-4 mb-4">
    <div class="bg-white rounded-lg shadow p-4">
      <div class="flex items-center justify-between mb-4">
        <div class="flex-1">
          <div class="text-lg font-bold mb-1"><%= @package.title %></div>
          <div class="text-sm text-gray-600"><%= @package_option.name %></div>
        </div>
      </div>

      <div class="border-t pt-4 space-y-3">
        <div class="flex items-center justify-between">
          <span class="text-gray-600">订单编号</span>
          <span class="font-medium"><%= @order.order_number || @order.id %></span>
        </div>
        
        <div class="flex items-center justify-between">
          <span class="text-gray-600">购买数量</span>
          <span class="font-medium"><%= @order.quantity %> 份</span>
        </div>
        
        <div class="flex items-center justify-between">
          <span class="text-gray-600">预约方式</span>
          <span class="font-medium"><%= @order.booking_type == 'stockup' ? '先囤后约' : '立即预约' %></span>
        </div>
        
        <div class="flex items-center justify-between">
          <span class="text-gray-600">联系人</span>
          <span class="font-medium"><%= @order.contact_name %> <%= @order.contact_phone %></span>
        </div>
        
        <div class="flex items-center justify-between border-t pt-3">
          <span class="text-gray-600">支付金额</span>
          <span class="text-red-500 text-xl font-bold">¥<%= @order.total_price.to_i %></span>
        </div>
      </div>

      <div class="bg-green-50 rounded-lg p-3 mt-4">
        <div class="flex items-center text-sm text-green-700">
          <svg class="w-5 h-5 mr-2 text-green-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span>订单已确认，<%= @package.valid_days %>天内可预约使用</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Package Details -->
  <div class="container mx-auto px-4 mb-4">
    <div class="bg-white rounded-lg shadow p-4">
      <h3 class="font-bold mb-3">套餐详情</h3>
      
      <div class="space-y-2 text-sm">
        <div class="flex items-center text-gray-700">
          <svg class="w-5 h-5 text-orange-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"/>
          </svg>
          <span><%= @package.brand_name %> 酒店通兑套餐</span>
        </div>
        
        <div class="flex items-center text-gray-700">
          <svg class="w-5 h-5 text-orange-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
          </svg>
          <span>有效期 <%= @package.valid_days %> 天</span>
        </div>
        
        <% if @order.booking_type == 'stockup' %>
          <div class="flex items-center text-gray-700">
            <svg class="w-5 h-5 text-orange-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span>想住再约，不约可退</span>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="container mx-auto px-4 mb-6">
    <div class="flex gap-3">
      <%= link_to "查看订单", hotel_package_order_path(@order), class: "flex-1 py-3 border-2 border-orange-500 text-orange-500 rounded-lg text-center font-bold" %>
      <%= link_to "返回首页", root_path, class: "flex-1 py-3 bg-gradient-to-r from-orange-500 to-red-500 text-white rounded-lg text-center font-bold shadow-lg" %>
    </div>
  </div>

  <!-- Tips -->
  <div class="container mx-auto px-4 mb-4">
    <div class="bg-blue-50 rounded-lg p-4">
      <div class="flex items-start">
        <svg class="w-5 h-5 text-blue-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
        </svg>
        <div class="text-sm text-blue-700">
          <p class="font-bold mb-1">温馨提示</p>
          <p>· 订单详情可在"我的订单"中查看</p>
          <p>· 预约前请仔细阅读使用规则</p>
          <p>· 如有疑问请联系客服</p>
        </div>
      </div>
    </div>
  </div>
</div>
