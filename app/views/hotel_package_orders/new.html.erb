          <% @all_package_options.each_with_index do |option, index| %>
            <div class="relative inline-flex flex-col items-start px-3 py-2 rounded-lg border cursor-pointer transition-all hover:shadow-md <%= option.id == @package_option.id ? 'bg-[#FFF9E6] border-[#FFD700]' : 'bg-white border-gray-200 hover:border-[#FFD700]' %>"
                 data-action="click->hotel-package-order#selectPackageOption"
                 data-hotel-package-order-target="packageOption"
                 data-package-option-id="<%= option.id %>"
                 data-selected="<%= option.id == @package_option.id %>">
              <div class="text-xs font-medium text-gray-900 whitespace-nowrap">
                <%= number_to_currency(option.price, unit: '¥', precision: 0) %>起/<%= option.night_count %>晚可折今
              </div>
              <div class="text-[10px] text-gray-600 whitespace-nowrap mt-0.5">
                <%= option.description.split('，').last %>
              </div>
              <% if option.id == @package_option.id %>
                <div class="absolute top-0 right-0 w-4 h-4 bg-[#FFD700] rounded-bl-lg flex items-center justify-center">
                  <svg class="w-2.5 h-2.5 text-white" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- 城市筛选 -->
      <div class="px-4 py-3 border-b border-gray-100 overflow-x-auto whitespace-nowrap" data-hotel-package-order-target="cityFiltersContainer">
        <div class="inline-flex gap-2">
          <div class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-medium cursor-pointer transition-colors bg-[#FFF9E6] text-[#FF5000] border border-[#FFD700]"
               data-action="click->hotel-package-order#selectCity"
               data-hotel-package-order-target="cityFilter"
               data-city="all"
               data-selected="true">
            全部城市 (<%= @hotels_by_city.values.flatten.count %>)
          </div>
