            <div class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-medium cursor-pointer transition-colors bg-white text-gray-700 border border-gray-200"
                 data-action="click->hotel-package-order#selectCity"
                 data-hotel-package-order-target="cityFilter"
                 data-city="<%= city %>"
                 data-selected="false">
              <%= city %> (<%= hotels.count %>)
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- 酒店列表 -->
      <div class="overflow-y-auto pb-4" style="max-height: calc(85vh - 220px);" data-hotel-package-order-target="hotelsContainer">
        <% if @hotels_by_city.empty? %>
          <div class="flex flex-col items-center justify-center py-12 text-gray-400">
            <svg class="w-16 h-16 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path></svg>
            <div class="text-sm">暂无可预约酒店</div>
          </div>
        <% else %>
