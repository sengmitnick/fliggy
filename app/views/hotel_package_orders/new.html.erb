            <div class="border-b border-gray-100 last:border-0" data-hotel-package-order-target="cityGroup" data-city="<%= city %>">
              <!-- 城市标题 -->
              <div class="px-4 py-3 bg-gray-50">
                <h4 class="text-sm font-bold text-gray-900"><%= city %></h4>
              </div>
              
              <!-- 酒店列表 -->
              <div class="divide-y divide-gray-100">
                <% hotels.each do |hotel| %>
                  <div class="flex gap-3 p-4 hover:bg-gray-50 transition-colors">
                    <!-- 酒店图片 -->
                    <div class="flex-shrink-0 w-[100px] h-[100px] rounded-lg overflow-hidden bg-gray-100">
                      <% if hotel.image_url.present? %>
                        <img src="<%= hotel.image_url %>" alt="<%= hotel.name %>" class="w-full h-full object-cover" />
                      <% else %>
                        <div class="w-full h-full flex items-center justify-center text-gray-400">
                          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path></svg>
                        </div>
                      <% end %>
                    </div>
                    
                    <!-- 酒店信息 -->
                    <div class="flex-1 min-w-0">
                      <div class="flex items-start justify-between gap-2">
                        <div class="flex-1 min-w-0">
                          <h5 class="text-sm font-medium text-gray-900 truncate"><%= hotel.name %></h5>
                          <% if hotel.star_level.present? && hotel.star_level > 0 %>
                            <div class="inline-flex items-center px-1.5 py-0.5 bg-[#FF5000] bg-opacity-10 text-[#FF5000] text-[10px] rounded mt-1">
                              <%= '★' * hotel.star_level.to_i %>
                            </div>
                          <% end %>
                        </div>
                        <% if hotel.rating.present? && hotel.rating > 0 %>
                          <div class="flex-shrink-0 flex items-center gap-0.5">
                            <span class="inline-flex items-center justify-center px-1.5 py-0.5 bg-[#0066FF] text-white text-xs font-bold rounded"><%= hotel.rating %></span>
                            <span class="text-[10px] text-gray-500">
                              <% if hotel.rating >= 4.5 %>超棒
                              <% elsif hotel.rating >= 4.0 %>很好
                              <% else %>不错
                              <% end %>
                            </span>
                          </div>
                        <% end %>
                      </div>
                      
                      <div class="text-[11px] text-gray-500 mt-1 truncate">
                        <%= hotel.city %>
                      </div>
                      
                      <!-- 房型信息 -->
                      <div class="flex items-center mt-1.5 text-[11px] text-gray-600">
                        <span class="inline-flex items-center justify-center w-3.5 h-3.5 bg-[#FFF1EB] text-[#FF5000] rounded-full mr-1 text-[9px] font-bold">住</span>
                        <%= @package_option.night_count %>晚 城景精选特大床客房 / 城...
                        <span class="text-[#0066FF] ml-auto cursor-pointer" onclick="window.showToast('精彩即将上线')">详情 ›</span>
                      </div>
                      
                      <!-- 早餐信息 -->
                      <% unless @package_option.description&.include?('不含早餐') %>
                        <div class="flex items-center mt-1 text-[11px] text-gray-600">
                          <span class="inline-flex items-center justify-center w-3.5 h-3.5 bg-[#FFF1EB] text-[#FF5000] rounded-full mr-1 text-[9px] font-bold">吃</span>
                          早餐(2份/晚)
                        </div>
                      <% end %>
                      
                      <!-- 标签 -->
                      <div class="flex flex-wrap gap-1 mt-2">
                        <% if hotel.is_featured %>
                          <span class="inline-flex items-center px-1.5 py-0.5 bg-[#FFF9E6] text-[#FF5000] text-[9px] rounded border border-[#FFD5BC]">
                            <svg class="w-2.5 h-2.5 mr-0.5" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path></svg>
                            高人气酒店
                          </span>
                        <% end %>
                        <% if @package_option.description&.include?('早餐') %>
                          <span class="inline-flex items-center px-1.5 py-0.5 bg-white text-gray-600 text-[9px] rounded border border-gray-200">早餐丰盛</span>
                        <% end %>
                        <% if hotel.features.present? %>
                          <% hotel.features.first(2).each do |feature| %>
                            <span class="inline-flex items-center px-1.5 py-0.5 bg-white text-gray-600 text-[9px] rounded border border-gray-200"><%= feature.to_s.strip %></span>
                          <% end %>
                        <% end %>
                      </div>
                      
                      <!-- 底部按钮 -->
                      <div class="flex items-center gap-2 mt-3">
                        <button type="button" class="flex-1 text-center py-1.5 text-xs text-gray-600 border border-gray-200 rounded" onclick="window.showToast('精彩即将上线')">设施</button>
                        <button type="button" class="flex-1 text-center py-1.5 text-xs text-gray-600 border border-gray-200 rounded" onclick="window.showToast('精彩即将上线')">评价</button>
                        <button type="button" 
                                class="flex-1 text-center py-1.5 text-xs font-medium text-white bg-[#FFD700] rounded"
                                data-action="click->hotel-package-order#openDateSelectionModal"
                                data-hotel-id="<%= hotel.id %>"
                                data-hotel-name="<%= hotel.name %>">可约日期</button>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
      <div class="absolute left-1/2 transform -translate-x-1/2 text-lg font-bold">填写订单</div>
    </div>



  <!-- Tab 选项卡 -->
    <div class="flex items-end px-3 mt-2">
      <% is_instant = params[:booking_type] == 'instant' %>
      <!-- 先囤后约 Tab -->
      <div class="w-1/2 <%= is_instant ? 'bg-[#FCEEA8] bg-opacity-60 text-gray-700 cursor-pointer' : 'bg-[#F5F8FA] relative z-10' %> rounded-t-xl py-3 flex flex-col items-center justify-center"
           data-hotel-package-order-target="stockupTab"
           data-action="click->hotel-package-order#selectTab"
           data-tab="stockup">
        <span class="text-base <%= is_instant ? 'font-medium' : 'font-bold text-black' %> leading-tight">先囤后约</span>
        <span class="text-[10px] <%= is_instant ? 'text-gray-600' : 'text-gray-500' %> mt-0.5">想住再约，不约可退</span>
      </div>
      
      <!-- 立即预约 Tab -->
      <div class="w-1/2 <%= is_instant ? 'bg-[#F5F8FA] relative z-10' : 'bg-[#FCEEA8] bg-opacity-60 text-gray-700 cursor-pointer' %> rounded-t-xl py-3 flex flex-col items-center justify-center"
           data-hotel-package-order-target="instantTab"
           data-action="click->hotel-package-order#openBookingModal"
           data-tab="instant">
        <div class="relative">
          <span class="text-base <%= is_instant ? 'font-bold text-black' : 'font-medium' %> leading-tight">立即预约</span>
          <!-- 红色角标 -->
          <div class="absolute -top-5 -right-12 bg-[#FF5000] text-white text-[10px] px-1.5 py-0.5 rounded-tr-lg rounded-bl-lg rounded-tl-sm transform scale-90">
            早订安心
          </div>
        </div>
        <span class="text-[10px] <%= is_instant ? 'text-gray-500' : 'text-gray-600' %> mt-0.5">先约先得，锁定库存</span>
      </div>
    </div>
  </div>

  <%= form_with model: @order, url: hotel_package_orders_path, class: "px-3 -mt-2 relative z-20", data: { action: "submit->hotel-package-order#handleSubmit" } do |form| %>
    <%= render 'shared/form_error_message', model: @order %>
    <%= form.hidden_field :package_option_id, value: @package_option.id %>
    <%= form.hidden_field :booking_type, value: (params[:booking_type] || 'stockup'), data: { hotel_package_order_target: 'bookingTypeInput' } %>

    <!-- 商品卡片 -->
    <div class="bg-white rounded-b-xl rounded-tr-xl p-4 shadow-sm">
      
      <h1 class="text-[15px] font-bold text-gray-900 leading-snug">
        <%= @package.title %>
      </h1>
      
      <div class="flex justify-between items-center mt-3" onclick="window.showToast('精彩即将上线')" style="cursor: pointer;">
        <div class="text-gray-500 text-xs">
          预订套餐 <span class="text-black ml-2 font-medium"><%= @package_option.name %> <%= number_to_currency(@package_option.price, unit: '¥', precision: 0) %> <%= @package_option.description %></span>
        </div>
        <div class="flex items-center text-xs text-gray-500">
          详情
          <svg class="w-3 h-3 ml-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
        </div>
      </div>

      <div class="flex items-center mt-2 text-xs text-gray-600">
        <span class="bg-[#FFF1EB] text-[#FF5000] rounded-full w-4 h-4 flex items-center justify-center mr-1 text-[10px] font-bold">住</span>
        <%= @package_option.night_count %>晚 多房型可选，以实际预约为准
      </div>
      
      <% unless @package_option.description&.include?('不含早餐') %>
        <div class="flex items-center mt-1.5 text-xs text-gray-600">
          <span class="bg-[#FFF1EB] text-[#FF5000] rounded-full w-4 h-4 flex items-center justify-center mr-1 text-[10px] font-bold">吃</span>
          早餐(2份/晚)
        </div>
      <% end %>

      <!-- 标签行 -->
      <div class="flex flex-wrap gap-2 mt-3">
        <span class="border border-[#FFD5BC] text-[#FF5000] text-[10px] px-1 rounded-[2px]">囤好货</span>
        <span class="border border-[#FFD5BC] text-[#FF5000] text-[10px] px-1 rounded-[2px]">先囤后约 · 不约可退 · 在线预约</span>
      </div>

      <!-- 规则提示 -->
      <div class="bg-gray-50 rounded-lg p-3 mt-3 text-xs text-gray-500 leading-relaxed">
        <span class="inline-block border border-gray-400 rounded-full w-3 h-3 text-[9px] text-center leading-3 mr-1">!</span>
        套餐退订规则：有效期内未预约支持 100% 退款，过期未预约支持 100% 退款，<span class="font-bold text-black">但是整份宝贝中存在部分预约，整份宝贝均不支持退款</span>
      </div>
    </div>

    <!-- 购买数量 (仅在先囤后买模式下显示) -->
    <% if params[:booking_type] != 'instant' %>
      <div class="bg-white rounded-xl p-4 mt-3 shadow-sm">
        <div class="flex items-center justify-between">
          <span class="text-base font-medium text-gray-900">购买数量</span>
          <div class="flex items-center gap-2 px-3 py-2 border border-gray-300 rounded">
            <button type="button"
                    data-action="click->hotel-package-order#decreaseQuantity"
                    data-hotel-package-order-target="decreaseBtn"
                    class="w-6 h-6 flex items-center justify-center text-gray-600 hover:text-gray-900"
                    data-price="<%= @package_option.price %>">
              -
            </button>
            <%= form.number_field :quantity, 
                value: 1, 
                min: 1, 
                max: 99, 
                id: "quantity_field",
                class: "w-8 text-center border-none p-0 focus:outline-none focus:ring-0 text-gray-900",
                data: { hotel_package_order_target: 'quantityInput' } %>
            <button type="button"
                    data-action="click->hotel-package-order#increaseQuantity"
                    data-hotel-package-order-target="increaseBtn"
                    class="w-6 h-6 flex items-center justify-center text-gray-600 hover:text-gray-900"
                    data-price="<%= @package_option.price %>">
              +
            </button>
          </div>
        </div>
      </div>
    <% end %>

    <!-- 入住信息 (仅在立即预约模式下显示) -->
    <% if params[:booking_type] == 'instant' && params[:check_in_date].present? && params[:check_out_date].present? %>
      <div class="bg-white rounded-xl p-4 mt-3 shadow-sm">
        <div class="text-base font-bold text-gray-900 mb-4">入住信息</div>
        
        <!-- 酒店信息 -->
        <% if @selected_hotel.present? %>
          <div class="mb-3 pb-3 border-b border-gray-100">
            <div class="text-sm text-gray-600 mb-1">预约酒店</div>
            <div class="flex items-center justify-between">
              <div>
                <div class="text-base font-medium text-gray-900"><%= @selected_hotel.name %></div>
                <div class="text-xs text-gray-500 mt-0.5">
                  <% if @selected_hotel.address.present? %>
                    <%= @selected_hotel.address %>
                  <% else %>
                    <%= @selected_hotel.city %>
                  <% end %>
                </div>
              </div>
              <button type="button"
                      class="text-xs text-[#0066FF]"
                      data-action="click->hotel-package-order#openBookingModal">
                更换
              </button>
            </div>
          </div>
        <% end %>
        
        <!-- 入住日期 -->
        <div>
          <div class="text-sm text-gray-600 mb-1">入住日期</div>
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-[#FF5000]" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
              </svg>
              <div class="text-sm">
                <span class="text-gray-900 font-medium"><%= Date.parse(params[:check_in_date]).strftime('%Y年%m月%d日') %></span>
                <span class="text-gray-400 mx-1">-</span>
                <span class="text-gray-900 font-medium"><%= Date.parse(params[:check_out_date]).strftime('%m月%d日') %></span>
                <span class="text-gray-500 ml-1">（共<%= (Date.parse(params[:check_out_date]) - Date.parse(params[:check_in_date])).to_i %>晚）</span>
              </div>
            </div>
            <button type="button"
                    class="text-xs text-[#0066FF]"
                    data-action="click->hotel-package-order#openInstantBookingDateSelection">
              修改
            </button>
          </div>
        </div>
      </div>
    <% end %>

