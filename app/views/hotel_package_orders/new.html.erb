<div class="bg-gray-100 min-h-screen pb-32" data-controller="hotel-package-order payment-confirmation" data-payment-confirmation-amount-value="<%= @package_option.price.to_i %>" data-payment-confirmation-user-email-value="<%= current_user.email %>" data-payment-confirmation-payment-url-value="<%= hotel_package_orders_path %>" data-payment-confirmation-success-url-value="#">
  <!-- 顶部黄色区域 -->
  <div class="bg-[#FFDA44] sticky top-0 z-50">
    <!-- 导航栏 -->
    <div class="flex items-center px-3 h-11 relative">
      <%= link_to hotel_package_path(@package), class: "p-1" do %>
        <svg class="w-6 h-6 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
      <% end %>
      <div class="absolute left-1/2 transform -translate-x-1/2 text-lg font-bold">填写订单</div>
    </div>

    <!-- Tab 选项卡 -->
    <div class="flex items-end px-3 mt-2">
      <!-- 激活的 Tab -->
      <div class="w-1/2 bg-[#F5F8FA] rounded-t-xl py-3 flex flex-col items-center justify-center relative z-10"
           data-hotel-package-order-target="stockupTab"
           data-action="click->hotel-package-order#selectTab"
           data-tab="stockup">
        <span class="text-base font-bold text-black leading-tight">先囤后约</span>
        <span class="text-[10px] text-gray-500 mt-0.5">想住再约，不约可退</span>
      </div>
      
      <!-- 未激活的 Tab -->
      <div class="w-1/2 bg-[#FCEEA8] bg-opacity-60 rounded-t-xl py-3 flex flex-col items-center justify-center relative text-gray-700"
           data-hotel-package-order-target="instantTab"
           onclick="window.showToast('精彩即将上线，敬请期待')"
           data-tab="instant">
        <div class="relative">
          <span class="text-base font-medium leading-tight">立即预约</span>
          <!-- 红色角标 -->
          <div class="absolute -top-5 -right-12 bg-[#FF5000] text-white text-[10px] px-1.5 py-0.5 rounded-tr-lg rounded-bl-lg rounded-tl-sm transform scale-90">
            早订安心
          </div>
        </div>
        <span class="text-[10px] text-gray-600 mt-0.5">先约先得，锁定库存</span>
      </div>
    </div>
  </div>

  <%= form_with model: @order, url: hotel_package_orders_path, class: "px-3 -mt-2 relative z-20", data: { action: "submit->hotel-package-order#handleSubmit" } do |form| %>
    <%= render 'shared/form_error_message', model: @order %>
    <%= form.hidden_field :package_option_id, value: @package_option.id %>
    <%= form.hidden_field :booking_type, value: 'stockup', data: { hotel_package_order_target: 'bookingTypeInput' } %>

    <!-- 商品卡片 -->
    <div class="bg-white rounded-b-xl rounded-tr-xl p-4 shadow-sm">
      <h1 class="text-[15px] font-bold text-gray-900 leading-snug">
        <%= @package.title %>
      </h1>
      
      <div class="flex justify-between items-center mt-3">
        <div class="text-gray-500 text-xs">
          预订套餐 <span class="text-black ml-2 font-medium"><%= @package_option.name %> <%= number_to_currency(@package_option.price, unit: '¥', precision: 0) %> <%= @package_option.description %></span>
        </div>
        <%= link_to hotel_package_path(@package), class: "flex items-center text-xs text-gray-500" do %>
          详情
          <svg class="w-3 h-3 ml-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
        <% end %>
      </div>

      <div class="flex items-center mt-2 text-xs text-gray-600">
        <span class="bg-[#FFF1EB] text-[#FF5000] rounded-full w-4 h-4 flex items-center justify-center mr-1 text-[10px] font-bold">住</span>
        <%= @package_option.night_count %>晚 多房型可选，以实际预约为准
      </div>
      
      <% unless @package_option.description&.include?('不含早餐') %>
        <div class="flex items-center mt-1.5 text-xs text-gray-600">
          <span class="bg-[#FFF1EB] text-[#FF5000] rounded-full w-4 h-4 flex items-center justify-center mr-1 text-[10px] font-bold">吃</span>
          早餐(2份/晚)
        </div>
      <% end %>

      <!-- 标签行 -->
      <div class="flex flex-wrap gap-2 mt-3">
        <span class="border border-[#FFD5BC] text-[#FF5000] text-[10px] px-1 rounded-[2px]">囤好货</span>
        <span class="border border-[#FFD5BC] text-[#FF5000] text-[10px] px-1 rounded-[2px]">先囤后约 · 不约可退 · 在线预约</span>
      </div>

      <!-- 规则提示 -->
      <div class="bg-gray-50 rounded-lg p-3 mt-3 text-xs text-gray-500 leading-relaxed">
        <span class="inline-block border border-gray-400 rounded-full w-3 h-3 text-[9px] text-center leading-3 mr-1">!</span>
        套餐退订规则：有效期内未预约支持 100% 退款，过期未预约支持 100% 退款，<span class="font-bold text-black">但是整份宝贝中存在部分预约，整份宝贝均不支持退款</span>
      </div>
    </div>

    <!-- 购买数量 -->
    <div class="bg-white rounded-xl p-4 mt-3 shadow-sm">
      <div class="flex items-center justify-between">
        <span class="text-base font-medium text-gray-900">购买数量</span>
        <div class="flex items-center gap-2 px-3 py-2 border border-gray-300 rounded">
          <button type="button"
                  data-action="click->hotel-package-order#decreaseQuantity"
                  data-hotel-package-order-target="decreaseBtn"
                  class="w-6 h-6 flex items-center justify-center text-gray-600 hover:text-gray-900"
                  data-price="<%= @package_option.price %>">
            -
          </button>
          <%= form.number_field :quantity, 
              value: 1, 
              min: 1, 
              max: 99, 
              id: "quantity_field",
              class: "w-8 text-center border-none p-0 focus:outline-none focus:ring-0 text-gray-900",
              data: { hotel_package_order_target: 'quantityInput' } %>
          <button type="button"
                  data-action="click->hotel-package-order#increaseQuantity"
                  data-hotel-package-order-target="increaseBtn"
                  class="w-6 h-6 flex items-center justify-center text-gray-600 hover:text-gray-900"
                  data-price="<%= @package_option.price %>">
            +
          </button>
        </div>
      </div>
    </div>

    <!-- 联系人 -->
    <div class="bg-white rounded-xl p-4 mt-3 shadow-sm">
      <div class="text-base font-bold text-gray-900 mb-4">联系人</div>
      
      <% if @passengers.any? %>
        <!-- 已选联系人显示 -->
        <div class="flex items-center justify-between py-3 border border-gray-200 rounded-lg px-4 cursor-pointer"
             data-action="click->hotel-package-order#openContactModal"
             data-hotel-package-order-target="selectedContactDisplay">
          <div class="flex items-center flex-1">
            <div class="flex-1">
              <div class="font-medium text-black text-[15px]" data-hotel-package-order-target="selectedName"><%= @passengers.first.name %></div>
              <div class="text-sm text-gray-500 mt-0.5" data-hotel-package-order-target="selectedPhone"><%= @passengers.first.phone %></div>
            </div>
          </div>
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
        </div>
        
        <!-- 联系人选择弹窗 -->
        <div class="hidden fixed inset-0 bg-black bg-opacity-50 z-50" data-hotel-package-order-target="contactModal">
          <div class="absolute bottom-0 left-0 right-0 bg-white rounded-t-2xl max-h-[70vh] overflow-hidden">
            <!-- 弹窗头部 -->
            <div class="flex items-center justify-between px-4 py-4 border-b border-gray-100">
              <h3 class="text-lg font-bold text-gray-900">选择联系人</h3>
              <button type="button" 
                      class="text-gray-400 hover:text-gray-600"
                      data-action="click->hotel-package-order#closeContactModal">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
              </button>
            </div>
            
            <!-- 联系人列表 -->
            <div class="overflow-y-auto" style="max-height: calc(70vh - 80px);">
              <div class="divide-y divide-gray-100">
                <% @passengers.each_with_index do |passenger, index| %>
                  <label class="flex items-center justify-between cursor-pointer px-4 py-4 hover:bg-gray-50"
                         data-action="click->hotel-package-order#selectPassenger"
                         data-passenger-name="<%= passenger.name %>"
                         data-passenger-phone="<%= passenger.phone %>">
                    <div class="flex items-center flex-1">
                      <%= form.radio_button :passenger_id, passenger.id, class: "hidden", checked: index == 0, data: { hotel_package_order_target: 'passengerRadio' } %>
                      <div class="w-5 h-5 rounded-full border-2 <%= index == 0 ? 'border-blue-500' : 'border-gray-300' %> mr-3 flex items-center justify-center" data-hotel-package-order-target="radioIndicator">
                        <div class="w-3 h-3 bg-blue-500 rounded-full <%= index == 0 ? '' : 'hidden' %>" data-hotel-package-order-target="radioInner"></div>
                      </div>
                      <div class="flex-1">
                        <div class="font-medium text-black text-[15px]"><%= passenger.name %></div>
                        <div class="text-sm text-gray-500 mt-0.5"><%= passenger.phone %></div>
                      </div>
                    </div>
                  </label>
                <% end %>
              </div>
              
              <!-- 添加新联系人按钮 -->
              <div class="px-4 py-4 border-t border-gray-100">
                <%= link_to new_passenger_path, class: "flex items-center justify-center text-blue-500 text-sm font-medium py-3 bg-blue-50 rounded-lg hover:bg-blue-100" do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                  添加新联系人
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <!-- Manual input fields when no passengers -->
        <div class="space-y-3">
          <div>
            <label class="text-sm text-gray-600 mb-1 block">姓名</label>
            <%= form.text_field :contact_name, 
                placeholder: "请输入姓名", 
                class: "w-full px-3 py-2.5 border border-gray-200 rounded-lg text-base focus:border-blue-500 focus:outline-none",
                data: { hotel_package_order_target: 'manualNameInput' } %>
          </div>
          <div>
            <label class="text-sm text-gray-600 mb-1 block">手机号</label>
            <%= form.text_field :contact_phone, 
                placeholder: "请输入手机号", 
                type: "tel",
                maxlength: 11,
                class: "w-full px-3 py-2.5 border border-gray-200 rounded-lg text-base focus:border-blue-500 focus:outline-none",
                data: { hotel_package_order_target: 'manualPhoneInput' } %>
          </div>
        </div>
      <% end %>

      <%= form.hidden_field :contact_name, data: { hotel_package_order_target: 'contactNameInput' } %>
      <%= form.hidden_field :contact_phone, data: { hotel_package_order_target: 'contactPhoneInput' } %>
    </div>

    <!-- 会员优惠 -->
    <div class="bg-gradient-to-br from-[#8B6B47] to-[#5C4A33] rounded-xl p-4 mt-3 shadow-sm overflow-hidden relative">
      <!-- Background pattern -->
      <div class="absolute top-0 right-0 w-32 h-32 opacity-10">
        <svg viewBox="0 0 100 100" class="w-full h-full">
          <image href="<%= asset_path('profile/企业会员.png') %>" width="100" height="100" />
        </svg>
      </div>
      
      <div class="relative z-10">
        <div class="flex items-center text-white mb-3">
          <span class="bg-white/20 text-white text-[10px] font-bold px-2 py-0.5 rounded mr-2">F1会员</span>
          <span class="text-sm font-medium">开通万豪旅享家会员</span>
        </div>
        
        <div class="bg-white/10 rounded-lg p-3 backdrop-blur-sm">
          <div class="text-white text-sm mb-1">成为万豪旅享家，享会员价</div>
          <div class="flex items-center justify-between">
            <span class="text-white/70 text-xs">仅剩一步</span>
            <div class="flex items-center">
              <div class="w-20 h-1 bg-white/20 rounded-full overflow-hidden mr-2">
                <div class="w-3/4 h-full bg-gradient-to-r from-yellow-400 to-orange-400"></div>
              </div>
              <span class="text-[10px] text-white/70">75%%</span>
            </div>
          </div>
        </div>
        
        <div class="flex items-center justify-end mt-2">
          <span class="text-white/60 text-xs mr-1">立即开通</span>
          <svg class="w-4 h-4 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
        </div>
      </div>
    </div>

    <!-- 底部悬浮 Banner -->
    <div class="fixed bottom-[60px] left-0 right-0 px-3 z-30">
      
    </div>

    <!-- 底部固定栏 -->
    <div class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-100 h-16 px-4 flex justify-between items-center z-40">
      <div class="flex items-end">
        <span class="text-[#FF5000] text-sm font-bold mb-1">¥</span>
        <span class="text-[#FF5000] text-2xl font-bold leading-none" data-hotel-package-order-target="bottomPrice">
          <%= @package_option.price.to_i %>
        </span>
        <div class="flex items-center text-gray-400 text-xs ml-2 mb-1">
          明细
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"></path></svg>
        </div>
      </div>
      
      <%= form.submit "立即支付", class: "bg-gradient-to-r from-[#FF9000] to-[#FF5000] text-white font-bold text-base px-8 py-2.5 rounded-full shadow-lg shadow-orange-200" %>
    </div>
  <% end %>

  <!-- 支付确认模态框 -->
  <div data-hotel-package-order-target="confirmModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center">
    <div class="bg-white rounded-2xl w-11/12 max-w-md mx-auto p-6 animate-scale-in">
      <h3 class="text-lg font-bold text-center mb-6">确认支付信息</h3>
      
      <div class="space-y-4">
        <div class="flex items-center justify-between">
          <div>
            <div class="font-bold text-lg"><%= @package.title %></div>
            <div class="text-gray-600"><%= @package_option.name %></div>
            <div class="text-green-600 flex items-center mt-1">
              <svg class="w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
            </div>
          </div>
        </div>
        
        <div class="flex items-center justify-between">
          <div>
            <div class="text-gray-600">购买数量: <span class="font-bold" data-hotel-package-order-target="confirmQuantity">1</span> 份</div>
            <div class="text-green-600 flex items-center mt-1">
              <svg class="w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
            </div>
          </div>
        </div>
        
        <div class="flex items-center justify-between">
          <div>
            <div class="font-bold">联系人: <span data-hotel-package-order-target="confirmContact"></span></div>
            <div class="text-green-600 flex items-center mt-1">
              <svg class="w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
            </div>
          </div>
        </div>
        
        <div class="flex items-center justify-between">
          <div>
            <div class="text-gray-600">预约方式: <span data-hotel-package-order-target="confirmBookingType">先囤后约</span></div>
            <div class="text-green-600 flex items-center mt-1">
              <svg class="w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
            </div>
          </div>
        </div>

        <div class="border-t pt-4">
          <div class="flex items-center justify-between">
            <div class="text-gray-600">支付金额</div>
            <div class="text-2xl font-bold text-red-500">
              ¥<span data-hotel-package-order-target="confirmTotalPrice"><%= @package_option.price.to_i %></span>
            </div>
          </div>
        </div>
      </div>
      
      <div class="mt-6 text-center">
        <div class="text-gray-500 mb-2">处理中，请稍候...</div>
        <div class="flex justify-center">
          <!-- 加载动画 -->
          <svg class="w-16 h-16 animate-spin" viewBox="0 0 24 24" fill="none">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <%= render 'shared/payment_confirmation_modals', amount: @package_option.price.to_i, user_email: current_user.email %>
</div>

<style>
@keyframes scale-in {
  from {
    transform: scale(0.9);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

.animate-scale-in {
  animation: scale-in 0.3s ease-out;
}

.password-dot.active {
  background-color: #3b82f6;
  border-color: #3b82f6;
}
</style>
