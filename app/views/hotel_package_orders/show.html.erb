<div class="min-h-screen bg-gray-100 pb-20">
  <!-- Header -->
  <div class="bg-white border-b">
    <div class="container mx-auto px-4 py-4 flex items-center">
      <%= link_to hotel_packages_path, class: "text-2xl mr-4" do %>
        ←
      <% end %>
      <h1 class="text-lg font-bold">订单详情</h1>
    </div>
  </div>

  <!-- 订单状态 -->
  <div class="bg-white mt-2 p-4">
    <div class="flex items-center justify-between mb-4">
      <div>
        <span class="text-2xl font-bold">¥<%= @order.total_price.to_i %></span>
        <div class="text-sm text-gray-500 mt-1">
          订单号: <%= @order.order_number || @order.id %>
        </div>
      </div>
      <div class="text-right">
        <div class="inline-block px-4 py-1 rounded-full text-sm font-medium
          <%= @order.status == 'paid' ? 'bg-green-100 text-green-600' : 'bg-orange-100 text-orange-600' %>">
          <%= @order.status == 'paid' ? '已支付' : '待支付' %>
        </div>
        <div class="text-xs text-gray-400 mt-1">
          <%= @order.created_at.strftime('%Y-%m-%d %H:%M') %>
        </div>
      </div>
    </div>
  </div>

  <!-- 套餐信息 -->
  <div class="bg-white mt-2 p-4">
    <h2 class="font-bold mb-3">套餐信息</h2>
    <div class="flex">
      <div class="w-20 h-20 bg-gray-200 rounded overflow-hidden flex-shrink-0">
        <% if @order.package_option.hotel_package.brand_logo.attached? %>
          <%= image_tag @order.package_option.hotel_package.brand_logo, class: "w-full h-full object-cover" %>
        <% else %>
          <img src="https://images.unsplash.com/photo-1566073771259-6a8506099945?w=200" class="w-full h-full object-cover">
        <% end %>
      </div>
      <div class="ml-3 flex-1">
        <h3 class="font-medium text-sm line-clamp-2">
          <%= @order.package_option.hotel_package.title %>
        </h3>
        <div class="text-xs text-gray-500 mt-1">
          <%= @order.package_option.name %> | <%= @order.package_option.description %>
        </div>
        <div class="text-sm text-gray-900 mt-1">
          ¥<%= @order.package_option.price.to_i %> × <%= @order.quantity %>
        </div>
      </div>
    </div>
  </div>

  <!-- 联系人信息 -->
  <div class="bg-white mt-2 p-4">
    <h2 class="font-bold mb-3">联系人信息</h2>
    <div class="space-y-2 text-sm">
      <div class="flex">
        <span class="text-gray-500 w-20">姓名</span>
        <span class="text-gray-900"><%= @order.contact_name %></span>
      </div>
      <div class="flex">
        <span class="text-gray-500 w-20">手机号</span>
        <span class="text-gray-900"><%= @order.contact_phone %></span>
      </div>
      <div class="flex">
        <span class="text-gray-500 w-20">预订类型</span>
        <span class="text-gray-900">
          <%= @order.booking_type == 'stockup' ? '先囤后约' : '立即预约' %>
        </span>
      </div>
    </div>
  </div>

  <!-- 底部按钮 -->
  <% if @order.status == 'pending' %>
    <div class="fixed bottom-0 left-0 right-0 bg-white border-t p-4">
      <button class="w-full bg-gradient-to-r from-[#FF9000] to-[#FF5000] text-white font-bold text-base py-3 rounded-full">
        立即支付
      </button>
    </div>
  <% end %>
</div>
