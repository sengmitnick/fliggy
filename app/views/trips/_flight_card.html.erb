<!-- Flight Card -->
<div class="bg-white rounded-2xl overflow-hidden shadow-sm mb-6" data-trip-card>
  <!-- Flight Header -->
  <div class="px-4 py-3 flex items-center justify-between border-b border-gray-100">
    <div class="flex items-center gap-2">
      <% airline_first_char = booking.flight.airline[0] %>
      <% airline_colors = {'东' => 'bg-red-500', '海' => 'bg-blue-500', '川' => 'bg-orange-500', '南' => 'bg-blue-600', '国' => 'bg-red-600'} %>
      <div class="w-6 h-6 <%= airline_colors[airline_first_char] || 'bg-gray-500' %> rounded flex items-center justify-center">
        <span class="text-white text-xs font-bold"><%= airline_first_char %></span>
      </div>
      <span class="font-medium"><%= booking.flight.airline %><%= booking.flight.flight_number %></span>
    </div>
    <button class="text-blue-500 text-2xl" data-action="click->coming-soon#show">
      📤
    </button>
  </div>

  <!-- Flight Notice -->
  <div class="bg-blue-50 px-4 py-2 text-sm text-blue-700">
    <span class="font-medium">航班计划</span> 起飞时间前38分钟截止办值机，请提前抵达机场
  </div>

  <!-- Flight Times -->
  <div class="px-4 py-4">
    <div class="flex items-center justify-between mb-6">
      <!-- Departure -->
      <div class="text-center">
        <div class="text-sm text-gray-500 mb-1">预计起飞</div>
        <div class="text-3xl font-bold mb-1"><%= booking.flight.departure_time.strftime('%H:%M') %></div>
        <div class="text-base text-gray-600"><%= booking.flight.departure_airport %></div>
      </div>

      <!-- Flight Path -->
      <div class="flex-1 px-4">
        <div class="text-center text-xs text-gray-400 mb-1">实际信息请以机场为准</div>
        <div class="relative flex items-center">
          <div class="flex-1 border-t-2 border-dashed border-gray-300"></div>
          <div class="px-2">✈️</div>
          <div class="flex-1 border-t-2 border-dashed border-gray-300"></div>
        </div>
      </div>

      <!-- Arrival -->
      <div class="text-center">
        <div class="text-sm text-gray-500 mb-1">预计到达</div>
        <div class="text-3xl font-bold mb-1"><%= booking.flight.arrival_time.strftime('%H:%M') %></div>
        <div class="text-base text-gray-600"><%= booking.flight.arrival_airport %></div>
      </div>
    </div>

    <!-- Flight Details Grid -->
    <div class="grid grid-cols-3 gap-4 py-4 border-t border-gray-100">
      <div>
        <div class="text-xs text-gray-500 mb-1">值机柜台</div>
        <div class="font-medium">F</div>
      </div>
      <div>
        <div class="text-xs text-gray-500 mb-1">登机口</div>
        <div class="font-medium">待定</div>
      </div>
      <div>
        <div class="text-xs text-gray-500 mb-1">行李额</div>
        <div class="font-medium">20KG(成人)</div>
      </div>
      <div>
        <div class="text-xs text-gray-500 mb-1">机型</div>
        <div class="font-medium"><%= booking.flight.aircraft_type %></div>
      </div>
      <div>
        <div class="text-xs text-gray-500 mb-1">餐食</div>
        <div class="font-medium">小食</div>
      </div>
      <div>
        <div class="text-xs text-gray-500 mb-1">行李转盘</div>
        <div class="font-medium">待定</div>
      </div>
    </div>

    <div class="py-3 border-t border-gray-100">
      <div class="flex items-center justify-between">
        <div>
          <span class="text-sm text-gray-500">出行人</span>
          <span class="ml-2 font-medium"><%= booking.passenger_name %></span>
        </div>
      </div>
    </div>

    <!-- Ticket Number -->
    <div class="py-3 border-t border-gray-100">
      <div class="flex items-center justify-between">
        <div class="text-sm">
          <span class="text-gray-500">订单号：</span>
          <span class="font-medium"><%= booking.id.to_s.rjust(12, '0') %></span>
          <button class="ml-2 text-blue-500 text-xs" data-action="click->coming-soon#show">复制</button>
        </div>
        <button class="text-sm text-gray-500" data-action="click->coming-soon#show">
          官网选座 ›
        </button>
      </div>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="grid grid-cols-4 gap-0 border-t border-gray-100">
    <button class="py-4 text-center text-sm text-gray-700 border-r border-gray-100" data-action="click->coming-soon#show">
      更多
    </button>
    <button class="py-4 text-center text-sm text-gray-700 border-r border-gray-100 font-medium" data-action="click->coming-soon#show">
      查看订单
    </button>
    <button class="py-4 text-center text-sm text-gray-700 border-r border-gray-100 font-medium" data-action="click->coming-soon#show">
      航班动态
    </button>
    <button class="py-4 text-center text-sm text-gray-700 font-medium" data-action="click->coming-soon#show">
      行程群
    </button>
  </div>
</div>
