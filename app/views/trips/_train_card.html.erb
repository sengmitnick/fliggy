<!-- Train Card -->
<div class="bg-white rounded-2xl overflow-hidden shadow-sm mb-6" data-trip-card>
  <!-- Train Header -->
  <div class="px-4 py-3 flex items-center justify-between border-b border-gray-100">
    <div class="flex items-center gap-2">
      <div class="w-6 h-6 bg-blue-600 rounded flex items-center justify-center">
        <span class="text-white text-xs font-bold">🚄</span>
      </div>
      <span class="font-medium"><%= booking.train.train_number %></span>
    </div>
    <button class="text-blue-500 text-2xl" onclick="window.showToast('精彩即将上线，敬请期待')">
      📤
    </button>
  </div>

  <!-- Train Notice -->
  <div class="bg-blue-50 px-4 py-2 text-sm text-blue-700">
    <span class="font-medium">乘车提醒</span> 请提前30分钟到达车站，携带有效身份证件进站乘车
  </div>

  <!-- Train Times -->
  <div class="px-4 py-4">
    <div class="flex items-center justify-between mb-6">
      <!-- Departure -->
      <div class="text-center">
        <div class="text-sm text-gray-500 mb-1">出发</div>
        <div class="text-3xl font-bold mb-1"><%= booking.train.departure_time.strftime('%H:%M') %></div>
        <div class="text-base text-gray-600"><%= booking.train.departure_city %></div>
      </div>

      <!-- Train Path -->
      <div class="flex-1 px-4">
        <div class="text-center text-xs text-gray-400 mb-1">
          <% duration = ((booking.train.arrival_time - booking.train.departure_time) / 3600).round(1) %>
          <%= duration %>小时
        </div>
        <div class="relative flex items-center">
          <div class="flex-1 border-t-2 border-dashed border-gray-300"></div>
          <div class="px-2">🚄</div>
          <div class="flex-1 border-t-2 border-dashed border-gray-300"></div>
        </div>
      </div>

      <!-- Arrival -->
      <div class="text-center">
        <div class="text-sm text-gray-500 mb-1">到达</div>
        <div class="text-3xl font-bold mb-1"><%= booking.train.arrival_time.strftime('%H:%M') %></div>
        <div class="text-base text-gray-600"><%= booking.train.arrival_city %></div>
      </div>
    </div>

    <!-- Train Details Grid -->
    <div class="grid grid-cols-3 gap-4 py-4 border-t border-gray-100">
      <div>
        <div class="text-xs text-gray-500 mb-1">座位类型</div>
        <div class="font-medium"><%= booking.seat_type_label %></div>
      </div>
      <div>
        <div class="text-xs text-gray-500 mb-1">座位信息</div>
        <div class="font-medium"><%= booking.seat_info %></div>
      </div>
      <div>
        <div class="text-xs text-gray-500 mb-1">车票价格</div>
        <div class="font-medium">¥<%= sprintf('%.2f', booking.train.send("price_#{booking.seat_type}")) %></div>
      </div>
    </div>

    <div class="py-3 border-t border-gray-100">
      <div class="flex items-center justify-between">
        <div>
          <span class="text-sm text-gray-500">乘车人</span>
          <span class="ml-2 font-medium"><%= booking.passenger_name %></span>
        </div>
        <div class="text-sm text-gray-500">
          <%= booking.contact_phone %>
        </div>
      </div>
    </div>

    <!-- Ticket Number -->
    <div class="py-3 border-t border-gray-100">
      <div class="flex items-center justify-between">
        <div class="text-sm">
          <span class="text-gray-500">订单号：</span>
          <span class="font-medium"><%= booking.id.to_s.rjust(12, '0') %></span>
          <button class="ml-2 text-blue-500 text-xs" onclick="window.showToast('精彩即将上线，敬请期待')">复制</button>
        </div>
        <div class="text-sm">
          <span class="text-gray-500">总价：</span>
          <span class="font-semibold text-lg text-orange-600">¥<%= sprintf('%.2f', booking.total_price) %></span>
        </div>
      </div>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="grid grid-cols-4 gap-0 border-t border-gray-100">
    <button class="py-4 text-center text-sm text-gray-700 border-r border-gray-100" onclick="window.showToast('精彩即将上线，敬请期待')">
      更多
    </button>
    <%= link_to train_booking_path(booking), class: "py-4 text-center text-sm text-gray-700 border-r border-gray-100 font-medium flex items-center justify-center" do %>
      查看订单
    <% end %>
    <button class="py-4 text-center text-sm text-gray-700 border-r border-gray-100 font-medium" onclick="window.showToast('精彩即将上线，敬请期待')">
      在线换座
    </button>
    <button class="py-4 text-center text-sm text-gray-700 font-medium" onclick="window.showToast('精彩即将上线，敬请期待')">
      车站大屏
    </button>
  </div>
</div>
