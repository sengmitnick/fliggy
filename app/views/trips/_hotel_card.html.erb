<!-- Hotel Card -->
<div class="bg-white rounded-2xl overflow-hidden shadow-sm mb-6" data-trip-card>
  <!-- Hotel Header -->
  <div class="px-4 py-3 flex items-center justify-between border-b border-gray-100">
    <div class="flex items-center gap-2">
      <div class="w-6 h-6 bg-yellow-500 rounded flex items-center justify-center">
        <span class="text-white text-xs font-bold">🏨</span>
      </div>
      <span class="font-medium"><%= booking.hotel.name %></span>
    </div>
    <button class="text-blue-500 text-2xl" onclick="window.showToast('精彩即将上线，敬请期待')">
      📤
    </button>
  </div>

  <!-- Hotel Notice -->
  <div class="bg-blue-50 px-4 py-2 text-sm text-blue-700">
    <span class="font-medium">入住提醒</span> 请携带有效身份证件，入住时间为<%= booking.check_in_date.strftime('%m月%d日') %>14:00后
  </div>

  <!-- Hotel Details -->
  <div class="px-4 py-4">
    <div class="mb-4">
      <!-- Room Info -->
      <div class="mb-3">
        <div class="text-base font-medium text-gray-800 mb-1">
          <%= booking.hotel_room.room_type %>
        </div>
        <div class="text-sm text-gray-500">
          <%= booking.hotel.address %>
        </div>
      </div>

      <!-- Check-in/out dates -->
      <div class="flex items-center justify-between mb-4">
        <!-- Check-in -->
        <div class="text-center">
          <div class="text-sm text-gray-500 mb-1">入住</div>
          <div class="text-2xl font-bold mb-1"><%= booking.check_in_date.strftime('%m/%d') %></div>
          <div class="text-sm text-gray-600"><%= ['周日', '周一', '周二', '周三', '周四', '周五', '周六'][booking.check_in_date.wday] %></div>
        </div>

        <!-- Duration -->
        <div class="flex-1 px-4">
          <div class="text-center text-xs text-gray-400 mb-1">共<%= booking.nights %>晚</div>
          <div class="relative flex items-center">
            <div class="flex-1 border-t-2 border-dashed border-gray-300"></div>
            <div class="px-2">🛏️</div>
            <div class="flex-1 border-t-2 border-dashed border-gray-300"></div>
          </div>
        </div>

        <!-- Check-out -->
        <div class="text-center">
          <div class="text-sm text-gray-500 mb-1">离店</div>
          <div class="text-2xl font-bold mb-1"><%= booking.check_out_date.strftime('%m/%d') %></div>
          <div class="text-sm text-gray-600"><%= ['周日', '周一', '周二', '周三', '周四', '周五', '周六'][booking.check_out_date.wday] %></div>
        </div>
      </div>
    </div>

    <!-- Booking Details Grid -->
    <div class="grid grid-cols-3 gap-4 py-4 border-t border-gray-100">
      <div>
        <div class="text-xs text-gray-500 mb-1">房间数</div>
        <div class="font-medium"><%= booking.rooms_count %>间</div>
      </div>
      <div>
        <div class="text-xs text-gray-500 mb-1">入住人数</div>
        <div class="font-medium"><%= booking.adults_count %>位成人<% if booking.children_count > 0 %> · <%= booking.children_count %>位儿童<% end %></div>
      </div>
      <div>
        <div class="text-xs text-gray-500 mb-1">付款方式</div>
        <div class="font-medium"><%= booking.payment_method %></div>
      </div>
    </div>

    <div class="py-3 border-t border-gray-100">
      <div class="flex items-center justify-between">
        <div>
          <span class="text-sm text-gray-500">入住人</span>
          <span class="ml-2 font-medium"><%= booking.guest_name %></span>
        </div>
        <div class="text-sm text-gray-500">
          <%= booking.guest_phone %>
        </div>
      </div>
    </div>

    <!-- Order Number -->
    <div class="py-3 border-t border-gray-100">
      <div class="flex items-center justify-between">
        <div class="text-sm">
          <span class="text-gray-500">订单号：</span>
          <span class="font-medium"><%= booking.id.to_s.rjust(12, '0') %></span>
          <button class="ml-2 text-blue-500 text-xs" onclick="window.showToast('精彩即将上线，敬请期待')">复制</button>
        </div>
        <div class="text-sm">
          <span class="text-gray-500">总价：</span>
          <span class="font-semibold text-lg text-orange-600">¥<%= sprintf('%.2f', booking.total_price_with_insurance) %></span>
        </div>
      </div>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="grid grid-cols-4 gap-0 border-t border-gray-100">
    <button class="py-4 text-center text-sm text-gray-700 border-r border-gray-100" onclick="window.showToast('精彩即将上线，敬请期待')">
      更多
    </button>
    <%= link_to success_hotel_booking_path(booking), class: "py-4 text-center text-sm text-gray-700 border-r border-gray-100 font-medium flex items-center justify-center" do %>
      查看订单
    <% end %>
    <%= link_to hotel_path(booking.hotel), class: "py-4 text-center text-sm text-gray-700 border-r border-gray-100 font-medium flex items-center justify-center" do %>
      酒店详情
    <% end %>
    <button class="py-4 text-center text-sm text-gray-700 font-medium" onclick="window.showToast('精彩即将上线，敬请期待')">
      联系酒店
    </button>
  </div>
</div>
