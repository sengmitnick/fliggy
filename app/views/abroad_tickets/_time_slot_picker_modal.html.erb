<!-- Time Slot Picker Modal -->
<div data-abroad-time-slot-picker-target="modal" class="hidden fixed inset-0 z-50 overflow-y-auto bg-gray-900/50">
  <div class="min-h-screen flex items-end justify-center">
    <!-- Modal Content -->
    <div class="bg-white rounded-t-3xl w-full max-w-md max-h-[70vh] overflow-y-auto shadow-xl">
      
      <!-- Header -->
      <div class="sticky top-0 bg-white border-b border-gray-200 px-4 py-4 flex items-center justify-between z-10">
        <button 
          data-action="click->abroad-time-slot-picker#closeModal" 
          class="text-gray-600 hover:text-gray-800">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
        <h3 class="text-lg font-bold text-gray-900">选择出发时间段</h3>
        <div class="w-6"></div> <!-- Spacer -->
      </div>

      <!-- Time Slots List -->
      <div class="px-4 py-4">
        <% 
          # Generate common time slots (6:00 - 19:00)
          time_slots = [
            { start: '06:00', end: '07:00', label: '早上' },
            { start: '07:00', end: '08:00', label: '早上' },
            { start: '08:00', end: '09:00', label: '早上' },
            { start: '09:00', end: '10:00', label: '上午' },
            { start: '10:00', end: '11:00', label: '上午' },
            { start: '11:00', end: '12:00', label: '上午' },
            { start: '12:00', end: '13:00', label: '中午' },
            { start: '13:00', end: '14:00', label: '下午' },
            { start: '14:00', end: '15:00', label: '下午' },
            { start: '15:00', end: '16:00', label: '下午' },
            { start: '16:00', end: '17:00', label: '下午' },
            { start: '17:00', end: '18:00', label: '傍晚' },
            { start: '18:00', end: '19:00', label: '傍晚' }
          ]
        %>

        <div class="space-y-2">
          <% time_slots.each do |slot| %>
            <button
              type="button"
              data-action="click->abroad-time-slot-picker#selectTimeSlot"
              data-time-slot-start="<%= slot[:start] %>"
              data-time-slot-end="<%= slot[:end] %>"
              class="w-full flex items-center justify-between px-4 py-4 bg-gray-50 hover:bg-blue-50 rounded-lg transition-colors">
              <div class="flex items-center space-x-3">
                <div class="flex items-center justify-center w-10 h-10 bg-white rounded-full">
                  <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div class="text-left">
                  <div class="text-lg font-semibold text-gray-900">
                    <%= slot[:start] %> - <%= slot[:end] %>
                  </div>
                  <div class="text-xs text-gray-500">
                    <%= slot[:label] %>出发
                  </div>
                </div>
              </div>
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </button>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
