<!-- stimulus-validator: disable-next-line -->
<div class="min-h-screen bg-surface pb-20" data-controller="payment-confirmation"
     data-payment-confirmation-amount-value="<%= @cruise_order.total_price.to_i %>"
     data-payment-confirmation-user-email-value="<%= current_user.email %>"
     data-payment-confirmation-payment-url-value="<%= pay_cruise_order_path(@cruise_order) %>"
     data-payment-confirmation-success-url-value="<%= payment_success_cruise_order_path(@cruise_order) %>">
  <!-- Header -->
  <div class="sticky top-0 z-20 bg-surface/95 backdrop-blur-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 py-3">
      <h1 class="text-lg font-semibold text-gray-900 text-center">确认支付</h1>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 py-4 space-y-4">
    <!-- Order Details -->
    <section class="bg-white rounded-lg p-4 shadow-sm">
      <h2 class="text-base font-semibold text-gray-900 mb-3">订单详情</h2>
      
      <div class="space-y-3">
        <div class="flex gap-4">
          <%= image_tag @cruise_ship.image_url, alt: @cruise_ship.name, class: "w-24 h-24 rounded-lg object-cover" %>
          <div class="flex-1">
            <h3 class="font-medium text-gray-900 mb-1"><%= @cruise_ship.name %></h3>
            <p class="text-sm text-gray-600"><%= @sailing.cruise_route.name %>航线</p>
            <p class="text-sm text-gray-500">
              <%= @sailing.date_range %> · <%= @sailing.duration_days %>天<%= @sailing.duration_nights %>晚
            </p>
          </div>
        </div>

        <div class="pt-3 border-t border-gray-100 space-y-2">
          <div class="flex justify-between text-sm">
            <span class="text-gray-600">舱房类型</span>
            <span class="font-medium text-gray-900"><%= @cabin_type.name %></span>
          </div>
          <div class="flex justify-between text-sm">
            <span class="text-gray-600">商家</span>
            <span class="font-medium text-gray-900"><%= @product.merchant_name %></span>
          </div>
          <div class="flex justify-between text-sm">
            <span class="text-gray-600">入住人数</span>
            <span class="font-medium text-gray-900"><%= @cruise_order.quantity %>人</span>
          </div>
          <div class="flex justify-between text-sm">
            <span class="text-gray-600">单价</span>
            <span class="font-medium text-gray-900">¥<%= @product.price_per_person %>/人</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Info -->
    <section class="bg-white rounded-lg p-4 shadow-sm">
      <h2 class="text-base font-semibold text-gray-900 mb-3">联系人信息</h2>
      
      <div class="space-y-2">
        <div class="flex justify-between text-sm">
          <span class="text-gray-600">姓名</span>
          <span class="font-medium text-gray-900"><%= @cruise_order.contact_name %></span>
        </div>
        <div class="flex justify-between text-sm">
          <span class="text-gray-600">手机</span>
          <span class="font-medium text-gray-900"><%= @cruise_order.contact_phone %></span>
        </div>
        <% if @cruise_order.contact_email.present? %>
          <div class="flex justify-between text-sm">
            <span class="text-gray-600">邮箱</span>
            <span class="font-medium text-gray-900"><%= @cruise_order.contact_email %></span>
          </div>
        <% end %>
      </div>
    </section>

    <!-- Price Breakdown -->
    <section class="bg-white rounded-lg p-4 shadow-sm">
      <h2 class="text-base font-semibold text-gray-900 mb-3">费用明细</h2>
      
      <div class="space-y-2">
        <div class="flex justify-between text-sm">
          <span class="text-gray-600">游轮费用</span>
          <span class="font-medium text-gray-900">
            ¥<%= @product.price_per_person * @cruise_order.quantity %>
          </span>
        </div>
        <% if @cruise_order.insurance_price.present? && @cruise_order.insurance_price > 0 %>
          <div class="flex justify-between text-sm">
            <span class="text-gray-600">保险费用</span>
            <span class="font-medium text-gray-900">¥<%= @cruise_order.insurance_price %></span>
          </div>
        <% end %>
        
        <div class="flex justify-between text-base font-semibold pt-3 border-t border-gray-200">
          <span class="text-gray-900">合计</span>
          <span class="text-primary">¥<%= @cruise_order.total_price %></span>
        </div>
      </div>
    </section>

    <!-- Payment Method Notice -->
    <section class="bg-blue-50 rounded-lg p-4">
      <div class="flex gap-3">
        <svg class="w-5 h-5 text-blue-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div class="text-sm text-blue-900">
          <p class="font-medium mb-1">支付说明</p>
          <p>点击确认支付后，将从您的账户余额中扣除 ¥<%= @cruise_order.total_price %>。请确保账户余额充足。</p>
        </div>
      </div>
    </section>
  </div>

  <!-- Bottom Action Bar -->
  <div class="fixed bottom-0 left-0 right-0 bg-surface/95 backdrop-blur-sm border-t border-gray-200 p-4">
    <div class="max-w-7xl mx-auto flex items-center justify-between gap-4">
      <div>
        <p class="text-sm text-gray-500 mb-1">需支付</p>
        <div class="flex items-baseline gap-1">
          <span class="text-xs text-gray-500">¥</span>
          <span class="text-2xl font-bold text-primary"><%= @cruise_order.total_price %></span>
        </div>
      </div>
      
      <button type="button" 
              class="btn-primary px-8 py-3 text-base font-medium"
              data-action="click->payment-confirmation#showPasswordModal">
        确认支付
      </button>
    </div>
  </div>

  <!-- Payment Password Modal -->
  <%= render 'shared/payment_confirmation_modals' %>
</div>
