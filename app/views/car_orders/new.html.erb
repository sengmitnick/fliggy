<div data-controller="car-order payment-confirmation map-guide"
     data-payment-confirmation-amount-value="<%= @total_price %>"
     data-payment-confirmation-user-email-value="<%= current_user.email %>"
     data-payment-confirmation-payment-url-value=""
     data-payment-confirmation-success-url-value=""
     data-map-guide-pickup-location-value="<%= @search_pickup_location || '白云国际机场T2' %>"
     data-map-guide-return-location-value="<%= @search_pickup_location || '白云国际机场T2' %>"
     data-map-guide-pickup-method-value="店员免费送车上门"
     data-map-guide-store-address-value="广州市白云区人和镇矮岗村迎宾大道和顺停车场"
     data-map-guide-business-hours-value="08:00-22:01">
<%= form_with(model: CarOrder.new, url: car_orders_path, class: "bg-[#F7F8FA] pb-24", data: { 'car-order-target': 'form' }) do |form| %>
  <% 
    # 计算取还车日期时间
    pickup_date = @search_pickup_date.present? ? Date.parse(@search_pickup_date) : Time.zone.today
    return_date = @search_return_date.present? ? Date.parse(@search_return_date) : (Time.zone.today + 2.days)
    days_count = (return_date - pickup_date).to_i
    
    # 从搜索参数获取时间，如果没有则使用默认时间 09:00
    pickup_time = params[:pickup_time].present? ? params[:pickup_time] : '09:00'
    return_time = params[:return_time].present? ? params[:return_time] : '09:00'
    
    pickup_datetime = "#{pickup_date.strftime('%Y-%m-%d')} #{pickup_time}:00"
    return_datetime = "#{return_date.strftime('%Y-%m-%d')} #{return_time}:00"
    
    # 获取第一个乘客信息（如果存在）
    first_passenger = @passengers.first
  %>
  
  <!-- Hidden fields for order data -->
  <%= form.hidden_field :car_id, value: @car.id %>
  <% if first_passenger.present? %>
    <%= form.hidden_field :driver_name, value: first_passenger.name, data: { "passenger-selector-target" => "driverName" } %>
    <%= form.hidden_field :driver_id_number, value: first_passenger.id_number, data: { "passenger-selector-target" => "driverIdNumber" } %>
    <%= form.hidden_field :contact_phone, value: first_passenger.phone, data: { "passenger-selector-target" => "contactPhone" } %>
  <% else %>
    <%= form.hidden_field :driver_name, value: "", data: { "passenger-selector-target" => "driverName" } %>
    <%= form.hidden_field :driver_id_number, value: "", data: { "passenger-selector-target" => "driverIdNumber" } %>
    <%= form.hidden_field :contact_phone, value: "", data: { "passenger-selector-target" => "contactPhone" } %>
  <% end %>
  <%= form.hidden_field :pickup_datetime, value: pickup_datetime %>
  <%= form.hidden_field :return_datetime, value: return_datetime %>
  <%= form.hidden_field :pickup_location, value: @search_pickup_location || "请选择取车地点" %>
  <%= form.hidden_field :total_price, value: @total_price %>

  <!-- 顶部状态栏 & 导航 -->
  <div class="bg-[#FFD900] sticky top-0 z-50">
    <div class="flex items-center h-12 px-4 relative">
      <%= link_to car_path(@car), class: "absolute left-4" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
      <% end %>
      <h1 class="w-full text-center text-lg font-bold">填写订单</h1>
    </div>
  </div>

  <div class="p-3 space-y-3">
    <!-- 车型信息 -->
    <div class="bg-white rounded-xl p-4 flex items-start space-x-4">
      <div class="w-32 h-20 bg-gray-100 rounded-lg flex items-center justify-center overflow-hidden">
        <% if @car.image_url.present? %>
          <%= image_tag @car.image_url, alt: "#{@car.brand} #{@car.car_model}", class: "w-full h-full object-cover" %>
        <% else %>
          <svg class="text-gray-400 w-16 h-16" fill="currentColor" viewBox="0 0 24 24"><path d="M18.92 6.01C18.72 5.42 18.16 5 17.5 5h-11c-.66 0-1.21.42-1.42 1.01L3 12v8c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-1h12v1c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-8l-2.08-5.99zM6.5 16c-.83 0-1.5-.67-1.5-1.5S5.67 13 6.5 13s1.5.67 1.5 1.5S7.33 16 6.5 16zm11 0c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zM5 11l1.5-4.5h11L19 11H5z"/></svg>
        <% end %>
      </div>
      <div class="flex-1">
        <div class="flex items-center space-x-1">
          <h2 class="text-lg font-bold"><%= @car.brand %> <%= @car.car_model %></h2>
          <% if @car.fuel_type == '纯电' || @car.fuel_type == '混动' %>
            <span class="text-[10px] text-green-600 flex items-center bg-green-50 px-1 rounded">
              <svg class="w-3 h-3 mr-0.5" fill="currentColor" viewBox="0 0 20 20"><path d="M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z"></path></svg>
              低碳车型
            </span>
          <% end %>
        </div>
        <div class="text-xs text-gray-500 mt-1 flex items-center">
          滴滴租车 <svg class="w-3 h-3 ml-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
        </div>
        <div class="flex space-x-2 mt-2">
          <span class="text-[10px] border border-blue-200 text-blue-500 px-1 rounded">免费取消</span>
          <span class="text-[10px] border border-blue-200 text-blue-500 px-1 rounded">免押金</span>
        </div>
      </div>
    </div>

    <!-- 取还车时间 -->
   <% 
      pickup_date = @search_pickup_date.present? ? Date.parse(@search_pickup_date) : Time.zone.today
      return_date = @search_return_date.present? ? Date.parse(@search_return_date) : (Time.zone.today + 2.days)
      days_count = (return_date - pickup_date).to_i
      weekday_names = ['日', '一', '二', '三', '四', '五', '六']
    %>
    <div class="bg-white rounded-xl p-4">
      <div class="flex items-center justify-between">
        <div>
          <div class="text-lg font-bold"><%= pickup_date.strftime('%-m月%-d日') %> <span class="text-sm font-normal">周<%= weekday_names[pickup_date.wday] %> <%= pickup_time %></span></div>
        </div>
        <div class="text-xs text-gray-400 bg-gray-50 px-2 py-0.5 rounded-full border"><%= days_count %>天</div>
        <div>
          <div class="text-lg font-bold"><%= return_date.strftime('%-m月%-d日') %> <span class="text-sm font-normal">周<%= weekday_names[return_date.wday] %> <%= return_time %></span></div>
