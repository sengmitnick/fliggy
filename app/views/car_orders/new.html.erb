                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                </button>
              </div>
              
              <div class="p-4 space-y-3">
                <% @passengers.each do |passenger| %>
                  <div class="border rounded-lg p-3 cursor-pointer hover:bg-gray-50 transition-colors" 
                       data-action="click->passenger-selector#selectPassenger"
                       data-passenger-id="<%= passenger.id %>"
                       data-passenger-name="<%= passenger.name %>"
                       data-passenger-id-type="<%= passenger.id_type %>"
                       data-passenger-id-number="<%= passenger.id_number %>"
                       data-passenger-phone="<%= passenger.phone %>">
                    <div class="flex justify-between items-start">
                      <div>
                        <div class="font-bold"><%= passenger.name %></div>
                        <div class="text-xs text-gray-500 mt-1"><%= passenger.id_type %> <%= passenger.id_number %></div>
                        <% if passenger.phone.present? %>
                          <div class="text-xs text-gray-400 mt-1">电话: <%= passenger.phone %></div>
                        <% end %>
                      </div>
                      <div class="w-5 h-5 rounded-full border-2 border-gray-300 flex items-center justify-center">
                        <!-- Checkmark will be dynamically added by Stimulus -->
                      </div>
                    </div>
                  </div>
                <% end %>
                
                <%= link_to new_passenger_path(return_to: request.fullpath), class: "block border-2 border-dashed border-gray-300 rounded-lg p-4 text-center text-blue-500 hover:border-blue-500 transition-colors" do %>
                  <svg class="w-6 h-6 mx-auto mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                  </svg>
                  添加新驾驶人
                <% end %>
              </div>
            </div>
          </div>
        <% else %>
          <!-- 无出行人，显示添加提示 -->
          <div class="text-center py-6">
            <svg class="w-12 h-12 mx-auto text-gray-300 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <p class="text-gray-500 mb-3">还没有驾驶人信息</p>
            <%= link_to new_passenger_path(return_to: request.fullpath), class: "inline-flex items-center px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              添加驾驶人
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="mt-3 text-[11px] text-gray-400 flex items-start space-x-1">
        <svg class="w-3.5 h-3.5 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
