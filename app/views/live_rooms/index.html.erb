<style>
/* Container */
.live-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #000;
  overflow: hidden;
  z-index: 9999;
}

.live-wrapper {
  width: 100%;
  height: 100%;
  position: relative;
  transition: transform 0.3s ease-out;
}

/* Slide */
.live-slide {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease-out, visibility 0.3s ease-out;
}

.live-slide.active {
  opacity: 1;
  visibility: visible;
  z-index: 2;
}

.live-slide.prev {
  opacity: 0.5;
  visibility: visible;
  z-index: 1;
}

/* Background */
.live-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.live-bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.live-bg-brand {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.live-bg-brand-logo {
  font-size: 8rem;
  font-weight: 900;
  color: white;
  text-shadow: 2px 2px 8px rgba(0,0,0,0.3);
}

.live-bg-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(180deg, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.6) 100%);
}

/* Top Bar */
.live-top-bar {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  padding: 1rem;
  z-index: 10;
  display: flex;
  justify-content: flex-end;
}

.live-close-btn {
  width: 2.5rem;
  height: 2.5rem;
  border-radius: 50%;
  background: rgba(0,0,0,0.5);
  backdrop-filter: blur(10px);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

/* Host Info */
.live-host-info {
  position: absolute;
  top: 4rem;
  left: 1rem;
  right: 1rem;
  z-index: 10;
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.live-host-avatar {
  width: 3rem;
  height: 3rem;
  border-radius: 50%;
  border: 2px solid white;
  overflow: hidden;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.live-host-details {
  flex: 1;
  min-width: 0;
}

.live-host-name {
  color: white;
  font-weight: 700;
  font-size: 1rem;
  margin-bottom: 0.25rem;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.5);
}

.live-viewer-count {
  display: flex;
  align-items: center;
  gap: 0.25rem;
  color: white;
  font-size: 0.75rem;
  opacity: 0.9;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.5);
}

.live-follow-btn {
  padding: 0.5rem 1rem;
  border-radius: 9999px;
  background: linear-gradient(135deg, #FF1744 0%, #FF5252 100%);
  color: white;
  font-size: 0.875rem;
  font-weight: 700;
  flex-shrink: 0;
  box-shadow: 0 2px 8px rgba(255,23,68,0.3);
}

/* Live Badge */
.live-badge {
  position: absolute;
  top: 8.5rem;
  left: 1rem;
  z-index: 10;
  padding: 0.375rem 0.75rem;
  border-radius: 0.375rem;
  background: linear-gradient(135deg, #FF1744 0%, #FF5252 100%);
  display: flex;
  align-items: center;
  gap: 0.5rem;
  box-shadow: 0 2px 8px rgba(255,23,68,0.3);
}

.live-badge-dot {
  width: 0.5rem;
  height: 0.5rem;
  border-radius: 50%;
  background: white;
  animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

.live-badge-text {
  color: white;
  font-size: 0.75rem;
  font-weight: 700;
  letter-spacing: 0.05em;
