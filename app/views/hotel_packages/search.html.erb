<div class="min-h-screen bg-surface">
  <!-- Search Bar -->
  <div class="sticky top-0 z-20 bg-surface border-b border-border" 
       data-controller="city-selector" 
       data-city-selector-departure-city-value="<%= @city || '武汉' %>">
    <div class="px-4 py-3">
      <%= form_with url: search_hotel_packages_path, method: :get, data: { turbo: false }, class: "flex gap-2 items-center" do |f| %>
        <!-- Back Button -->
        <%= link_to hotel_packages_path, class: "p-2" do %>
          <svg class="w-6 h-6 text-text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        <% end %>
        
        <!-- City Selector -->
        <button type="button" 
                data-action="click->city-selector#openDeparture"
                class="flex items-center gap-1 px-3 py-2 bg-surface-elevated rounded-lg whitespace-nowrap">
          <span data-city-selector-target="departure" class="font-medium text-text-primary text-sm"><%= @city || '武汉' %></span>
          <svg class="w-4 h-4 text-text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
        <%= f.hidden_field :city, value: @city || '武汉', data: { city_selector_target: "departureCityInput" } %>
        
        <!-- Search Input -->
        <div class="flex-1 relative">
          <%= f.text_field :q, 
              value: @query,
              placeholder: "位置/品牌/酒店",
              class: "w-full bg-surface-elevated rounded-lg px-3 py-2 text-sm text-text-primary placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-primary" %>
          <button type="button" class="absolute right-3 top-1/2 -translate-y-1/2">
            <svg class="w-4 h-4 text-text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </button>
        </div>
        
        <!-- More Options Button -->
        <button type="button" class="p-2">
          <svg class="w-6 h-6 text-text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
          </svg>
        </button>
      <% end %>
    </div>

    <!-- City Selector Modal -->
    <%= render 'shared/city_selector_modal' %>
    
    <!-- Filter Pills Row -->
    <div class="px-4 py-2 flex gap-2 overflow-x-auto no-scrollbar border-t border-border">
      <%= link_to search_hotel_packages_path(city: @city, q: @query, sort_by: 'sales'), 
          class: "px-3 py-1.5 rounded-full text-sm whitespace-nowrap #{@sort_by == 'sales' ? 'bg-primary text-text-primary' : 'bg-surface-elevated text-text-secondary'}" do %>
        月销量排序
        <svg class="inline w-3 h-3 ml-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      <% end %>
      
      <button class="px-3 py-1.5 rounded-full text-sm bg-surface-elevated text-text-secondary whitespace-nowrap">
        位置距离
        <svg class="inline w-3 h-3 ml-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </button>
      
      <button class="px-3 py-1.5 rounded-full text-sm bg-surface-elevated text-text-secondary whitespace-nowrap">
        酒店星级
        <svg class="inline w-3 h-3 ml-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </button>
      
      <button class="px-3 py-1.5 rounded-full text-sm bg-surface-elevated text-text-secondary whitespace-nowrap">
        酒店品牌
        <svg class="inline w-3 h-3 ml-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Filter Tags -->
  <div class="px-4 py-3 flex gap-2 overflow-x-auto no-scrollbar bg-surface">
    <%= link_to search_hotel_packages_path(city: @city, q: @query, tags: ['refundable']),
        class: "px-3 py-1.5 rounded-full text-sm bg-surface-elevated text-text-secondary whitespace-nowrap border border-border" do %>
      不约可退
    <% end %>
    
    <%= link_to search_hotel_packages_path(city: @city, q: @query, tags: ['luxury']),
        class: "px-3 py-1.5 rounded-full text-sm bg-surface-elevated text-text-secondary whitespace-nowrap border border-border" do %>
      奢享套房
    <% end %>
    
    <span class="px-3 py-1.5 rounded-full text-sm bg-surface-elevated text-text-secondary whitespace-nowrap border border-border">
      大牌酒店
    </span>
    
    <%= link_to search_hotel_packages_path(city: @city, q: @query, tags: ['instant_booking']),
        class: "px-3 py-1.5 rounded-full text-sm bg-surface-elevated text-text-secondary whitespace-nowrap border border-border" do %>
      即买即约
    <% end %>
    
    <span class="px-3 py-1.5 rounded-full text-sm bg-surface-elevated text-text-secondary whitespace-nowrap border border-border">
      奢享别墅
    </span>
  </div>

  <!-- Results List -->
  <div class="bg-surface px-4 pb-20">
    <% if @packages.present? %>
      <div class="space-y-3">
        <% @packages.each do |package| %>
          <%= link_to hotel_package_path(package), class: "block" do %>
            <div class="card overflow-hidden">
              <div class="flex gap-3 p-3">
                <!-- Hotel Image -->
                <div class="relative flex-shrink-0 w-28 h-28">
                  <% if package.brand_logo.attached? %>
                    <%= image_tag package.brand_logo, alt: package.brand_name, class: "w-full h-full object-cover rounded-lg" %>
                  <% else %>
                    <img src="https://images.unsplash.com/photo-1566073771259-6a8506099945?w=400" alt="<%= package.brand_name %>" class="w-full h-full object-cover rounded-lg">
                  <% end %>
                  
                  <!-- Badge -->
                  <% if package.is_featured %>
                    <div class="absolute top-1 left-1 bg-primary/90 backdrop-blur-sm text-text-primary text-xs px-1.5 py-0.5 rounded">
                      【官方直营】
                    </div>
                  <% end %>
                </div>
                
                <!-- Hotel Info -->
                <div class="flex-1 min-w-0 flex flex-col justify-between">
                  <!-- Title -->
                  <div>
                    <h3 class="font-bold text-text-primary text-sm line-clamp-2 leading-tight mb-1">
                      <%= package.title %>
                    </h3>
                    
                    <!-- City Coverage -->
                    <p class="text-xs text-text-muted mb-1">
                      <%= package.region || package.city || '全国通用' %>
                    </p>
                    
                    <!-- Features -->
                    <div class="flex items-center gap-1.5 text-xs text-text-muted mb-1">
                      <span class="inline-flex items-center gap-0.5 px-1.5 py-0.5 rounded bg-surface-elevated border border-border">
                        <span class="text-sm">🏠</span>
                        <span><%= package.night_count || 2 %>晚</span>
                      </span>
                      <span class="text-text-muted">多房型可选，以实际预约为准</span>
                    </div>
                  </div>
                  
                  <!-- Price and Sales -->
                  <div class="flex items-end justify-between">
                    <div>
                      <div class="flex items-baseline gap-1">
                        <span class="text-xs text-text-muted">券后价</span>
                        <span class="text-danger text-lg font-bold">¥<%= package.price.to_i %></span>
                        <span class="text-danger text-sm">起</span>
                      </div>
                    </div>
                    <div class="text-xs text-text-muted">
                      已售<%= package.sales_count %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      
      <!-- Pagination -->
      <% if @packages.total_pages > 1 %>
        <div class="mt-6 flex justify-center">
          <%= paginate @packages, theme: 'twitter-bootstrap-4' %>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16">
        <div class="text-6xl mb-4">🏨</div>
        <p class="text-text-muted">暂无符合条件的酒店套餐</p>
        <p class="text-text-muted text-sm mt-2">试试调整搜索条件</p>
      </div>
    <% end %>
  </div>
</div>
