<!-- Transfer Passenger Selector Modal -->
<div data-transfer-passenger-selector-target="modal" 
     data-action="click->transfer-passenger-selector#closeModal"
     class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-end">
  <div class="bg-white w-full max-w-md mx-auto rounded-t-3xl pb-safe animate-slide-up"
       data-action="click->transfer-passenger-selector#stopPropagation">
    
    <!-- Header -->
    <div class="flex items-center justify-between px-4 py-4 border-b border-gray-100 sticky top-0 bg-white z-10">
      <h2 class="text-lg font-medium text-gray-900">选择乘车人</h2>
      <button 
        data-action="click->transfer-passenger-selector#closeModal"
        class="text-gray-400 hover:text-gray-600 text-3xl leading-none p-1">
        ×
      </button>
    </div>

    <!-- Subtitle -->
    <div class="px-4 py-2 bg-blue-50 border-b border-blue-100">
      <p class="text-sm text-gray-600">最多选1人</p>
    </div>

    <!-- Content - Scrollable passenger list -->
    <div class="max-h-96 overflow-y-auto">
      <% if current_user&.passengers&.any? %>
        <!-- Manual Add Button -->
        <div class="px-4 py-3 border-b border-gray-100">
          <%= link_to new_passenger_path(
            return_to: 'transfer_packages',
            source: 'bus'
          ), class: "w-full py-3 rounded-lg border-2 border-gray-300 flex items-center justify-center text-gray-700 font-medium hover:bg-gray-50 transition-colors" do %>
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
            </svg>
            手动添加
          <% end %>
        </div>

        <!-- From Contacts Button -->
        <div class="px-4 py-3 bg-yellow-50 border-b border-gray-100">
          <div class="flex items-center justify-center text-sm font-medium text-gray-700">
            <svg class="w-5 h-5 mr-2 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
            </svg>
            从通讯录选择
          </div>
        </div>

        <!-- Passenger List -->
        <% current_user.passengers.order(is_self: :desc, created_at: :desc).each_with_index do |passenger, index| %>
          <div 
            class="px-4 py-4 border-b border-gray-100">
            <div class="flex items-center justify-between">
              <div class="flex items-center flex-1">
                <!-- Pencil Icon -->
                <svg class="w-5 h-5 mr-3 text-gray-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
                </svg>
                
                <div class="flex-1">
                  <!-- Name with badge -->
                  <div class="flex items-center mb-1">
                    <span class="font-bold text-base text-gray-900"><%= passenger.name %></span>
                    <% if passenger.is_self? %>
                      <span class="ml-2 px-2 py-0.5 text-xs rounded bg-blue-100 text-blue-600">本人</span>
                    <% end %>
                  </div>
                  
                  <!-- Phone -->
                  <div class="text-sm text-gray-600">
                    联系手机 <%= passenger.phone&.gsub(/(\d{3})\d{4}(\d{4})/, '\1****\2') || '未设置' %>
                  </div>
                </div>
              </div>

              <!-- Checkbox instead of checkmark -->
              <input 
                type="checkbox" 
                class="w-6 h-6 flex-shrink-0 ml-3 rounded border-2 border-gray-300 text-yellow-500 focus:ring-2 focus:ring-yellow-500 cursor-pointer"
                data-action="change->transfer-passenger-selector#togglePassenger"
                data-passenger-id="<%= passenger.id %>"
                data-passenger-name="<%= passenger.name %>"
                data-passenger-phone="<%= passenger.phone %>"
                data-transfer-passenger-selector-target="checkbox">
            </div>
          </div>
        <% end %>
      <% else %>
        <!-- Empty State -->
        <div class="flex flex-col items-center justify-center py-16 px-4">
          <svg class="w-20 h-20 text-gray-300 mb-4" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"/>
          </svg>
          <div class="text-gray-500 text-base mb-2">暂无常用出行人</div>
          <div class="text-sm text-gray-400 mb-6">请添加常用出行人信息以便快速预订</div>
          
          <%= link_to new_passenger_path(
            return_to: 'transfer_packages',
            source: 'bus'
          ), class: "px-6 py-3 rounded-full bg-blue-500 text-white font-medium hover:bg-blue-600 transition-colors" do %>
            手动输入信息
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  @keyframes slide-up {
    from {
      transform: translateY(100%);
    }
    to {
      transform: translateY(0);
    }
  }
  
  .animate-slide-up {
    animation: slide-up 0.3s ease-out;
  }
  
  .pb-safe {
    padding-bottom: env(safe-area-inset-bottom, 1rem);
  }
</style>
