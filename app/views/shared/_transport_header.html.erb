<%
  background_image = local_assigns.fetch(:background_image, '活动.png')
  return_path = local_assigns.fetch(:return_path, root_path)
%>

<!-- Background Image Container -->
<div class="relative w-full z-1">
  <%= image_tag background_image, class: "w-full h-auto object-cover object-center", alt: "背景" %>

  <!-- Top Bar -->
  <div class="absolute top-4 left-0 w-full flex items-center justify-between px-4 py-3" data-controller="smart-back" data-smart-back-fallback-value="<%= return_path %>">
    <a href="#" data-action="click->smart-back#goBack" class="w-10 h-10 flex items-center justify-center">
      <%= image_tag "返回.png", class: "w-10 h-10", alt: "返回" %>
    </a>
    
    <div class="flex items-center gap-3">
      <button class="w-10 h-10 flex items-center justify-center" onclick="window.showToast('精彩即将上线，敬请期待')">
        <%= image_tag "红包.png", class: "w-10 h-10", alt: "红包" %>
      </button>
      <button class="w-10 h-10 flex items-center justify-center" onclick="window.showToast('精彩即将上线，敬请期待')">
        <%= image_tag "更多.png", class: "w-10 h-10", alt: "更多" %>
      </button>
    </div>
  </div>
</div>
