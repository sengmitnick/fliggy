<!-- City Selector Modal -->
<div data-city-selector-target="modal" class="hidden fixed inset-0 z-50 overflow-hidden">
  <!-- Backdrop -->
  <div class="absolute inset-0 bg-black bg-opacity-50" data-action="click->city-selector#closeModal"></div>
  
  <!-- Modal Content -->
  <div class="absolute inset-0 flex items-end justify-center">
    <div class="bg-white w-full max-w-md mx-auto h-[92vh] rounded-t-3xl flex flex-col overflow-hidden">
      
      <!-- 顶部固定区域 -->
      <div class="px-4 pt-4 pb-2 bg-white z-20 shrink-0">
        <!-- 顶部切换和关闭按钮 -->
        <div class="flex justify-between items-center mb-4 relative">
          <div class="flex-1 flex justify-center">
            <div class="bg-gray-100 p-1 rounded-sm flex text-sm font-medium">
              <button 
                data-single-select-tab
                data-action="click->city-selector#switchToSingleSelect"
                class="bg-white shadow-sm px-4 py-1.5 rounded-sm text-gray-900">
                <span data-single-select-title>单选目的地</span>
              </button>
              <button 
                data-multi-select-tab
                data-action="click->city-selector#switchToMultiSelect"
                class="px-4 py-1.5 rounded-sm text-gray-500">
                <span data-multi-select-title>多选目的地</span>
              </button>
            </div>
          </div>
          <button 
            data-action="click->city-selector#closeModal"
            class="absolute right-0 p-1">
            <svg class="h-6 w-6 text-gray-800" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <!-- 已选城市标签容器 (多选模式) -->
        <div data-selected-cities class="hidden flex flex-wrap gap-2 mb-3"></div>

        <!-- 搜索框 -->
        <div class="flex items-center gap-2 mb-4">
          <div class="flex-1 bg-gray-100 rounded-xl px-3 py-2.5 flex items-center">
            <svg class="h-5 w-5 text-gray-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <input 
              type="text"
              data-city-selector-target="searchInput"
              data-action="input->city-selector#search"
              placeholder="搜索机场/城市/国家中英文或拼音"
              class="flex-1 bg-transparent text-sm text-gray-900 placeholder-gray-400 focus:outline-none">
          </div>
          <button 
            data-confirm-button
            data-action="click->city-selector#confirmMultiSelect"
            class="hidden bg-yellow-400 text-gray-900 px-6 py-2.5 rounded-xl text-sm font-medium whitespace-nowrap">
            确认
          </button>
        </div>

        <!-- 国内/国际 Tab -->
        <div class="w-full flex items-center text-base font-medium border-b border-gray-100">
          <button 
            data-city-selector-target="tabDomestic"
            data-action="click->city-selector#showDomestic"
            class="flex-1 py-2 text-gray-900 relative">
            <span>国内</span>
            <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-8 h-0.5 bg-black"></div>
          </button>
          <button 
            data-city-selector-target="tabInternational"
            data-action="click->city-selector#showInternational"
            class="flex-1 py-2 text-gray-500 relative">
            <span>国际/中国港澳台</span>
            <div class="hidden absolute bottom-0 left-1/2 -translate-x-1/2 w-8 h-0.5 bg-black"></div>
          </button>
        </div>
      </div>

      <!-- 下方主体内容区 (Flex布局: 左侧导航 + 右侧内容) -->
      <div class="flex flex-1 overflow-hidden relative">
        
        <!-- 国内标签内容 -->
        <div data-city-selector-target="domesticList" class="flex w-full flex-col overflow-y-auto">
          <!-- Current/History Section -->
          <div data-city-selector-target="historySection" class="px-4 py-4 border-b border-gray-100">
            <div class="text-sm font-medium text-gray-500 mb-3">当前/历史</div>
            <div data-city-selector-target="locationStatus" class="flex items-center text-gray-400">
              <svg class="w-5 h-5 mr-2 animate-spin hidden" data-city-selector-target="locationSpinner" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
              </svg>
              <button 
                data-action="click->city-selector#requestLocation"
                data-city-selector-target="locationButton"
                class="flex items-center text-sm hover:text-gray-600 transition-colors">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <span data-city-selector-target="locationText">定位未开启</span>
              </button>
            </div>
            <!-- Located city will be shown here -->
            <div data-city-selector-target="locatedCity" class="hidden mt-3">
              <button 
                data-action="click->city-selector#selectCity"
                data-city-selector-target="locatedCityButton"
                class="bg-blue-50 text-blue-600 px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-100 transition-colors">
                <!-- City name will be inserted here -->
              </button>
            </div>
          </div>
          
          <!-- Hot Cities -->
          <div class="px-4 py-4 border-b border-gray-100">
            <div class="flex items-center justify-between mb-3">
              <div class="text-sm font-medium text-gray-900">热门城市</div>
              <div class="flex gap-2 text-xs text-gray-500">
                <button class="px-2 py-1">定位</button>
                <button class="px-2 py-1">热门</button>
                <button class="px-2 py-1">地区</button>
                <button class="px-2 py-1">主题</button>
              </div>
            </div>
            
            <div class="grid grid-cols-4 gap-3">
              <% if defined?(@hot_cities) && @hot_cities.present? %>
                <% @hot_cities.each do |city| %>
                  <button 
                    data-action="click->city-selector#selectCity"
                    data-city-name="<%= city.name %>"
                    data-city-pinyin="<%= city.pinyin %>"
                    class="py-2 text-center text-sm rounded hover:bg-gray-100 transition-colors">
                    <%= city.name %>
                  </button>
                <% end %>
              <% else %>
                <% [{name: "北京市", pinyin: "beijing"}, {name: "上海市", pinyin: "shanghai"}, {name: "广州市", pinyin: "guangzhou"}, {name: "杭州市", pinyin: "hangzhou"}, {name: "成都市", pinyin: "chengdu"}, {name: "深圳市", pinyin: "shenzhen"}, {name: "重庆市", pinyin: "chongqing"}, {name: "西安市", pinyin: "xian"}, {name: "郑州市", pinyin: "zhengzhou"}, {name: "昆明市", pinyin: "kunming"}, {name: "哈尔滨市", pinyin: "haerbin"}, {name: "南京市", pinyin: "nanjing"}, {name: "武汉市", pinyin: "wuhan"}, {name: "沈阳市", pinyin: "shenyang"}, {name: "海口市", pinyin: "haikou"}, {name: "长沙市", pinyin: "changsha"}].each do |city| %>
                  <button 
                    data-action="click->city-selector#selectCity"
                    data-city-name="<%= city[:name] %>"
                    data-city-pinyin="<%= city[:pinyin] %>"
                    class="py-2 text-center text-sm rounded hover:bg-gray-100 transition-colors">
                    <%= city[:name] %>
                  </button>
                <% end %>
              <% end %>
            </div>
          </div>
          
          <!-- Letter Index -->
          <div class="px-4 py-3 border-b border-gray-100">
            <div class="text-sm font-medium text-gray-900 mb-3">字母索引</div>
            <div class="grid grid-cols-7 gap-2">
              <% ('A'..'Z').each do |letter| %>
                <button 
                  data-action="click->city-selector#jumpToLetter"
                  data-letter="<%= letter %>"
                  class="py-2 text-center text-sm text-gray-600 hover:bg-gray-100 rounded transition-colors">
                  <%= letter %>
                </button>
              <% end %>
            </div>
          </div>
          
          <!-- Cities by Letter -->
          <div class="px-4 py-4">
            <% if defined?(@all_cities) && @all_cities.present? %>
              <% cities_by_letter = @all_cities.group_by { |city| city.pinyin[0].upcase } %>
              <% cities_by_letter.sort.each do |letter, cities| %>
                <div data-letter-section="<%= letter %>" class="mb-4">
                  <div class="text-lg font-bold text-gray-900 mb-2"><%= letter %></div>
                  <div class="space-y-1">
                    <% cities.each do |city| %>
                      <button 
                        data-action="click->city-selector#selectCity"
                        data-city-name="<%= city.name %>"
                        data-city-pinyin="<%= city.pinyin %>"
                        class="block w-full text-left py-3 px-2 text-sm hover:bg-gray-100 rounded transition-colors">
                        <%= city.name %>
                      </button>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
        
        <!-- 右侧字母索引栏 -->
        <div class="absolute right-0 top-0 bottom-0 w-5 flex flex-col items-center justify-center py-4 text-[10px] text-gray-500" style="writing-mode: horizontal-tb;">
          <div class="text-xs mb-1">定位</div>
          <div class="text-xs mb-1">历史</div>
          <div class="text-xs mb-1">热门</div>
          <% ('A'..'Z').each do |letter| %>
            <button 
              data-action="click->city-selector#jumpToLetter"
              data-letter="<%= letter %>"
              class="text-xs my-0.5 hover:text-gray-900 transition-colors">
              <%= letter %>
            </button>
          <% end %>
        </div>
        
        <!-- 国际标签内容 (左侧边栏 + 右侧内容) -->
        <div data-city-selector-target="internationalList" class="hidden w-full">
          
          <!-- 左侧侧边栏 -->
          <div class="w-[90px] bg-[#F7F8FA] overflow-y-auto shrink-0 pb-20" style="-ms-overflow-style: none; scrollbar-width: none;">
            <div class="flex flex-col text-xs text-gray-500">
              <button 
                data-action="click->city-selector#scrollToRegion"
                data-region="history"
                class="py-4 text-center hover:bg-white hover:font-bold hover:text-gray-900 transition-all">
                历史/热门
              </button>
              <button 
                data-action="click->city-selector#scrollToRegion"
                data-region="current"
                data-city-selector-target="currentRegionTab"
                class="py-4 text-center bg-white font-bold text-gray-900">
                当前/历史
              </button>
              <button 
                data-action="click->city-selector#scrollToRegion"
                data-region="hkmo"
                class="py-4 text-center hover:bg-white hover:font-bold hover:text-gray-900 transition-all">
                中国港澳台
              </button>
              <button 
                data-action="click->city-selector#scrollToRegion"
                data-region="japan-korea"
                class="py-4 text-center hover:bg-white hover:font-bold hover:text-gray-900 transition-all">
                日韩
              </button>
              <button 
                data-action="click->city-selector#scrollToRegion"
                data-region="southeast-asia"
                class="py-4 text-center hover:bg-white hover:font-bold hover:text-gray-900 transition-all">
                东南亚
              </button>
              <button 
                data-action="click->city-selector#scrollToRegion"
                data-region="europe"
                class="py-4 text-center hover:bg-white hover:font-bold hover:text-gray-900 transition-all">
                欧洲
              </button>
              <button 
                data-action="click->city-selector#scrollToRegion"
                data-region="america"
                class="py-4 text-center hover:bg-white hover:font-bold hover:text-gray-900 transition-all">
                美洲
              </button>
              <button 
                data-action="click->city-selector#scrollToRegion"
                data-region="asia-other"
                class="py-4 text-center hover:bg-white hover:font-bold hover:text-gray-900 transition-all">
                亚洲其他
              </button>
              <button 
                data-action="click->city-selector#scrollToRegion"
                data-region="oceania"
                class="py-4 text-center hover:bg-white hover:font-bold hover:text-gray-900 transition-all">
                大洋洲
              </button>
              <button 
                data-action="click->city-selector#scrollToRegion"
                data-region="africa"
                class="py-4 text-center hover:bg-white hover:font-bold hover:text-gray-900 transition-all">
                非洲
              </button>
              <button 
                data-action="click->city-selector#scrollToRegion"
                data-region="visa-free"
                class="py-4 text-center flex flex-col items-center gap-1 hover:bg-white hover:font-bold hover:text-gray-900 transition-all">
                <div class="flex items-center gap-0.5 text-green-600 font-medium">
                  <svg class="h-3 w-3" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z" />
                  </svg>
                  <span>免签落地签</span>
                </div>
              </button>
              <button 
                data-action="click->city-selector#scrollToRegion"
                data-region="islands"
                class="py-4 text-center hover:bg-white hover:font-bold hover:text-gray-900 transition-all">
                精选海岛
              </button>
            </div>
          </div>

          <!-- 右侧内容区 -->
          <div class="flex-1 overflow-y-auto bg-white p-3 pb-20" style="-ms-overflow-style: none; scrollbar-width: none;">
            
            <!-- 当前/历史 -->
            <div class="mb-6" data-region-section="current">
              <h3 class="text-sm font-bold text-gray-900 mb-3">当前/历史</h3>
              <div class="flex flex-wrap gap-2">
                <div class="bg-gray-50 px-4 py-2 rounded-md flex items-center gap-1 min-w-[80px] justify-center">
                  <svg class="h-4 w-4 text-gray-900" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-sm font-medium text-gray-900">深圳</span>
                </div>
              </div>
            </div>

            <!-- 热门推荐 (四宫格) -->
            <div class="mb-6" data-region-section="history">
              <h3 class="text-sm font-bold text-gray-900 mb-3">热门推荐</h3>
              <div class="grid grid-cols-2 gap-2">
                <!-- 全球低价 -->
                <div class="bg-gray-50 rounded-lg p-3 flex flex-col items-center justify-center gap-2 h-20">
                  <div class="relative">
                    <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div class="absolute -right-1 -top-1 bg-red-500 text-white text-[8px] px-0.5 rounded-full">¥</div>
                  </div>
                  <span class="text-xs font-medium">全球低价</span>
                </div>
                <!-- 免签落地签 -->
                <div class="bg-gray-50 rounded-lg p-3 flex flex-col items-center justify-center gap-2 h-20">
                  <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                  <span class="text-xs font-medium">免签落地签</span>
                </div>
                <!-- 暖冬度假 -->
                <div class="bg-gray-50 rounded-lg p-3 flex flex-col items-center justify-center gap-2 h-20">
                  <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
                  </svg>
                  <span class="text-xs font-medium">暖冬度假</span>
                </div>
                <!-- 网红打卡 -->
                <div class="bg-gray-50 rounded-lg p-3 flex flex-col items-center justify-center gap-2 h-20">
                  <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 21v-8a2 2 0 012-2h14a2 2 0 012 2v8M12 3v18M12 3a9 9 0 00-9 9m18 0a9 9 0 00-9-9"></path>
                  </svg>
                  <span class="text-xs font-medium">网红打卡</span>
                </div>
              </div>
            </div>

            <!-- 中国港澳台 -->
            <div class="mb-6" data-region-section="hkmo">
              <h3 class="text-sm font-bold text-gray-900 mb-3">中国港澳台</h3>
              <div class="grid grid-cols-3 gap-2">
                <% [
                  {name: "香港", country: ""},
                  {name: "澳门", country: ""},
                  {name: "台北", country: "台湾"},
                  {name: "高雄", country: "台湾"}
                ].each do |city| %>
                  <button 
                    data-action="click->city-selector#selectCity"
                    data-city-name="<%= city[:name] %>"
                    data-city-pinyin="<%= city[:name] %>"
                    data-international="true"
                    class="bg-gray-50 rounded-lg py-3 flex flex-col items-center justify-center">
                    <span class="text-sm font-medium text-gray-900"><%= city[:name] %></span>
                    <% if city[:country].present? %>
                      <span class="text-[10px] text-gray-400"><%= city[:country] %></span>
                    <% end %>
                  </button>
                <% end %>
              </div>
            </div>

            <!-- 日韩城市列表 -->
            <div class="mb-6" data-region-section="japan-korea">
              <h3 class="text-sm font-bold text-gray-900 mb-3">日韩</h3>
              <div class="grid grid-cols-3 gap-2">
                <% [
                  {name: "东京", country: "日本"},
                  {name: "大阪", country: "日本"},
                  {name: "京都", country: "日本"},
                  {name: "首尔", country: "韩国"},
                  {name: "济州岛", country: "韩国"},
                  {name: "释山", country: "韩国"}
                ].each do |city| %>
                  <button 
                    data-action="click->city-selector#selectCity"
                    data-city-name="<%= city[:name] %>"
                    data-city-pinyin="<%= city[:name] %>"
                    data-international="true"
                    class="bg-gray-50 rounded-lg py-3 flex flex-col items-center justify-center">
                    <span class="text-sm font-medium text-gray-900"><%= city[:name] %></span>
                    <span class="text-[10px] text-gray-400"><%= city[:country] %></span>
                  </button>
                <% end %>
              </div>
            </div>

            <!-- 东南亚城市列表 -->
            <div class="mb-6" data-region-section="southeast-asia">
              <h3 class="text-sm font-bold text-gray-900 mb-3">东南亚</h3>
              <div class="grid grid-cols-3 gap-2">
                <% [
                  {name: "曼谷", country: "泰国"},
                  {name: "清迈", country: "泰国"},
                  {name: "新加坡", country: ""},
                  {name: "吉隆坡", country: "马来西亚"},
                  {name: "胡志明", country: "越南"},
                  {name: "河内", country: "越南"}
                ].each do |city| %>
                  <button 
                    data-action="click->city-selector#selectCity"
                    data-city-name="<%= city[:name] %>"
                    data-city-pinyin="<%= city[:name] %>"
                    data-international="true"
                    class="bg-gray-50 rounded-lg py-3 flex flex-col items-center justify-center">
                    <span class="text-sm font-medium text-gray-900"><%= city[:name] %></span>
                    <% if city[:country].present? %>
                      <span class="text-[10px] text-gray-400"><%= city[:country] %></span>
                    <% end %>
                  </button>
                <% end %>
              </div>
            </div>

            <!-- 欧洲城市列表 -->
            <div class="mb-6" data-region-section="europe">
              <h3 class="text-sm font-bold text-gray-900 mb-3">欧洲</h3>
              <div class="grid grid-cols-3 gap-2">
                <% [
                  {name: "伦敦", country: "英国"},
                  {name: "巴黎", country: "法国"},
                  {name: "罗马", country: "意大利"},
                  {name: "巴塞罗那", country: "西班牙"},
                  {name: "阿姆斯特丹", country: "荷兰"},
                  {name: "慕尼黑", country: "德国"}
                ].each do |city| %>
                  <button 
                    data-action="click->city-selector#selectCity"
                    data-city-name="<%= city[:name] %>"
                    data-city-pinyin="<%= city[:name] %>"
                    data-international="true"
                    class="bg-gray-50 rounded-lg py-3 flex flex-col items-center justify-center">
                    <span class="text-sm font-medium text-gray-900"><%= city[:name] %></span>
                    <span class="text-[10px] text-gray-400"><%= city[:country] %></span>
                  </button>
                <% end %>
              </div>
            </div>

            <!-- 美洲城市列表 -->
            <div class="mb-6" data-region-section="america">
              <h3 class="text-sm font-bold text-gray-900 mb-3">美洲</h3>
              <div class="grid grid-cols-3 gap-2">
                <% [
                  {name: "纽约", country: "美国"},
                  {name: "洛杉矶", country: "美国"},
                  {name: "旧金山", country: "美国"},
                  {name: "多伦多", country: "加拿大"},
                  {name: "温哥华", country: "加拿大"}
