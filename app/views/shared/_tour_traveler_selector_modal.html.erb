<!-- Tour Traveler Selector Modal -->
<div data-tour-traveler-selector-target="modal" 
     data-action="click->tour-traveler-selector#closeModal"
     class="fixed inset-0 bg-black bg-opacity-50 z-[60] hidden flex items-end">
  <div class="bg-white w-full max-w-md mx-auto rounded-t-3xl pb-safe animate-slide-up"
       data-action="click->tour-traveler-selector#stopPropagation">
    
    <!-- Header -->
    <div class="flex items-center justify-between px-4 py-4 border-b border-gray-100 sticky top-0 bg-white z-10">
      <h2 class="text-lg font-medium text-gray-900">选择出行人</h2>
      <button 
        data-action="click->tour-traveler-selector#closeModal"
        class="text-gray-400 hover:text-gray-600 text-3xl leading-none p-1">
        ×
      </button>
    </div>

    <!-- Subtitle -->
    <div class="px-4 py-2 bg-blue-50 border-b border-blue-100">
      <p class="text-sm text-gray-600">选择常用出行人快速填写</p>
    </div>

    <!-- Content - Scrollable passenger list -->
    <div class="max-h-96 overflow-y-auto">
      <% if current_user&.passengers&.any? %>
        <!-- Passenger List -->
        <% current_user.passengers.order(is_self: :desc, created_at: :desc).each_with_index do |passenger, index| %>
          <div 
            class="px-4 py-4 border-b border-gray-100 cursor-pointer hover:bg-gray-50 transition-colors"
            data-action="click->tour-traveler-selector#selectPassenger"
            data-passenger-id="<%= passenger.id %>"
            data-passenger-name="<%= passenger.name %>"
            data-passenger-id-number="<%= passenger.id_number %>">
            <div class="flex items-center">
              <!-- Edit Button (Pencil Icon) -->
              <%= link_to edit_passenger_path(passenger, source: 'tour_booking', return_to: request.fullpath), 
                          onclick: "event.stopPropagation()",
                          class: "mr-3 flex-shrink-0" do %>
                <svg class="w-5 h-5 text-gray-400 hover:text-gray-600 transition-colors" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
                </svg>
              <% end %>
              
              <div class="flex-1">
                <!-- Name with badge -->
                <div class="flex items-center mb-1">
                  <span class="font-bold text-base text-gray-900"><%= passenger.name %></span>
                  <% if passenger.is_self? %>
                    <span class="ml-2 px-2 py-0.5 text-xs rounded bg-blue-100 text-blue-600">本人</span>
                  <% end %>
                </div>
                
                <!-- ID Number (masked) -->
                <div class="text-sm text-gray-600">
                  <%= passenger.id_type %> <%= passenger.id_number&.gsub(/(\d{6})\d{8}(\d{4})/, '\1********\2') || '未设置' %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <!-- Empty State -->
        <div class="flex flex-col items-center justify-center py-16 px-4">
          <svg class="w-20 h-20 text-gray-300 mb-4" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"/>
          </svg>
          <div class="text-gray-500 text-base mb-2">暂无常用出行人</div>
          <div class="text-sm text-gray-400 mb-6">请前往个人中心添加常用出行人信息</div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  @keyframes slide-up {
    from {
      transform: translateY(100%);
    }
    to {
      transform: translateY(0);
    }
  }
  
  .animate-slide-up {
    animation: slide-up 0.3s ease-out;
  }
  
  .pb-safe {
    padding-bottom: env(safe-area-inset-bottom, 1rem);
  }
</style>
