<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white sticky top-0 z-40 border-b border-gray-200">
    <div class="flex items-center justify-between px-4 py-3">
      <%= link_to profile_path, class: "flex items-center gap-2" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      <% end %>
      <h1 class="text-lg font-medium flex-1 text-center">常用信息</h1>
      <div class="w-6"></div>
    </div>

    <!-- Tab Navigation -->
    <div class="flex border-b border-gray-200">
      <%= link_to passengers_path, class: "flex-1 py-3 text-center text-base text-gray-500" do %>
        出行人
      <% end %>
      <button class="flex-1 py-3 text-center text-base font-medium border-b-2 border-blue-500 text-blue-500">
        联系人
      </button>
      <button class="flex-1 py-3 text-center text-base text-gray-500">
        发票抬头
      </button>
      <%= link_to addresses_path, class: "flex-1 py-3 text-center text-base text-gray-500" do %>
        收货地址
      <% end %>
      <button class="flex-1 py-3 text-center text-base text-gray-500">
        信用卡
      </button>
    </div>
  </div>

  <!-- Content -->
  <div class="pb-24">
    <% if @contacts.any? %>
      <!-- Contact List -->
      <div class="bg-white">
        <% @contacts.each_with_index do |contact, index| %>
          <div class="px-4 py-4 <%= 'border-b border-gray-100' unless index == @contacts.length - 1 %>">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="flex items-center mb-2">
                  <span class="text-lg font-bold"><%= contact.name %></span>
                  <% if contact.is_default? %>
                    <span class="ml-2 px-2 py-0.5 text-xs rounded" style="background: #FFE8CC; color: #FF6B35;">默认</span>
                  <% end %>
                </div>
                <% if contact.phone.present? %>
                  <div class="text-sm text-gray-600 mb-1">
                    +86 <%= contact.phone %>
                  </div>
                <% end %>
                <% if contact.email.present? %>
                  <div class="text-sm text-gray-600">
                    <%= contact.email %>
                  </div>
                <% end %>
              </div>
              <%= link_to edit_contact_path(contact), class: "ml-3 mt-1" do %>
                <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="bg-white mt-4 mx-4 rounded-2xl py-16 text-center">
        <svg class="w-20 h-20 mx-auto text-gray-300 mb-4" fill="currentColor" viewBox="0 0 20 20">
          <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
          <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
        </svg>
        <div class="text-gray-500 text-base mb-2">
          暂无常用联系人
        </div>
        <div class="text-sm text-gray-400">
          请添加联系人信息以便快速填写订单
        </div>
      </div>
    <% end %>
  </div>

  <!-- Bottom Action Bar -->
  <div class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 px-4 py-3 z-30">
    <%= link_to new_contact_path, class: "w-full py-3 rounded-full border border-gray-300 flex items-center justify-center text-gray-700 font-medium" do %>
      <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
      </svg>
      新增联系人
    <% end %>
  </div>
</div>
