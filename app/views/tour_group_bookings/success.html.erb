<div class="min-h-screen bg-surface">
  <!-- Header -->
  <div class="sticky top-0 z-40 bg-white border-b border-border">
    <div class="flex items-center justify-between px-4 py-3">
      <%= link_to tour_groups_path, class: "text-foreground text-2xl" do %>
        ←
      <% end %>
      <h1 class="text-lg font-semibold text-foreground">支付成功</h1>
      <button type="button" class="text-foreground text-xl">⋮</button>
    </div>
  </div>

  <!-- Success Message -->
  <div class="px-4 py-6">
    <div class="bg-white rounded-lg shadow p-6 text-center">
      <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-12 h-12 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      </div>
      <h2 class="text-2xl font-bold mb-2 text-foreground">支付成功</h2>
      <p class="text-foreground-secondary mb-2">订单已确认，商家将尽快联系您</p>
      <p class="text-sm text-foreground-muted">订单号：<%= @booking.id %></p>
    </div>
  </div>

  <!-- Trip Info Card -->
  <div class="px-4 mb-4">
    <div class="bg-white rounded-lg shadow p-4">
      <div class="flex items-start gap-3 mb-4">
        <% if @product.main_image.attached? %>
          <%= image_tag @product.main_image, class: "w-20 h-20 rounded-lg object-cover" %>
        <% end %>
        <div class="flex-1">
          <h3 class="text-base font-semibold text-foreground mb-2"><%= @product.title %></h3>
          <div class="space-y-1 text-sm text-foreground-secondary">
            <div>套餐：<%= @package.name %></div>
            <div>出行日期：<%= l(@booking.travel_date, format: :long) %></div>
            <div>人数：成人 <%= @booking.adult_count %> 人<% if @booking.child_count > 0 %>，儿童 <%= @booking.child_count %> 人<% end %></div>
          </div>
        </div>
      </div>

      <!-- Status -->
      <div class="bg-green-50 rounded-lg p-3">
        <div class="flex items-center text-sm text-green-700">
          <svg class="w-5 h-5 mr-2 text-green-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span class="font-medium">订单已确认</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Order Details -->
  <div class="px-4 mb-4">
    <div class="bg-white rounded-lg shadow p-4">
      <h3 class="text-base font-semibold text-foreground mb-4">订单详情</h3>
      
      <!-- Travelers -->
      <div class="mb-4">
        <div class="text-sm text-foreground-muted mb-2">出行人</div>
        <div class="space-y-2">
          <% @booking.booking_travelers.each do |traveler| %>
            <div class="flex items-center gap-2">
              <div class="w-6 h-6 bg-primary text-white rounded-full flex items-center justify-center text-xs font-medium">
                <%= traveler.traveler_type == 'adult' ? '成' : '儿' %>
              </div>
              <span class="text-foreground"><%= traveler.traveler_name %></span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Contact -->
      <div class="py-3 border-t border-border">
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm text-foreground-muted">联系人</span>
          <span class="text-foreground"><%= @booking.contact_name %></span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-sm text-foreground-muted">手机号</span>
          <span class="text-foreground"><%= @booking.contact_phone %></span>
        </div>
      </div>

      <!-- Price -->
      <div class="py-3 border-t border-border">
        <div class="flex items-center justify-between">
          <span class="text-sm text-foreground-muted">支付金额</span>
          <span class="text-xl font-bold text-primary">¥<%= @booking.total_price.to_i %></span>
        </div>
      </div>
    </div>
  </div>

  <!-- Important Info -->
  <div class="px-4 mb-4">
    <div class="bg-white rounded-lg shadow p-4">
      <div class="flex items-start gap-2 mb-3">
        <svg class="w-5 h-5 text-orange-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
        </svg>
        <div class="flex-1">
          <div class="text-sm font-medium text-foreground mb-1">温馨提示</div>
          <div class="text-sm text-foreground-secondary space-y-1">
            <p>1. 商家会在1个工作日内与您联系确认行程细节</p>
            <p>2. 请保持手机畅通，注意接听电话</p>
            <p>3. 如有疑问可联系商家客服</p>
            <p>4. 取消政策：<%= l(@booking.travel_date - 1.day, format: '%m月%d日') %>0:00前可全额退款</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="px-4 pb-6">
    <div class="grid grid-cols-2 gap-3">
      <%= link_to '查看订单', tour_group_booking_path(@booking), class: "btn-outline py-3 text-center rounded-lg font-medium" %>
      <%= link_to '继续浏览', tour_groups_path, class: "btn-primary py-3 text-center rounded-lg font-medium" %>
    </div>
  </div>
</div>
