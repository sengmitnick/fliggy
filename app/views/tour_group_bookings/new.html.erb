      <label class="flex items-start gap-2">
        <input type="checkbox" 
               class="form-checkbox h-5 w-5 text-primary rounded border-gray-300 mt-0.5 flex-shrink-0" 
               required 
               data-terms-checkbox-target="checkbox"
               data-action="change->terms-checkbox#toggleState" />
        <span class="text-xs text-foreground-secondary">
          请您仔细阅读
          <button type="button" class="text-blue-500">电子合同</button>、
          <button type="button" class="text-blue-500">线路标准退订须知</button>
          点击去付款即代表您已阅读并同意条款内容。
        </span>
      </label>
    </div>
    
    <!-- 底部固定栏 -->
    <div class="fixed bottom-0 left-0 right-0 z-50 bg-white border-t border-border px-4 py-3"
         data-controller="insurance-selector"
         data-insurance-selector-base-price-value="<%= @booking.base_price %>"
         data-insurance-selector-adult-count-value="<%= @adult_count %>"
         data-insurance-selector-child-count-value="<%= @child_count %>">
      <div class="flex items-center justify-between mb-2">
        <div class="flex items-center gap-2">
          <span class="text-sm text-foreground-muted">合计</span>
          <button type="button" class="text-xs text-blue-500">
            明细
            <svg class="w-3 h-3 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"></path>
            </svg>
          </button>
        </div>
        <div>
          <span class="text-2xl font-bold text-red-500" data-insurance-selector-target="totalPrice">¥<%= @booking.calculate_total_price %></span>
        </div>
      </div>
      <%= f.submit "立即支付", 
          class: "btn-primary w-full py-4 text-lg font-semibold rounded-full" %>
    </div>
  <% end %>
  
  <!-- Tour Traveler Selector Modal -->
  <%= render 'shared/tour_traveler_selector_modal' %>
</div>

<script>
  // Auto-reopen modal after editing passenger
  document.addEventListener('DOMContentLoaded', () => {
    const urlParams = new URLSearchParams(window.location.search);
    const reopenModal = urlParams.get('reopen_modal');
    
    if (reopenModal === 'tour_traveler_selector') {
      const modalController = document.querySelector('[data-controller~="tour-traveler-selector"]');
      if (modalController) {
        const modal = modalController.querySelector('[data-tour-traveler-selector-target="modal"]');
        if (modal) {
          modal.classList.remove('hidden');
          document.body.style.overflow = 'hidden';
          
          // Remove the parameter from URL to avoid reopening on page refresh
          const newUrl = new URL(window.location.href);
          newUrl.searchParams.delete('reopen_modal');
          window.history.replaceState({}, '', newUrl);
        }
      }
    }
  });
</script>
