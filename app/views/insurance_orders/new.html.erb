<div class="bg-surface min-h-screen pb-32">
  <!-- 顶部导航 -->
  <header class="bg-white sticky top-0 z-50 shadow-sm">
    <div class="flex items-center justify-between px-4 py-3">
      <%= link_to insurance_path(@product, start_date: @start_date, end_date: @end_date), class: "p-1" do %>
        <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
      <% end %>
      <h1 class="text-lg font-bold">填写投保信息</h1>
      <div class="w-6"></div>
    </div>
  </header>

  <%= form_with model: @order, url: insurance_orders_path, method: :post, class: "space-y-3 px-4 py-4" do |f| %>
    <%= render 'shared/form_error_message', model: @order %>
    
    <%= f.hidden_field :insurance_product_id, value: @product.id %>
    <%= f.hidden_field :start_date, value: @start_date %>
    <%= f.hidden_field :end_date, value: @end_date %>
    <%= f.hidden_field :destination, value: @destination %>
    <%= f.hidden_field :destination_type, value: @destination_type %>
    <%= f.hidden_field :unit_price, value: @unit_price %>

    <!-- 保险产品卡片 -->
    <div class="bg-white rounded-2xl p-4 shadow-sm border border-gray-100">
      <div class="flex gap-3 mb-4">
        <% if @product.image_url.present? %>
          <div class="w-20 h-20 rounded-xl overflow-hidden bg-gray-100 flex-shrink-0">
            <img src="<%= @product.image_url %>" alt="<%= @product.name %>" class="w-full h-full object-cover">
          </div>
        <% else %>
          <div class="w-20 h-20 rounded-xl bg-gradient-to-br from-blue-100 to-purple-100 flex items-center justify-center flex-shrink-0">
            <svg class="w-10 h-10 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
          </div>
        <% end %>

        <div class="flex-1 min-w-0">
          <h2 class="font-bold text-base text-gray-900 mb-1 line-clamp-1"><%= @product.name %></h2>
          <div class="text-xs text-gray-500 mb-2"><%= @product.company %></div>
          <% if @product.highlights.any? %>
            <div class="text-xs text-gray-600 line-clamp-1">
              <%= @product.highlights.first %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- 保障期限 -->
      <div class="bg-blue-50 rounded-xl p-3 border border-blue-100">
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm text-gray-700">保障期限</span>
          <span class="text-sm font-bold text-gray-900"><%= @days %>天</span>
        </div>
        <div class="flex items-center text-xs text-gray-600">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
          <%= @start_date %> 至 <%= @end_date %>
        </div>
      </div>
    </div>

    <!-- 投保人信息 -->
    <div class="bg-white rounded-2xl p-4 shadow-sm border border-gray-100" 
         data-controller="policyholder-selector"
         data-policyholder-selector-selected-passenger-id-value="<%= @default_passenger&.id || 0 %>">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-base font-bold text-gray-900">投保人信息</h3>
        <% if @passengers.any? %>
          <button type="button" 
                  data-action="click->policyholder-selector#openModal"
                  class="text-sm text-primary font-medium flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/></svg>
            切换
          </button>
        <% end %>
      </div>
      
      <% if @passengers.any? %>
        <%= hidden_field_tag 'insurance_order[policyholder_id]', @default_passenger&.id, data: { policyholder_selector_target: "passengerIdInput" } %>
        
        <div class="space-y-3">
          <div class="flex items-center">
            <span class="text-sm text-gray-600 w-20">姓名</span>
            <span class="text-sm font-medium text-gray-900" data-policyholder-selector-target="nameDisplay"><%= @default_passenger&.name || '未设置' %></span>
          </div>

          <% if @default_passenger&.id_number.present? %>
            <div class="flex items-center">
              <span class="text-sm text-gray-600 w-20">证件号</span>
              <span class="text-sm font-medium text-gray-900" data-policyholder-selector-target="idNumberDisplay"><%= @default_passenger.id_number.gsub(/(.{6})(.{8})(.*)/, '\1********\3') %></span>
            </div>
          <% end %>
          
          <% if @default_passenger&.phone.present? %>
            <div class="flex items-center">
              <span class="text-sm text-gray-600 w-20">手机</span>
              <span class="text-sm font-medium text-gray-900" data-policyholder-selector-target="phoneDisplay"><%= @default_passenger.phone %></span>
            </div>
          <% end %>
        </div>

        <div class="mt-4 bg-blue-50 rounded-lg p-3 text-xs text-blue-700">
          <div class="flex items-start gap-2">
            <svg class="w-4 h-4 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/></svg>
            <span>投保人默认选择"本人"出行人，也可以选择其他出行人</span>
          </div>
        </div>
        
        <!-- 投保人选择模态框 -->
        <div data-policyholder-selector-target="modal" 
             data-action="click->policyholder-selector#closeOnBackdrop"
             class="hidden fixed inset-0 bg-black/50 z-50 flex items-end">
          <div class="bg-white w-full rounded-t-3xl p-6 max-h-[80vh] overflow-y-auto">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-bold">选择投保人</h3>
              <button type="button" 
                      data-action="click->policyholder-selector#closeModal"
                      class="w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
              </button>
            </div>
            
            <div class="space-y-3">
              <% @passengers.each do |passenger| %>
                <button type="button"
                        data-policyholder-selector-target="passengerItem"
                        data-passenger-id="<%= passenger.id %>"
                        data-passenger-name="<%= passenger.name %>"
                        data-passenger-id-number="<%= passenger.id_number %>"
                        data-passenger-phone="<%= passenger.phone %>"
                        data-action="click->policyholder-selector#selectPassenger"
                        class="w-full text-left p-4 rounded-xl border-2 border-gray-200 hover:border-primary transition relative">
                  
                  <% if passenger.is_self %>
                    <span class="absolute top-2 right-2 text-[10px] bg-primary/10 text-primary px-2 py-0.5 rounded-full font-medium">本人</span>
                  <% end %>
                  
                  <svg class="check-icon hidden absolute top-4 right-4 w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
                  
                  <div class="font-bold text-sm text-gray-900 mb-2"><%= passenger.name %></div>
                  
                  <div class="space-y-1 text-xs text-gray-600">
                    <% if passenger.id_number.present? %>
                      <div class="flex items-center gap-1">
                        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 2a1 1 0 00-1 1v1a1 1 0 002 0V3a1 1 0 00-1-1zM4 4h3a3 3 0 006 0h3a2 2 0 012 2v9a2 2 0 01-2 2H4a2 2 0 01-2-2V6a2 2 0 012-2zm2.5 7a1.5 1.5 0 100-3 1.5 1.5 0 000 3zm2.45 4a2.5 2.5 0 10-4.9 0h4.9zM12 9a1 1 0 100 2h3a1 1 0 100-2h-3zm-1 4a1 1 0 011-1h2a1 1 0 110 2h-2a1 1 0 01-1-1z" clip-rule="evenodd"/></svg>
                        <%= passenger.id_number.gsub(/(.{6})(.{8})(.*)/, '\1********\3') %>
                      </div>
                    <% end %>
                    <% if passenger.phone.present? %>
                      <div class="flex items-center gap-1">
                        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/></svg>
                        <%= passenger.phone %>
                      </div>
                    <% end %>
                  </div>
                </button>
              <% end %>
            </div>
            
            <div class="mt-4">
              <%= link_to '+ 添加新出行人', new_passenger_path(return_to: 'insurance_order_new', insurance_product_id: @product.id, start_date: @start_date, end_date: @end_date, destination: @destination, city_id: @city_id), class: 'block text-center py-3 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200 transition' %>
            </div>
          </div>
        </div>
      <% else %>
        <!-- 无出行人时显示 -->
        <div class="text-center py-6">
          <svg class="w-12 h-12 text-gray-300 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
          <p class="text-sm text-gray-500 mb-4">暂无出行人信息</p>
          <%= link_to '+ 添加出行人', new_passenger_path(return_to: 'insurance_order_new', insurance_product_id: @product.id, start_date: @start_date, end_date: @end_date, destination: @destination, city_id: @city_id), class: 'inline-block px-6 py-2 bg-primary text-white rounded-lg font-medium hover:bg-primary/90 transition' %>
        </div>
      <% end %>
    </div>

    <!-- 目的地信息 -->
    <% if @destination.present? %>
      <div class="bg-white rounded-2xl p-4 shadow-sm border border-gray-100">
        <h3 class="text-base font-bold text-gray-900 mb-3">目的地</h3>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
          <span class="text-sm font-medium text-gray-900"><%= @destination %></span>
        </div>
      </div>
    <% end %>

    <!-- 联系人信息 -->
    <div class="bg-white rounded-2xl p-4 shadow-sm border border-gray-100" 
         data-controller="contact-selector"
         data-contact-selector-selected-contact-id-value="<%= @default_contact&.id || 0 %>">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-base font-bold text-gray-900">联系人</h3>
        <% if @contacts.any? %>
          <button type="button" 
                  data-action="click->contact-selector#openModal"
                  class="text-sm text-primary font-medium flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/></svg>
            切换
          </button>
        <% end %>
      </div>
      
      <% if @contacts.any? %>
        <%= hidden_field_tag :contact_id, @default_contact&.id, data: { contact_selector_target: "contactIdInput" } %>
        
        <div class="space-y-3">
          <div class="flex items-center">
            <span class="text-sm text-gray-600 w-20">姓名</span>
            <span class="text-sm font-medium text-gray-900" data-contact-selector-target="nameDisplay"><%= @default_contact&.name || '未设置' %></span>
          </div>

          <% if @default_contact&.email.present? %>
            <div class="flex items-center">
              <span class="text-sm text-gray-600 w-20">邮箱</span>
              <span class="text-sm font-medium text-gray-900" data-contact-selector-target="emailDisplay"><%= @default_contact.email %></span>
            </div>
          <% end %>
          
          <% if @default_contact&.phone.present? %>
            <div class="flex items-center">
              <span class="text-sm text-gray-600 w-20">手机</span>
              <span class="text-sm font-medium text-gray-900" data-contact-selector-target="phoneDisplay"><%= @default_contact.phone %></span>
            </div>
          <% end %>
        </div>

        <div class="mt-4 bg-blue-50 rounded-lg p-3 text-xs text-blue-700">
          <div class="flex items-start gap-2">
            <svg class="w-4 h-4 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/></svg>
            <span>电子保单将发送至该联系人邮箱，请确保信息准确</span>
          </div>
        </div>
        
        <!-- 联系人选择模态框 -->
        <div data-contact-selector-target="modal" 
             data-action="click->contact-selector#closeOnBackdrop"
             class="hidden fixed inset-0 bg-black/50 z-50 flex items-end">
          <div class="bg-white w-full rounded-t-3xl p-6 max-h-[80vh] overflow-y-auto">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-bold">选择联系人</h3>
              <button type="button" 
                      data-action="click->contact-selector#closeModal"
                      class="w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
              </button>
            </div>
            
            <div class="space-y-3">
              <% @contacts.each do |contact| %>
                <button type="button"
                        data-contact-selector-target="contactItem"
                        data-contact-id="<%= contact.id %>"
                        data-contact-name="<%= contact.name %>"
                        data-contact-email="<%= contact.email %>"
                        data-contact-phone="<%= contact.phone %>"
                        data-action="click->contact-selector#selectContact"
                        class="w-full text-left p-4 rounded-xl border-2 border-gray-200 hover:border-primary transition relative">
                  
                  <% if contact.is_default %>
                    <span class="absolute top-2 right-2 text-[10px] bg-primary/10 text-primary px-2 py-0.5 rounded-full font-medium">默认</span>
                  <% end %>
                  
                  <svg class="check-icon hidden absolute top-4 right-4 w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
                  
                  <div class="font-bold text-sm text-gray-900 mb-2"><%= contact.name %></div>
                  
                  <div class="space-y-1 text-xs text-gray-600">
                    <% if contact.phone.present? %>
                      <div class="flex items-center gap-1">
                        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/></svg>
                        <%= contact.phone %>
                      </div>
                    <% end %>
                    <% if contact.email.present? %>
                      <div class="flex items-center gap-1">
                        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/><path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/></svg>
                        <%= contact.email %>
                      </div>
                    <% end %>
                  </div>
                </button>
              <% end %>
            </div>
            
            <div class="mt-4">
              <%= link_to '+ 添加新联系人', contacts_path, class: 'block text-center py-3 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200 transition' %>
            </div>
          </div>
        </div>
      <% else %>
        <!-- 无联系人时显示 -->
        <div class="text-center py-6">
          <svg class="w-12 h-12 text-gray-300 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
          <p class="text-sm text-gray-500 mb-4">暂无联系人</p>
          <%= link_to '+ 添加联系人', contacts_path, class: 'inline-block px-6 py-2 bg-primary text-white rounded-lg font-medium hover:bg-primary/90 transition' %>
        </div>
      <% end %>
    </div>

    <!-- 重要提示 -->
    <div class="bg-white rounded-2xl p-4 shadow-sm border border-gray-100">
      <h3 class="text-base font-bold text-gray-900 mb-3">投保须知</h3>
      
      <div class="space-y-2 text-xs text-gray-600 leading-relaxed">
        <div class="flex items-start gap-2">
          <span class="text-primary flex-shrink-0">•</span>
          <span>请确保被保险人的个人信息准确无误，错误信息可能导致理赔失败</span>
        </div>
        <div class="flex items-start gap-2">
          <span class="text-primary flex-shrink-0">•</span>
          <span>保险生效时间为保障期限开始日期的00:00:00</span>
        </div>
        <div class="flex items-start gap-2">
          <span class="text-primary flex-shrink-0">•</span>
          <span>电子保单将在支付成功后24小时内发送至您的邮箱</span>
        </div>
        <div class="flex items-start gap-2">
          <span class="text-primary flex-shrink-0">•</span>
          <span>投保即表示同意 <%= link_to '《保险条款》', '#', class: 'text-primary underline' %> 和 <%= link_to '《投保须知》', '#', class: 'text-primary underline' %></span>
        </div>
      </div>
    </div>

    <!-- 底部提交栏 -->
    <div class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 px-4 py-3 z-40 safe-area-bottom">
      <div class="flex items-center gap-3">
        <div class="flex-1">
          <div class="text-xs text-gray-500 mb-1">保费总计</div>
          <div class="flex items-baseline">
            <span class="text-xs text-gray-500">¥</span>
            <span class="text-2xl font-bold text-orange-600" id="total-price"><%= ((@unit_price || @product.price_per_day || 0) * 1).to_i %></span>
          </div>
        </div>
        <%= f.submit '确认投保', class: "flex-1 btn-primary py-3 text-center font-bold rounded-full shadow-lg" %>
      </div>
    </div>
  <% end %>
</div>

<style>
.safe-area-bottom {
  padding-bottom: calc(0.75rem + env(safe-area-inset-bottom));
}
</style>

<script>
// Simple insured persons controller
document.addEventListener('DOMContentLoaded', () => {
  const container = document.getElementById('insured-persons-list');
  if (!container) return;

  let personCount = 1;
  const MAX_PERSONS = 5;

  container.addEventListener('click', (e) => {
    // Add person
    if (e.target.closest('[data-action*="addPerson"]')) {
      e.preventDefault();
      if (personCount >= MAX_PERSONS) {
        alert('最多可添加5位被保人');
        return;
      }

      personCount++;
      const newItem = document.createElement('div');
      newItem.className = 'insured-person-item mb-4 pb-4 border-b border-gray-100';
      newItem.innerHTML = `
        <div class="flex items-center justify-between mb-3">
          <span class="text-sm font-medium text-gray-700">被保人 ${personCount}</span>
          <button type="button" class="text-xs text-red-500 hover:text-red-700" onclick="this.closest('.insured-person-item').remove(); updatePersonCount();">删除</button>
        </div>
        <div class="space-y-3">
          <div>
            <label class="text-xs text-gray-500 mb-1 block">姓名 *</label>
            <input type="text" name="insurance_order[insured_persons][${personCount - 1}][name]" class="form-input w-full text-sm" placeholder="请输入姓名" required>
          </div>
          <div>
            <label class="text-xs text-gray-500 mb-1 block">身份证号 *</label>
            <input type="text" name="insurance_order[insured_persons][${personCount - 1}][id_number]" class="form-input w-full text-sm" placeholder="请输入身份证号" pattern="[0-9X]{18}" required>
          </div>
        </div>
      `;

      const addButton = container.querySelector('[data-action*="addPerson"]');
      addButton.parentElement.insertBefore(newItem, addButton);
      
      updateTotalPrice();
    }
  });

  // Update total price based on person count
  window.updatePersonCount = () => {
    personCount = container.querySelectorAll('.insured-person-item').length;
    updateTotalPrice();
  };

  function updateTotalPrice() {
    const unitPrice = <%= @unit_price || @product.price_per_day || 0 %>;
    const totalElement = document.getElementById('total-price');
    if (totalElement) {
      totalElement.textContent = (unitPrice * personCount).toFixed(0);
    }
  }
});
</script>
