<div class="bg-surface min-h-screen pb-24" data-controller="payment-confirmation"
     data-payment-confirmation-amount-value="<%= @order.total_price.to_i %>"
     data-payment-confirmation-user-email-value="<%= current_user.email %>"
     data-payment-confirmation-payment-url-value="<%= pay_insurance_order_path(@order) %>"
     data-payment-confirmation-success-url-value="<%= success_insurance_order_path(@order) %>">
  <!-- 顶部导航 -->
  <header class="sticky top-0 z-50 bg-white shadow-sm">
    <div class="flex items-center justify-between px-4 py-3">
      <%= link_to my_orders_insurance_orders_path, class: "p-1" do %>
        <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
      <% end %>
      <h1 class="text-lg font-bold">订单详情</h1>
      <button class="p-1">
        <svg class="w-6 h-6 text-gray-800" fill="currentColor" viewBox="0 0 24 24"><path d="M6 10c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm12 0c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm-6 0c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z"></path></svg>
      </button>
    </div>
  </header>

  <!-- 订单状态卡片 -->
  <section class="mt-4 mx-4">
    <div class="bg-white rounded-2xl p-4 shadow-sm border border-gray-100">
      <div class="flex items-center gap-3 mb-4">
        <% case @order.status %>
        <% when 'pending' %>
          <div class="w-12 h-12 rounded-full bg-orange-100 flex items-center justify-center">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          </div>
          <div class="flex-1">
            <div class="text-lg font-bold text-gray-900">等待支付</div>
            <div class="text-xs text-gray-500 mt-1">请尽快完成支付</div>
          </div>
        <% when 'paid' %>
          <div class="w-12 h-12 rounded-full bg-blue-100 flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          </div>
          <div class="flex-1">
            <div class="text-lg font-bold text-gray-900">支付成功</div>
            <div class="text-xs text-gray-500 mt-1">等待保单生效</div>
          </div>
        <% when 'effective' %>
          <div class="w-12 h-12 rounded-full bg-green-100 flex items-center justify-center">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
          </div>
          <div class="flex-1">
            <div class="text-lg font-bold text-gray-900">保单生效中</div>
            <div class="text-xs text-gray-500 mt-1">保障进行中</div>
          </div>
        <% when 'expired' %>
          <div class="w-12 h-12 rounded-full bg-gray-100 flex items-center justify-center">
            <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          </div>
          <div class="flex-1">
            <div class="text-lg font-bold text-gray-900">保单已过期</div>
            <div class="text-xs text-gray-500 mt-1">保障期已结束</div>
          </div>
        <% when 'cancelled' %>
          <div class="w-12 h-12 rounded-full bg-red-100 flex items-center justify-center">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
          </div>
          <div class="flex-1">
            <div class="text-lg font-bold text-gray-900">订单已取消</div>
            <div class="text-xs text-gray-500 mt-1">订单已被取消</div>
          </div>
        <% end %>
      </div>

      <!-- 订单号和时间 -->
      <div class="pt-4 border-t border-gray-100 space-y-2 text-xs">
        <div class="flex justify-between">
          <span class="text-gray-500">订单号</span>
          <span class="text-gray-900 font-mono"><%= @order.order_number %></span>
        </div>
        <% if @order.policy_number.present? %>
          <div class="flex justify-between">
            <span class="text-gray-500">保单号</span>
            <span class="text-gray-900 font-mono"><%= @order.policy_number %></span>
          </div>
        <% end %>
        <div class="flex justify-between">
          <span class="text-gray-500">下单时间</span>
          <span class="text-gray-900"><%= @order.created_at.strftime('%Y-%m-%d %H:%M') %></span>
        </div>
        <% if @order.paid_at.present? %>
          <div class="flex justify-between">
            <span class="text-gray-500">支付时间</span>
            <span class="text-gray-900"><%= @order.paid_at.strftime('%Y-%m-%d %H:%M') %></span>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <!-- 保险产品信息 -->
  <section class="mt-4 mx-4">
    <div class="bg-white rounded-2xl p-4 shadow-sm border border-gray-100">
      <h3 class="text-base font-bold text-gray-900 mb-3">保险信息</h3>
      
      <div class="flex gap-3 mb-4">
        <% if @order.insurance_product.image_url.present? %>
          <div class="w-20 h-20 rounded-xl overflow-hidden bg-gray-100 flex-shrink-0">
            <img src="<%= @order.insurance_product.image_url %>" alt="<%= @order.insurance_product.name %>" class="w-full h-full object-cover">
          </div>
        <% else %>
          <div class="w-20 h-20 rounded-xl bg-gradient-to-br from-blue-100 to-purple-100 flex items-center justify-center flex-shrink-0">
            <svg class="w-10 h-10 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
          </div>
        <% end %>

        <div class="flex-1 min-w-0">
          <h4 class="font-bold text-sm text-gray-900 mb-1"><%= @order.insurance_product.name %></h4>
          <div class="text-xs text-gray-500 mb-2"><%= @order.insurance_product.company %></div>
          <%= link_to "查看详情 >", insurance_path(@order.insurance_product), class: "text-xs text-primary font-medium" %>
        </div>
      </div>

      <!-- 保障期限 -->
      <div class="bg-blue-50 rounded-xl p-3 border border-blue-100">
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm text-gray-700">保障期限</span>
          <span class="text-sm font-bold text-gray-900"><%= @order.days %>天</span>
        </div>
        <div class="flex items-center text-xs text-gray-600">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
          <%= @order.start_date.strftime('%Y-%m-%d') %> 至 <%= @order.end_date.strftime('%Y-%m-%d') %>
        </div>
      </div>

      <% if @order.destination.present? %>
        <div class="mt-3 pt-3 border-t border-gray-100 flex items-center gap-2">
          <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
          <div>
            <div class="text-xs text-gray-500">目的地</div>
            <div class="text-sm font-medium text-gray-900"><%= @order.destination %></div>
          </div>
        </div>
      <% end %>
    </div>
  </section>

  <!-- 被保人信息 -->
  <section class="mt-4 mx-4">
    <div class="bg-white rounded-2xl p-4 shadow-sm border border-gray-100">
      <h3 class="text-base font-bold text-gray-900 mb-3">被保人信息</h3>
      
      <div class="space-y-3">
        <% @order.insured_persons.each_with_index do |person, index| %>
          <div class="p-3 bg-gray-50 rounded-xl <%= 'border-t border-gray-100 mt-3' if index > 0 %>">
            <div class="flex items-center justify-between mb-2">
              <span class="text-sm font-medium text-gray-700">被保人 <%= index + 1 %></span>
            </div>
            <div class="space-y-1 text-xs">
              <div class="flex justify-between">
                <span class="text-gray-500">姓名</span>
                <span class="text-gray-900 font-medium"><%= person['name'] %></span>
              </div>
              <% if person['id_number'].present? %>
                <div class="flex justify-between">
                  <span class="text-gray-500">身份证号</span>
                  <span class="text-gray-900 font-mono"><%= person['id_number'].gsub(/(.{6})(.{8})(.{4})/, '\1********\3') %></span>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <!-- 费用明细 -->
  <section class="mt-4 mx-4">
    <div class="bg-white rounded-2xl p-4 shadow-sm border border-gray-100">
      <h3 class="text-base font-bold text-gray-900 mb-3">费用明细</h3>
      
      <div class="space-y-2 text-sm">
        <div class="flex justify-between">
          <span class="text-gray-600">保费单价</span>
          <span class="text-gray-900">¥<%= @order.unit_price.to_i %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">被保人数</span>
          <span class="text-gray-900">× <%= @order.quantity %></span>
        </div>
        <div class="flex justify-between pt-3 border-t border-gray-100">
          <span class="font-bold text-gray-900">总计</span>
          <div class="flex items-baseline">
            <span class="text-xs text-gray-500">¥</span>
            <span class="text-xl font-bold text-orange-600"><%= @order.total_price.to_i %></span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- 电子保单 -->
  <% if @order.policy_file_url.present? %>
    <section class="mt-4 mx-4">
      <div class="bg-white rounded-2xl p-4 shadow-sm border border-gray-100">
        <h3 class="text-base font-bold text-gray-900 mb-3">电子保单</h3>
        
        <%= link_to @order.policy_file_url, target: '_blank', class: "flex items-center justify-between p-3 bg-blue-50 rounded-xl border border-blue-100" do %>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-blue-500 flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/></svg>
            </div>
            <div>
              <div class="text-sm font-bold text-gray-900">查看电子保单</div>
              <div class="text-xs text-gray-500">PDF格式</div>
            </div>
          </div>
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
        <% end %>
      </div>
    </section>
  <% end %>

  <!-- 操作按钮 -->
  <% if @order.pending? || @order.can_cancel? %>
    <section class="mt-6 mx-4 mb-6">
      <div class="flex gap-3">
        <% if @order.can_cancel? %>
          <%= button_to "取消订单", cancel_insurance_order_path(@order), method: :patch,
            class: "flex-1 btn-outline py-3 text-center font-medium rounded-full",
            data: { confirm: '确定要取消此订单吗？' } %>
        <% end %>

        <% if @order.pending? %>
          <button type="button"
                  data-action="click->payment-confirmation#showPasswordModal"
                  class="flex-1 btn-primary py-3 text-center font-bold rounded-full shadow-lg">
            立即支付
          </button>
        <% end %>
      </div>
    </section>
  <% end %>

  <%= render 'shared/payment_confirmation_modals', payable: @order, payable_type: 'insurance_order' %>
</div>

<%= render 'shared/bottom_navigation' %>
